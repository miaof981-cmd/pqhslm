/* 容器 */
.container {
  min-height: 100vh;
  background: linear-gradient(180deg, #E6FFEB 0%, #F0F9FF 100%);
}

/* 头部 */
.header-section {
  background: linear-gradient(135deg, #A8E6CF, #C8E6C9);
  padding: 80rpx 40rpx 60rpx;
  text-align: center;
}

.header-icon {
  font-size: 80rpx;
  margin-bottom: 20rpx;
}

.header-title {
  font-size: 48rpx;
  font-weight: bold;
  color: white;
  margin-bottom: 12rpx;
}

.header-subtitle {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.9);
}

/* 内容区域 */
.content-section {
  padding: 30rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 24rpx;
}

/* 二维码预览 */
.qrcode-preview {
  background: white;
  border-radius: 20rpx;
  padding: 40rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
}

.qrcode-image {
  width: 400rpx;
  height: 400rpx;
  margin: 0 auto;
  display: block;
  border-radius: 12rpx;
  border: 2rpx solid #F0F0F0;
}

.qrcode-actions {
  margin-top: 30rpx;
  display: flex;
  justify-content: center;
}

.action-btn {
  padding: 20rpx 60rpx;
  border-radius: 50rpx;
  font-size: 28rpx;
  font-weight: 500;
}

.action-btn.secondary {
  background: #F5F5F5;
  color: #666;
}

/* 上传区域 */
.qrcode-upload {
  background: white;
  border-radius: 20rpx;
  padding: 40rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
}

.upload-area {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 80rpx 40rpx;
  border: 4rpx dashed #D0D0D0;
  border-radius: 16rpx;
  background: #FAFAFA;
}

.upload-icon {
  font-size: 80rpx;
  margin-bottom: 20rpx;
}

.upload-hint {
  font-size: 32rpx;
  color: #333;
  font-weight: 500;
  margin-bottom: 12rpx;
}

.upload-desc {
  font-size: 24rpx;
  color: #999;
}

/* 使用说明 */
.instructions {
  background: white;
  border-radius: 20rpx;
  padding: 40rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
}

.instructions-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 24rpx;
}

.instruction-item {
  display: flex;
  align-items: flex-start;
  margin-bottom: 20rpx;
}

.instruction-item:last-child {
  margin-bottom: 0;
}

.instruction-number {
  width: 48rpx;
  height: 48rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, #A8E6CF, #C8E6C9);
  color: white;
  font-size: 24rpx;
  font-weight: bold;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
  margin-right: 16rpx;
}

.instruction-text {
  flex: 1;
  font-size: 28rpx;
  color: #666;
  line-height: 48rpx;
}

/* 底部按钮 */
.bottom-actions {
  padding: 20rpx 0 40rpx;
}

.complete-btn {
  width: 100%;
  height: 96rpx;
  line-height: 96rpx;
  background: linear-gradient(135deg, #A8E6CF, #C8E6C9);
  color: white;
  border-radius: 48rpx;
  font-size: 32rpx;
  font-weight: bold;
  border: none;
  box-shadow: 0 8rpx 24rpx rgba(168, 230, 207, 0.4);
}

.complete-btn.disabled {
  background: #E0E0E0;
  color: #999;
  box-shadow: none;
}


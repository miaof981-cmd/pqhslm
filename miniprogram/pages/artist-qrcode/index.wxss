/* 容器 */
.container {
  min-height: 100vh;
  background: linear-gradient(180deg, #E6FFEB 0%, #F0F9FF 100%);
  padding-bottom: 40rpx;
}

/* 头部 */
.header-section {
  background: linear-gradient(135deg, #A8E6CF, #C8E6C9);
  padding: 80rpx 40rpx 60rpx;
  text-align: center;
}

.header-icon {
  font-size: 80rpx;
  margin-bottom: 20rpx;
}

.header-title {
  font-size: 48rpx;
  font-weight: bold;
  color: white;
  margin-bottom: 12rpx;
}

.header-subtitle {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.9);
}

/* 进度指示 */
.progress-section {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 40rpx;
  background: white;
  margin: 30rpx;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
}

.progress-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 12rpx;
}

.progress-dot {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  background: #E0E0E0;
  color: #999;
  font-size: 28rpx;
  font-weight: bold;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s;
}

.progress-item.active .progress-dot {
  background: linear-gradient(135deg, #A8E6CF, #C8E6C9);
  color: white;
}

.progress-item.completed .progress-dot {
  background: #66BB6A;
  color: white;
}

.progress-text {
  font-size: 24rpx;
  color: #999;
  transition: all 0.3s;
}

.progress-item.active .progress-text {
  color: #333;
  font-weight: 500;
}

.progress-line {
  width: 100rpx;
  height: 4rpx;
  background: #E0E0E0;
  margin: 0 20rpx;
  margin-bottom: 36rpx;
  transition: all 0.3s;
}

.progress-line.active {
  background: linear-gradient(90deg, #A8E6CF, #C8E6C9);
}

/* 内容区域 */
.content-section {
  padding: 0 30rpx;
}

.step-content {
  animation: fadeIn 0.3s ease-in;
}

@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translateY(20rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* 表单区域 */
.form-section {
  background: white;
  border-radius: 20rpx;
  padding: 40rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 12rpx;
}

.section-hint {
  font-size: 24rpx;
  color: #999;
  display: block;
  margin-bottom: 30rpx;
}

/* 表单项 */
.form-item {
  margin-bottom: 32rpx;
}

.form-item:last-child {
  margin-bottom: 0;
}

.form-label {
  font-size: 28rpx;
  color: #333;
  display: block;
  margin-bottom: 16rpx;
}

.form-label.required::before {
  content: '*';
  color: #FF5252;
  margin-right: 6rpx;
}

.form-input {
  width: 100%;
  height: 88rpx;
  padding: 0 24rpx;
  background: #F9F9F9;
  border-radius: 12rpx;
  font-size: 28rpx;
  box-sizing: border-box;
}

.form-textarea {
  width: 100%;
  min-height: 200rpx;
  padding: 20rpx 24rpx;
  background: #F9F9F9;
  border-radius: 12rpx;
  font-size: 28rpx;
  box-sizing: border-box;
}

.char-count {
  display: block;
  text-align: right;
  font-size: 24rpx;
  color: #999;
  margin-top: 12rpx;
}

/* 手机号输入组 */
.phone-input-group {
  display: flex;
  gap: 16rpx;
}

.phone-input {
  flex: 1;
}

.verify-btn {
  width: 200rpx;
  height: 88rpx;
  line-height: 88rpx;
  padding: 0;
  background: linear-gradient(135deg, #A8E6CF, #C8E6C9);
  color: white;
  border-radius: 12rpx;
  font-size: 26rpx;
  font-weight: 500;
  border: none;
}

.verify-btn.disabled {
  background: #E0E0E0;
  color: #999;
}

/* 二维码上传 */
.qrcode-preview {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 24rpx;
  padding: 30rpx 0;
}

.qrcode-image {
  width: 400rpx;
  height: 400rpx;
  border-radius: 12rpx;
  border: 4rpx solid #F0F0F0;
}

.change-btn {
  padding: 16rpx 48rpx;
  background: #F5F5F5;
  color: #666;
  border-radius: 48rpx;
  font-size: 26rpx;
  border: none;
}

.qrcode-upload {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 80rpx 40rpx;
  border: 4rpx dashed #D0D0D0;
  border-radius: 16rpx;
  background: #FAFAFA;
}

.upload-icon {
  font-size: 80rpx;
  margin-bottom: 20rpx;
}

.upload-hint {
  font-size: 32rpx;
  color: #333;
  font-weight: 500;
  margin-bottom: 12rpx;
}

.upload-desc {
  font-size: 24rpx;
  color: #999;
}

/* 操作按钮 */
.step-actions {
  display: flex;
  gap: 20rpx;
  margin-top: 30rpx;
}

.action-btn {
  flex: 1;
  height: 96rpx;
  line-height: 96rpx;
  border-radius: 48rpx;
  font-size: 32rpx;
  font-weight: bold;
  border: none;
}

.action-btn.primary {
  background: linear-gradient(135deg, #A8E6CF, #C8E6C9);
  color: white;
  box-shadow: 0 8rpx 24rpx rgba(168, 230, 207, 0.4);
}

.action-btn.secondary {
  background: white;
  color: #666;
  border: 2rpx solid #E0E0E0;
}

/* 完成状态 */
.success-content {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 80rpx 40rpx;
  background: white;
  border-radius: 20rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
}

.success-icon {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, #66BB6A, #81C784);
  color: white;
  font-size: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 30rpx;
}

.success-title {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 16rpx;
}

.success-desc {
  font-size: 28rpx;
  color: #999;
  margin-bottom: 40rpx;
}

.success-info {
  width: 100%;
  background: #F9F9F9;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 40rpx;
}

.info-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 16rpx 0;
  border-bottom: 1rpx solid #E0E0E0;
}

.info-item:last-child {
  border-bottom: none;
}

.info-label {
  font-size: 28rpx;
  color: #666;
}

.info-value {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

/* 重要说明 */
.notice-box {
  background: #FFF9E6;
  border-radius: 16rpx;
  padding: 30rpx;
  border-left: 6rpx solid #FFA000;
}

.notice-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  display: block;
}

.notice-item {
  display: flex;
  align-items: flex-start;
  margin-bottom: 12rpx;
}

.notice-item:last-child {
  margin-bottom: 0;
}

.notice-dot {
  color: #FFA000;
  font-size: 28rpx;
  margin-right: 12rpx;
  line-height: 40rpx;
}

.notice-text {
  flex: 1;
  font-size: 24rpx;
  color: #666;
  line-height: 40rpx;
}

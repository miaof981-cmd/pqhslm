/* 容器 */
.container {
  min-height: 100vh;
  background: linear-gradient(180deg, #E6FFEB 0%, #F0F9FF 100%);
  padding-bottom: 40rpx;
}

/* 头部 */
.header-section {
  background: linear-gradient(135deg, #A8E6CF, #C8E6C9);
  padding: 80rpx 40rpx 60rpx;
  text-align: center;
}

.header-icon {
  font-size: 80rpx;
  margin-bottom: 20rpx;
}

.header-title {
  font-size: 48rpx;
  font-weight: bold;
  color: white;
  margin-bottom: 12rpx;
}

.header-subtitle {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.9);
}

/* 区块副标题（申请已通过提示） */
.section-subtitle {
  padding: 0 32rpx 20rpx;
  font-size: 26rpx;
  color: #66BB6A;
  line-height: 1.6;
  text-align: center;
}

/* 权限状态提示（旧版，保留用于其他地方） */
.permission-status {
  display: flex;
  align-items: center;
  gap: 24rpx;
  padding: 32rpx;
  margin-bottom: 30rpx;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
}

.permission-status.pending {
  background: linear-gradient(135deg, #FFF9E6 0%, #FFFBF0 100%);
  border-left: 6rpx solid #FFA000;
}

.permission-status.granted {
  background: linear-gradient(135deg, #E8F5E9 0%, #F1F8F4 100%);
  border-left: 6rpx solid #66BB6A;
}

.status-icon {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 48rpx;
  flex-shrink: 0;
}

.permission-status.pending .status-icon {
  background: #FFA000;
  color: white;
}

.permission-status.granted .status-icon {
  background: #66BB6A;
  color: white;
}

.status-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.status-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.status-desc {
  font-size: 26rpx;
  color: #666;
  line-height: 1.5;
}

/* 工作人员联系区域 */
.staff-contact-section {
  background: white;
  border-radius: 20rpx;
  padding: 40rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
  transition: all 0.3s ease;
}

/* 已完成状态 */
.staff-contact-section.completed {
  background: #F9F9F9;
  opacity: 0.85;
}

.section-header {
  display: flex;
  align-items: center;
  gap: 16rpx;
  margin-bottom: 12rpx;
}

.step-badge {
  padding: 8rpx 20rpx;
  background: linear-gradient(135deg, #A8E6CF, #C8E6C9);
  color: white;
  font-size: 24rpx;
  font-weight: bold;
  border-radius: 24rpx;
  transition: all 0.3s ease;
}

/* 已完成徽章 */
.step-badge.completed {
  background: #66BB6A;
  padding: 8rpx 16rpx;
}

/* 已完成标签 */
.completed-tag {
  margin-left: auto;
  padding: 6rpx 16rpx;
  background: #E8F5E9;
  color: #66BB6A;
  font-size: 22rpx;
  border-radius: 16rpx;
  font-weight: 500;
}

/* 进行中标签 */
.current-tag {
  margin-left: auto;
  padding: 6rpx 16rpx;
  background: #FFF9E6;
  color: #FFA000;
  font-size: 22rpx;
  border-radius: 16rpx;
  font-weight: 500;
  animation: pulse 2s ease-in-out infinite;
}

@keyframes pulse {
  0%, 100% {
    opacity: 1;
  }
  50% {
    opacity: 0.7;
  }
}

/* 已完成信息 */
.completed-info {
  padding: 24rpx;
  background: #E8F5E9;
  border-radius: 12rpx;
  text-align: center;
  margin-top: 20rpx;
}

.completed-text {
  font-size: 26rpx;
  color: #66BB6A;
  font-weight: 500;
}

.staff-qrcode-box {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 16rpx;
  padding: 40rpx;
  background: #F9F9F9;
  border-radius: 16rpx;
  margin-top: 24rpx;
}

.staff-qrcode {
  width: 400rpx;
  height: 400rpx;
  border-radius: 12rpx;
  border: 4rpx solid white;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.qrcode-label {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
}

.qrcode-hint {
  font-size: 24rpx;
  color: #999;
  text-align: center;
}

/* 分隔提示 */
.divider-section {
  display: flex;
  align-items: center;
  gap: 20rpx;
  margin: 40rpx 0;
}

.divider-line {
  flex: 1;
  height: 2rpx;
  background: #E0E0E0;
}

.divider-text {
  font-size: 26rpx;
  color: #999;
  white-space: nowrap;
}

/* 内容区域 */
.content-section {
  padding: 0 30rpx;
}

.step-content {
  animation: fadeIn 0.3s ease-in;
}

@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translateY(20rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* 表单区域 */
.form-section {
  background: white;
  border-radius: 20rpx;
  padding: 40rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
  transition: all 0.3s ease;
}

/* 激活状态 - 高亮显示 */
.form-section.active {
  box-shadow: 0 8rpx 24rpx rgba(168, 230, 207, 0.3);
  border: 2rpx solid #A8E6CF;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 12rpx;
}

.section-hint {
  font-size: 24rpx;
  color: #999;
  display: block;
  margin-bottom: 30rpx;
}

/* 表单分组 */
.form-group {
  padding: 30rpx;
  background: #F9F9F9;
  border-radius: 16rpx;
  margin-bottom: 32rpx;
}

.form-group .form-item {
  margin-bottom: 24rpx;
}

.form-group .form-item:last-child {
  margin-bottom: 0;
}

/* 表单项 */
.form-item {
  margin-bottom: 32rpx;
}

.form-item:last-child {
  margin-bottom: 0;
}

.form-label {
  font-size: 28rpx;
  color: #333;
  display: block;
  margin-bottom: 16rpx;
}

.form-label.required::before {
  content: '*';
  color: #FF5252;
  margin-right: 6rpx;
}

.form-hint {
  font-size: 24rpx;
  color: #999;
  display: block;
  margin-bottom: 16rpx;
}

.form-input {
  width: 100%;
  height: 88rpx;
  padding: 0 24rpx;
  background: #F9F9F9;
  border-radius: 12rpx;
  font-size: 28rpx;
  box-sizing: border-box;
}

.form-textarea {
  width: 100%;
  min-height: 200rpx;
  padding: 20rpx 24rpx;
  background: #F9F9F9;
  border-radius: 12rpx;
  font-size: 28rpx;
  box-sizing: border-box;
}

.char-count {
  display: block;
  text-align: right;
  font-size: 24rpx;
  color: #999;
  margin-top: 12rpx;
}

/* 验证码输入组 */
.verify-input-group {
  display: flex;
  gap: 16rpx;
}

.verify-input {
  flex: 1;
}

.verify-btn {
  width: 200rpx;
  height: 88rpx;
  line-height: 88rpx;
  padding: 0;
  background: linear-gradient(135deg, #A8E6CF, #C8E6C9);
  color: white;
  border-radius: 12rpx;
  font-size: 26rpx;
  font-weight: 500;
  border: none;
}

.verify-btn.disabled {
  background: #E0E0E0;
  color: #999;
}

/* 选择器 */
.picker-input {
  width: 100%;
  height: 88rpx;
  padding: 0 24rpx;
  background: #F9F9F9;
  border-radius: 12rpx;
  font-size: 28rpx;
  display: flex;
  align-items: center;
  color: #333;
  box-sizing: border-box;
}

.picker-input:empty::before {
  content: '请选择关系';
  color: #999;
}

/* 二维码上传 */
.qrcode-preview {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 24rpx;
  padding: 30rpx 0;
}

.qrcode-image {
  width: 400rpx;
  height: 400rpx;
  border-radius: 12rpx;
  border: 4rpx solid #F0F0F0;
}

.change-btn {
  padding: 16rpx 48rpx;
  background: #F5F5F5;
  color: #666;
  border-radius: 48rpx;
  font-size: 26rpx;
  border: none;
}

.qrcode-upload {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 80rpx 40rpx;
  border: 4rpx dashed #D0D0D0;
  border-radius: 16rpx;
  background: #FAFAFA;
}

.upload-icon {
  font-size: 80rpx;
  margin-bottom: 20rpx;
}

.upload-hint {
  font-size: 32rpx;
  color: #333;
  font-weight: 500;
  margin-bottom: 12rpx;
}

.upload-desc {
  font-size: 24rpx;
  color: #999;
}

/* 小尺寸二维码上传 */
.qrcode-preview-small {
  display: flex;
  align-items: center;
  gap: 20rpx;
  padding: 20rpx;
  background: #F9F9F9;
  border-radius: 12rpx;
}

.qrcode-image-small {
  width: 160rpx;
  height: 160rpx;
  border-radius: 8rpx;
  border: 2rpx solid #E0E0E0;
}

.change-btn-small {
  padding: 12rpx 32rpx;
  background: white;
  color: #666;
  border-radius: 24rpx;
  font-size: 24rpx;
  border: 2rpx solid #E0E0E0;
}

.qrcode-upload-small {
  display: flex;
  align-items: center;
  gap: 16rpx;
  padding: 30rpx;
  border: 3rpx dashed #D0D0D0;
  border-radius: 12rpx;
  background: #FAFAFA;
}

.upload-icon-small {
  font-size: 48rpx;
}

.upload-hint-small {
  font-size: 26rpx;
  color: #666;
}

/* 提交区域 */
.submit-section {
  margin-top: 30rpx;
  margin-bottom: 30rpx;
}

/* 操作按钮 */
.step-actions {
  display: flex;
  gap: 20rpx;
  margin-top: 30rpx;
}

.action-btn {
  flex: 1;
  height: 96rpx;
  line-height: 96rpx;
  border-radius: 48rpx;
  font-size: 32rpx;
  font-weight: bold;
  border: none;
}

.action-btn.primary {
  background: linear-gradient(135deg, #A8E6CF, #C8E6C9);
  color: white;
  box-shadow: 0 8rpx 24rpx rgba(168, 230, 207, 0.4);
}

.action-btn.secondary {
  background: white;
  color: #666;
  border: 2rpx solid #E0E0E0;
}

.action-btn.full {
  flex: none;
  width: 100%;
}

/* 完成状态 */
.success-content {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 80rpx 40rpx;
  background: white;
  border-radius: 20rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
}

.success-icon {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, #66BB6A, #81C784);
  color: white;
  font-size: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 30rpx;
}

.success-title {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 16rpx;
}

.success-desc {
  font-size: 28rpx;
  color: #999;
  margin-bottom: 40rpx;
}

.success-info {
  width: 100%;
  background: #F9F9F9;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 40rpx;
}

.info-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 16rpx 0;
  border-bottom: 1rpx solid #E0E0E0;
}

.info-item:last-child {
  border-bottom: none;
}

.info-label {
  font-size: 28rpx;
  color: #666;
}

.info-value {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

/* 重要说明 */
.notice-box {
  background: #FFF9E6;
  border-radius: 16rpx;
  padding: 30rpx;
  border-left: 6rpx solid #FFA000;
}

.notice-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  display: block;
}

.notice-item {
  display: flex;
  align-items: flex-start;
  margin-bottom: 12rpx;
}

.notice-item:last-child {
  margin-bottom: 0;
}

.notice-dot {
  color: #FFA000;
  font-size: 28rpx;
  margin-right: 12rpx;
  line-height: 40rpx;
}

.notice-text {
  flex: 1;
  font-size: 24rpx;
  color: #666;
  line-height: 40rpx;
}

/* 画师详情页样式 */
.container {
  min-height: 100vh;
  background-color: #F5F5F5;
}

.loading {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 400rpx;
  color: #999;
}

/* 画师头部 */
.artist-header {
  background: linear-gradient(135deg, #A8E6CF 0%, #D0F0C0 100%);
  padding: 40rpx 30rpx;
  display: flex;
  gap: 25rpx;
}

.artist-avatar {
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;
  border: 4rpx solid white;
  flex-shrink: 0;
}

.artist-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 15rpx;
}

.artist-name-row {
  display: flex;
  align-items: center;
  gap: 15rpx;
}

.artist-name {
  font-size: 36rpx;
  font-weight: 700;
  color: white;
}

.artist-level {
  font-size: 20rpx;
  padding: 6rpx 16rpx;
  border-radius: 20rpx;
  font-weight: 600;
  color: white;
}

.artist-level.level-S {
  background: linear-gradient(135deg, #FFD700 0%, #FFA500 100%);
}

.artist-level.level-A {
  background: linear-gradient(135deg, #FF6B6B 0%, #FF8E53 100%);
}

.artist-level.level-B {
  background: linear-gradient(135deg, #4ECDC4 0%, #44A08D 100%);
}

.artist-intro {
  font-size: 24rpx;
  color: rgba(255,255,255,0.9);
  line-height: 1.6;
}

.artist-stats {
  display: flex;
  gap: 30rpx;
}

.stat-item {
  display: flex;
  flex-direction: column;
  gap: 6rpx;
  align-items: center;
}

.stat-value {
  font-size: 32rpx;
  font-weight: 700;
  color: white;
}

.stat-label {
  font-size: 22rpx;
  color: rgba(255,255,255,0.8);
}

/* 操作按钮 */
.action-bar {
  background: white;
  padding: 20rpx 30rpx;
  display: flex;
  gap: 20rpx;
}

.action-btn {
  flex: 1;
  font-size: 28rpx;
  padding: 18rpx 0;
  border-radius: 50rpx;
  border: none;
  line-height: 1.5;
  font-weight: 600;
}

.follow-btn {
  background: linear-gradient(135deg, #A8E6CF 0%, #D0F0C0 100%);
  color: white;
}

.follow-btn.followed {
  background: #F5F5F5;
  color: #999;
}

.contact-btn {
  background: white;
  border: 2rpx solid #A8E6CF;
  color: #A8E6CF;
}

/* Tab栏 */
.tab-bar {
  background: white;
  display: flex;
  margin-bottom: 20rpx;
}

.tab-item {
  flex: 1;
  padding: 25rpx 0;
  text-align: center;
  position: relative;
}

.tab-text {
  font-size: 28rpx;
  color: #666;
}

.tab-item.active .tab-text {
  color: #A8E6CF;
  font-weight: 600;
}

.tab-item.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 60rpx;
  height: 4rpx;
  background: #A8E6CF;
  border-radius: 2rpx;
}

/* 作品列表 */
.products-section {
  padding: 0 20rpx 20rpx;
}

.product-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
}

.product-item {
  background: white;
  border-radius: 16rpx;
  overflow: hidden;
}

.product-image {
  width: 100%;
  aspect-ratio: 1;
  background: #F5F5F5;
}

.product-info {
  padding: 20rpx;
  display: flex;
  flex-direction: column;
  gap: 10rpx;
}

.product-name {
  font-size: 26rpx;
  color: #333;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.product-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.product-price {
  font-size: 28rpx;
  font-weight: 700;
  color: #E53935;
}

.product-sales {
  font-size: 22rpx;
  color: #999;
}

/* 业绩数据 */
.performance-section {
  padding: 20rpx;
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.performance-card {
  background: white;
  border-radius: 16rpx;
  padding: 30rpx;
}

.card-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 25rpx;
}

.performance-stats {
  display: flex;
  justify-content: space-around;
}

.perf-item {
  display: flex;
  flex-direction: column;
  gap: 10rpx;
  align-items: center;
}

.perf-label {
  font-size: 24rpx;
  color: #999;
}

.perf-value {
  font-size: 32rpx;
  font-weight: 700;
  color: #A8E6CF;
}

.chart-placeholder {
  height: 400rpx;
  background: #F5F5F5;
  border-radius: 12rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.chart-text {
  font-size: 26rpx;
  color: #999;
}

/* 评价列表 */
.reviews-section {
  padding: 20rpx;
}

.review-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.review-item {
  background: white;
  border-radius: 16rpx;
  padding: 25rpx;
}

.review-header {
  display: flex;
  gap: 15rpx;
  align-items: center;
  margin-bottom: 15rpx;
}

.reviewer-avatar {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  background: #F5F5F5;
}

.reviewer-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 6rpx;
}

.reviewer-name {
  font-size: 26rpx;
  color: #333;
  font-weight: 600;
}

.review-rating {
  display: flex;
  gap: 6rpx;
}

.star {
  width: 24rpx;
  height: 24rpx;
  background: #E0E0E0;
  clip-path: polygon(50% 0%, 61% 35%, 98% 35%, 68% 57%, 79% 91%, 50% 70%, 21% 91%, 32% 57%, 2% 35%, 39% 35%);
}

.star.filled {
  background: #FFD700;
}

.review-time {
  font-size: 22rpx;
  color: #999;
}

.review-content {
  font-size: 26rpx;
  color: #666;
  line-height: 1.6;
  margin-bottom: 15rpx;
}

.review-images {
  display: flex;
  gap: 15rpx;
  flex-wrap: wrap;
}

.review-image {
  width: 200rpx;
  height: 200rpx;
  border-radius: 12rpx;
  background: #F5F5F5;
}

/* 空状态 */
.empty-state {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 400rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
}

.workspace-container {
  min-height: 100vh;
  background: linear-gradient(135deg, #E6FFEB 0%, #F0F8F0 100%);
  padding-bottom: 40rpx;
}

.loading {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 100vh;
  font-size: 32rpx;
  color: #999;
}

/* ========== 无权限提示 ========== */
.no-permission {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100vh;
  padding: 0 60rpx;
}

.no-permission-icon {
  font-size: 120rpx;
  margin-bottom: 40rpx;
}

.no-permission-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 16rpx;
}

.no-permission-text {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 12rpx;
}

.no-permission-hint {
  font-size: 24rpx;
  color: #999;
  text-align: center;
  line-height: 1.6;
}

/* ========== 顶部标题栏 ========== */
.header-bar {
  background: #fff;
  padding: 32rpx 30rpx;
  border-bottom: 1rpx solid #E6F4EA;
}

.role-title {
  font-size: 40rpx;
  font-weight: 700;
  color: #2D5C3F;
}

/* ========== 待处理订单区域（核心）========== */
.pending-orders-section {
  margin: 30rpx 30rpx 40rpx;
  background: #fff;
  border-radius: 24rpx;
  padding: 40rpx 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(102, 187, 106, 0.08);
}

.section-title {
  font-size: 32rpx;
  font-weight: 700;
  color: #2D5C3F;
  margin-bottom: 32rpx;
  position: relative;
  padding-left: 16rpx;
}

.section-title::before {
  content: '';
  position: absolute;
  left: 0;
  top: 50%;
  transform: translateY(-50%);
  width: 6rpx;
  height: 28rpx;
  background: linear-gradient(180deg, #66BB6A 0%, #4CAF50 100%);
  border-radius: 3rpx;
}

.pending-stats {
  display: flex;
  justify-content: space-between;
  gap: 20rpx;
  margin-bottom: 32rpx;
}

.stat-card {
  flex: 1;
  background: #F5F5F5;
  border-radius: 16rpx;
  padding: 32rpx 20rpx;
  text-align: center;
  transition: all 0.3s;
  position: relative;
  overflow: hidden;
}

.stat-card.normal {
  background: linear-gradient(135deg, #E3F2FD 0%, #BBDEFB 100%);
}

.stat-card.warning {
  background: linear-gradient(135deg, #FFF3E0 0%, #FFE0B2 100%);
}

.stat-card.danger {
  background: linear-gradient(135deg, #FFEBEE 0%, #FFCDD2 100%);
}

.stat-card::after {
  content: '';
  position: absolute;
  top: -50%;
  right: -50%;
  width: 200%;
  height: 200%;
  background: rgba(255, 255, 255, 0.2);
  transform: rotate(45deg);
  transition: all 0.5s;
}

.stat-card:active::after {
  top: -100%;
  right: -100%;
}

.stat-number {
  font-size: 56rpx;
  font-weight: 800;
  color: #333;
  line-height: 1;
  margin-bottom: 12rpx;
}

.stat-card.normal .stat-number {
  color: #1976D2;
}

.stat-card.warning .stat-number {
  color: #F57C00;
}

.stat-card.danger .stat-number {
  color: #D32F2F;
}

.stat-label {
  font-size: 24rpx;
  color: #666;
  font-weight: 500;
}

.quick-btn-primary {
  width: 100%;
  height: 88rpx;
  background: linear-gradient(135deg, #66BB6A 0%, #4CAF50 100%);
  border-radius: 16rpx;
  color: #fff;
  font-size: 30rpx;
  font-weight: 600;
  border: none;
  box-shadow: 0 6rpx 20rpx rgba(102, 187, 106, 0.3);
}

.quick-btn-primary:active {
  opacity: 0.9;
  transform: translateY(2rpx);
}

/* ========== 功能模块区 ========== */
.functions-section {
  margin: 0 30rpx 40rpx;
  background: #fff;
  border-radius: 24rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.04);
}

.function-grid {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 32rpx;
}

.function-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 24rpx 12rpx;
  border-radius: 16rpx;
  transition: all 0.3s;
}

.function-item:active {
  background: #F5F5F5;
}

.func-icon {
  width: 72rpx;
  height: 72rpx;
  border-radius: 50%;
  margin-bottom: 16rpx;
  position: relative;
}

/* 图标样式 - 使用渐变色背景 + CSS绘制 */
.stats-icon {
  background: linear-gradient(135deg, #64B5F6 0%, #1976D2 100%);
}

.stats-icon::after {
  content: '';
  position: absolute;
  width: 32rpx;
  height: 32rpx;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  border: 4rpx solid #fff;
  border-radius: 4rpx;
  border-top-color: transparent;
  border-right-color: transparent;
}

.product-icon {
  background: linear-gradient(135deg, #81C784 0%, #43A047 100%);
}

.product-icon::before {
  content: '';
  position: absolute;
  width: 36rpx;
  height: 36rpx;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  border: 4rpx solid #fff;
  border-radius: 8rpx;
}

.reward-icon {
  background: linear-gradient(135deg, #FFB74D 0%, #F57C00 100%);
}

.reward-icon::after {
  content: '¥';
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  color: #fff;
  font-size: 36rpx;
  font-weight: 700;
}

.money-icon {
  background: linear-gradient(135deg, #E57373 0%, #D32F2F 100%);
}

.money-icon::before {
  content: '';
  position: absolute;
  width: 32rpx;
  height: 32rpx;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%) rotate(45deg);
  border: 4rpx solid #fff;
}

.func-label {
  font-size: 24rpx;
  color: #666;
  font-weight: 500;
}

/* ========== 平台须知（折叠）========== */
.notice-section {
  margin: 0 30rpx;
  background: #fff;
  border-radius: 24rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.04);
}

.notice-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 32rpx 30rpx;
  background: #FFFBF0;
  border-bottom: 1rpx solid #FFE082;
}

.notice-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #F57C00;
}

.toggle-icon {
  font-size: 24rpx;
  color: #F57C00;
}

.notice-content {
  padding: 24rpx 30rpx;
}

.notice-item {
  display: flex;
  align-items: flex-start;
  padding: 16rpx 0;
  border-bottom: 1rpx solid #F5F5F5;
}

.notice-item:last-child {
  border-bottom: none;
}

.notice-dot {
  color: #FFB74D;
  font-size: 28rpx;
  margin-right: 16rpx;
  line-height: 1.6;
}

.notice-text {
  flex: 1;
  font-size: 26rpx;
  color: #666;
  line-height: 1.6;
}

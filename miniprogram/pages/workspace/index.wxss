page {
  background: linear-gradient(180deg, #A8E6CF 0%, #D0F0C0 50%, #E6FFEB 100%);
  height: 100vh;
}

.workspace-container {
  height: 100vh;
  display: flex;
  flex-direction: column;
}

.loading {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 100vh;
  font-size: 28rpx;
  color: #666;
}

/* 无权限 */
.no-permission {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100vh;
  padding: 0 60rpx;
}

.no-permission-icon {
  font-size: 100rpx;
  margin-bottom: 30rpx;
}

.no-permission-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 12rpx;
}

.no-permission-text {
  font-size: 26rpx;
  color: #666;
}

.workspace-content {
  display: flex;
  flex-direction: column;
  height: 100vh;
}

/* ========== 顶部功能区（紧凑）========== */
.top-section {
  flex-shrink: 0;
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(10rpx);
  padding: 20rpx 30rpx 24rpx;
  border-bottom: 1rpx solid rgba(168, 230, 207, 0.3);
}

.header-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.page-title {
  font-size: 36rpx;
  font-weight: 700;
  color: #2D5C3F;
}

.stats-mini {
  display: flex;
  gap: 20rpx;
}

.stat-mini-item {
  font-size: 24rpx;
  color: #666;
}

.stat-mini-item.urgent {
  color: #FF6B6B;
}

.stat-mini-num {
  font-size: 32rpx;
  font-weight: 700;
  color: #66BB6A;
  margin-left: 6rpx;
}

.stat-mini-item.urgent .stat-mini-num {
  color: #FF6B6B;
}

/* 快捷功能 */
.quick-functions {
  display: flex;
  justify-content: space-between;
  gap: 16rpx;
}

.func-btn {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 16rpx 8rpx;
  background: linear-gradient(135deg, rgba(168, 230, 207, 0.2) 0%, rgba(208, 240, 192, 0.2) 100%);
  border-radius: 16rpx;
  transition: all 0.2s;
}

.func-btn:active {
  transform: scale(0.95);
  background: linear-gradient(135deg, rgba(168, 230, 207, 0.4) 0%, rgba(208, 240, 192, 0.4) 100%);
}

.func-icon {
  width: 48rpx;
  height: 48rpx;
  margin-bottom: 8rpx;
  position: relative;
  border-radius: 50%;
}

/* CSS 绘制图标 - 清新柔和配色 */
.product-icon {
  background: linear-gradient(135deg, #A8E6CF 0%, #81C784 100%);
}

.product-icon::before {
  content: '';
  position: absolute;
  width: 24rpx;
  height: 24rpx;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  border: 3rpx solid #fff;
  border-radius: 6rpx;
}

.stats-icon {
  background: linear-gradient(135deg, #B3E5FC 0%, #81D4FA 100%);
}

.stats-icon::after {
  content: '';
  position: absolute;
  width: 20rpx;
  height: 20rpx;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  border: 3rpx solid #fff;
  border-radius: 4rpx;
  border-top-color: transparent;
  border-right-color: transparent;
}

.money-icon {
  background: linear-gradient(135deg, #FFE0B2 0%, #FFCC80 100%);
}

.money-icon::before {
  content: '¥';
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  color: #fff;
  font-size: 28rpx;
  font-weight: 700;
}

.reward-icon {
  background: linear-gradient(135deg, #FFCCBC 0%, #FFAB91 100%);
}

.reward-icon::after {
  content: '';
  position: absolute;
  width: 18rpx;
  height: 18rpx;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%) rotate(45deg);
  border: 3rpx solid #fff;
  border-radius: 3rpx;
}

.confirm-icon {
  background: linear-gradient(135deg, #CE93D8 0%, #BA68C8 100%);
}

.confirm-icon::before {
  content: '';
  position: absolute;
  width: 12rpx;
  height: 24rpx;
  top: 50%;
  left: 50%;
  transform: translate(-60%, -50%) rotate(45deg);
  border-right: 4rpx solid #fff;
  border-bottom: 4rpx solid #fff;
}

.qrcode-icon {
  background: linear-gradient(135deg, #90CAF9 0%, #64B5F6 100%);
}

.qrcode-icon::before {
  content: '';
  position: absolute;
  width: 28rpx;
  height: 28rpx;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  border: 3rpx solid #fff;
  border-radius: 4rpx;
}

.qrcode-icon::after {
  content: '';
  position: absolute;
  width: 12rpx;
  height: 12rpx;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  background: #fff;
  border-radius: 2rpx;
}

.notice-icon {
  background: linear-gradient(135deg, #FFF9C4 0%, #FFF59D 100%);
}

.notice-icon::before {
  content: '';
  position: absolute;
  width: 4rpx;
  height: 16rpx;
  top: 40%;
  left: 50%;
  transform: translate(-50%, -50%);
  background: #fff;
  border-radius: 2rpx;
}

.notice-icon::after {
  content: '';
  position: absolute;
  width: 4rpx;
  height: 4rpx;
  bottom: 30%;
  left: 50%;
  transform: translateX(-50%);
  background: #fff;
  border-radius: 50%;
}

.func-name {
  font-size: 22rpx;
  color: #2D5C3F;
  font-weight: 500;
}

/* 平台须知（紧凑） */
.notices-compact {
  margin-top: 20rpx;
  padding: 16rpx 20rpx;
  background: rgba(255, 243, 205, 0.5);
  border-radius: 12rpx;
  border-left: 4rpx solid #FFB74D;
}

.notice-line {
  font-size: 22rpx;
  color: #666;
  line-height: 1.6;
  margin-bottom: 8rpx;
}

.notice-line:last-child {
  margin-bottom: 0;
}

/* ========== 订单列表区（占大部分） ========== */
.orders-section {
  flex: 1;
  display: flex;
  flex-direction: column;
  padding: 20rpx 30rpx 0;
  overflow: hidden;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.section-title {
  font-size: 30rpx;
  font-weight: 700;
  color: #2D5C3F;
}

.order-count {
  font-size: 24rpx;
  color: #66BB6A;
  font-weight: 600;
}

/* ========== 搜索和筛选栏 ========== */
.filter-bar {
  margin-bottom: 16rpx;
}

.search-box {
  display: flex;
  align-items: center;
  background: #fff;
  border-radius: 40rpx;
  padding: 16rpx 24rpx;
  margin-bottom: 16rpx;
  box-shadow: 0 2rpx 12rpx rgba(102, 187, 106, 0.08);
}

.search-icon {
  width: 32rpx;
  height: 32rpx;
  margin-right: 12rpx;
  position: relative;
  flex-shrink: 0;
}

.search-icon::before {
  content: '';
  position: absolute;
  width: 20rpx;
  height: 20rpx;
  top: 2rpx;
  left: 2rpx;
  border: 3rpx solid #66BB6A;
  border-radius: 50%;
}

.search-icon::after {
  content: '';
  position: absolute;
  width: 12rpx;
  height: 3rpx;
  bottom: 4rpx;
  right: 4rpx;
  background: #66BB6A;
  transform: rotate(45deg);
  border-radius: 2rpx;
}

.search-input {
  flex: 1;
  font-size: 26rpx;
  color: #333;
}

.search-input::placeholder {
  color: #999;
}

.clear-icon {
  width: 32rpx;
  height: 32rpx;
  position: relative;
  margin-left: 12rpx;
  flex-shrink: 0;
}

.clear-icon::before,
.clear-icon::after {
  content: '';
  position: absolute;
  width: 20rpx;
  height: 3rpx;
  top: 50%;
  left: 50%;
  background: #999;
  border-radius: 2rpx;
}

.clear-icon::before {
  transform: translate(-50%, -50%) rotate(45deg);
}

.clear-icon::after {
  transform: translate(-50%, -50%) rotate(-45deg);
}

.filter-tabs {
  display: flex;
  gap: 16rpx;
}

.filter-tab {
  flex: 1;
  text-align: center;
  padding: 12rpx 16rpx;
  background: rgba(255, 255, 255, 0.6);
  border-radius: 20rpx;
  font-size: 24rpx;
  color: #666;
  font-weight: 500;
  transition: all 0.2s;
}

.filter-tab.active {
  background: linear-gradient(135deg, #66BB6A 0%, #4CAF50 100%);
  color: #fff;
  box-shadow: 0 4rpx 12rpx rgba(102, 187, 106, 0.3);
}

.orders-scroll {
  flex: 1;
  height: 100%;
}

/* 空状态 */
.empty-orders {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 400rpx;
}

.empty-icon-wrapper {
  margin-bottom: 20rpx;
}

.empty-icon {
  width: 100rpx;
  height: 100rpx;
  background: linear-gradient(135deg, #E0E0E0 0%, #BDBDBD 100%);
  border-radius: 50%;
  position: relative;
}

.empty-icon::before {
  content: '';
  position: absolute;
  width: 50rpx;
  height: 50rpx;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  border: 6rpx solid #fff;
  border-radius: 8rpx;
}

.empty-icon::after {
  content: '';
  position: absolute;
  width: 6rpx;
  height: 30rpx;
  top: 30%;
  left: 50%;
  transform: translateX(-50%);
  background: #fff;
  border-radius: 3rpx;
}

.empty-text {
  font-size: 26rpx;
  color: #999;
}

/* 订单卡片 */
.order-card {
  background: #fff;
  border-radius: 20rpx;
  padding: 24rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 16rpx rgba(102, 187, 106, 0.08);
}

/* 订单头部 */
.order-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
  padding-bottom: 16rpx;
  border-bottom: 1rpx solid #F0F0F0;
}

.order-id {
  font-size: 26rpx;
  font-weight: 600;
  color: #333;
}

.order-status {
  padding: 6rpx 16rpx;
  border-radius: 20rpx;
  font-size: 22rpx;
  font-weight: 500;
}

.order-status.status-inProgress {
  background: linear-gradient(135deg, #E8F5E9 0%, #C8E6C9 100%);
  color: #43A047;
}

.order-status.status-nearDeadline {
  background: linear-gradient(135deg, #FFF8E1 0%, #FFECB3 100%);
  color: #F57C00;
}

.order-status.status-overdue {
  background: linear-gradient(135deg, #FFEBEE 0%, #FFCDD2 100%);
  color: #E57373;
}

.order-status.status-completed {
  background: linear-gradient(135deg, #F3E5F5 0%, #E1BEE7 100%);
  color: #8E24AA;
}

.order-status.status-waitingConfirm {
  background: linear-gradient(135deg, #E3F2FD 0%, #BBDEFB 100%);
  color: #1976D2;
}

/* 商品信息 */
.order-product {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
}

.product-thumb {
  width: 100rpx;
  height: 100rpx;
  border-radius: 12rpx;
  background: #F5F5F5;
  flex-shrink: 0;
}

.product-info {
  flex: 1;
  margin-left: 20rpx;
  overflow: hidden;
}

.product-name {
  display: block;
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 8rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.product-spec {
  display: block;
  font-size: 24rpx;
  color: #999;
}

.product-price {
  display: flex;
  align-items: baseline;
  margin-left: 20rpx;
  flex-shrink: 0;
}

.price-symbol {
  font-size: 24rpx;
  color: #FF6B6B;
  font-weight: 600;
}

.price-value {
  font-size: 32rpx;
  font-weight: 700;
  color: #FF6B6B;
}

/* 人员信息 */
.order-people {
  display: flex;
  align-items: center;
  justify-content: space-around;
  padding: 16rpx 0;
  margin: 12rpx 0;
  background: linear-gradient(135deg, #F5F5F5 0%, #FAFAFA 100%);
  border-radius: 12rpx;
}

.people-item {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.people-avatar-small {
  width: 56rpx;
  height: 56rpx;
  border-radius: 50%;
  background: #E0E0E0;
  border: 3rpx solid #fff;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.people-name-small {
  font-size: 24rpx;
  color: #666;
  font-weight: 500;
  max-width: 120rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.people-divider {
  width: 1rpx;
  height: 40rpx;
  background: linear-gradient(180deg, transparent 0%, #E0E0E0 50%, transparent 100%);
}

/* 订单底部 */
.order-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-top: 12rpx;
  border-top: 1rpx solid #F0F0F0;
}

.order-time-info {
  display: flex;
  flex-direction: column;
  gap: 6rpx;
}

.order-time {
  font-size: 22rpx;
  color: #999;
}

.order-deadline {
  font-size: 24rpx;
  color: #66BB6A;
  font-weight: 600;
}

.order-deadline.urgent {
  color: #FF6B6B;
  animation: pulse 1.5s infinite;
}

/* 标记完成按钮 */
.mark-complete-btn {
  padding: 12rpx 24rpx;
  background: linear-gradient(135deg, #66BB6A 0%, #4CAF50 100%);
  color: #fff;
  font-size: 24rpx;
  font-weight: 600;
  border-radius: 20rpx;
  border: none;
  box-shadow: 0 4rpx 12rpx rgba(102, 187, 106, 0.3);
  display: flex;
  align-items: center;
  justify-content: center;
  line-height: 1;
  margin-left: auto;
  flex-shrink: 0;
}

.mark-complete-btn::after {
  border: none;
}

.mark-complete-btn:active {
  opacity: 0.9;
  transform: scale(0.96);
}

@keyframes pulse {
  0%, 100% {
    opacity: 1;
  }
  50% {
    opacity: 0.6;
  }
}

/* ========== 订单卡片优化样式 ========== */

/* 时间进度条区 - 统一样式 */
.order-progress-section {
  padding: 24rpx;
  margin: 16rpx 0;
  background: linear-gradient(135deg, #F8FFF9 0%, #F0F9F1 100%);
  border-radius: 16rpx;
  position: relative;
  overflow: hidden;
}

/* 左侧装饰条 */
.order-progress-section::before {
  content: '';
  position: absolute;
  left: 0;
  top: 0;
  width: 6rpx;
  height: 100%;
  background: linear-gradient(180deg, #66BB6A 0%, #4CAF50 100%);
}

.progress-header {
  display: flex;
  justify-content: space-between;
  align-items: baseline;
  margin-bottom: 16rpx;
}

.progress-label {
  font-size: 24rpx;
  color: #666;
  font-weight: 500;
  display: flex;
  flex-direction: column;
  gap: 4rpx;
}

.progress-label .time-title {
  font-size: 20rpx;
  color: #999;
  font-weight: 400;
}

.progress-label .time-value {
  font-size: 24rpx;
  color: #333;
  font-weight: 600;
}

.deadline-label.overdue .time-value {
  color: #FF6B6B;
}

.progress-bar-container {
  position: relative;
}

.progress-bar-bg {
  width: 100%;
  height: 16rpx;
  background: rgba(255, 255, 255, 0.9);
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: inset 0 2rpx 6rpx rgba(0, 0, 0, 0.06);
  position: relative;
}

.progress-bar-fill {
  height: 100%;
  background: linear-gradient(90deg, #66BB6A 0%, #81C784 50%, #66BB6A 100%);
  background-size: 200% 100%;
  border-radius: 16rpx;
  transition: width 0.4s ease, background 0.3s ease;
  position: relative;
  animation: shimmer 2s infinite;
}

@keyframes shimmer {
  0% {
    background-position: 200% center;
  }
  100% {
    background-position: 0% center;
  }
}

/* 进度条高光效果 */
.progress-bar-fill::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 50%;
  background: linear-gradient(180deg, rgba(255, 255, 255, 0.4) 0%, transparent 100%);
  border-radius: 16rpx 16rpx 0 0;
}


.progress-bar-fill.overdue {
  background: linear-gradient(90deg, #FF6B6B 0%, #FF8A80 50%, #FF6B6B 100%);
  background-size: 200% 100%;
  animation: shimmer-red 2s infinite;
}

@keyframes shimmer-red {
  0% {
    background-position: 200% center;
  }
  100% {
    background-position: 0% center;
  }
}

/* 人员信息区（紧凑单行） */
.order-people-compact {
  display: flex;
  align-items: center;
  justify-content: space-around;
  padding: 16rpx 24rpx;
  margin: 16rpx 0;
  background: linear-gradient(135deg, #FAFAFA 0%, #F5F5F5 100%);
  border-radius: 12rpx;
}

.people-item-compact {
  display: flex;
  align-items: center;
  gap: 10rpx;
}

.people-label-small {
  font-size: 22rpx;
  color: #999;
  font-weight: 500;
}

.people-avatar-small {
  width: 48rpx;
  height: 48rpx;
  border-radius: 50%;
  border: 2rpx solid #fff;
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.08);
  background: #E0E0E0;
  flex-shrink: 0;
}

.people-name-compact {
  font-size: 24rpx;
  color: #333;
  font-weight: 500;
  max-width: 120rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.people-divider-compact {
  width: 2rpx;
  height: 40rpx;
  background: #E0E0E0;
  flex-shrink: 0;
}

/* 操作按钮区 - 右对齐且醒目 */
.order-actions {
  margin-top: 20rpx;
  padding-top: 20rpx;
  border-top: 1rpx dashed #E0E0E0;
  display: flex;
  justify-content: flex-end;
}

.btn-mark-complete {
  padding: 16rpx 48rpx;
  background: linear-gradient(135deg, #66BB6A 0%, #4CAF50 100%);
  color: #fff;
  font-size: 26rpx;
  font-weight: 600;
  border: none;
  border-radius: 30rpx;
  box-shadow: 0 6rpx 16rpx rgba(102, 187, 106, 0.3);
  transition: all 0.2s;
  display: flex;
  align-items: center;
  justify-content: center;
  line-height: 1;
}

.btn-mark-complete::after {
  border: none;
}

.btn-mark-complete:active {
  transform: scale(0.96);
  box-shadow: 0 4rpx 12rpx rgba(102, 187, 106, 0.2);
}

/* 等待确认提示 */
.order-waiting-tip {
  margin-top: 20rpx;
  padding: 20rpx;
  border-top: 1rpx dashed #E0E0E0;
  display: flex;
  justify-content: center;
  align-items: center;
}

.waiting-text {
  font-size: 26rpx;
  color: #66BB6A;
  font-weight: 600;
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.workspace-container {
  min-height: 100vh;
  background: #F5F7FA;
  padding-bottom: 40rpx;
}

.loading {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 100vh;
  font-size: 28rpx;
  color: #999;
}

.workspace-content {
  padding: 20rpx;
}

/* 角色标识 */
.role-badge {
  position: fixed;
  top: 20rpx;
  right: 20rpx;
  padding: 8rpx 20rpx;
  border-radius: 20rpx;
  font-size: 22rpx;
  font-weight: bold;
  color: white;
  z-index: 100;
}

.role-badge.artist {
  background: linear-gradient(135deg, #A8E6CF, #88D4AB);
}

.role-badge.service {
  background: linear-gradient(135deg, #FFB74D, #FFA726);
}

/* 通用区块标题 */
.section-title {
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin-bottom: 20rpx;
  padding: 0 10rpx;
}

.title-icon {
  font-size: 32rpx;
}

.title-text {
  font-size: 30rpx;
  font-weight: 600;
  color: #333;
}

/* 今日待办 */
.todo-section {
  margin-bottom: 30rpx;
}

.todo-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 20rpx;
}

.todo-item {
  background: white;
  border-radius: 16rpx;
  padding: 30rpx 20rpx;
  text-align: center;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.06);
}

.todo-item.urgent {
  background: linear-gradient(135deg, #FFF3E0, #FFE0B2);
}

.todo-number {
  font-size: 48rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
}

.todo-item.urgent .todo-number {
  color: #F57C00;
}

.todo-label {
  font-size: 22rpx;
  color: #666;
}

/* 订单列表 */
.orders-section {
  margin-bottom: 30rpx;
}

.order-tabs {
  display: flex;
  gap: 16rpx;
  margin-bottom: 20rpx;
  padding: 0 10rpx;
}

.tab-item {
  flex: 1;
  text-align: center;
  padding: 16rpx 0;
  background: white;
  border-radius: 12rpx;
  font-size: 26rpx;
  color: #666;
  transition: all 0.3s;
}

.tab-item.active {
  background: linear-gradient(135deg, #A8E6CF, #88D4AB);
  color: white;
  font-weight: 600;
}

.order-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.order-card {
  background: white;
  border-radius: 16rpx;
  padding: 24rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.06);
  position: relative;
}

.urgent-badge {
  position: absolute;
  top: 0;
  right: 0;
  background: linear-gradient(135deg, #FF6B6B, #EE5A6F);
  color: white;
  padding: 6rpx 16rpx;
  border-radius: 0 16rpx 0 16rpx;
  font-size: 20rpx;
  font-weight: bold;
}

.order-main {
  margin-bottom: 20rpx;
}

.order-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 8rpx;
}

.order-spec {
  font-size: 24rpx;
  color: #4CAF50;
  background: #E8F5E9;
  padding: 6rpx 12rpx;
  border-radius: 8rpx;
  display: inline-block;
  margin-bottom: 16rpx;
}

.order-details {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.detail-row {
  display: flex;
  font-size: 24rpx;
}

.detail-label {
  color: #999;
  min-width: 140rpx;
}

.detail-value {
  color: #666;
  flex: 1;
}

.detail-value.deadline {
  color: #F57C00;
  font-weight: 600;
}

.order-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-top: 16rpx;
  border-top: 1rpx solid #F0F0F0;
}

.order-status {
  padding: 6rpx 16rpx;
  border-radius: 20rpx;
  font-size: 22rpx;
  font-weight: 600;
}

.order-status.pending {
  background: #FFF3E0;
  color: #F57C00;
}

.order-status.processing {
  background: #E3F2FD;
  color: #1976D2;
}

.order-status.completed {
  background: #E8F5E9;
  color: #388E3C;
}

.order-amount {
  font-size: 32rpx;
  font-weight: bold;
  color: #FF6B6B;
}

/* 空状态 */
.empty-state {
  text-align: center;
  padding: 80rpx 0;
}

.empty-icon {
  font-size: 80rpx;
  margin-bottom: 20rpx;
  display: block;
}

.empty-text {
  font-size: 26rpx;
  color: #999;
}

/* 快捷功能 */
.quick-section {
  margin-bottom: 30rpx;
}

.quick-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 20rpx;
}

.quick-item {
  background: white;
  border-radius: 16rpx;
  padding: 30rpx 20rpx;
  text-align: center;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.06);
  transition: transform 0.3s;
}

.quick-item:active {
  transform: scale(0.95);
}

.quick-icon {
  font-size: 48rpx;
  margin-bottom: 12rpx;
}

.quick-label {
  font-size: 24rpx;
  color: #666;
  display: block;
}


}

.qr-image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 15rpx;
  margin-right: 20rpx;
}

.qr-info {
  flex: 1;
}

.qr-title {
  font-size: 28rpx;
  font-weight: 600;
  color: var(--text-color);
  margin-bottom: 10rpx;
}

.qr-count {
  font-size: 24rpx;
  color: #7F8C8D;
  margin-bottom: 10rpx;
}

.qr-status {
  font-size: 22rpx;
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
  color: white;
  display: inline-block;
}


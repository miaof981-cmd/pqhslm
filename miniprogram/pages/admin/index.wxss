/* 管理后台样式 - 专业版 */
.container {
  min-height: 100vh;
  background-color: #F5F5F5;
  padding-bottom: 120rpx;
}

.loading {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 400rpx;
  color: #999;
}

/* 时间筛选栏 */
.time-filter {
  display: flex;
  gap: 15rpx;
  padding: 20rpx;
  background: white;
  overflow-x: auto;
  white-space: nowrap;
  border-bottom: 1rpx solid #F0F0F0;
}

.time-filter .filter-item {
  background: #F5F5F5;
  padding: 12rpx 30rpx;
  border-radius: 25rpx;
  font-size: 26rpx;
  color: #666;
  flex-shrink: 0;
}

.time-filter .filter-item.active {
  background: linear-gradient(135deg, #A8E6CF 0%, #D0F0C0 100%);
  color: white;
  font-weight: 600;
}

/* 主标签栏 */
.main-tabs {
  display: flex;
  background: white;
  padding: 10rpx 0;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.06);
  position: sticky;
  top: 0;
  z-index: 100;
}

.main-tab {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
  padding: 15rpx 0;
  position: relative;
}

.main-tab text {
  font-size: 24rpx;
  color: #666;
}

.main-tab.active text {
  color: #A8E6CF;
  font-weight: 600;
}

.tab-icon {
  width: 48rpx;
  height: 48rpx;
  background: #F5F5F5;
  border-radius: 50%;
  position: relative;
}

.main-tab.active .tab-icon {
  background: linear-gradient(135deg, #A8E6CF 0%, #D0F0C0 100%);
}

/* 图标样式 */
.tab-icon::before {
  content: '';
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}

.icon-dashboard::before {
  width: 24rpx;
  height: 24rpx;
  border: 3rpx solid #999;
  border-radius: 4rpx;
}

.main-tab.active .icon-dashboard::before {
  border-color: white;
}

.icon-product::before {
  width: 20rpx;
  height: 20rpx;
  border: 3rpx solid #999;
  border-top: none;
  border-radius: 0 0 4rpx 4rpx;
}

.main-tab.active .icon-product::before {
  border-color: white;
}

.icon-order::before {
  width: 24rpx;
  height: 24rpx;
  border: 3rpx solid #999;
  border-radius: 4rpx;
}

.main-tab.active .icon-order::before {
  border-color: white;
}

.icon-artist::before {
  width: 18rpx;
  height: 18rpx;
  background: #999;
  border-radius: 50%;
}

.main-tab.active .icon-artist::before {
  background: white;
}

.icon-more::before {
  width: 4rpx;
  height: 4rpx;
  background: #999;
  border-radius: 50%;
  box-shadow: 8rpx 0 0 #999, 16rpx 0 0 #999;
}

.main-tab.active .icon-more::before {
  background: white;
  box-shadow: 8rpx 0 0 white, 16rpx 0 0 white;
}

.tab-badge {
  position: absolute;
  top: 8rpx;
  right: 25%;
  background: #FF6B6B;
  color: white;
  font-size: 20rpx;
  padding: 4rpx 8rpx;
  border-radius: 20rpx;
  min-width: 32rpx;
  text-align: center;
}

/* 内容区域 */
.tab-content {
  padding: 20rpx;
}

/* 数据统计网格 */
.stats-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 15rpx;
  margin-bottom: 20rpx;
}

.stat-card {
  background: white;
  padding: 20rpx;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.04);
}

.stat-label {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 8rpx;
}

.stat-value {
  font-size: 40rpx;
  font-weight: 700;
  color: #333;
  line-height: 1.2;
}

.stat-unit {
  font-size: 20rpx;
  font-weight: 400;
  color: #999;
  margin-left: 4rpx;
}

.stat-trend {
  font-size: 22rpx;
  color: #666;
  margin-top: 6rpx;
}

/* 图表区域 */
.chart-section {
  background: white;
  padding: 25rpx;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.06);
  margin-bottom: 20rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.chart-tabs {
  display: flex;
  gap: 10rpx;
}

.chart-tab {
  font-size: 24rpx;
  color: #999;
  padding: 8rpx 20rpx;
  border-radius: 20rpx;
  background: #F5F5F5;
}

.chart-tab.active {
  background: #A8E6CF;
  color: white;
}

.chart-placeholder {
  height: 300rpx;
  background: #F5F5F5;
  border-radius: 12rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #999;
  font-size: 28rpx;
}

/* 待处理事项 */
.pending-section {
  background: white;
  padding: 20rpx;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.04);
}

.pending-list {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
  margin-top: 15rpx;
}

.pending-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 18rpx;
  background: #F8F8F8;
  border-radius: 8rpx;
}

.pending-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 4rpx;
}

.pending-title {
  font-size: 26rpx;
  font-weight: 600;
  color: #333;
}

.pending-desc {
  font-size: 22rpx;
  color: #999;
}

.pending-count {
  font-size: 32rpx;
  font-weight: 700;
  color: #A8E6CF;
  min-width: 50rpx;
  text-align: right;
}

.pending-count.warning {
  color: #FF6B6B;
}

/* 订单管理顶部栏 */
.order-header-bar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 15rpx;
  gap: 15rpx;
}

.header-actions {
  display: flex;
  gap: 10rpx;
  align-items: center;
  flex: 1;
  justify-content: flex-end;
}

.search-input-inline {
  flex: 1;
  max-width: 300rpx;
  background: white;
  padding: 12rpx 20rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  border: 1rpx solid #E0E0E0;
}

.export-btn-small {
  background: linear-gradient(135deg, #A8E6CF 0%, #D0F0C0 100%);
  color: white;
  font-size: 24rpx;
  padding: 12rpx 24rpx;
  border-radius: 20rpx;
  border: none;
  font-weight: 600;
}

/* 筛选栏优化 */
.filter-scroll {
  white-space: nowrap;
  margin-bottom: 15rpx;
}

.filter-bar-compact {
  display: inline-flex;
  gap: 10rpx;
  padding: 0 0 10rpx 0;
}

.filter-bar-compact .filter-item {
  background: white;
  padding: 10rpx 20rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  color: #666;
  flex-shrink: 0;
  border: 1rpx solid #E0E0E0;
  display: inline-flex;
  align-items: center;
  gap: 6rpx;
}

.filter-bar-compact .filter-item.active {
  background: linear-gradient(135deg, #A8E6CF 0%, #D0F0C0 100%);
  color: white;
  font-weight: 600;
  border-color: transparent;
}

.filter-count {
  font-size: 20rpx;
  opacity: 0.8;
}

/* 旧版筛选栏（保留兼容） */
.filter-bar {
  display: flex;
  gap: 15rpx;
  margin-bottom: 20rpx;
  overflow-x: auto;
  white-space: nowrap;
}

.filter-item {
  background: #F5F5F5;
  padding: 12rpx 24rpx;
  border-radius: 25rpx;
  font-size: 24rpx;
  color: #666;
  flex-shrink: 0;
}

.filter-item.active {
  background: #A8E6CF;
  color: white;
  font-weight: 600;
}

/* 搜索栏 */
.search-bar {
  margin-bottom: 20rpx;
}

.search-input {
  background: white;
  padding: 20rpx 30rpx;
  border-radius: 50rpx;
  font-size: 28rpx;
  border: 1rpx solid #E0E0E0;
}

/* 商品列表 */
.product-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.product-item {
  background: white;
  padding: 20rpx;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.06);
  display: flex;
  gap: 20rpx;
}

.product-image {
  width: 150rpx;
  height: 150rpx;
  border-radius: 12rpx;
  background: #F5F5F5;
  flex-shrink: 0;
}

.product-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 10rpx;
}

.product-name {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
}

.product-meta {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.product-category {
  font-size: 24rpx;
  color: #999;
}

.product-price {
  font-size: 32rpx;
  font-weight: 700;
  color: #E53935;
}

.product-tags {
  display: flex;
  gap: 10rpx;
}

.tag {
  font-size: 20rpx;
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
}

.tag.hot {
  background: #FFE5E5;
  color: #FF6B6B;
}

.tag.recommend {
  background: #E8F5E9;
  color: #4CAF50;
}

.tag.special {
  background: #FFF3CD;
  color: #FF9800;
}

.product-actions {
  display: flex;
  flex-direction: column;
  gap: 10rpx;
  align-items: flex-end;
}

.product-status {
  font-size: 22rpx;
  padding: 6rpx 12rpx;
  border-radius: 8rpx;
}

.product-status.status-online {
  background: #D4EDDA;
  color: #155724;
}

.product-status.status-offline {
  background: #F8D7DA;
  color: #721C24;
}

.action-btn {
  font-size: 24rpx;
  padding: 10rpx 20rpx;
  border-radius: 8rpx;
  border: none;
  background: #F5F5F5;
  color: #666;
  line-height: 1.5;
}

.add-btn,
.export-btn {
  background: #A8E6CF;
  color: white;
  font-size: 24rpx;
  padding: 12rpx 24rpx;
  border-radius: 25rpx;
  border: none;
  line-height: 1.5;
}

/* 订单列表 */
.order-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.order-item {
  background: white;
  border-radius: 16rpx;
  padding: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.06);
}

.order-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 15rpx;
  padding-bottom: 15rpx;
  border-bottom: 1rpx solid #F0F0F0;
}

.order-no {
  font-size: 24rpx;
  color: #666;
}

.order-status {
  font-size: 22rpx;
  padding: 6rpx 12rpx;
  border-radius: 8rpx;
}

.order-status.status-unpaid {
  background: #F5F5F5;
  color: #999;
}

.order-status.status-paid {
  background: #FFF3CD;
  color: #856404;
}

.order-status.status-processing {
  background: #D1ECF1;
  color: #0C5460;
}

.order-status.status-completed {
  background: #D4EDDA;
  color: #155724;
}

.order-status.status-refunding {
  background: #FFE5E5;
  color: #FF6B6B;
}

.order-status.status-refunded {
  background: #F8D7DA;
  color: #721C24;
}

.order-content {
  display: flex;
  gap: 15rpx;
  margin-bottom: 15rpx;
}

.order-image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 8rpx;
  background: #F5F5F5;
  flex-shrink: 0;
}

.order-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.order-product {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
}

.order-user,
.order-artist,
.order-time,
.order-deadline {
  font-size: 24rpx;
  color: #999;
}

.order-deadline.overdue {
  color: #FF6B6B;
  font-weight: 600;
}

.order-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-top: 15rpx;
  border-top: 1rpx solid #F0F0F0;
}

.order-amount {
  font-size: 32rpx;
  font-weight: 700;
  color: #E53935;
}

.order-actions {
  display: flex;
  gap: 10rpx;
}

.action-btn.primary {
  background: #A8E6CF;
  color: white;
}

.action-btn.success {
  background: #4CAF50;
  color: white;
}

.action-btn.warning {
  background: #FF9800;
  color: white;
}

.action-btn.default {
  background: #F5F5F5;
  color: #666;
}

/* 子标签 */
.sub-tabs {
  display: flex;
  gap: 15rpx;
  margin-bottom: 20rpx;
}

.sub-tab {
  flex: 1;
  text-align: center;
  padding: 15rpx 0;
  background: #F5F5F5;
  border-radius: 12rpx;
  font-size: 26rpx;
  color: #666;
}

.sub-tab.active {
  background: #A8E6CF;
  color: white;
  font-weight: 600;
}

/* 画师列表 */
.artist-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.artist-item {
  background: white;
  padding: 20rpx;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.06);
  display: flex;
  gap: 20rpx;
}

.artist-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  background: #F5F5F5;
  flex-shrink: 0;
}

.artist-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.artist-name-row {
  display: flex;
  align-items: center;
  gap: 10rpx;
}

.artist-name {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
}

.artist-level {
  font-size: 20rpx;
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
  font-weight: 600;
}

.artist-level.level-S {
  background: linear-gradient(135deg, #FFD700 0%, #FFA500 100%);
  color: white;
}

.artist-level.level-A {
  background: linear-gradient(135deg, #A8E6CF 0%, #D0F0C0 100%);
  color: white;
}

.artist-level.level-B {
  background: #E3F2FD;
  color: #1976D2;
}

.artist-level.level-C {
  background: #F5F5F5;
  color: #999;
}

.artist-meta {
  font-size: 24rpx;
  color: #999;
}

.artist-actions {
  display: flex;
  flex-direction: column;
  gap: 10rpx;
  align-items: flex-end;
}

.artist-status {
  font-size: 22rpx;
  padding: 6rpx 12rpx;
  border-radius: 8rpx;
}

.artist-status.status-active {
  background: #D4EDDA;
  color: #155724;
}

.artist-status.status-disabled {
  background: #F8D7DA;
  color: #721C24;
}

/* 画师申请 */
.application-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.application-item {
  background: white;
  padding: 20rpx;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.06);
}

.application-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 10rpx;
}

.applicant-name {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
}

.applicant-phone {
  font-size: 24rpx;
  color: #999;
}

.applicant-specialty {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 15rpx;
}

.portfolio-preview {
  margin-bottom: 15rpx;
}

.portfolio-label {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 10rpx;
  display: block;
}

.portfolio-images {
  display: flex;
  gap: 10rpx;
  overflow-x: auto;
}

.portfolio-image {
  width: 150rpx;
  height: 150rpx;
  border-radius: 8rpx;
  background: #F5F5F5;
  flex-shrink: 0;
}

.application-time {
  font-size: 22rpx;
  color: #999;
  margin-bottom: 15rpx;
}

.action-buttons {
  display: flex;
  gap: 15rpx;
}

.approve-btn,
.reject-btn {
  flex: 1;
  font-size: 28rpx;
  padding: 20rpx 0;
  border-radius: 12rpx;
  border: none;
  font-weight: 600;
  line-height: 1.5;
}

.approve-btn {
  background: #A8E6CF;
  color: white;
}

.reject-btn {
  background: #F5F5F5;
  color: #666;
}

/* 业绩排行 */
.performance-list {
  display: flex;
  flex-direction: column;
  gap: 15rpx;
}

.performance-item {
  background: white;
  padding: 20rpx;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.06);
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.rank-badge {
  width: 60rpx;
  height: 60rpx;
  background: #F5F5F5;
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 28rpx;
  font-weight: 700;
  color: #999;
  flex-shrink: 0;
}

.rank-badge.rank-1 {
  background: linear-gradient(135deg, #FFD700 0%, #FFA500 100%);
  color: white;
}

.rank-badge.rank-2 {
  background: linear-gradient(135deg, #C0C0C0 0%, #A8A8A8 100%);
  color: white;
}

.rank-badge.rank-3 {
  background: linear-gradient(135deg, #CD7F32 0%, #B8860B 100%);
  color: white;
}

.artist-avatar-small {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background: #F5F5F5;
  flex-shrink: 0;
}

.performance-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.performance-data {
  font-size: 24rpx;
  color: #999;
}

/* 更多功能网格 */
.more-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 20rpx;
}

.more-item {
  background: white;
  padding: 30rpx 20rpx;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.06);
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 15rpx;
}

.more-icon {
  width: 80rpx;
  height: 80rpx;
  background: linear-gradient(135deg, #A8E6CF 0%, #D0F0C0 100%);
  border-radius: 50%;
  position: relative;
}

.more-icon::before {
  content: '';
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}

.icon-category::before {
  width: 40rpx;
  height: 40rpx;
  border: 4rpx solid white;
}

.icon-users::before {
  width: 24rpx;
  height: 24rpx;
  background: white;
  border-radius: 50%;
}

.icon-service::before {
  width: 36rpx;
  height: 36rpx;
  border: 4rpx solid white;
  border-radius: 8rpx;
}

.icon-staff::before {
  width: 20rpx;
  height: 20rpx;
  background: white;
  border-radius: 50%;
  box-shadow: 12rpx 0 0 white;
}

.icon-report::before {
  width: 40rpx;
  height: 40rpx;
  border-left: 4rpx solid white;
  border-bottom: 4rpx solid white;
}

.icon-media::before {
  width: 36rpx;
  height: 30rpx;
  border: 4rpx solid white;
  border-radius: 4rpx;
}

.icon-banner::before {
  width: 40rpx;
  height: 24rpx;
  border: 4rpx solid white;
  border-radius: 4rpx;
}

.icon-notice::before {
  width: 32rpx;
  height: 32rpx;
  border: 4rpx solid white;
  border-radius: 50%;
}

.icon-settings::before {
  width: 32rpx;
  height: 32rpx;
  border: 4rpx solid white;
  border-radius: 50%;
  box-shadow: 0 0 0 8rpx rgba(255,255,255,0.3);
}

.more-label {
  font-size: 24rpx;
  color: #333;
  text-align: center;
}

/* 空状态 */
.empty-state {
  text-align: center;
  padding: 100rpx 0;
  color: #999;
  font-size: 28rpx;
}

/* 编辑画师弹窗 */
.modal-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

.modal-content {
  width: 600rpx;
  max-height: 80vh;
  background: white;
  border-radius: 20rpx;
  overflow: hidden;
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #F0F0F0;
}

.modal-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.modal-close {
  font-size: 50rpx;
  color: #999;
  line-height: 1;
  padding: 0 10rpx;
}

.modal-body {
  max-height: 60vh;
  overflow-y: auto;
  padding: 20rpx 30rpx;
}

.form-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #F5F5F5;
}

.form-item:last-child {
  border-bottom: none;
}

.form-label {
  font-size: 28rpx;
  color: #666;
  flex-shrink: 0;
}

.form-value {
  font-size: 28rpx;
  color: #333;
  text-align: right;
}

.form-picker {
  display: flex;
  align-items: center;
  gap: 10rpx;
  font-size: 28rpx;
  color: #333;
}

.picker-arrow {
  font-size: 40rpx;
  color: #999;
}

.form-switch {
  display: flex;
  align-items: center;
  gap: 15rpx;
}

.status-text {
  font-size: 28rpx;
  font-weight: 600;
}

.status-normal {
  color: #4CAF50;
}

.status-disabled {
  color: #FF6B6B;
}

.modal-footer {
  display: flex;
  gap: 20rpx;
  padding: 20rpx 30rpx 30rpx;
  border-top: 1rpx solid #F0F0F0;
}

.modal-btn {
  flex: 1;
  padding: 20rpx;
  border-radius: 12rpx;
  font-size: 28rpx;
  font-weight: 600;
  border: none;
}

.cancel-btn {
  background: #F5F5F5;
  color: #666;
}

.confirm-btn {
  background: linear-gradient(135deg, #A8E6CF 0%, #D0F0C0 100%);
  color: white;
}

/* 管理后台样式 - 专业版 */
.container {
  min-height: 100vh;
  background-color: #F5F5F5;
  padding-bottom: 120rpx;
}

.loading {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 400rpx;
  color: #999;
}

/* 时间筛选栏 */
.time-filter {
  display: flex;
  gap: 15rpx;
  padding: 20rpx;
  background: white;
  overflow-x: auto;
  white-space: nowrap;
  border-bottom: 1rpx solid #F0F0F0;
}

.time-filter .filter-item {
  background: #F5F5F5;
  padding: 12rpx 30rpx;
  border-radius: 25rpx;
  font-size: 26rpx;
  color: #666;
  flex-shrink: 0;
}

.time-filter .filter-item.active {
  background: linear-gradient(135deg, #A8E6CF 0%, #D0F0C0 100%);
  color: white;
  font-weight: 600;
}

/* 主标签栏 */
.main-tabs {
  display: flex;
  background: white;
  padding: 10rpx 0;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.06);
  position: sticky;
  top: 0;
  z-index: 100;
}

.main-tab {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
  padding: 15rpx 0;
  position: relative;
}

.main-tab text {
  font-size: 24rpx;
  color: #666;
}

.main-tab.active text {
  color: #A8E6CF;
  font-weight: 600;
}

.tab-icon {
  width: 48rpx;
  height: 48rpx;
  background: #F5F5F5;
  border-radius: 50%;
  position: relative;
}

.main-tab.active .tab-icon {
  background: linear-gradient(135deg, #A8E6CF 0%, #D0F0C0 100%);
}

/* 图标样式 */
.tab-icon::before {
  content: '';
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}

.icon-dashboard::before {
  width: 24rpx;
  height: 24rpx;
  border: 3rpx solid #999;
  border-radius: 4rpx;
}

.main-tab.active .icon-dashboard::before {
  border-color: white;
}

.icon-product::before {
  width: 20rpx;
  height: 20rpx;
  border: 3rpx solid #999;
  border-top: none;
  border-radius: 0 0 4rpx 4rpx;
}

.main-tab.active .icon-product::before {
  border-color: white;
}

.icon-order::before {
  width: 24rpx;
  height: 24rpx;
  border: 3rpx solid #999;
  border-radius: 4rpx;
}

.main-tab.active .icon-order::before {
  border-color: white;
}

.icon-artist::before {
  width: 18rpx;
  height: 18rpx;
  background: #999;
  border-radius: 50%;
}

.main-tab.active .icon-artist::before {
  background: white;
}

.icon-more::before {
  width: 4rpx;
  height: 4rpx;
  background: #999;
  border-radius: 50%;
  box-shadow: 8rpx 0 0 #999, 16rpx 0 0 #999;
}

.main-tab.active .icon-more::before {
  background: white;
  box-shadow: 8rpx 0 0 white, 16rpx 0 0 white;
}

.tab-badge {
  position: absolute;
  top: 8rpx;
  right: 25%;
  background: #FF6B6B;
  color: white;
  font-size: 20rpx;
  padding: 4rpx 8rpx;
  border-radius: 20rpx;
  min-width: 32rpx;
  text-align: center;
}

/* 内容区域 */
.tab-content {
  padding: 20rpx;
}

/* 数据统计网格 */
.stats-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 15rpx;
  margin-bottom: 20rpx;
}

.stat-card {
  background: white;
  padding: 20rpx;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.04);
}

.stat-label {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 8rpx;
}

.stat-value {
  font-size: 40rpx;
  font-weight: 700;
  color: #333;
  line-height: 1.2;
}

.stat-unit {
  font-size: 20rpx;
  font-weight: 400;
  color: #999;
  margin-left: 4rpx;
}

.stat-trend {
  font-size: 22rpx;
  color: #666;
  margin-top: 6rpx;
}

/* 图表区域 */
.chart-section {
  background: white;
  padding: 25rpx;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.06);
  margin-bottom: 20rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.chart-tabs {
  display: flex;
  gap: 10rpx;
}

.chart-tab {
  font-size: 24rpx;
  color: #999;
  padding: 8rpx 20rpx;
  border-radius: 20rpx;
  background: #F5F5F5;
}

.chart-tab.active {
  background: #A8E6CF;
  color: white;
}

.chart-placeholder {
  height: 300rpx;
  background: #F5F5F5;
  border-radius: 12rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #999;
  font-size: 28rpx;
}

/* 待处理事项 */
.pending-section {
  background: white;
  padding: 20rpx;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.04);
}

.pending-list {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
  margin-top: 15rpx;
}

.pending-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 18rpx;
  background: #F8F8F8;
  border-radius: 8rpx;
}

.pending-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 4rpx;
}

.pending-title {
  font-size: 26rpx;
  font-weight: 600;
  color: #333;
}

.pending-desc {
  font-size: 22rpx;
  color: #999;
}

.pending-count {
  font-size: 32rpx;
  font-weight: 700;
  color: #A8E6CF;
  min-width: 50rpx;
  text-align: right;
}

.pending-count.warning {
  color: #FF6B6B;
}

/* 订单管理顶部栏 */
.order-header-bar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
  background: white;
  gap: 20rpx;
}

.section-title-inline {
  font-size: 32rpx;
  font-weight: 700;
  color: #333;
  white-space: nowrap;
}

.header-actions-inline {
  display: flex;
  gap: 12rpx;
  align-items: center;
  flex: 1;
  justify-content: flex-end;
}

.search-input-inline {
  flex: 1;
  max-width: 350rpx;
  background: #F5F5F5;
  padding: 14rpx 24rpx;
  border-radius: 25rpx;
  font-size: 26rpx;
  border: none;
  color: #333;
}

.search-input-inline::placeholder {
  color: #999;
  font-size: 24rpx;
}

.export-btn-small {
  background: linear-gradient(135deg, #A8E6CF 0%, #D0F0C0 100%);
  color: white;
  font-size: 24rpx;
  padding: 14rpx 28rpx;
  border-radius: 25rpx;
  border: none;
  font-weight: 600;
  white-space: nowrap;
  line-height: 1.2;
}

/* 筛选栏优化 */
.filter-scroll {
  white-space: nowrap;
  margin-bottom: 15rpx;
}

.filter-bar-compact {
  display: inline-flex;
  gap: 10rpx;
  padding: 0 0 10rpx 0;
}

.filter-bar-compact .filter-item {
  background: white;
  padding: 10rpx 20rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  color: #666;
  flex-shrink: 0;
  border: 1rpx solid #E0E0E0;
  display: inline-flex;
  align-items: center;
  gap: 6rpx;
}

.filter-bar-compact .filter-item.active {
  background: linear-gradient(135deg, #A8E6CF 0%, #D0F0C0 100%);
  color: white;
  font-weight: 600;
  border-color: transparent;
}

.filter-count {
  font-size: 20rpx;
  opacity: 0.8;
}

/* 旧版筛选栏（保留兼容） */
.filter-bar {
  display: flex;
  gap: 15rpx;
  margin-bottom: 20rpx;
  overflow-x: auto;
  white-space: nowrap;
}

.filter-item {
  background: #F5F5F5;
  padding: 12rpx 24rpx;
  border-radius: 25rpx;
  font-size: 24rpx;
  color: #666;
  flex-shrink: 0;
}

.filter-item.active {
  background: #A8E6CF;
  color: white;
  font-weight: 600;
}

/* 搜索栏 */
.search-bar {
  margin-bottom: 20rpx;
}

.search-input {
  background: white;
  padding: 20rpx 30rpx;
  border-radius: 50rpx;
  font-size: 28rpx;
  border: 1rpx solid #E0E0E0;
}

/* 商品列表 */
.product-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.product-item {
  background: white;
  padding: 20rpx;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.06);
  display: flex;
  gap: 20rpx;
}

.product-image {
  width: 150rpx;
  height: 150rpx;
  border-radius: 12rpx;
  background: #F5F5F5;
  flex-shrink: 0;
}

.product-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 10rpx;
}

.product-name {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
}

.product-meta {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.product-category {
  font-size: 24rpx;
  color: #999;
}

.product-price {
  font-size: 32rpx;
  font-weight: 700;
  color: #E53935;
}

.product-tags {
  display: flex;
  gap: 10rpx;
}

.tag {
  font-size: 20rpx;
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
}

.tag.hot {
  background: #FFE5E5;
  color: #FF6B6B;
}

.tag.recommend {
  background: #E8F5E9;
  color: #4CAF50;
}

.tag.special {
  background: #FFF3CD;
  color: #FF9800;
}

.product-actions {
  display: flex;
  flex-direction: column;
  gap: 10rpx;
  align-items: flex-end;
}

.product-status {
  font-size: 22rpx;
  padding: 6rpx 12rpx;
  border-radius: 8rpx;
}

.product-status.status-online {
  background: #D4EDDA;
  color: #155724;
}

.product-status.status-offline {
  background: #F8D7DA;
  color: #721C24;
}

.action-btn {
  font-size: 24rpx;
  padding: 10rpx 20rpx;
  border-radius: 8rpx;
  border: none;
  background: #F5F5F5;
  color: #666;
  line-height: 1.5;
}

.add-btn,
.export-btn {
  background: #A8E6CF;
  color: white;
  font-size: 24rpx;
  padding: 12rpx 24rpx;
  border-radius: 25rpx;
  border: none;
  line-height: 1.5;
}

/* 订单列表 */
.order-list {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
  padding: 15rpx;
}

/* 紧凑型订单卡片 */
.order-card-compact {
  background: white;
  border-radius: 16rpx;
  padding: 16rpx;
  display: flex;
  gap: 16rpx;
  align-items: stretch;
  box-shadow: 0 2rpx 8rpx rgba(168, 230, 207, 0.15);
  border: 1rpx solid #F0F0F0;
  transition: all 0.2s;
}

.order-card-compact:active {
  transform: scale(0.98);
  box-shadow: 0 1rpx 4rpx rgba(168, 230, 207, 0.2);
}

/* 左侧商品图 */
.order-img-compact {
  width: 100rpx;
  height: 100rpx;
  border-radius: 12rpx;
  background: #F5F5F5;
  flex-shrink: 0;
  object-fit: cover;
}

/* 中间信息区 */
.order-info-compact {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  min-width: 0;
  gap: 8rpx;
}

/* 第一行：商品名 + 状态 */
.order-row-1 {
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: 12rpx;
}

.product-name-compact {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
  flex: 1;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.status-badge-compact {
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
  font-size: 20rpx;
  font-weight: 500;
  white-space: nowrap;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 2rpx;
}

.status-badge-compact.status-processing {
  background: linear-gradient(135deg, #E8F5E9 0%, #C8E6C9 100%);
  color: #388E3C;
}

.status-badge-compact.status-waitingConfirm {
  background: linear-gradient(135deg, #FFF3E0 0%, #FFE0B2 100%);
  color: #F57C00;
}

.status-badge-compact.status-completed {
  background: linear-gradient(135deg, #E0F2F1 0%, #B2DFDB 100%);
  color: #00796B;
}

.status-badge-compact.status-refunded {
  background: linear-gradient(135deg, #FFEBEE 0%, #FFCDD2 100%);
  color: #C62828;
}

.sub-status {
  font-size: 18rpx;
  opacity: 0.8;
}

/* 第二行：关键信息 */
.order-row-2 {
  display: flex;
  gap: 16rpx;
  flex-wrap: wrap;
}

.info-text {
  font-size: 22rpx;
  color: #666;
  white-space: nowrap;
}

/* 第三行：时间 + 金额 */
.order-row-3 {
  display: flex;
  align-items: center;
  gap: 12rpx;
  flex-wrap: wrap;
}

.time-text {
  font-size: 20rpx;
  color: #999;
}

.deadline-text {
  font-size: 20rpx;
  color: #FF9800;
  font-weight: 500;
}

.deadline-text.overdue {
  color: #FF5252;
  font-weight: 700;
}

.price-compact {
  font-size: 28rpx;
  font-weight: 700;
  color: #E53935;
  margin-left: auto;
}

/* 右侧操作区 */
.order-actions-compact {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
  justify-content: center;
}

.btn-icon {
  padding: 8rpx 16rpx;
  border-radius: 12rpx;
  font-size: 22rpx;
  font-weight: 500;
  border: none;
  line-height: 1.2;
  white-space: nowrap;
}

.btn-service {
  background: linear-gradient(135deg, #A8E6CF 0%, #D0F0C0 100%);
  color: white;
}

.btn-refund {
  background: linear-gradient(135deg, #FFB6B6 0%, #FFC9C9 100%);
  color: #721C24;
}

.btn-more {
  background: white;
  color: #666;
  border: 1rpx solid #E0E0E0;
}

.order-status {
  font-size: 22rpx;
  padding: 6rpx 12rpx;
  border-radius: 8rpx;
}

.order-status.status-unpaid {
  background: #F5F5F5;
  color: #999;
}

.order-status.status-paid {
  background: #FFF3CD;
  color: #856404;
}

.order-status.status-processing {
  background: #D1ECF1;
  color: #0C5460;
}

.order-status.status-completed {
  background: #D4EDDA;
  color: #155724;
}

.order-status.status-refunding {
  background: #FFE5E5;
  color: #FF6B6B;
}

.order-status.status-refunded {
  background: #F8D7DA;
  color: #721C24;
}

/* 新版状态徽章 */
.order-status-badge {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  gap: 6rpx;
}

.order-status-badge .status-text {
  font-size: 26rpx;
  font-weight: 600;
  padding: 8rpx 20rpx;
  border-radius: 20rpx;
}

.order-status-badge.status-unpaid .status-text {
  background: #F5F5F5;
  color: #999;
}

.order-status-badge.status-processing .status-text {
  background: linear-gradient(135deg, #D1ECF1 0%, #BEE5EB 100%);
  color: #0C5460;
}

.order-status-badge.status-waitingConfirm .status-text {
  background: linear-gradient(135deg, #FFF3CD 0%, #FFE69C 100%);
  color: #856404;
}

.order-status-badge.status-completed .status-text {
  background: linear-gradient(135deg, #D4EDDA 0%, #C3E6CB 100%);
  color: #155724;
}

.order-status-badge.status-refunded .status-text {
  background: linear-gradient(135deg, #F8D7DA 0%, #F5C6CB 100%);
  color: #721C24;
}

.business-status {
  font-size: 22rpx;
  color: #666;
  padding: 4rpx 12rpx;
  background: rgba(255,255,255,0.8);
  border-radius: 12rpx;
}

/* 订单卡片主体 */
.order-card-body {
  display: flex;
  gap: 20rpx;
  padding: 24rpx;
}

.order-product-image {
  width: 160rpx;
  height: 160rpx;
  border-radius: 16rpx;
  background: #F5F5F5;
  flex-shrink: 0;
  object-fit: cover;
}

.order-details {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.product-name {
  font-size: 30rpx;
  font-weight: 600;
  color: #333;
  line-height: 1.4;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.order-meta-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 16rpx;
}

.meta-item {
  display: flex;
  flex-direction: column;
  gap: 6rpx;
}

.meta-label {
  font-size: 22rpx;
  color: #999;
}

.meta-value {
  font-size: 26rpx;
  color: #333;
  font-weight: 500;
}

.deadline-item {
  grid-column: 1 / -1;
}

.deadline-item.overdue .meta-value {
  color: #FF6B6B;
  font-weight: 700;
}

/* 订单卡片底部 */
.order-card-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 24rpx;
  background: #FAFBFC;
  border-top: 2rpx solid #E8EEF3;
}

.order-amount-section {
  display: flex;
  flex-direction: column;
  gap: 4rpx;
}

.amount-label {
  font-size: 22rpx;
  color: #999;
}

.amount-value {
  font-size: 36rpx;
  font-weight: 700;
  color: #E53935;
}

.order-action-buttons {
  display: flex;
  gap: 12rpx;
}

.action-btn-new {
  padding: 12rpx 24rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  font-weight: 500;
  border: none;
  line-height: 1.5;
  transition: all 0.2s;
}

.btn-change-service {
  background: linear-gradient(135deg, #A8E6CF 0%, #D0F0C0 100%);
  color: white;
}

.btn-refund {
  background: linear-gradient(135deg, #FFB6B6 0%, #FFC9C9 100%);
  color: #721C24;
}

.btn-detail {
  background: white;
  color: #666;
  border: 2rpx solid #E0E0E0;
}

/* 空状态 */
.empty-order-state {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 100rpx 0;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
}

.order-content {
  display: flex;
  gap: 15rpx;
  margin-bottom: 15rpx;
}

.order-image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 8rpx;
  background: #F5F5F5;
  flex-shrink: 0;
}

.order-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.order-product {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
}

.order-user,
.order-artist,
.order-time,
.order-deadline {
  font-size: 24rpx;
  color: #999;
}

.order-deadline.overdue {
  color: #FF6B6B;
  font-weight: 600;
}

.order-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-top: 15rpx;
  border-top: 1rpx solid #F0F0F0;
}

.order-amount {
  font-size: 32rpx;
  font-weight: 700;
  color: #E53935;
}

.order-actions {
  display: flex;
  gap: 10rpx;
}

.action-btn.primary {
  background: #A8E6CF;
  color: white;
}

.action-btn.success {
  background: #4CAF50;
  color: white;
}

.action-btn.warning {
  background: #FF9800;
  color: white;
}

.action-btn.default {
  background: #F5F5F5;
  color: #666;
}

/* 子标签 */
.sub-tabs {
  display: flex;
  gap: 15rpx;
  margin-bottom: 20rpx;
}

.sub-tab {
  flex: 1;
  text-align: center;
  padding: 15rpx 0;
  background: #F5F5F5;
  border-radius: 12rpx;
  font-size: 26rpx;
  color: #666;

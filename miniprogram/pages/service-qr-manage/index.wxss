/* 客服管理页面 - 名片式布局 */
page {
  background: #F8F9FA;
  min-height: 100vh;
}

.container {
  min-height: 100vh;
  padding-bottom: 30rpx;
}

/* 头部标题栏 */
.header-section {
  background: linear-gradient(135deg, #A8E6CF 0%, #D0F0C0 100%);
  padding: 40rpx 30rpx 30rpx;
}

.header-content {
  display: flex;
  justify-content: space-between;
  align-items: center;
  gap: 20rpx;
}

.page-title {
  font-size: 36rpx;
  font-weight: 700;
  color: white;
  flex-shrink: 0;
}

.add-btn {
  display: flex;
  align-items: center;
  gap: 6rpx;
  padding: 10rpx 20rpx;
  background: rgba(255, 255, 255, 0.95);
  color: #66BB6A;
  border-radius: 25rpx;
  font-size: 24rpx;
  font-weight: 600;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.1);
  flex-shrink: 0;
  cursor: pointer;
}

.add-btn:active {
  transform: scale(0.95);
  opacity: 0.9;
}

.add-icon {
  font-size: 26rpx;
  font-weight: 700;
  line-height: 1;
}

.add-text {
  white-space: nowrap;
}

/* 客服列表 - 名片式横向布局 */
.service-list {
  padding: 20rpx 30rpx;
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.service-card {
  width: 100%;
  max-width: 90%;
  margin: 0 auto;
  height: 120rpx;
  background: white;
  border-radius: 16rpx;
  padding: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
  display: flex;
  align-items: center;
  gap: 20rpx;
  transition: all 0.2s;
}

.service-card:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
}

/* 左侧：头像区域 */
.card-left {
  flex-shrink: 0;
}

.service-avatar-wrap {
  position: relative;
  width: 80rpx;
  height: 80rpx;
}

.service-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background: #F5F5F5;
  border: 3rpx solid #A8E6CF;
}

.service-number-badge {
  position: absolute;
  bottom: -4rpx;
  right: -4rpx;
  width: 32rpx;
  height: 32rpx;
  background: linear-gradient(135deg, #FF6B6B 0%, #FF8E53 100%);
  border-radius: 50%;
  border: 2rpx solid white;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 18rpx;
  font-weight: 700;
  color: white;
}

/* 中间：客服信息 */
.card-middle {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 6rpx;
  min-width: 0;
  justify-content: center;
}

.service-name-row {
  display: flex;
  align-items: center;
  gap: 10rpx;
}

.service-name {
  font-size: 28rpx;
  font-weight: 700;
  color: #333;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  max-width: 60%;
}

.status-badge {
  padding: 3rpx 10rpx;
  border-radius: 10rpx;
  font-size: 18rpx;
  font-weight: 600;
  flex-shrink: 0;
  white-space: nowrap;
}

.status-badge.active {
  background: #E8F5E9;
  color: #66BB6A;
}

.status-badge.inactive {
  background: #F5F5F5;
  color: #999;
}

.service-id {
  font-size: 22rpx;
  color: #999;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

/* 右侧：操作按钮组 */
.card-right {
  flex-shrink: 0;
  width: 220rpx;
  display: flex;
  align-items: center;
  justify-content: flex-end;
  gap: 12rpx;
}

/* 状态开关组 */
.status-switch-wrap {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 4rpx;
}

.status-label {
  font-size: 20rpx;
  color: #666;
  font-weight: 600;
  white-space: nowrap;
}

.status-switch {
  transform: scale(0.85);
  margin: 0;
}

.edit-btn {
  width: 80rpx;
  height: 56rpx;
  line-height: 56rpx;
  padding: 0;
  border-radius: 28rpx;
  font-size: 24rpx;
  font-weight: 600;
  border: none;
  text-align: center;
  background: #E3F2FD;
  color: #2196F3;
  transition: all 0.3s;
}

.edit-btn::after {
  border: none;
}

.edit-btn:active {
  transform: scale(0.95);
  background: #BBDEFB;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 60rpx;
  text-align: center;
}

.empty-icon {
  width: 160rpx;
  height: 160rpx;
  background: #F5F5F5;
  border-radius: 50%;
  position: relative;
  margin-bottom: 30rpx;
}

.empty-icon::before {
  content: '';
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 80rpx;
  height: 80rpx;
  border: 6rpx solid #E0E0E0;
  border-radius: 50%;
}

.empty-icon::after {
  content: '';
  position: absolute;
  bottom: 35rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 50rpx;
  height: 6rpx;
  background: #E0E0E0;
  border-radius: 3rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #666;
  font-weight: 600;
  margin-bottom: 12rpx;
}

.empty-hint {
  font-size: 24rpx;
  color: #999;
}

/* 客服详情弹窗 */
.detail-modal-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.6);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 2000;
  padding: 0 30rpx;
}

.detail-modal-content {
  width: 100%;
  max-width: 650rpx;
  max-height: 80vh;
  background: white;
  border-radius: 24rpx;
  overflow: hidden;
}

.detail-modal-header {
  padding: 24rpx 30rpx;
  background: linear-gradient(135deg, #A8E6CF 0%, #D0F0C0 100%);
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.detail-modal-title {
  font-size: 30rpx;
  font-weight: 700;
  color: white;
}

.detail-modal-close {
  width: 48rpx;
  height: 48rpx;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 36rpx;
  color: white;
  line-height: 1;
}

.detail-modal-body {
  padding: 30rpx;
  max-height: calc(80vh - 100rpx);
  overflow-y: auto;
}

/* 客服基本信息区域 */
.detail-info-section {
  display: flex;
  gap: 20rpx;
  padding: 20rpx;
  background: #F8F9FA;
  border-radius: 16rpx;
  margin-bottom: 24rpx;
}

.detail-avatar-wrap {
  position: relative;
  flex-shrink: 0;
}

.detail-avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  background: #F5F5F5;
  border: 4rpx solid #A8E6CF;
}

.detail-number-badge {
  position: absolute;
  bottom: -6rpx;
  right: -6rpx;
  width: 40rpx;
  height: 40rpx;
  background: linear-gradient(135deg, #FF6B6B 0%, #FF8E53 100%);
  border-radius: 50%;
  border: 3rpx solid white;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 20rpx;
  font-weight: 700;
  color: white;
}

.detail-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
  justify-content: center;
}

.detail-name {
  font-size: 32rpx;
  font-weight: 700;
  color: #333;
}

.detail-id,
.detail-wechat {
  font-size: 24rpx;
  color: #666;
}

.detail-status {
  display: flex;
  align-items: center;
  gap: 10rpx;
  margin-top: 4rpx;
}

.detail-status-label {
  font-size: 24rpx;
  color: #666;
}

/* 二维码区域 */
.detail-qrcode-section {
  margin-bottom: 24rpx;
}

.detail-section-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 16rpx;
}

.detail-qrcode-display {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 16rpx;
  padding: 30rpx;
  background: #FAFAFA;
  border-radius: 16rpx;
}

.detail-qrcode-image {
  width: 300rpx;
  height: 300rpx;
  border-radius: 16rpx;
  border: 2rpx solid #E0E0E0;
}

.detail-qrcode-label {
  padding: 8rpx 24rpx;
  background: linear-gradient(135deg, #FFD54F 0%, #FFCA28 100%);
  border-radius: 20rpx;
  font-size: 24rpx;
  font-weight: 700;
  color: #F57F17;
}

.detail-qrcode-empty {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 16rpx;
  padding: 60rpx 30rpx;
  background: #FAFAFA;
  border-radius: 16rpx;
  border: 2rpx dashed #E0E0E0;
}

.detail-empty-hint {
  font-size: 26rpx;
  color: #999;
}

/* 操作按钮 */
.detail-actions {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.detail-action-btn {
  width: 100%;
  padding: 20rpx 0;
  border-radius: 12rpx;
  font-size: 28rpx;
  font-weight: 600;
  border: none;
}

.detail-action-btn::after {
  border: none;
}

.detail-action-btn.primary {
  background: linear-gradient(135deg, #A8E6CF 0%, #D0F0C0 100%);
  color: white;
}

.detail-action-btn.secondary {
  background: #E3F2FD;
  color: #2196F3;
}

.detail-action-btn.danger {
  background: #FFEBEE;
  color: #FF6B6B;
}

/* 添加客服弹窗 */
.modal-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
  padding: 0 30rpx;
}

.modal-content {
  width: 100%;
  max-width: 650rpx;
  max-height: 80vh;
  background: white;
  border-radius: 24rpx;
  overflow: hidden;
}

.modal-header {
  padding: 24rpx 30rpx;
  background: linear-gradient(135deg, #A8E6CF 0%, #D0F0C0 100%);
  display: flex;
  justify-content: space-between;
  align-items: center;
  gap: 20rpx;
}

.modal-title {
  font-size: 30rpx;
  font-weight: 700;
  color: white;
  flex: 1;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.modal-close {
  width: 48rpx;
  height: 48rpx;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 36rpx;
  color: white;
  line-height: 1;
  flex-shrink: 0;
}

.modal-body {
  padding: 24rpx 30rpx;
  max-height: calc(80vh - 200rpx);
  overflow-y: auto;
}

.form-item {
  margin-bottom: 24rpx;
}

.form-label {
  display: block;
  font-size: 26rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 10rpx;
  word-wrap: break-word;
}

.form-input {
  width: 100%;
  padding: 18rpx 16rpx;
  background: #F8F8F8;
  border-radius: 12rpx;
  font-size: 26rpx;
  border: 1rpx solid #E0E0E0;
  box-sizing: border-box;
  line-height: 1.5;
}

.form-hint {
  display: block;
  margin-top: 8rpx;
  font-size: 22rpx;
  color: #999;
  line-height: 1.6;
  word-wrap: break-word;
}

/* 二维码上传 */
.qrcode-upload {
  margin-top: 12rpx;
}

.qrcode-preview {
  position: relative;
  width: 200rpx;
  height: 200rpx;
}

.preview-image {
  width: 100%;
  height: 100%;
  border-radius: 12rpx;
  border: 2rpx solid #E0E0E0;
}

.preview-remove {
  position: absolute;
  top: -12rpx;
  right: -12rpx;
  width: 40rpx;
  height: 40rpx;
  background: #FF6B6B;
  border-radius: 50%;
  border: 3rpx solid white;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  color: white;
  line-height: 1;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.2);
}

.upload-btn {
  width: 200rpx;
  height: 200rpx;
  background: #FAFAFA;
  border: 2rpx dashed #E0E0E0;
  border-radius: 12rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
}

.upload-btn::after {
  border: none;
}

.upload-icon {
  font-size: 48rpx;
  color: #999;
  line-height: 1;
}

.upload-text {
  font-size: 22rpx;
  color: #999;
}

/* 弹窗底部 */
.modal-footer {
  padding: 20rpx 30rpx;
  display: flex;
  gap: 20rpx;
  border-top: 1rpx solid #F0F0F0;
}

.modal-btn {
  flex: 1;
  padding: 20rpx 0;
  border-radius: 12rpx;
  font-size: 28rpx;
  font-weight: 600;
  border: none;
}

.modal-btn::after {
  border: none;
}

.cancel-btn {
  background: #F5F5F5;
  color: #666;
}

.confirm-btn {
  background: linear-gradient(135deg, #A8E6CF 0%, #D0F0C0 100%);
  color: white;
}

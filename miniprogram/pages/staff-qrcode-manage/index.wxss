/* 容器 */
.container {
  min-height: 100vh;
  background: #F5F5F5;
}

/* 页面头部 */
.page-header {
  background: linear-gradient(135deg, #A8E6CF, #C8E6C9);
  padding: 40rpx;
  color: white;
}

.header-title {
  font-size: 40rpx;
  font-weight: bold;
  display: block;
  margin-bottom: 12rpx;
}

.header-desc {
  font-size: 26rpx;
  opacity: 0.9;
  display: block;
}

/* 内容区域 */
.content {
  padding: 30rpx;
}

/* 当前二维码区域 */
.current-qrcode-section {
  background: white;
  border-radius: 20rpx;
  padding: 40rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 24rpx;
}

/* 二维码预览 */
.qrcode-preview {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 24rpx;
}

.qrcode-image {
  width: 400rpx;
  height: 400rpx;
  border-radius: 12rpx;
  border: 4rpx solid #F0F0F0;
}

.qrcode-info {
  display: flex;
  align-items: center;
  gap: 12rpx;
  padding: 12rpx 24rpx;
  background: #F9F9F9;
  border-radius: 24rpx;
}

.info-label {
  font-size: 24rpx;
  color: #999;
}

.info-value {
  font-size: 24rpx;
  font-weight: 500;
}

.info-value.active {
  color: #66BB6A;
}

/* 空状态 */
.qrcode-empty {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 80rpx 40rpx;
}

.empty-icon {
  font-size: 80rpx;
  margin-bottom: 20rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 12rpx;
}

.empty-hint {
  font-size: 24rpx;
  color: #999;
}

/* 使用说明 */
.instructions {
  background: white;
  border-radius: 20rpx;
  padding: 40rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
}

.instructions-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 24rpx;
}

.instruction-item {
  display: flex;
  align-items: flex-start;
  margin-bottom: 20rpx;
}

.instruction-item:last-child {
  margin-bottom: 0;
}

.instruction-number {
  width: 48rpx;
  height: 48rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, #A8E6CF, #C8E6C9);
  color: white;
  font-size: 24rpx;
  font-weight: bold;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
  margin-right: 16rpx;
}

.instruction-text {
  flex: 1;
  font-size: 28rpx;
  color: #666;
  line-height: 48rpx;
}

/* 操作按钮 */
.actions {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.action-btn {
  height: 96rpx;
  line-height: 96rpx;
  border-radius: 48rpx;
  font-size: 32rpx;
  font-weight: bold;
  border: none;
}

.action-btn.primary {
  background: linear-gradient(135deg, #A8E6CF, #C8E6C9);
  color: white;
  box-shadow: 0 8rpx 24rpx rgba(168, 230, 207, 0.4);
}

.action-btn.secondary {
  background: white;
  color: #666;
  border: 2rpx solid #E0E0E0;
}


.debug-container {
  min-height: 100vh;
  background: #F5F5F5;
  padding: 20rpx;
}

.header {
  background: white;
  padding: 30rpx;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
  text-align: center;
}

.title {
  display: block;
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.subtitle {
  display: block;
  font-size: 24rpx;
  color: #999;
}

.loading {
  text-align: center;
  padding: 100rpx 0;
  font-size: 28rpx;
  color: #999;
}

.result-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

/* 汇总卡片 */
.summary-section {
  background: white;
  border-radius: 16rpx;
  padding: 40rpx;
  display: flex;
  align-items: center;
  gap: 24rpx;
  border: 3rpx solid transparent;
}

.summary-section.has-error {
  background: linear-gradient(135deg, #FFF5F5 0%, #FFE8E8 100%);
  border-color: #FF4D4F;
}

.summary-section.all-good {
  background: linear-gradient(135deg, #F0FFF4 0%, #E8F9E8 100%);
  border-color: #52C41A;
}

.summary-icon {
  font-size: 80rpx;
  line-height: 1;
}

.summary-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.summary-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.summary-count {
  font-size: 26rpx;
  color: #666;
}

/* 问题订单卡片 */
.problem-order-card {
  background: #FFF9F0;
  border: 2rpx solid #FFD591;
  border-radius: 12rpx;
  padding: 20rpx;
  margin-bottom: 16rpx;
}

.order-header {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
  margin-bottom: 12rpx;
  padding-bottom: 12rpx;
  border-bottom: 2rpx dashed #FFE7BA;
}

.order-id {
  font-size: 24rpx;
  color: #999;
  font-family: monospace;
}

.order-product {
  font-size: 28rpx;
  color: #333;
  font-weight: bold;
}

.order-issues {
  display: flex;
  flex-wrap: wrap;
  gap: 8rpx;
  margin-bottom: 12rpx;
}

.issue-tag {
  padding: 6rpx 16rpx;
  border-radius: 20rpx;
  font-size: 22rpx;
  display: inline-block;
}

.issue-tag.issue-error {
  background: #FFF1F0;
  color: #FF4D4F;
  border: 1rpx solid #FFCCC7;
}

.issue-tag.issue-warning {
  background: #FFF7E6;
  color: #FA8C16;
  border: 1rpx solid #FFD591;
}

.order-detail {
  display: flex;
  flex-direction: column;
  gap: 6rpx;
}

.detail-line {
  font-size: 24rpx;
  color: #666;
  line-height: 1.6;
}

.detail-line.wrong-line {
  color: #FF4D4F;
  text-decoration: line-through;
}

.detail-line.correct-line {
  color: #52C41A;
  font-weight: bold;
}

/* 通用部分 */
.section {
  background: white;
  border-radius: 16rpx;
  padding: 24rpx;
}

.section-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  padding-bottom: 16rpx;
  border-bottom: 2rpx solid #F0F0F0;
}

.item {
  display: flex;
  padding: 16rpx 0;
  border-bottom: 1rpx solid #F8F8F8;
  align-items: center;
}

.item:last-child {
  border-bottom: none;
}

.label {
  font-size: 26rpx;
  color: #666;
  min-width: 200rpx;
  flex-shrink: 0;
}

.value {
  font-size: 26rpx;
  color: #333;
  flex: 1;
  word-break: break-all;
}

.value.success {
  color: #52C41A;
  font-weight: bold;
}

.value.error {
  color: #FF4D4F;
  font-weight: bold;
}

.value.warning {
  color: #FFA940;
  font-weight: bold;
}

.error-box {
  background: #FFF1F0;
  border: 2rpx solid #FFCCC7;
  border-radius: 8rpx;
  padding: 20rpx;
  color: #FF4D4F;
  font-size: 26rpx;
  text-align: center;
}

.actions {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
  padding: 20rpx 0;
}

.btn {
  background: linear-gradient(135deg, #A8E6CF 0%, #D0F0C0 100%);
  color: white;
  border: none;
  border-radius: 12rpx;
  padding: 28rpx;
  font-size: 30rpx;
  font-weight: bold;
}

.btn.secondary {
  background: white;
  color: #666;
  border: 2rpx solid #E0E0E0;
}

.btn.fix-btn {
  background: linear-gradient(135deg, #FFA940 0%, #FF7A45 100%);
}

/* 分类管理页面样式 */
.container {
  min-height: 100vh;
  background-color: #F5F5F5;
  padding-bottom: 40rpx;
}

.loading {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 400rpx;
  color: #999;
}

/* 页面头部 */
.page-header {
  background: white;
  padding: 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.06);
  position: sticky;
  top: 0;
  z-index: 100;
}

.header-left {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.back-btn {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.back-icon {
  width: 20rpx;
  height: 20rpx;
  border-left: 3rpx solid #333;
  border-bottom: 3rpx solid #333;
  transform: rotate(45deg);
}

.page-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
}

.add-btn {
  background: linear-gradient(135deg, #A8E6CF 0%, #D0F0C0 100%);
  color: white;
  font-size: 26rpx;
  padding: 12rpx 30rpx;
  border-radius: 25rpx;
  border: none;
  line-height: 1.5;
}

/* 分类列表 */
.category-list {
  padding: 20rpx;
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.category-item {
  background: white;
  border-radius: 16rpx;
  padding: 25rpx;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.06);
  display: flex;
  gap: 20rpx;
}

.category-drag {
  width: 60rpx;
  display: flex;
  justify-content: center;
  align-items: flex-start;
  padding-top: 10rpx;
}

.drag-icon {
  width: 40rpx;
  height: 40rpx;
  position: relative;
}

.drag-icon::before,
.drag-icon::after {
  content: '';
  position: absolute;
  left: 0;
  width: 100%;
  height: 4rpx;
  background: #E0E0E0;
  border-radius: 2rpx;
}

.drag-icon::before {
  top: 12rpx;
  box-shadow: 0 10rpx 0 #E0E0E0;
}

.drag-icon::after {
  bottom: 12rpx;
}

.category-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 15rpx;
}

.category-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.category-name {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.category-status {
  font-size: 22rpx;
  padding: 6rpx 16rpx;
  border-radius: 20rpx;
}

.category-status.status-active {
  background: #D4EDDA;
  color: #155724;
}

.category-status.status-disabled {
  background: #F8D7DA;
  color: #721C24;
}

.category-meta {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}

.meta-item {
  font-size: 24rpx;
  color: #999;
}

.sub-categories {
  display: flex;
  flex-direction: column;
  gap: 10rpx;
}

.sub-category-label {
  font-size: 24rpx;
  color: #666;
}

.sub-category-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 10rpx;
}

.sub-tag {
  font-size: 22rpx;
  padding: 6rpx 16rpx;
  border-radius: 20rpx;
  background: #F5F5F5;
  color: #666;
}

.category-actions {
  display: flex;
  flex-direction: column;
  gap: 10rpx;
  align-items: flex-end;
}

.action-btn {
  font-size: 24rpx;
  padding: 10rpx 20rpx;
  border-radius: 8rpx;
  border: none;
  background: #F5F5F5;
  color: #666;
  line-height: 1.5;
  min-width: 100rpx;
}

.action-btn.danger {
  background: #FFE5E5;
  color: #FF6B6B;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 100rpx 0;
  gap: 30rpx;
}

.empty-icon {
  width: 200rpx;
  height: 200rpx;
  background: #F5F5F5;
  border-radius: 50%;
  position: relative;
}

.empty-icon::before {
  content: '';
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 100rpx;
  height: 100rpx;
  border: 6rpx solid #E0E0E0;
  border-radius: 16rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
}

.empty-btn {
  background: linear-gradient(135deg, #A8E6CF 0%, #D0F0C0 100%);
  color: white;
  font-size: 28rpx;
  padding: 20rpx 50rpx;
  border-radius: 50rpx;
  border: none;
}

/* 弹窗 */
.modal-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0,0,0,0.5);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 1000;
}

.modal-content {
  width: 90%;
  max-width: 600rpx;
  background: white;
  border-radius: 20rpx;
  overflow: hidden;
}

.modal-header {
  padding: 30rpx;
  border-bottom: 1rpx solid #F0F0F0;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.modal-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.modal-close {
  font-size: 48rpx;
  color: #999;
  line-height: 1;
  cursor: pointer;
}

.modal-body {
  padding: 30rpx;
  max-height: 60vh;
  overflow-y: auto;
}

.form-item {
  margin-bottom: 30rpx;
}

.form-label {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 15rpx;
  display: block;
}

.form-input {
  width: 100%;
  padding: 20rpx;
  border: 1rpx solid #E0E0E0;
  border-radius: 12rpx;
  font-size: 28rpx;
  box-sizing: border-box;
}

.form-picker {
  width: 100%;
  padding: 20rpx;
  border: 1rpx solid #E0E0E0;
  border-radius: 12rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.picker-text {
  font-size: 28rpx;
  color: #333;
}

.picker-arrow {
  width: 16rpx;
  height: 16rpx;
  border-right: 3rpx solid #999;
  border-bottom: 3rpx solid #999;
  transform: rotate(45deg);
}

.image-upload {
  width: 200rpx;
  height: 200rpx;
  border: 2rpx dashed #E0E0E0;
  border-radius: 12rpx;
  overflow: hidden;
}

.upload-preview {
  width: 100%;
  height: 100%;
}

.upload-placeholder {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  gap: 10rpx;
  background: #F5F5F5;
}

.upload-icon {
  width: 60rpx;
  height: 60rpx;
  position: relative;
}

.upload-icon::before,
.upload-icon::after {
  content: '';
  position: absolute;
  background: #CCC;
}

.upload-icon::before {
  top: 50%;
  left: 0;
  width: 100%;
  height: 4rpx;
  transform: translateY(-50%);
}

.upload-icon::after {
  left: 50%;
  top: 0;
  width: 4rpx;
  height: 100%;
  transform: translateX(-50%);
}

.upload-text {
  font-size: 24rpx;
  color: #999;
}

.form-switch {
  display: flex;
  align-items: center;
  gap: 15rpx;
}

.switch-label {
  font-size: 28rpx;
  color: #666;
}

.modal-footer {
  padding: 20rpx 30rpx;
  border-top: 1rpx solid #F0F0F0;
  display: flex;
  gap: 20rpx;
}

.modal-btn {
  flex: 1;
  font-size: 28rpx;
  padding: 20rpx 0;
  border-radius: 12rpx;
  border: none;
  line-height: 1.5;
}

.modal-btn.cancel {
  background: #F5F5F5;
  color: #666;
}

.modal-btn.confirm {
  background: linear-gradient(135deg, #A8E6CF 0%, #D0F0C0 100%);
  color: white;
}


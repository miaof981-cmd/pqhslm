/* ===== Ê≠•È™§ÂØºËà™Ê†è ===== */
.step-nav {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 40rpx 60rpx 20rpx;
  background: white;
}

.step-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 10rpx;
  flex: 0 0 auto;
}

.step-number {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  background: #E0E0E0;
  color: white;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  font-weight: bold;
  transition: all 0.3s;
}

.step-item.active .step-number {
  background: linear-gradient(135deg, #A8E6CF 0%, #88D4AB 100%);
  box-shadow: 0 4rpx 12rpx rgba(168, 230, 207, 0.4);
}

.step-label {
  font-size: 24rpx;
  color: #999;
  transition: color 0.3s;
}

.step-item.active .step-label {
  color: #A8E6CF;
  font-weight: bold;
}

.step-line {
  flex: 1;
  height: 4rpx;
  background: #E0E0E0;
  margin: 0 20rpx;
  margin-bottom: 30rpx;
  transition: background 0.3s;
}

.step-line.active {
  background: #A8E6CF;
}

/* ===== ËøõÂ∫¶Êù° ===== */
.progress-bar {
  height: 8rpx;
  background: #F0F0F0;
  position: relative;
  overflow: hidden;
}

.progress-fill {
  height: 100%;
  background: linear-gradient(90deg, #A8E6CF 0%, #88D4AB 100%);
  transition: width 0.3s ease;
}

/* ===== Ê≠•È™§ÂÜÖÂÆπ ===== */
.step-content {
  padding: 40rpx 30rpx;
  animation: fadeIn 0.3s ease;
}

@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translateY(20rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.step-title {
  margin-bottom: 40rpx;
  text-align: center;
}

.title-text {
  display: block;
  font-size: 36rpx;
  font-weight: bold;
  color: #333;

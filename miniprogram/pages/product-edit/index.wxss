/* 商品编辑页样式 - 完整版 */
.container {
  min-height: 100vh;
  background-color: #F5F5F5;
  padding-bottom: 150rpx;
}

.loading {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 400rpx;
  color: #999;
}

/* 页面头部 */
.page-header {
  background: white;
  padding: 40rpx 30rpx 30rpx;
  margin-bottom: 20rpx;
}

.form-title {
  font-size: 40rpx;
  font-weight: 700;
  color: #333;
  display: block;
  margin-bottom: 10rpx;
}

.form-subtitle {
  font-size: 24rpx;
  color: #999;
  display: block;
}

/* 表单卡片 */
.form-card {
  background: white;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.card-header {
  display: flex;
  align-items: center;
  margin-bottom: 25rpx;
  gap: 10rpx;
}

.card-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #333;
}

.card-subtitle {
  font-size: 24rpx;
  color: #999;
}

.required {
  color: #FF6B6B;
  font-size: 28rpx;
}

/* 图片上传 */
.image-upload {
  display: flex;
  flex-direction: column;
  gap: 15rpx;
}

.image-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 15rpx;
}

.image-item {
  aspect-ratio: 1;
  border-radius: 12rpx;
  overflow: hidden;
  position: relative;
  background: #F5F5F5;
}

.preview-image {
  width: 100%;
  height: 100%;
}

.cover-badge {
  position: absolute;
  top: 0;
  left: 0;
  background: linear-gradient(135deg, #A8E6CF 0%, #D0F0C0 100%);
  color: white;
  font-size: 20rpx;
  padding: 4rpx 12rpx;
  border-bottom-right-radius: 8rpx;
}

.delete-btn {
  position: absolute;
  top: 8rpx;
  right: 8rpx;
  width: 40rpx;
  height: 40rpx;
  background: rgba(0,0,0,0.6);
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
}

.delete-icon {
  color: white;
  font-size: 36rpx;
  line-height: 1;
}

.upload-btn {
  aspect-ratio: 1;
  border: 2rpx dashed #CCC;
  border-radius: 12rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  gap: 10rpx;
  background: #FAFAFA;
}

.upload-icon {
  font-size: 60rpx;
  color: #999;
  line-height: 1;
}

.upload-text {
  font-size: 22rpx;
  color: #999;
}

.upload-hint {
  display: flex;
  flex-direction: column;
  gap: 6rpx;
  font-size: 22rpx;
  color: #999;
  line-height: 1.5;
}

/* 表单组 */
.form-group {
  margin-bottom: 30rpx;
  position: relative;
}

.form-group:last-child {
  margin-bottom: 0;
}

.form-label {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 15rpx;
  display: flex;
  align-items: center;
  gap: 6rpx;
}

.form-input {
  width: 100%;
  padding: 20rpx;
  border: 1rpx solid #E0E0E0;
  border-radius: 12rpx;
  font-size: 28rpx;
  box-sizing: border-box;
  background: #FAFAFA;
}

.form-input.full-height {
  min-height: 88rpx;
  height: auto;
}

.form-input:focus {
  border-color: #A8E6CF;
  background: white;
}

.form-input::placeholder {
  color: #CCC;
}

.placeholder {
  color: #CCC;
}

.char-count {
  font-size: 22rpx;
  color: #CCC;
  text-align: right;
  margin-top: 10rpx;
}

/* 选择器 */
.picker-display {
  width: 100%;
  padding: 20rpx;
  border: 1rpx solid #E0E0E0;
  border-radius: 12rpx;
  font-size: 28rpx;
  background: #FAFAFA;
  display: flex;
  justify-content: space-between;
  align-items: center;
  min-height: 88rpx;
  box-sizing: border-box;
}

.picker-display.full-height {
  min-height: 88rpx;
}

.arrow-icon {
  width: 16rpx;
  height: 16rpx;
  border-right: 3rpx solid #999;
  border-bottom: 3rpx solid #999;
  transform: rotate(45deg);
}

/* 文本域 */
.form-textarea {
  width: 100%;
  min-height: 200rpx;
  padding: 20rpx;
  border: 1rpx solid #E0E0E0;
  border-radius: 12rpx;
  font-size: 28rpx;
  box-sizing: border-box;
  background: #FAFAFA;
  line-height: 1.6;
}

.detail-textarea {
  min-height: 300rpx;
}

.form-hint {
  font-size: 22rpx;
  color: #999;
  margin-top: 10rpx;
  line-height: 1.5;
}

/* 价格输入 */
.price-input-wrapper {
  display: flex;
  align-items: center;
  border: 1rpx solid #E0E0E0;
  border-radius: 12rpx;
  background: #FAFAFA;
  overflow: hidden;
}

.price-symbol {
  font-size: 32rpx;
  color: #E53935;
  font-weight: 700;
  padding-left: 20rpx;
}

.price-input {
  flex: 1;
  border: none;
  background: transparent;
  color: #E53935;
  font-weight: 600;
}

/* 库存控制 */
.stock-control {
  display: flex;
  align-items: center;
  gap: 15rpx;
}

.stock-btn {
  width: 60rpx;
  height: 60rpx;
  background: #F5F5F5;
  border: 1rpx solid #E0E0E0;
  border-radius: 12rpx;
  font-size: 32rpx;
  line-height: 1;
  padding: 0;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #666;
}

.stock-btn.minus {
  color: #FF6B6B;
}

.stock-btn.plus {
  color: #4CAF50;
}

.stock-input {
  flex: 1;
  text-align: center;
  padding: 20rpx;
  border: 1rpx solid #E0E0E0;
  border-radius: 12rpx;
  font-size: 28rpx;
  background: #FAFAFA;
}

/* 滑块 */
.delivery-slider {
  width: 100%;
  margin: 20rpx 0;
}

.delivery-hint {
  font-size: 24rpx;
  color: #A8E6CF;
  text-align: center;
  font-weight: 600;
}

/* 规格设置 */
.spec-hint {
  background: #E6FFEB;
  padding: 20rpx;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.spec-hint text {
  font-size: 24rpx;
  color: #666;
  line-height: 1.6;
}

.spec-list {
  display: flex;
  flex-direction: column;
  gap: 25rpx;
}

.spec-item {
  padding: 25rpx;
  background: #FAFAFA;
  border-radius: 12rpx;
  border: 1rpx solid #E0E0E0;
  position: relative;
}

.spec-level-tag {
  position: absolute;
  top: -12rpx;
  left: 20rpx;
  background: linear-gradient(135deg, #A8E6CF 0%, #D0F0C0 100%);
  color: white;
  font-size: 22rpx;
  padding: 6rpx 16rpx;
  border-radius: 20rpx;
  font-weight: 600;
}

.spec-header {
  display: flex;
  gap: 15rpx;
  margin-bottom: 20rpx;
  align-items: center;
  flex-wrap: wrap;
}

.spec-multi-check {
  display: flex;
  align-items: center;
  gap: 8rpx;
  padding: 8rpx 16rpx;
  background: white;
  border-radius: 8rpx;
  border: 1rpx solid #E0E0E0;
}

.check-label {
  font-size: 24rpx;
  color: #666;
}

.mini-switch {
  transform: scale(0.8);
}

.spec-name-input {
  flex: 1;
  min-width: 200rpx;
  padding: 18rpx 20rpx;
  border: 1rpx solid #E0E0E0;
  border-radius: 8rpx;
  font-size: 26rpx;
  background: white;
}

.delete-spec-btn {
  padding: 15rpx 25rpx;
  background: #FFE5E5;
  color: #FF6B6B;
  border-radius: 8rpx;
  font-size: 24rpx;
}

.spec-values {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.spec-value-item {
  display: flex;
  gap: 12rpx;
  align-items: center;
}

.spec-value-input {
  flex: 1;
  padding: 12rpx 15rpx;
  border: 1rpx solid #E0E0E0;
  border-radius: 8rpx;
  font-size: 24rpx;
  background: white;
}

.delete-value-btn {
  width: 48rpx;
  height: 48rpx;
  background: #FFE5E5;
  color: #FF6B6B;
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 32rpx;
  line-height: 1;
}

.add-value-btn {
  padding: 12rpx 0;
  background: white;
  border: 1rpx dashed #A8E6CF;
  border-radius: 8rpx;
  color: #A8E6CF;
  font-size: 24rpx;
  line-height: 1.5;
}

.add-spec-btn {
  width: 100%;
  padding: 20rpx 0;
  background: white;
  border: 2rpx dashed #A8E6CF;
  border-radius: 12rpx;
  color: #A8E6CF;
  font-size: 26rpx;
  line-height: 1.5;
}

/* 标签选择 */
.tag-grid {
  display: flex;
  flex-wrap: wrap;
  gap: 15rpx;
}

.tag-item {
  padding: 12rpx 24rpx;
  background: #F5F5F5;
  border: 1rpx solid #E0E0E0;
  border-radius: 25rpx;
  font-size: 24rpx;
  color: #666;
}

.tag-item.active {
  background: linear-gradient(135deg, #A8E6CF 0%, #D0F0C0 100%);
  border-color: #A8E6CF;
  color: white;
  font-weight: 600;
}

/* 详情图片 */
.detail-image-upload {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.detail-image-list {
  display: flex;
  flex-direction: column;
  gap: 15rpx;
}

.detail-image-item {
  position: relative;
  border-radius: 12rpx;
  overflow: hidden;
  background: #F5F5F5;
}

.detail-image {
  width: 100%;
  display: block;
}

.delete-detail-btn {
  position: absolute;
  top: 15rpx;
  right: 15rpx;
  padding: 10rpx 20rpx;
  background: rgba(0,0,0,0.6);
  color: white;
  border-radius: 20rpx;
  font-size: 22rpx;
}

.upload-detail-btn {
  width: 100%;
  padding: 30rpx 0;
  background: white;
  border: 2rpx dashed #CCC;
  border-radius: 12rpx;
  color: #666;
  font-size: 26rpx;
  line-height: 1.5;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 10rpx;
}

/* 其他设置 */
.setting-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 25rpx 0;
  border-bottom: 1rpx solid #F5F5F5;
}

.setting-item:last-child {
  border-bottom: none;
}

.setting-label {
  font-size: 28rpx;
  color: #333;
}

.setting-switch {
  transform: scale(0.9);
}

.setting-input {
  width: 200rpx;
  text-align: right;
  padding: 15rpx 20rpx;
  border: 1rpx solid #E0E0E0;
  border-radius: 8rpx;
  font-size: 26rpx;
  background: #FAFAFA;
}

/* 操作按钮 */
.action-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: white;
  padding: 20rpx 30rpx;
  box-shadow: 0 -2rpx 8rpx rgba(0,0,0,0.06);
  display: flex;
  gap: 20rpx;
  z-index: 100;
}

.cancel-btn {
  flex: 1;
  font-size: 28rpx;
  padding: 20rpx 0;
  border-radius: 50rpx;
  border: none;
  line-height: 1.5;
  background: #F5F5F5;
  color: #666;
  font-weight: 600;
}

.submit-btn {
  flex: 2;
  font-size: 28rpx;
  padding: 20rpx 0;
  border-radius: 50rpx;
  border: none;
  line-height: 1.5;
  background: linear-gradient(135deg, #A8E6CF 0%, #D0F0C0 100%);
  color: white;
  font-weight: 600;
}

/* 规格值样式优化 */
.spec-value-tag {
  display: flex;
  gap: 10rpx;
  align-items: center;
  background: white;
  padding: 12rpx;
  border-radius: 8rpx;
}

.spec-value-input {
  flex: 1;
  min-width: 150rpx;
  padding: 16rpx 20rpx;
  border: 1rpx solid #E0E0E0;
  border-radius: 8rpx;
  font-size: 26rpx;
  background: #FAFAFA;
}

.spec-price-input {
  width: 120rpx;
  padding: 16rpx 15rpx;
  border: 1rpx solid #E0E0E0;
  border-radius: 8rpx;
  font-size: 26rpx;
  background: #FAFAFA;
  text-align: right;
}

.price-unit {
  font-size: 24rpx;
  color: #999;
}

.delete-value-btn {
  width: 50rpx;
  height: 50rpx;
  background: #FF6B6B;
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  color: white;
  font-size: 32rpx;
  font-weight: 700;
  line-height: 1;
}

/* 简介图片 */
.summary-images {
  display: flex;
  gap: 15rpx;
  margin-top: 20rpx;
  flex-wrap: wrap;
}

.summary-image-item {
  width: 200rpx;
  height: 200rpx;
  border-radius: 12rpx;
  overflow: hidden;
  position: relative;
}

.summary-image {
  width: 100%;
  height: 100%;
}

.delete-summary-img {
  position: absolute;
  top: 8rpx;
  right: 8rpx;
  width: 40rpx;
  height: 40rpx;
  background: rgba(0,0,0,0.6);
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  color: white;
  font-size: 32rpx;
  line-height: 1;
}

.add-summary-img {
  width: 200rpx;
  height: 200rpx;
  border: 2rpx dashed #CCC;
  border-radius: 12rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  gap: 10rpx;
  background: #FAFAFA;
}

.add-icon {
  font-size: 50rpx;
  color: #999;
  line-height: 1;
}

.add-text {
  font-size: 22rpx;
  color: #999;
}

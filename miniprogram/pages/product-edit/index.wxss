/* 商品编辑页样式 */
.container {
  background-color: #f5f5f5;
  min-height: 100vh;
  padding: 30rpx;
}

.form-section {
  background-color: white;
  border-radius: 20rpx;
  padding: 40rpx;
  box-shadow: 0 4rpx 20rpx rgba(0,0,0,0.08);
}

.form-title {
  font-size: 36rpx;
  font-weight: 700;
  color: #333;
  text-align: center;
  margin-bottom: 40rpx;
}

.form-group {
  margin-bottom: 40rpx;
}

.form-label {
  font-size: 28rpx;
  color: #333;
  font-weight: 600;
  margin-bottom: 20rpx;
}

.form-input {
  background-color: #f8f9fa;
  border: 2rpx solid #e9ecef;
  border-radius: 15rpx;
  padding: 25rpx;
  font-size: 28rpx;
  width: 100%;
  box-sizing: border-box;
}

/* 图片上传 */
.image-upload {
  margin-top: 20rpx;
}

.image-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 20rpx;
  margin-bottom: 20rpx;
}

.image-item {
  position: relative;
  aspect-ratio: 1;
  border-radius: 15rpx;
  overflow: hidden;
}

.image-item image {
  width: 100%;
  height: 100%;
}

.delete-btn {
  position: absolute;
  top: 10rpx;
  right: 10rpx;
  width: 40rpx;
  height: 40rpx;
  background-color: rgba(0, 0, 0, 0.6);
  color: white;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  line-height: 1;
}

.upload-btn {
  aspect-ratio: 1;
  border: 2rpx dashed #d0f0c0;
  border-radius: 15rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background-color: #f8f9fa;
}

.upload-icon {
  width: 48rpx;
  height: 48rpx;
  margin-bottom: 10rpx;
  position: relative;
}

.upload-icon::before {
  content: '';
  position: absolute;
  top: 50%;
  left: 50%;
  width: 40rpx;
  height: 4rpx;
  background-color: #a8e6cf;
  transform: translate(-50%, -50%);
}

.upload-icon::after {
  content: '';
  position: absolute;
  top: 50%;
  left: 50%;
  width: 4rpx;
  height: 40rpx;
  background-color: #a8e6cf;
  transform: translate(-50%, -50%);
}

.upload-text {
  font-size: 24rpx;
  color: #a8e6cf;
}

.upload-hint {
  font-size: 24rpx;
  color: #999;
  text-align: center;
}

/* 价格输入 */
.price-input-wrapper {
  display: flex;
  align-items: center;
  background-color: #f8f9fa;
  border: 2rpx solid #e9ecef;
  border-radius: 15rpx;
  padding: 0 25rpx;
}

.price-symbol {
  font-size: 32rpx;
  color: #a8e6cf;
  font-weight: 700;
  margin-right: 10rpx;
}

.price-input {
  flex: 1;
  border: none;
  background: transparent;
  padding: 25rpx 0;
}

/* 出稿天数 */
.delivery-slider {
  margin: 20rpx 0;
}

.delivery-hint {
  font-size: 24rpx;
  color: #666;
  text-align: center;
}

/* 选择器 */
.picker-display {
  background-color: #f8f9fa;
  border: 2rpx solid #e9ecef;
  border-radius: 15rpx;
  padding: 25rpx;
  font-size: 28rpx;
  color: #333;
}

/* 标签网格 */
.tag-grid {
  display: flex;
  flex-wrap: wrap;
  gap: 15rpx;
  margin-top: 20rpx;
}

.tag-item {
  padding: 15rpx 30rpx;
  background-color: #f8f9fa;
  border: 2rpx solid #e9ecef;
  border-radius: 25rpx;
  font-size: 24rpx;
  color: #666;
  transition: all 0.3s ease;
}

.tag-item.active {
  background-color: #a8e6cf;
  border-color: #a8e6cf;
  color: white;
  transform: scale(1.05);
}

/* 提交按钮 */
.submit-btn {
  width: 100%;
  background: linear-gradient(45deg, #a8e6cf, #d0f0c0);
  color: white;
  border-radius: 25rpx;
  font-size: 32rpx;
  font-weight: 600;
  padding: 30rpx 0;
  margin-top: 40rpx;
  box-shadow: 0 8rpx 20rpx rgba(168, 230, 207, 0.3);
}

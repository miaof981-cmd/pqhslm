.status-icon {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 24rpx;
  position: relative;
  flex-shrink: 0;
}

.status-icon::before {
  content: '';
  position: absolute;
  width: 40rpx;
  height: 40rpx;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  border: 5rpx solid #fff;
  border-radius: 50%;
}

.status-icon.status-inProgress {
  background: linear-gradient(135deg, #A8E6CF 0%, #81C784 100%);
}

.status-icon.status-nearDeadline {
  background: linear-gradient(135deg, #FFE0B2 0%, #FFCC80 100%);

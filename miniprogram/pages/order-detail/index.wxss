/* 订单详情页样式 - 完整版 */
.container {
  min-height: 100vh;
  background-color: #F5F5F5;
  padding-bottom: 120rpx;
}

.loading {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 400rpx;
  color: #999;
}

/* 状态区域 */
.status-section {
  background: white;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.status-card {
  display: flex;
  align-items: center;
  gap: 25rpx;
  padding: 30rpx;
  border-radius: 16rpx;
  margin-bottom: 30rpx;
}

.status-card.status-unpaid {
  background: linear-gradient(135deg, #FFF3CD 0%, #FFE5B4 100%);
}

.status-card.status-paid {
  background: linear-gradient(135deg, #D1ECF1 0%, #B8E6F1 100%);
}

.status-card.status-processing {
  background: linear-gradient(135deg, #A8E6CF 0%, #D0F0C0 100%);
}

.status-card.status-completed {
  background: linear-gradient(135deg, #D4EDDA 0%, #C3E6CB 100%);
}

.status-card.status-refunding,
.status-card.status-refunded {
  background: linear-gradient(135deg, #F8D7DA 0%, #F5C6CB 100%);
}

.status-icon-wrapper {
  width: 80rpx;
  height: 80rpx;
  background: rgba(255,255,255,0.5);
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-shrink: 0;
}

.status-icon {
  width: 40rpx;
  height: 40rpx;
  border: 4rpx solid white;
  border-radius: 50%;
}

.status-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.status-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.status-desc {
  font-size: 24rpx;
  color: #666;
}

/* 进度条 */
.progress-bar {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.progress-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
  position: relative;
}

.progress-dot {
  width: 24rpx;
  height: 24rpx;
  background: #E0E0E0;
  border-radius: 50%;
  position: relative;
  z-index: 2;
}

.progress-item.active .progress-dot {
  background: #A8E6CF;
  box-shadow: 0 0 0 6rpx rgba(168,230,207,0.2);
}

.progress-label {
  font-size: 24rpx;
  color: #999;
}

.progress-item.active .progress-label {
  color: #333;
  font-weight: 600;
}

.progress-time {
  font-size: 20rpx;
  color: #CCC;
}

.progress-item.active .progress-time {
  color: #999;
}

.progress-line {
  flex: 1;
  height: 2rpx;
  background: #E0E0E0;
  margin: 0 -10rpx;
  margin-top: -50rpx;
  position: relative;
  z-index: 1;
}

.progress-line.active {
  background: #A8E6CF;
}

/* 卡片区域 */
.section-card {
  background: white;
  margin-bottom: 20rpx;
  padding: 30rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 25rpx;
}

.section-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #333;
}

.attachment-count {
  font-size: 24rpx;
  color: #999;
}

/* 商品信息 */
.product-info {
  display: flex;
  gap: 20rpx;
  align-items: center;
}

.product-image {
  width: 150rpx;
  height: 150rpx;
  border-radius: 12rpx;
  background: #F5F5F5;
  flex-shrink: 0;
}

.product-details {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 10rpx;
}

.product-name {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
}

.product-category {
  font-size: 24rpx;
  color: #999;
}

.product-meta {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.product-delivery {
  font-size: 24rpx;
  color: #666;
  padding: 4rpx 12rpx;
  background: #F5F5F5;
  border-radius: 8rpx;
}

.product-price {
  font-size: 32rpx;
  font-weight: 700;
  color: #E53935;
}

.arrow-icon {
  width: 16rpx;
  height: 16rpx;
  border-right: 3rpx solid #CCC;
  border-bottom: 3rpx solid #CCC;
  transform: rotate(-45deg);
  flex-shrink: 0;
}

/* 画师信息 */
.artist-info {
  display: flex;
  gap: 20rpx;
  align-items: center;
}

.artist-avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  background: #F5F5F5;
  flex-shrink: 0;
}

.artist-details {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 10rpx;
}

.artist-name {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
}

.artist-level {
  display: flex;
  gap: 15rpx;
  align-items: center;
}

.level-badge {
  font-size: 22rpx;
  padding: 4rpx 12rpx;
  background: linear-gradient(135deg, #FFD700 0%, #FFA500 100%);
  color: white;
  border-radius: 8rpx;
  font-weight: 600;
}

.artist-orders {
  font-size: 22rpx;
  color: #999;
}

.contact-btn {
  font-size: 24rpx;
  padding: 10rpx 24rpx;
  background: #A8E6CF;
  color: white;
  border-radius: 25rpx;
  border: none;
  line-height: 1.5;
}

/* 买家信息 */
.buyer-info {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

/* 订单信息 */
.order-info {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.info-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 15rpx 0;
  border-bottom: 1rpx solid #F5F5F5;
}

.info-row.vertical {
  flex-direction: column;
  align-items: flex-start;
  gap: 10rpx;
}

.info-label {
  font-size: 26rpx;
  color: #666;
}

.info-value {
  font-size: 26rpx;
  color: #333;
  text-align: right;
  max-width: 60%;
  word-break: break-all;
}

.info-value.copyable {
  color: #A8E6CF;
}

.info-value.overdue {
  color: #FF6B6B;
  font-weight: 600;
}

.info-value.price {
  font-size: 32rpx;
  font-weight: 700;
  color: #E53935;
}

.info-value.remark {
  max-width: 100%;
  text-align: left;
  line-height: 1.6;
}

/* 作品附件 */
.attachment-list {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 15rpx;
}

.attachment-item {
  aspect-ratio: 1;
  border-radius: 12rpx;
  overflow: hidden;
  background: #F5F5F5;
}

.attachment-thumb {
  width: 100%;
  height: 100%;
}

.attachment-file {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  gap: 10rpx;
  padding: 20rpx;
}

.file-icon {
  width: 60rpx;
  height: 60rpx;
  background: #CCC;
  border-radius: 8rpx;
  position: relative;
}

.file-icon::before {
  content: '';
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 30rpx;
  height: 30rpx;
  border: 3rpx solid white;
  border-radius: 4rpx;
}

.file-name {
  font-size: 22rpx;
  color: #666;
  text-align: center;
  word-break: break-all;
  line-height: 1.4;
}

/* 客服二维码 */
.service-qr-wrapper {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 20rpx;
}

.service-qr {
  width: 400rpx;
  height: 400rpx;
  background: #F5F5F5;
  border-radius: 12rpx;
}

.service-hint {
  font-size: 24rpx;
  color: #999;
}

/* 操作日志 */
.log-list {
  display: flex;
  flex-direction: column;
  gap: 25rpx;
}

.log-item {
  display: flex;
  gap: 20rpx;
  position: relative;
}

.log-item:not(:last-child)::before {
  content: '';
  position: absolute;
  left: 11rpx;
  top: 30rpx;
  bottom: -25rpx;
  width: 2rpx;
  background: #E0E0E0;
}

.log-dot {
  width: 24rpx;
  height: 24rpx;
  background: #A8E6CF;
  border-radius: 50%;
  flex-shrink: 0;
  margin-top: 4rpx;
  position: relative;
  z-index: 2;
}

.log-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 6rpx;
}

.log-text {
  font-size: 26rpx;
  color: #333;
}

.log-time {
  font-size: 22rpx;
  color: #999;
}

.log-operator {
  font-size: 22rpx;
  color: #666;
}

/* 操作按钮 */
.action-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: white;
  padding: 20rpx 30rpx;
  box-shadow: 0 -2rpx 8rpx rgba(0,0,0,0.06);
  display: flex;
  gap: 20rpx;
  z-index: 100;
}

.action-bar > view {
  flex: 1;
  display: flex;
  gap: 20rpx;
}

.action-btn {
  flex: 1;
  font-size: 28rpx;
  padding: 20rpx 0;
  border-radius: 50rpx;
  border: none;
  line-height: 1.5;
  font-weight: 600;
}

.action-btn.primary {
  background: linear-gradient(135deg, #A8E6CF 0%, #D0F0C0 100%);
  color: white;
}

.action-btn.success {
  background: #4CAF50;
  color: white;
}

.action-btn.warning {
  background: #FF9800;
  color: white;
}

.action-btn.default {
  background: #F5F5F5;
  color: #666;
}

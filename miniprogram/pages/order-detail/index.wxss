/* 订单详情页样式 */
.container {
  background-color: #f5f5f5;
  min-height: 100vh;
  padding: 30rpx;
  padding-bottom: 150rpx;
}

.loading {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 400rpx;
  color: #999;
}

/* 状态卡片 */
.status-card {
  background: linear-gradient(135deg, #A8E6CF 0%, #D0F0C0 100%);
  border-radius: 20rpx;
  padding: 50rpx 40rpx;
  text-align: center;
  margin-bottom: 20rpx;
  box-shadow: 0 8rpx 30rpx rgba(168, 230, 207, 0.3);
}

.status-icon {
  width: 80rpx;
  height: 80rpx;
  margin: 0 auto 20rpx;
  border-radius: 50%;
  background-color: white;
  position: relative;
}

.status-icon.created::before {
  content: '';
  position: absolute;
  top: 50%;
  left: 50%;
  width: 30rpx;
  height: 30rpx;
  border: 4rpx solid #A8E6CF;
  border-top-color: transparent;
  border-radius: 50%;
  transform: translate(-50%, -50%);
  animation: rotate 1s linear infinite;
}

@keyframes rotate {
  from { transform: translate(-50%, -50%) rotate(0deg); }
  to { transform: translate(-50%, -50%) rotate(360deg); }
}

.status-text {
  font-size: 36rpx;
  font-weight: 700;
  color: white;
  margin-bottom: 10rpx;
}

.deadline-text {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.9);
}

/* 商品卡片 */
.product-card {
  background-color: white;
  border-radius: 20rpx;
  padding: 30rpx;
  display: flex;
  gap: 20rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
}

.product-image {
  width: 150rpx;
  height: 150rpx;
  border-radius: 15rpx;
}

.product-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.product-name {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
}

.product-price {
  font-size: 32rpx;
  color: #FF6B6B;
  font-weight: 700;
}

.product-delivery {
  font-size: 24rpx;
  color: #A8E6CF;
  background-color: rgba(168, 230, 207, 0.2);
  padding: 6rpx 12rpx;
  border-radius: 8rpx;
  align-self: flex-start;
}

/* 画师卡片 */
.artist-card, .info-card, .service-card {
  background-color: white;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
}

.card-title {
  font-size: 28rpx;
  font-weight: 700;
  color: #333;
  margin-bottom: 20rpx;
}

.artist-info {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.artist-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
}

.artist-details {
  flex: 1;
}

.artist-name {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 8rpx;
}

.artist-label {
  font-size: 22rpx;
  color: #A8E6CF;
  background-color: rgba(168, 230, 207, 0.2);
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
  display: inline-block;
}

.contact-btn {
  background-color: #A8E6CF;
  color: white;
  font-size: 24rpx;
  padding: 15rpx 30rpx;
  border-radius: 25rpx;
}

/* 信息行 */
.info-row {
  display: flex;
  justify-content: space-between;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.info-row:last-child {
  border-bottom: none;
}

.info-label {
  font-size: 26rpx;
  color: #666;
}

.info-value {
  font-size: 26rpx;
  color: #333;
  font-weight: 600;
  text-align: right;
  max-width: 400rpx;
}

/* 客服二维码 */
.service-qr {
  width: 300rpx;
  height: 300rpx;
  display: block;
  margin: 20rpx auto;
  border-radius: 15rpx;
}

.service-hint {
  text-align: center;
  font-size: 24rpx;
  color: #999;
}

/* 操作按钮 */
.action-section {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: white;
  padding: 30rpx;
  box-shadow: 0 -4rpx 20rpx rgba(0, 0, 0, 0.08);
}

.cancel-btn {
  width: 100%;
  background-color: #f8f9fa;
  color: #666;
  border: 2rpx solid #e9ecef;
  border-radius: 25rpx;
  font-size: 28rpx;
  font-weight: 600;
  padding: 25rpx 0;
}

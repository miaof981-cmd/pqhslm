page {
  background: linear-gradient(180deg, #A8E6CF 0%, #E6FFEB 100%);
  min-height: 100vh;
}

.order-detail-container {
  padding: 20rpx 30rpx 40rpx;
}

.loading {
  text-align: center;
  padding: 200rpx 0;
  font-size: 28rpx;
  color: #999;
}

/* ========== 状态卡片 ========== */
.status-card {
  background: #fff;
  border-radius: 24rpx;
  padding: 32rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(102, 187, 106, 0.1);
}

.status-header {
  display: flex;
  align-items: center;
  margin-bottom: 40rpx;
}

.status-icon {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 24rpx;
  position: relative;
  flex-shrink: 0;
}

.status-icon::before {
  content: '';
  position: absolute;
  width: 40rpx;
  height: 40rpx;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  border: 5rpx solid #fff;
  border-radius: 50%;
}

.status-icon.status-inProgress {
  background: linear-gradient(135deg, #A8E6CF 0%, #81C784 100%);
}

.status-icon.status-nearDeadline {
  background: linear-gradient(135deg, #FFE0B2 0%, #FFCC80 100%);
}

.status-icon.status-overdue {
  background: linear-gradient(135deg, #FFCDD2 0%, #E57373 100%);
  animation: pulse 1.5s infinite;
}

.status-icon.status-completed {
  background: linear-gradient(135deg, #E1BEE7 0%, #CE93D8 100%);
}

.status-icon.status-completed::before {
  border-left-color: transparent;
  border-bottom-color: transparent;
  transform: translate(-60%, -50%) rotate(45deg);
  width: 20rpx;
  height: 40rpx;
  border-radius: 0;
}

@keyframes pulse {
  0%, 100% { opacity: 1; }
  50% { opacity: 0.7; }
}

.status-info {
  flex: 1;
}

.status-text {
  display: block;
  font-size: 36rpx;
  font-weight: 700;
  color: #2D5C3F;
  margin-bottom: 8rpx;
}

.order-id {
  display: block;
  font-size: 24rpx;
  color: #999;
}

/* 进度条 */
.progress-bar {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.progress-step {
  display: flex;
  flex-direction: column;
  align-items: center;
  position: relative;
}

.step-dot {
  width: 24rpx;
  height: 24rpx;
  border-radius: 50%;
  background: #E0E0E0;
  margin-bottom: 12rpx;
  transition: all 0.3s;
}

.progress-step.active .step-dot {
  background: linear-gradient(135deg, #66BB6A 0%, #4CAF50 100%);
  box-shadow: 0 4rpx 12rpx rgba(102, 187, 106, 0.4);
}

.step-label {
  font-size: 22rpx;
  color: #999;
}

.progress-step.active .step-label {
  color: #66BB6A;
  font-weight: 600;
}

.progress-line {
  flex: 1;
  height: 4rpx;
  background: #E0E0E0;
  margin: 0 16rpx;
  margin-bottom: 36rpx;
  transition: all 0.3s;
}

.progress-line.active {
  background: linear-gradient(90deg, #66BB6A 0%, #4CAF50 100%);
}

/* ========== 通用卡片 ========== */
.section-card {
  background: #fff;
  border-radius: 24rpx;
  padding: 32rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(102, 187, 106, 0.1);
}

.section-title {
  font-size: 30rpx;
  font-weight: 700;
  color: #2D5C3F;
  margin-bottom: 24rpx;
  padding-left: 16rpx;
  position: relative;
}

.section-title::before {
  content: '';
  position: absolute;
  left: 0;
  top: 50%;
  transform: translateY(-50%);
  width: 6rpx;
  height: 28rpx;
  background: linear-gradient(180deg, #66BB6A 0%, #4CAF50 100%);
  border-radius: 3rpx;
}

/* 商品详情 */
.product-detail {
  display: flex;
}

.product-image {
  width: 180rpx;
  height: 180rpx;
  border-radius: 16rpx;
  background: #F5F5F5;
  flex-shrink: 0;
}

.product-info {
  flex: 1;
  margin-left: 24rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.product-name {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 12rpx;
}

.product-spec {
  font-size: 26rpx;
  color: #999;
  margin-bottom: 16rpx;
}

.product-price-row {
  display: flex;
  align-items: baseline;
}

.price-label {
  font-size: 24rpx;
  color: #666;
  margin-right: 8rpx;
}

.price-symbol {
  font-size: 28rpx;
  color: #FF6B6B;
  font-weight: 600;
}

.price-value {
  font-size: 40rpx;
  font-weight: 700;
  color: #FF6B6B;
}

/* 信息行 */
.info-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #F0F0F0;
}

.info-row:last-child {
  border-bottom: none;
}

.info-label {
  font-size: 28rpx;
  color: #666;
}

.info-value {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

.info-value.urgent {
  color: #FF6B6B;
  animation: pulse 1.5s infinite;
}

/* ========== 人员信息卡片 ========== */
.people-card {
  background: linear-gradient(135deg, #F5F5F5 0%, #FAFAFA 100%);
}

.people-info {
  display: flex;
  align-items: center;
  padding: 16rpx 0;
}

.people-avatar {
  width: 96rpx;
  height: 96rpx;
  border-radius: 50%;
  background: #E0E0E0;
  margin-right: 24rpx;
  flex-shrink: 0;
  border: 4rpx solid #fff;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.people-detail {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.people-name {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 8rpx;
}

.people-label {
  font-size: 24rpx;
  color: #999;
  padding: 4rpx 16rpx;
  background: rgba(102, 187, 106, 0.1);
  border-radius: 8rpx;
  align-self: flex-start;
}

/* ========== 客服二维码 ========== */
.qr-section {
  background: linear-gradient(135deg, #E8F5E9 0%, #F1F8E9 100%);
}

.qr-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx 0;
}

.qr-image {
  width: 400rpx;
  height: 400rpx;
  border-radius: 16rpx;
  background: #fff;
  box-shadow: 0 4rpx 16rpx rgba(102, 187, 106, 0.15);
  margin-bottom: 24rpx;
}

.qr-hint {
  font-size: 28rpx;
  color: #2D5C3F;
  font-weight: 600;
  margin-bottom: 8rpx;
  text-align: center;
}

.qr-desc {
  font-size: 24rpx;
  color: #66BB6A;
  text-align: center;
  line-height: 1.6;
}

/* ========== 打赏卡片 ========== */
.reward-card {
  background: linear-gradient(135deg, #FFF9C4 0%, #FFF59D 100%);
  border-radius: 24rpx;
  padding: 32rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(255, 249, 196, 0.3);
}

.reward-header {
  display: flex;
  align-items: center;
  margin-bottom: 24rpx;
}

.reward-icon {
  width: 48rpx;
  height: 48rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, #FFAB91 0%, #FF8A65 100%);
  margin-right: 16rpx;
  position: relative;
}

.reward-icon::after {
  content: '¥';
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  color: #fff;
  font-size: 28rpx;
  font-weight: 700;
}

.reward-title {
  font-size: 28rpx;
  color: #F57C00;
  font-weight: 600;
}

.reward-amounts {
  display: flex;
  gap: 16rpx;
  margin-bottom: 24rpx;
  flex-wrap: wrap;
}

.reward-option {
  flex: 1;
  min-width: 120rpx;
  text-align: center;
  padding: 20rpx 24rpx;
  background: rgba(255, 255, 255, 0.8);
  border-radius: 16rpx;
  font-size: 28rpx;
  color: #F57C00;
  font-weight: 600;
  border: 2rpx solid transparent;
  transition: all 0.2s;
}

.reward-option.selected {
  background: #fff;
  border-color: #FFAB91;
  box-shadow: 0 4rpx 12rpx rgba(255, 171, 145, 0.3);
}

.reward-option.custom {
  background: rgba(255, 255, 255, 0.6);
  color: #999;
}

.reward-btn {
  width: 100%;
  height: 88rpx;
  background: linear-gradient(135deg, #FFAB91 0%, #FF8A65 100%);
  border-radius: 16rpx;
  color: #fff;
  font-size: 30rpx;
  font-weight: 600;
  border: none;
}

.reward-btn[disabled] {
  opacity: 0.5;
}

/* ========== 操作按钮 ========== */
.action-buttons {
  margin-top: 20rpx;
}

.button-group {
  display: flex;
  gap: 20rpx;
}

/* 完成提示 */
.completion-tip {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 24rpx 32rpx;
  background: linear-gradient(135deg, #E8F5E9 0%, #C8E6C9 100%);
  border-radius: 16rpx;
  gap: 12rpx;
}

.tip-icon {
  font-size: 40rpx;
  color: #4CAF50;
  font-weight: bold;
}

.tip-text {
  font-size: 28rpx;
  color: #2E7D32;
  font-weight: 600;
}

.btn-primary,
.btn-secondary {
  flex: 1;
  height: 88rpx;
  border-radius: 16rpx;
  font-size: 30rpx;
  font-weight: 600;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
}

/* 单个按钮占满整行 */
.btn-full {
  width: 100%;
}

.btn-primary {
  background: linear-gradient(135deg, #66BB6A 0%, #4CAF50 100%);
  color: #fff;
  box-shadow: 0 6rpx 20rpx rgba(102, 187, 106, 0.3);
}

.btn-secondary {
  background: #fff;
  color: #66BB6A;
  border: 2rpx solid #66BB6A;
}

.btn-primary:active {
  opacity: 0.9;
  transform: scale(0.98);
}

.btn-secondary:active {
  background: #F5F5F5;
  transform: scale(0.98);
}

/* 修复按钮内文字居中 */
.btn-primary::after,
.btn-secondary::after {
  border: none;
}

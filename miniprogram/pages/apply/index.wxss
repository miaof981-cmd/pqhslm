/* 容器 */
.container {
  min-height: 100vh;
  background: linear-gradient(180deg, #E6FFEB 0%, #F0F9FF 100%);
  padding-bottom: 40rpx;
}

/* 头部 */
.header-section {
  background: linear-gradient(135deg, #A8E6CF, #C8E6C9);
  padding: 80rpx 40rpx 60rpx;
  text-align: center;
  position: relative;
}

.header-title {
  font-size: 48rpx;
  font-weight: bold;
  color: white;
  margin-bottom: 12rpx;
}

.header-subtitle {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.9);
}

/* ✅ 申请记录按钮 */
.history-btn {
  margin-top: 24rpx;
  display: inline-flex;
  align-items: center;
  gap: 12rpx;
  padding: 16rpx 32rpx;
  background: rgba(255, 255, 255, 0.25);
  border-radius: 50rpx;
  backdrop-filter: blur(10rpx);
  border: 2rpx solid rgba(255, 255, 255, 0.4);
}

.history-btn-text {
  font-size: 28rpx;
  color: white;
  font-weight: 500;
}

.history-badge {
  padding: 4rpx 16rpx;
  border-radius: 20rpx;
  font-size: 22rpx;
  font-weight: bold;
}

.history-badge.pending {
  background: #FFB74D;
  color: white;
}

.history-badge.rejected {
  background: #FF6B6B;
  color: white;
}

/* ✅ 申请记录弹窗 */
.modal-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.6);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
  padding: 40rpx;
}

.modal-content {
  width: 100%;
  max-width: 600rpx;
  max-height: 80vh;
  background: white;
  border-radius: 24rpx;
  display: flex;
  flex-direction: column;
  overflow: hidden;
}

.modal-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 32rpx;
  border-bottom: 2rpx solid #F5F5F5;
}

.modal-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.modal-close {
  width: 56rpx;
  height: 56rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 40rpx;
  color: #999;
  border-radius: 50%;
  background: #F5F5F5;
}

.modal-body {
  flex: 1;
  padding: 24rpx;
  max-height: 60vh;
}

/* 申请记录项 */
.history-item {
  background: white;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 20rpx;
  border: 2rpx solid #F0F0F0;
}

.history-item.status-pending {
  border-left: 6rpx solid #FFB74D;
}

.history-item.status-approved {
  border-left: 6rpx solid #66BB6A;
}

.history-item.status-rejected {
  border-left: 6rpx solid #FF6B6B;
}

.history-item-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 12rpx;
}

.status-badge {
  padding: 6rpx 16rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  font-weight: bold;
}

.status-badge.pending {
  background: #FFF3E0;
  color: #FFB74D;
}

.status-badge.approved {
  background: #E8F5E9;
  color: #66BB6A;
}

.status-badge.rejected {
  background: #FFEBEE;
  color: #FF6B6B;
}

.history-time {
  font-size: 24rpx;
  color: #999;
}

/* 驳回原因 */
.history-reject-reason {
  margin-top: 16rpx;
  padding: 16rpx;
  background: #FFF5F5;
  border-radius: 12rpx;
}

.reason-label {
  font-size: 24rpx;
  color: #666;
  font-weight: bold;
}

.reason-text {
  font-size: 26rpx;
  color: #FF6B6B;
  display: block;
  margin-top: 8rpx;
  line-height: 1.6;
}

.reason-time {
  font-size: 22rpx;
  color: #999;
  display: block;
  margin-top: 8rpx;
}

/* 通过信息 */
.history-approve-info {
  margin-top: 12rpx;
}

.approve-text {
  font-size: 24rpx;
  color: #66BB6A;
}

/* 空状态 */
.empty-history {
  text-align: center;
  padding: 80rpx 0;
  color: #999;
  font-size: 28rpx;
}

/* 表单区域 */
.form-section {
  padding: 30rpx;
}

/* 卡片 */
.section-card {
  background: white;
  border-radius: 20rpx;
  padding: 40rpx 30rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.04);
}

/* 标题 */
.section-title {
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin-bottom: 30rpx;
  padding-bottom: 16rpx;
  border-bottom: 2rpx solid #F5F5F5;
}

.title-icon {
  width: 8rpx;
  height: 32rpx;
  background: linear-gradient(180deg, #A8E6CF, #66BB6A);
  border-radius: 4rpx;
}

.title-icon.warning {
  background: linear-gradient(180deg, #FFB74D, #FFA726);
}

.title-text {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

/* 输入组 */
.input-group {
  margin-bottom: 28rpx;
}

.input-group:last-child {
  margin-bottom: 0;
}

.input-label {
  display: flex;
  align-items: center;
  margin-bottom: 12rpx;
}

.label-text {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

.required {
  color: #FF5252;
  font-size: 28rpx;
  margin-left: 4rpx;
}

.input-field {
  width: 100%;
  height: 88rpx;
  background: #F8F8F8;
  border-radius: 12rpx;
  padding: 0 24rpx;
  font-size: 28rpx;
  color: #333;
  border: 2rpx solid transparent;
  box-sizing: border-box;
  transition: all 0.3s;
}

.input-field:focus {
  background: white;
  border-color: #A8E6CF;
}

.input-hint {
  margin-top: 8rpx;
  font-size: 24rpx;
  color: #999;
  line-height: 1.5;
}

/* 上传组 */
.upload-group {
  margin-bottom: 32rpx;
}

.upload-group:last-child {
  margin-bottom: 0;
}

.upload-label {
  display: flex;
  align-items: center;
  margin-bottom: 12rpx;
}

.upload-hint-top {
  font-size: 24rpx;
  color: #666;
  line-height: 1.6;
  margin-bottom: 16rpx;
  padding: 12rpx 16rpx;
  background: #F0F9FF;
  border-radius: 8rpx;
  border-left: 4rpx solid #A8E6CF;
}

/* 图片网格 */
.image-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 16rpx;
}

.image-item {
  position: relative;
  width: 100%;
  padding-bottom: 100%;
  border-radius: 12rpx;
  overflow: hidden;
  background: #F5F5F5;
}

.image-item image {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
}

.delete-btn {
  position: absolute;
  top: 8rpx;
  right: 8rpx;
  width: 48rpx;
  height: 48rpx;
  background: rgba(0, 0, 0, 0.6);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.delete-icon {
  width: 24rpx;
  height: 24rpx;
  position: relative;
}

.delete-icon::before,
.delete-icon::after {
  content: '';
  position: absolute;
  top: 50%;
  left: 50%;
  width: 20rpx;
  height: 3rpx;
  background: white;
  border-radius: 2rpx;
}

.delete-icon::before {
  transform: translate(-50%, -50%) rotate(45deg);
}

.delete-icon::after {
  transform: translate(-50%, -50%) rotate(-45deg);
}

.upload-btn {
  position: relative;
  width: 100%;
  padding-bottom: 100%;
  background: #F8F8F8;
  border: 2rpx dashed #D0D0D0;
  border-radius: 12rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.upload-icon {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 60rpx;
  height: 60rpx;
}

.upload-icon::before,
.upload-icon::after {
  content: '';
  position: absolute;
  background: #A8E6CF;
  border-radius: 2rpx;
}

.upload-icon::before {
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 40rpx;
  height: 4rpx;
}

.upload-icon::after {
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 4rpx;
  height: 40rpx;
}

.upload-text {
  position: absolute;
  bottom: 30rpx;
  font-size: 22rpx;
  color: #999;
}

.upload-count {
  position: absolute;
  bottom: 12rpx;
  font-size: 20rpx;
  color: #CCC;
}

/* 会员制条款卡片 */
.agreement-card {
  background: #FFF9E6;
  border: 2rpx solid #FFD54F;
}

/* 同意复选框 */
.agreement-checkbox {
  display: flex;
  align-items: center;
  gap: 16rpx;
  padding: 20rpx;
  background: white;
  border-radius: 12rpx;
  margin-bottom: 16rpx;
}

/* 展开按钮 */
.expand-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8rpx;
  padding: 12rpx;
  background: white;
  border-radius: 8rpx;
  border: 1rpx solid #E0E0E0;
}

.expand-text {
  font-size: 24rpx;
  color: #666;
}

.expand-icon {
  width: 16rpx;
  height: 16rpx;
  border-right: 2rpx solid #999;
  border-bottom: 2rpx solid #999;
  transform: rotate(45deg);
  transition: transform 0.3s;
}

.expand-icon.expanded {
  transform: rotate(-135deg);
}

/* 详细条款 */
.agreement-detail {
  margin-top: 16rpx;
  padding: 20rpx;
  background: white;
  border-radius: 12rpx;
}

.agreement-text {
  font-size: 24rpx;
  color: #555;
  line-height: 2;
  margin-bottom: 12rpx;
}

.agreement-text:last-child {
  margin-bottom: 0;
}

.agreement-text.final {
  margin-top: 20rpx;
  padding-top: 20rpx;
  border-top: 1rpx dashed #E0E0E0;
  color: #999;
  text-align: center;
  font-size: 22rpx;
}

.checkbox {
  width: 40rpx;
  height: 40rpx;
  border: 3rpx solid #D0D0D0;
  border-radius: 8rpx;
  background: white;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
  transition: all 0.3s;
}

.checkbox.checked {
  background: linear-gradient(135deg, #A8E6CF, #66BB6A);
  border-color: #66BB6A;
}

.checkbox-icon {
  width: 20rpx;
  height: 12rpx;
  border-left: 3rpx solid white;
  border-bottom: 3rpx solid white;
  transform: rotate(-45deg) translateY(-2rpx);
}

.checkbox-text {
  flex: 1;
  font-size: 26rpx;
  color: #333;
  font-weight: 500;
  line-height: 1.5;
}

/* 提交按钮 */
.submit-btn {
  width: calc(100% - 60rpx);
  height: 96rpx;
  background: linear-gradient(135deg, #A8E6CF, #66BB6A);
  color: white;
  font-size: 32rpx;
  font-weight: bold;
  border-radius: 48rpx;
  border: none;
  margin: 40rpx 30rpx 16rpx;
  box-shadow: 0 8rpx 24rpx rgba(168, 230, 207, 0.4);
  transition: all 0.3s;
}

.submit-btn.disabled {
  background: #E0E0E0;
  color: #999;
  box-shadow: none;
}

.submit-hint {
  text-align: center;
  font-size: 24rpx;
  color: #999;
  padding: 0 30rpx 20rpx;
  line-height: 1.6;
}

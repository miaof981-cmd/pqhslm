/* 容器 */
.container {
  min-height: 100vh;
  background: linear-gradient(180deg, #E6FFEB 0%, #F0F9FF 100%);
  padding-bottom: 40rpx;
}

/* 头部区域 */
.header-section {
  background: linear-gradient(135deg, #4CAF50, #66BB6A);
  padding: 60rpx 40rpx 80rpx;
  text-align: center;
  position: relative;
}

.header-section::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  height: 40rpx;
  background: linear-gradient(180deg, #E6FFEB 0%, #F0F9FF 100%);
  border-radius: 40rpx 40rpx 0 0;
}

.header-title {
  font-size: 48rpx;
  font-weight: bold;
  color: white;
  margin-bottom: 16rpx;
  text-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.header-subtitle {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.9);
}

/* 表单区域 */
.form-section {
  padding: 0 30rpx;
  margin-top: -20rpx;
}

/* 卡片区域 */
.section-card {
  background: white;
  border-radius: 20rpx;
  padding: 40rpx 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.06);
}

/* 区块标题 */
.section-title {
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin-bottom: 30rpx;
  padding-bottom: 20rpx;
  border-bottom: 2rpx solid #F0F0F0;
}

.title-icon {
  width: 8rpx;
  height: 32rpx;
  background: linear-gradient(180deg, #4CAF50, #66BB6A);
  border-radius: 4rpx;
}

.title-icon.warning {
  background: linear-gradient(180deg, #FFA726, #FF9800);
}

.title-text {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

/* 输入组 */
.input-group {
  margin-bottom: 30rpx;
}

.input-label {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
}

.label-text {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

.required {
  color: #FF5252;
  font-size: 28rpx;
  margin-left: 6rpx;
}

.input-field {
  width: 100%;
  height: 88rpx;
  background: #F8F8F8;
  border-radius: 12rpx;
  padding: 0 24rpx;
  font-size: 28rpx;
  color: #333;
  border: 2rpx solid transparent;
  transition: all 0.3s;
}

.input-field:focus {
  background: white;
  border-color: #4CAF50;
  box-shadow: 0 0 0 4rpx rgba(76, 175, 80, 0.1);
}

.input-hint {
  font-size: 24rpx;
  color: #999;
  margin-top: 12rpx;
  line-height: 1.6;
}

/* 上传组 */
.upload-group {
  margin-bottom: 40rpx;
}

.upload-group:last-child {
  margin-bottom: 0;
}

.upload-label {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
}

.upload-hint-top {
  font-size: 24rpx;
  color: #666;
  line-height: 1.6;
  margin-bottom: 20rpx;
  padding: 16rpx 20rpx;
  background: #F0F9FF;
  border-radius: 8rpx;
  border-left: 6rpx solid #4CAF50;
}

/* 图片网格 */
.image-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 20rpx;
}

.image-item {
  position: relative;
  width: 100%;
  padding-bottom: 100%;
  border-radius: 12rpx;
  overflow: hidden;
  background: #F5F5F5;
}

.image-item image {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
}

.delete-btn {
  position: absolute;
  top: 8rpx;
  right: 8rpx;
  width: 48rpx;
  height: 48rpx;
  background: rgba(0, 0, 0, 0.6);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  backdrop-filter: blur(4rpx);
}

.delete-icon {
  width: 24rpx;
  height: 24rpx;
  position: relative;
}

.delete-icon::before,
.delete-icon::after {
  content: '';
  position: absolute;
  top: 50%;
  left: 50%;
  width: 20rpx;
  height: 3rpx;
  background: white;
  border-radius: 2rpx;
}

.delete-icon::before {
  transform: translate(-50%, -50%) rotate(45deg);
}

.delete-icon::after {
  transform: translate(-50%, -50%) rotate(-45deg);
}

/* 上传按钮 */
.upload-btn {
  position: relative;
  width: 100%;
  padding-bottom: 100%;
  border: 3rpx dashed #D0D0D0;
  border-radius: 12rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background: #FAFAFA;
  transition: all 0.3s;
}

.upload-btn:active {
  background: #F0F0F0;
  border-color: #4CAF50;
}

.upload-icon {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 48rpx;
  height: 48rpx;
}

.upload-icon::before,
.upload-icon::after {
  content: '';
  position: absolute;
  background: #4CAF50;
  border-radius: 3rpx;
}

.upload-icon::before {
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 32rpx;
  height: 6rpx;
}

.upload-icon::after {
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 6rpx;
  height: 32rpx;
}

.upload-text {
  position: absolute;
  bottom: 40rpx;
  left: 50%;
  transform: translateX(-50%);
  font-size: 24rpx;
  color: #666;
  white-space: nowrap;
}

.upload-count {
  position: absolute;
  bottom: 20rpx;
  left: 50%;
  transform: translateX(-50%);
  font-size: 20rpx;
  color: #999;
}

/* 会员制条款 */
.agreement-card {
  background: linear-gradient(135deg, #FFF3E0, #FFE0B2);
  border: 2rpx solid #FFA726;
}

.agreement-content {
  margin-bottom: 30rpx;
}

.agreement-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  padding-bottom: 16rpx;
  border-bottom: 2rpx dashed #FFB74D;
}

.agreement-text {
  font-size: 26rpx;
  color: #666;
  line-height: 1.8;
  margin-bottom: 12rpx;
  padding-left: 20rpx;
  position: relative;
}

.agreement-text::before {
  content: '';
  position: absolute;
  left: 0;
  top: 14rpx;
  width: 8rpx;
  height: 8rpx;
  background: #FFA726;
  border-radius: 50%;
}

.agreement-text.highlight {
  color: #333;
  font-weight: 500;
  background: rgba(255, 167, 38, 0.1);
  padding: 12rpx 20rpx 12rpx 32rpx;
  margin-left: -12rpx;
  margin-right: -12rpx;
  border-radius: 8rpx;
}

.agreement-text.highlight::before {
  background: #FF5722;
  width: 10rpx;
  height: 10rpx;
  left: 12rpx;
}

/* 同意条款复选框 */
.agreement-checkbox {
  display: flex;
  align-items: center;
  gap: 16rpx;
  padding: 24rpx;
  background: white;
  border-radius: 12rpx;
  border: 2rpx solid #FFA726;
}

.checkbox {
  width: 40rpx;
  height: 40rpx;
  border: 3rpx solid #D0D0D0;
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s;
  flex-shrink: 0;
}

.checkbox.checked {
  background: #4CAF50;
  border-color: #4CAF50;
}

.checkbox-icon {
  width: 20rpx;
  height: 12rpx;
  border-left: 4rpx solid white;
  border-bottom: 4rpx solid white;
  transform: rotate(-45deg) translateY(-2rpx);
}

.checkbox-text {
  font-size: 26rpx;
  color: #333;
  font-weight: 500;
}

/* 提交按钮 */
.submit-btn {
  width: 100%;
  height: 96rpx;
  background: linear-gradient(135deg, #4CAF50, #66BB6A);
  color: white;
  font-size: 32rpx;
  font-weight: bold;
  border-radius: 48rpx;
  border: none;
  box-shadow: 0 8rpx 24rpx rgba(76, 175, 80, 0.3);
  transition: all 0.3s;
  margin-top: 20rpx;
}

.submit-btn:active {
  transform: scale(0.98);
  box-shadow: 0 4rpx 16rpx rgba(76, 175, 80, 0.4);
}

.submit-btn.disabled {
  background: #E0E0E0;
  color: #999;
  box-shadow: none;
}

.submit-hint {
  text-align: center;
  font-size: 24rpx;
  color: #999;
  margin-top: 20rpx;
  line-height: 1.6;
}

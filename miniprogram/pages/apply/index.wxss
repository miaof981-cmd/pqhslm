/* 容器 */
.container {
  min-height: 100vh;
  background: linear-gradient(180deg, #E6FFEB 0%, #F0F9FF 100%);
  padding-bottom: 40rpx;
}

/* 头部 */
.header-section {
  background: linear-gradient(135deg, #A8E6CF, #C8E6C9);
  padding: 80rpx 40rpx 60rpx;
  text-align: center;
}

.header-title {
  font-size: 48rpx;
  font-weight: bold;
  color: white;
  margin-bottom: 12rpx;
}

.header-subtitle {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.9);
}

/* 表单区域 */
.form-section {
  padding: 30rpx;
}

/* 卡片 */
.section-card {
  background: white;
  border-radius: 20rpx;
  padding: 40rpx 30rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.04);
}

/* 标题 */
.section-title {
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin-bottom: 30rpx;
  padding-bottom: 16rpx;
  border-bottom: 2rpx solid #F5F5F5;
}

.title-icon {
  width: 8rpx;
  height: 32rpx;
  background: linear-gradient(180deg, #A8E6CF, #66BB6A);
  border-radius: 4rpx;
}

.title-icon.warning {
  background: linear-gradient(180deg, #FFB74D, #FFA726);
}

.title-text {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

/* 输入组 */
.input-group {
  margin-bottom: 28rpx;
}

.input-group:last-child {
  margin-bottom: 0;
}

.input-label {
  display: flex;
  align-items: center;
  margin-bottom: 12rpx;
}

.label-text {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

.required {
  color: #FF5252;
  font-size: 28rpx;
  margin-left: 4rpx;
}

.input-field {
  width: 100%;
  height: 88rpx;
  background: #F8F8F8;
  border-radius: 12rpx;
  padding: 0 24rpx;
  font-size: 28rpx;
  color: #333;
  border: 2rpx solid transparent;
  box-sizing: border-box;
  transition: all 0.3s;
}

.input-field:focus {
  background: white;
  border-color: #A8E6CF;
}

.input-hint {
  margin-top: 8rpx;
  font-size: 24rpx;
  color: #999;
  line-height: 1.5;
}

/* 上传组 */
.upload-group {
  margin-bottom: 32rpx;
}

.upload-group:last-child {
  margin-bottom: 0;
}

.upload-label {
  display: flex;
  align-items: center;
  margin-bottom: 12rpx;
}

.upload-hint-top {
  font-size: 24rpx;
  color: #666;
  line-height: 1.6;
  margin-bottom: 16rpx;
  padding: 12rpx 16rpx;
  background: #F0F9FF;
  border-radius: 8rpx;
  border-left: 4rpx solid #A8E6CF;
}

/* 图片网格 */
.image-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 16rpx;
}

.image-item {
  position: relative;
  width: 100%;
  padding-bottom: 100%;
  border-radius: 12rpx;
  overflow: hidden;
  background: #F5F5F5;
}

.image-item image {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
}

.delete-btn {
  position: absolute;
  top: 8rpx;
  right: 8rpx;
  width: 48rpx;
  height: 48rpx;
  background: rgba(0, 0, 0, 0.6);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.delete-icon {
  width: 24rpx;
  height: 24rpx;
  position: relative;
}

.delete-icon::before,
.delete-icon::after {
  content: '';
  position: absolute;
  top: 50%;
  left: 50%;
  width: 20rpx;
  height: 3rpx;
  background: white;
  border-radius: 2rpx;
}

.delete-icon::before {
  transform: translate(-50%, -50%) rotate(45deg);
}

.delete-icon::after {
  transform: translate(-50%, -50%) rotate(-45deg);
}

.upload-btn {
  position: relative;
  width: 100%;
  padding-bottom: 100%;
  background: #F8F8F8;
  border: 2rpx dashed #D0D0D0;
  border-radius: 12rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.upload-icon {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 60rpx;
  height: 60rpx;
}

.upload-icon::before,
.upload-icon::after {
  content: '';
  position: absolute;
  background: #A8E6CF;
  border-radius: 2rpx;
}

.upload-icon::before {
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 40rpx;
  height: 4rpx;
}

.upload-icon::after {
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 4rpx;
  height: 40rpx;
}

.upload-text {
  position: absolute;
  bottom: 30rpx;
  font-size: 22rpx;
  color: #999;
}

.upload-count {
  position: absolute;
  bottom: 12rpx;
  font-size: 20rpx;
  color: #CCC;
}

/* 会员制条款卡片 */
.agreement-card {
  background: linear-gradient(135deg, #FFF8E1, #FFECB3);
  border: 2rpx solid #FFB74D;
}

/* 摘要区域 */
.agreement-summary {
  margin-bottom: 24rpx;
}

.summary-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 16rpx;
  text-align: center;
}

.summary-highlight {
  background: rgba(255, 255, 255, 0.7);
  padding: 16rpx 20rpx;
  border-radius: 8rpx;
  border: 2rpx dashed #FFA726;
  margin-bottom: 12rpx;
  font-size: 26rpx;
  color: #FF6F00;
  font-weight: bold;
  text-align: center;
  line-height: 1.6;
}

.summary-desc {
  background: rgba(255, 255, 255, 0.5);
  padding: 16rpx 20rpx;
  border-radius: 8rpx;
  font-size: 24rpx;
  color: #666;
  line-height: 1.8;
  margin-bottom: 16rpx;
}

/* 展开按钮 */
.expand-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8rpx;
  padding: 12rpx;
  background: rgba(255, 255, 255, 0.6);
  border-radius: 8rpx;
  border: 2rpx solid #FFB74D;
}

.expand-text {
  font-size: 24rpx;
  color: #FF6F00;
  font-weight: 500;
}

.expand-icon {
  width: 16rpx;
  height: 16rpx;
  border-right: 3rpx solid #FF6F00;
  border-bottom: 3rpx solid #FF6F00;
  transform: rotate(45deg);
  transition: transform 0.3s;
}

.expand-icon.expanded {
  transform: rotate(-135deg);
}

/* 详细条款 */
.agreement-detail {
  margin-bottom: 24rpx;
  padding-top: 20rpx;
  border-top: 2rpx dashed #FFB74D;
}

.detail-title {
  font-size: 26rpx;
  color: #666;
  text-align: center;
  margin-bottom: 16rpx;
}

.agreement-text {
  font-size: 24rpx;
  color: #555;
  line-height: 2;
  margin-bottom: 12rpx;
  padding-left: 24rpx;
  position: relative;
}

.agreement-text::before {
  content: '';
  position: absolute;
  left: 8rpx;
  top: 50%;
  transform: translateY(-50%);
  width: 6rpx;
  height: 6rpx;
  background: #FFA726;
  border-radius: 50%;
}

/* 同意复选框 */
.agreement-checkbox {
  display: flex;
  align-items: center;
  gap: 16rpx;
  padding: 20rpx;
  background: rgba(255, 255, 255, 0.8);
  border-radius: 12rpx;
  border: 2rpx solid #FFA726;
}

.checkbox {
  width: 40rpx;
  height: 40rpx;
  border: 3rpx solid #D0D0D0;
  border-radius: 8rpx;
  background: white;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
  transition: all 0.3s;
}

.checkbox.checked {
  background: linear-gradient(135deg, #A8E6CF, #66BB6A);
  border-color: #66BB6A;
}

.checkbox-icon {
  width: 20rpx;
  height: 12rpx;
  border-left: 3rpx solid white;
  border-bottom: 3rpx solid white;
  transform: rotate(-45deg) translateY(-2rpx);
}

.checkbox-text {
  flex: 1;
  font-size: 26rpx;
  color: #333;
  font-weight: 500;
  line-height: 1.5;
}

/* 提交按钮 */
.submit-btn {
  width: calc(100% - 60rpx);
  height: 96rpx;
  background: linear-gradient(135deg, #A8E6CF, #66BB6A);
  color: white;
  font-size: 32rpx;
  font-weight: bold;
  border-radius: 48rpx;
  border: none;
  margin: 40rpx 30rpx 16rpx;
  box-shadow: 0 8rpx 24rpx rgba(168, 230, 207, 0.4);
  transition: all 0.3s;
}

.submit-btn.disabled {
  background: #E0E0E0;
  color: #999;
  box-shadow: none;
}

.submit-hint {
  text-align: center;
  font-size: 24rpx;
  color: #999;
  padding: 0 30rpx 20rpx;
  line-height: 1.6;
}

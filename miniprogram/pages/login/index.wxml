<view class="container">
  <!-- 背景装饰 -->
  <view class="bg-decoration">
    <view class="circle circle-1"></view>
    <view class="circle circle-2"></view>
    <view class="circle circle-3"></view>
  </view>

  <!-- 主内容 -->
  <view class="content">
    <!-- Logo区域 -->
    <view class="logo-section">
      <view class="logo-icon">🎨</view>
      <text class="app-name">画师联盟</text>
      <text class="app-slogan">连接创作者与梦想</text>
    </view>

    <!-- 欢迎文字 -->
    <view class="welcome-section">
      <text class="welcome-title">欢迎来到画师联盟</text>
      <text class="welcome-desc">发现优秀画师，定制专属作品</text>
    </view>

    <!-- 头像昵称填写区域 -->
    <view class="profile-section">
      <!-- 头像选择 -->
      <view class="avatar-wrapper">
        <button class="avatar-btn" open-type="chooseAvatar" bindchooseavatar="onChooseAvatar">
          <image class="avatar-preview" src="{{avatarUrl}}" mode="aspectFill" />
          <view class="avatar-tip">点击选择头像</view>
        </button>
      </view>

      <!-- 昵称输入 -->
      <view class="nickname-wrapper">
        <input 
          class="nickname-input" 
          type="nickname" 
          placeholder="请输入昵称"
          value="{{nickName}}"
          bindblur="onNicknameInput"
          placeholder-class="nickname-placeholder" />
      </view>
    </view>

    <!-- 登录按钮 -->
    <view class="login-section">
      <button class="login-btn" bindtap="handleLogin">
        <view class="btn-content">
          <text class="btn-icon">✓</text>
          <text class="btn-text">完成并登录</text>
        </view>
      </button>
      
      <view class="tips">
        <text class="tip-text">登录即表示同意</text>
        <text class="tip-link" bindtap="showAgreement">《用户协议》</text>
        <text class="tip-text">和</text>
        <text class="tip-link" bindtap="showPrivacy">《隐私政策》</text>
      </view>
    </view>

    <!-- 快速浏览 -->
    <view class="quick-browse">
      <text class="browse-text" bindtap="skipLogin">暂不登录，先逛逛</text>
    </view>

    <!-- 开发调试 -->
    <view class="debug-section" wx:if="{{true}}">
      <text class="debug-title">开发调试</text>
      <button class="debug-btn" bindtap="testGetUserProfile">测试获取用户信息</button>
    </view>
  </view>

  <!-- 底部装饰 -->
  <view class="footer">
    <text class="footer-text">优质画师 · 专业服务 · 放心交易</text>
  </view>
</view>


.container {
  min-height: 100vh;
  background: linear-gradient(135deg, #A8E6CF 0%, #88D4AB 50%, #6BC490 100%);
  position: relative;
  overflow: hidden;
  display: flex;
  flex-direction: column;
}

/* 背景装饰 */
.bg-decoration {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  overflow: hidden;
}

.circle {
  position: absolute;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.1);
  animation: float 6s ease-in-out infinite;
}

.circle-1 {
  width: 300rpx;
  height: 300rpx;
  top: -100rpx;
  right: -50rpx;
  animation-delay: 0s;
}

.circle-2 {
  width: 200rpx;
  height: 200rpx;
  bottom: 200rpx;
  left: -50rpx;
  animation-delay: 2s;
}

.circle-3 {
  width: 150rpx;
  height: 150rpx;
  top: 50%;
  right: 50rpx;
  animation-delay: 4s;
}

@keyframes float {
  0%, 100% {
    transform: translateY(0) scale(1);
  }
  50% {
    transform: translateY(-30rpx) scale(1.05);
  }
}

/* 主内容 */
.content {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  padding: 60rpx 50rpx;
  position: relative;
  z-index: 1;
}

/* Logo区域 */
.logo-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 100rpx;
}

.logo-icon {
  font-size: 140rpx;
  margin-bottom: 30rpx;
  animation: bounce 2s ease-in-out infinite;
}

@keyframes bounce {
  0%, 100% {
    transform: translateY(0);
  }
  50% {
    transform: translateY(-20rpx);
  }
}

.app-name {
  font-size: 60rpx;
  font-weight: bold;
  color: white;
  text-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
  letter-spacing: 4rpx;
}

/* 头像昵称填写区域 */
.profile-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 40rpx;
  margin-bottom: 80rpx;
  width: 100%;
  max-width: 600rpx;
}

.avatar-wrapper {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 20rpx;
}

.avatar-btn {
  width: 180rpx;
  height: 180rpx;
  padding: 0;
  margin: 0;
  border: none;
  background: transparent;
  position: relative;
  border-radius: 50%;
  overflow: hidden;
}

.avatar-btn::after {
  border: none;
}

.avatar-preview {
  width: 180rpx;
  height: 180rpx;
  border-radius: 50%;
  background: white;
  border: 6rpx solid rgba(255, 255, 255, 0.8);
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.15);
  display: block;
}

.avatar-tip {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.95);
  text-align: center;
  font-weight: 500;
}

.nickname-wrapper {
  width: 100%;
}

.nickname-input {
  width: 100%;
  height: 96rpx;
  background: white;
  border-radius: 48rpx;
  padding: 0 50rpx;
  font-size: 30rpx;
  color: #2C3E50;
  text-align: center;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
  box-sizing: border-box;
}

.nickname-placeholder {
  color: #999;
}

/* 登录区域 */
.login-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
  max-width: 600rpx;
}

.login-btn {
  width: 100%;
  height: 96rpx;
  background: white;
  border-radius: 48rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.15);
  display: flex;
  align-items: center;
  justify-content: center;
  border: none;
  transition: all 0.3s;
}

.login-btn::after {
  border: none;
}

.login-btn:active {
  transform: scale(0.98);
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.btn-text {
  font-size: 32rpx;
  font-weight: 600;
  color: #A8E6CF;
}

.tips {
  display: flex;
  align-items: center;
  flex-wrap: wrap;
  justify-content: center;
  gap: 8rpx;
}

.tip-text {
  font-size: 22rpx;
  color: rgba(255, 255, 255, 0.8);
}

.tip-link {
  font-size: 22rpx;
  color: white;
  text-decoration: underline;
}

/* 快速浏览 */
.quick-browse {
  margin-top: 40rpx;
  text-align: center;
}

.browse-text {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.9);
  text-decoration: underline;
  padding: 20rpx;
}

/* 开发调试 */
.debug-section {
  margin-top: 60rpx;
  padding: 30rpx;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 20rpx;
  border: 2rpx dashed rgba(255, 255, 255, 0.3);
}

.debug-title {
  display: block;
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.8);
  margin-bottom: 16rpx;
  text-align: center;
}

.debug-btn {
  width: 100%;
  height: 70rpx;
  background: rgba(255, 255, 255, 0.2);
  color: white;
  font-size: 26rpx;
  border-radius: 12rpx;
  border: 1rpx solid rgba(255, 255, 255, 0.3);
}

.debug-btn::after {
  border: none;
}

/* 底部 */
.footer {
  padding: 40rpx;
  text-align: center;
  position: relative;
  z-index: 1;
}

.footer-text {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.7);
  letter-spacing: 2rpx;
}


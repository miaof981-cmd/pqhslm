.balance-card {
  background: linear-gradient(135deg, #667EEA 0%, #764BA2 100%);
  border-radius: 20rpx;
  padding: 28rpx 24rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 8rpx 24rpx rgba(102, 126, 234, 0.25);
}

.balance-main {
  text-align: center;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid rgba(255, 255, 255, 0.2);
}

.balance-label {
  display: block;
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.85);
  margin-bottom: 12rpx;
}

.balance-amount {
  display: block;
  font-size: 56rpx;
  font-weight: bold;
  color: #FFFFFF;
  letter-spacing: 1rpx;
}

.balance-actions {
  display: flex;
  justify-content: space-around;
  align-items: center;
  padding-top: 20rpx;
}

.balance-info-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 6rpx;
}

.info-label {
  font-size: 22rpx;
  color: rgba(255, 255, 255, 0.7);
}

.info-value {
  font-size: 26rpx;
  font-weight: 600;
  color: #FFFFFF;
}

.balance-divider {
  width: 1rpx;
  height: 40rpx;
  background: rgba(255, 255, 255, 0.2);
}

.balance-action-btn {
  display: flex;
  align-items: center;
  gap: 6rpx;
  padding: 8rpx 20rpx;
  background: rgba(255, 255, 255, 0.15);
  border-radius: 20rpx;
}

.action-label {
  font-size: 22rpx;
  color: #FFFFFF;
}

.action-arrow {
  font-size: 24rpx;
  color: #FFFFFF;
}


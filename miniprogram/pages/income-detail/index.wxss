.income-detail-container {
  min-height: 100vh;
  background: linear-gradient(180deg, #F0F9FF 0%, #FAFAFA 100%);
  padding: 24rpx;
}

.loading {
  text-align: center;
  padding: 120rpx 0;
  color: #999;
}


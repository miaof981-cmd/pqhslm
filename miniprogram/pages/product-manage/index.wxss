page {
  background: linear-gradient(180deg, #E8F5E9 0%, #F1F8E9 100%);
  min-height: 100vh;
}

.container {
  min-height: 100vh;
  padding-bottom: 30rpx;
}

/* 顶部标题栏 */
.header-section {
  background: linear-gradient(135deg, #A8E6CF 0%, #D0F0C0 100%);
  padding: 24rpx 0 20rpx 30rpx; /* 右边距为0，按钮紧贴右边 */
}

.header-content {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.page-title {
  font-size: 32rpx;
  font-weight: 700;
  color: #2D5C3F;
}

.upload-btn {
  display: flex;
  align-items: center;
  gap: 6rpx;
  padding: 10rpx 20rpx;
  background: rgba(255, 255, 255, 0.95);
  color: #66BB6A;
  border-radius: 14rpx 0 0 14rpx; /* 右边圆角为0，紧贴边缘 */
  font-size: 24rpx;
  font-weight: 600;
  border: none;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.06);
}

.upload-btn::after {
  border: none;
}

.upload-icon {
  font-size: 26rpx;
  line-height: 1;
  font-weight: 700;
}

/* 搜索和筛选区域 */
.search-filter-section {
  padding: 20rpx 30rpx;
  background: white;
}

.search-box {
  display: flex;
  align-items: center;
  background: #F5F5F5;
  border-radius: 20rpx;
  padding: 16rpx 20rpx;
  margin-bottom: 16rpx;
}

.search-icon {
  width: 32rpx;
  height: 32rpx;
  margin-right: 12rpx;
  flex-shrink: 0;
  position: relative;
}

.search-icon::before {
  content: '';
  position: absolute;
  width: 18rpx;
  height: 18rpx;
  border: 3rpx solid #999;
  border-radius: 50%;
  top: 2rpx;
  left: 2rpx;
}

.search-icon::after {
  content: '';
  position: absolute;
  width: 10rpx;
  height: 3rpx;
  background: #999;
  transform: rotate(45deg);
  bottom: 4rpx;
  right: 4rpx;
}

.search-input {
  flex: 1;
  font-size: 26rpx;
  color: #333;
}

.clear-icon {
  width: 32rpx;
  height: 32rpx;
  border-radius: 50%;
  background: #D0D0D0;
  position: relative;
  flex-shrink: 0;
  margin-left: 12rpx;
}

.clear-icon::before,
.clear-icon::after {
  content: '';
  position: absolute;
  width: 16rpx;
  height: 2rpx;
  background: white;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%) rotate(45deg);
}

.clear-icon::after {
  transform: translate(-50%, -50%) rotate(-45deg);
}

.filter-tabs {
  display: flex;
  gap: 12rpx;
}

.filter-tag {
  padding: 10rpx 20rpx;
  border-radius: 20rpx;
  background: #F5F5F5;
  color: #666;
  font-size: 24rpx;
  font-weight: 500;
  white-space: nowrap;
  transition: all 0.3s;
}

.filter-tag.active {
  background: linear-gradient(135deg, #A8E6CF 0%, #D0F0C0 100%);
  color: #2D5C3F;
  font-weight: 600;
}

/* 商品列表 */
.product-list {
  padding: 0 30rpx;
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.product-card {
  background: white;
  border-radius: 16rpx;
  padding: 16rpx;
  display: flex;
  gap: 16rpx;
  box-shadow: 0 2rpx 8rpx rgba(102, 187, 106, 0.06);
}

.product-image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 12rpx;
  background: #F5F5F5;
  flex-shrink: 0;
}

.product-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
  justify-content: center;
}

.product-name {
  font-size: 26rpx;
  font-weight: 600;
  color: #333;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  line-height: 1.3;
}

.product-price-row {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.product-price {
  font-size: 28rpx;
  font-weight: 700;
  color: #66BB6A;
}

.status-badge {
  padding: 4rpx 12rpx;
  border-radius: 10rpx;
  font-size: 20rpx;
  font-weight: 500;
}

.badge-online {
  background: #E8F5E9;
  color: #66BB6A;
}

.badge-offline {
  background: #F5F5F5;
  color: #999;
}

.product-stats {
  display: flex;
  align-items: center;
  gap: 10rpx;
  font-size: 22rpx;
  color: #999;
}

.stat-divider {
  color: #E0E0E0;
}

.product-actions {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
  justify-content: center;
  flex-shrink: 0;
}

.action-btn {
  padding: 12rpx 20rpx;
  border-radius: 10rpx;
  font-size: 22rpx;
  font-weight: 500;
  border: none;
  min-width: 100rpx;
}

.action-btn::after {
  border: none;
}

.edit-btn {
  background: #F5F5F5;
  color: #666;
}

.toggle-btn {
  color: white;
}

.btn-online {
  background: linear-gradient(135deg, #66BB6A 0%, #81C784 100%);
}

.btn-offline {
  background: linear-gradient(135deg, #E0E0E0 0%, #BDBDBD 100%);
  color: #666;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 60rpx;
  text-align: center;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 24rpx;
  opacity: 0.3;
}

.empty-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #666;
  margin-bottom: 16rpx;
}

.empty-hint {
  font-size: 26rpx;
  color: #999;
  line-height: 1.6;
}

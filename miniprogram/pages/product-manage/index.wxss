.container {
  min-height: 100vh;
  background: #F5F5F5;
  padding-bottom: 20rpx;
}

.header-bar {
  background: white;
  padding: 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1rpx solid #F0F0F0;
}

.artist-name {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.product-count {
  font-size: 24rpx;
  color: #999;
}

/* 筛选栏 */
.filter-bar {
  display: flex;
  gap: 15rpx;
  padding: 20rpx;
  background: white;
  margin-bottom: 15rpx;
}

.filter-item {
  flex: 1;
  text-align: center;
  padding: 12rpx 20rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  color: #666;
  background: #F5F5F5;
  border: 1rpx solid transparent;
}

.filter-item.active {
  background: linear-gradient(135deg, #A8E6CF 0%, #D0F0C0 100%);
  color: white;
  font-weight: 600;
}

/* 商品列表 */
.product-list {
  display: flex;
  flex-direction: column;
  gap: 15rpx;
  padding: 0 20rpx;
}

.product-item {
  background: white;
  border-radius: 12rpx;
  padding: 20rpx;
  display: flex;
  gap: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.04);
}

.product-image {
  width: 150rpx;
  height: 150rpx;
  border-radius: 8rpx;
  background: #F5F5F5;
  flex-shrink: 0;
}

.product-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 10rpx;
}

.product-name {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.product-meta {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.product-price {
  font-size: 32rpx;
  font-weight: 700;
  color: #E53935;
}

.product-status {
  font-size: 22rpx;
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
}

.status-online {
  background: #E8F5E9;
  color: #4CAF50;
}

.status-offline {
  background: #FFEBEE;
  color: #FF6B6B;
}

.product-stats {
  display: flex;
  gap: 20rpx;
}

.stat-item {
  font-size: 24rpx;
  color: #999;
}

.product-actions {
  display: flex;
  flex-direction: column;
  gap: 10rpx;
  justify-content: center;
}

.action-btn {
  padding: 12rpx 24rpx;
  border-radius: 8rpx;
  font-size: 24rpx;
  background: #F5F5F5;
  color: #666;
  border: none;
}

.btn-online {
  background: linear-gradient(135deg, #A8E6CF 0%, #D0F0C0 100%);
  color: white;
}

.btn-offline {
  background: #FFEBEE;
  color: #FF6B6B;
}

/* 空状态 */
.empty-state {
  text-align: center;
  padding: 100rpx 0;
  color: #999;
  font-size: 28rpx;
}


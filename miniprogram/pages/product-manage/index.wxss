page {
  background: linear-gradient(180deg, #E8F5E9 0%, #F1F8E9 100%);
  min-height: 100vh;
}

.container {
  min-height: 100vh;
  padding-bottom: 30rpx;
}

/* 顶部标题栏 */
.header-section {
  background: linear-gradient(135deg, #A8E6CF 0%, #D0F0C0 100%);
  padding: 24rpx 30rpx 20rpx; /* 恢复左右间距 */
}

.header-content {
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 100%;
}

.page-title {
  font-size: 32rpx;
  font-weight: 700;
  color: #2D5C3F;
  flex-shrink: 0;
}

.upload-btn {
  display: flex;
  align-items: center;
  gap: 6rpx;
  padding: 10rpx 20rpx;
  background: rgba(255, 255, 255, 0.95);
  color: #66BB6A;
  border-radius: 14rpx;
  font-size: 24rpx;
  font-weight: 600;
  border: none;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.06);
  flex-shrink: 0;
  margin: 0 !important;
  margin-left: auto !important;
  padding-left: 20rpx !important;
  padding-right: 20rpx !important;
  line-height: normal;
  width: auto;
}

.upload-btn::after {
  border: none !important;
}

.upload-icon {
  font-size: 26rpx;
  line-height: 1;
  font-weight: 700;
}

/* 搜索和筛选区域 */
.search-filter-section {
  padding: 20rpx 30rpx 24rpx;
  background: transparent; /* 改为透明，融入整体背景 */
}

.search-box {
  display: flex;
  align-items: center;
  background: white; /* 改为白色，与筛选标签统一 */
  border-radius: 20rpx;
  padding: 16rpx 20rpx;
  margin-bottom: 16rpx;
  box-shadow: 0 2rpx 8rpx rgba(102, 187, 106, 0.06); /* 添加轻微阴影 */
}

.search-icon {
  width: 32rpx;
  height: 32rpx;
  margin-right: 12rpx;
  flex-shrink: 0;
  position: relative;
}

.search-icon::before {
  content: '';
  position: absolute;
  width: 18rpx;
  height: 18rpx;
  border: 3rpx solid #999;
  border-radius: 50%;
  top: 2rpx;
  left: 2rpx;
}

.search-icon::after {
  content: '';
  position: absolute;
  width: 10rpx;
  height: 3rpx;
  background: #999;
  transform: rotate(45deg);
  bottom: 4rpx;
  right: 4rpx;
}

.search-input {
  flex: 1;
  font-size: 26rpx;
  color: #333;
}

.clear-icon {
  width: 32rpx;
  height: 32rpx;
  border-radius: 50%;
  background: #D0D0D0;
  position: relative;
  flex-shrink: 0;
  margin-left: 12rpx;
}

.clear-icon::before,
.clear-icon::after {
  content: '';
  position: absolute;
  width: 16rpx;
  height: 2rpx;
  background: white;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%) rotate(45deg);
}

.clear-icon::after {
  transform: translate(-50%, -50%) rotate(-45deg);
}

.filter-tabs {
  display: flex;
  gap: 12rpx;
  background: white; /* 添加白色背景 */
  padding: 8rpx; /* 添加内边距 */
  border-radius: 20rpx; /* 圆角 */
  box-shadow: 0 2rpx 8rpx rgba(102, 187, 106, 0.06); /* 轻微阴影 */
}

.filter-tag {
  padding: 10rpx 20rpx;
  border-radius: 16rpx;
  background: transparent; /* 默认透明 */
  color: #666;
  font-size: 24rpx;
  font-weight: 500;
  white-space: nowrap;
  transition: all 0.3s;
}

.filter-tag.active {
  background: linear-gradient(135deg, #A8E6CF 0%, #D0F0C0 100%);
  color: #2D5C3F;
  font-weight: 600;
}

/* 商品列表 */
.product-list {
  padding: 20rpx 30rpx;
}

.product-card {
  background: white;
  border-radius: 16rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.06);
  display: flex;
  gap: 20rpx;
}

.product-image {
  width: 160rpx;
  height: 160rpx;
  border-radius: 12rpx;
  background: #F5F5F5;
  flex-shrink: 0;
}

.product-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.product-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: 12rpx;
}

.product-name {
  flex: 1;
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.status-badge {
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
  font-size: 22rpx;
  white-space: nowrap;
}

.status-badge.online {
  background: #E8F5E9;
  color: #66BB6A;
}

.status-badge.offline {
  background: #FFEBEE;
  color: #FF6B6B;
}

.product-meta {
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: 12rpx;
}

.product-category {
  font-size: 24rpx;
  color: #999;
  flex: 1;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.product-price {
  font-size: 30rpx;
  font-weight: 600;
  color: #FF6B6B;
}

.product-stats {
  display: flex;
  gap: 20rpx;
}

.stat-text {
  font-size: 22rpx;
  color: #999;
}

.product-actions {
  display: flex;
  flex-direction: column;
  gap: 10rpx;
  justify-content: center;
}

.action-btn {
  width: 120rpx;
  height: 56rpx;
  line-height: 56rpx;
  text-align: center;
  border-radius: 8rpx;
  font-size: 24rpx;
  padding: 0;
  border: none;
}

.edit-btn {
  background: #E3F2FD;
  color: #2196F3;
}

.toggle-btn {
  background: #FFF9E6;
  color: #FFA500;
}

.delete-btn {
  background: #FFEBEE;
  color: #FF6B6B;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 60rpx;
  text-align: center;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 24rpx;
  opacity: 0.3;
}

.empty-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #666;
  margin-bottom: 16rpx;
}

.empty-hint {
  font-size: 26rpx;
  color: #999;
  line-height: 1.6;
}

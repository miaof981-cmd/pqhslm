/* 我的页面样式 - 参考淘宝风格 */
.container {
  background-color: #f5f5f5;
  min-height: 100vh;
}

.loading {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 400rpx;
  color: #999;
}

/* 用户信息卡片 - 简洁高端 */
.user-card {
  background: linear-gradient(135deg, #A8E6CF 0%, #D0F0C0 100%);
  padding: 50rpx 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.user-main-info {
  display: flex;
  align-items: center;
  gap: 25rpx;
  flex: 1;
}

.user-avatar {
  width: 110rpx;
  height: 110rpx;
  border-radius: 50%;
  background-color: white;
  border: 3rpx solid white;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.user-avatar:active {
  opacity: 0.8;
}

.user-details {
  display: flex;
  flex-direction: column;
  gap: 10rpx;
  flex: 1;
}

.auth-hint {
  font-size: 22rpx;
  color: rgba(255, 255, 255, 0.8);
  text-decoration: underline;
  margin-top: 4rpx;
}

.user-name {
  font-size: 34rpx;
  font-weight: 600;
  color: white;
}

.user-id {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.9);
}

.user-roles {
  display: flex;
  gap: 12rpx;
  flex-wrap: wrap;
}

.role-tag {
  background-color: rgba(255, 255, 255, 0.3);
  color: white;
  font-size: 22rpx;
  padding: 6rpx 16rpx;
  border-radius: 20rpx;
  border: 2rpx solid rgba(255, 255, 255, 0.5);
  font-weight: 500;
}

.role-manage-btn {
  background-color: white;
  color: #A8E6CF;
  font-size: 24rpx;
  padding: 12rpx 24rpx;
  border-radius: 25rpx;
  font-weight: 600;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

/* 订单区域 */
.order-section {
  background-color: white;
  margin: 20rpx 30rpx;
  border-radius: 20rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0,0,0,0.08);
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 700;
  color: #333;
}

.view-all {
  font-size: 24rpx;
  color: #A8E6CF;
  font-weight: 600;
}

.order-stats {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 20rpx;
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx 10rpx;
  border-radius: 15rpx;
  background-color: #f8f9fa;
  transition: all 0.3s ease;
}

.stat-item:active {
  background-color: #A8E6CF;
  transform: scale(0.95);
}

.stat-icon {
  width: 48rpx;
  height: 48rpx;
  margin-bottom: 8rpx;
  border-radius: 50%;
  position: relative;
}

.stat-icon::before {
  content: '';
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}

.stat-icon.processing {
  background: linear-gradient(135deg, #FFD54F 0%, #FFCA28 100%);
}

.stat-icon.processing::before {
  width: 20rpx;
  height: 20rpx;
  border: 3rpx solid white;
  border-top-color: transparent;
  border-radius: 50%;
  animation: rotate 1s linear infinite;
}

@keyframes rotate {
  from { transform: translate(-50%, -50%) rotate(0deg); }
  to { transform: translate(-50%, -50%) rotate(360deg); }
}

.stat-icon.completed {
  background: linear-gradient(135deg, #81C784 0%, #66BB6A 100%);
}

.stat-icon.completed::before {
  width: 12rpx;
  height: 20rpx;
  border: 3rpx solid white;
  border-top: none;
  border-left: none;
  transform: translate(-50%, -60%) rotate(45deg);
}

.stat-icon.refunded {
  background: linear-gradient(135deg, #EF9A9A 0%, #E57373 100%);
}

.stat-icon.refunded::before {
  width: 24rpx;
  height: 24rpx;
  border: 3rpx solid white;
  border-radius: 50%;
  box-sizing: border-box;
}

.stat-icon.refunded::after {
  content: '';
  position: absolute;
  top: 50%;
  left: 50%;
  width: 16rpx;
  height: 3rpx;
  background-color: white;
  transform: translate(-50%, -50%);
}

.stat-icon.all {
  background: linear-gradient(135deg, #64B5F6 0%, #42A5F5 100%);
}

.stat-icon.all::before {
  width: 20rpx;
  height: 16rpx;
  border: 3rpx solid white;
  border-radius: 2rpx;
}

.stat-icon.all::after {
  content: '';
  position: absolute;
  top: 30%;
  left: 50%;
  width: 12rpx;
  height: 2rpx;
  background-color: white;
  transform: translateX(-50%);
  box-shadow: 0 5rpx 0 white, 0 10rpx 0 white;
}

.stat-label {
  font-size: 22rpx;
  color: #666;
  margin-bottom: 4rpx;
}

.stat-count {
  font-size: 24rpx;
  font-weight: 700;
  color: #333;
}

/* 画师认证 */
.artist-certification {
  margin: 20rpx 30rpx;
}

/* 申请状态卡片 */
.application-status-card {
  background: white;
  border-radius: 20rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
}

/* 待审核状态 */
.status-pending {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.status-header {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.status-icon {
  font-size: 48rpx;
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.pending-icon {
  animation: rotate 2s linear infinite;
}

@keyframes rotate {
  from {
    transform: rotate(0deg);
  }
  to {
    transform: rotate(360deg);
  }
}

.rejected-icon {
  opacity: 0.8;
}

.status-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.status-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #2C3E50;
}

.status-time {
  font-size: 24rpx;
  color: #999;
}

.status-desc {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
  padding: 20rpx;
  background: #F8F9FA;
  border-radius: 12rpx;
}

/* 已驳回状态 */
.status-rejected {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.reject-reason {
  padding: 20rpx;
  background: #FFF5F5;
  border-left: 4rpx solid #E74C3C;
  border-radius: 8rpx;
}

.reason-label {
  font-size: 26rpx;
  color: #E74C3C;
  font-weight: 600;
  display: block;
  margin-bottom: 8rpx;
}

.reason-text {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
}

/* 状态操作按钮 */
.status-actions {
  display: flex;
  gap: 20rpx;
  margin-top: 10rpx;
}

.status-btn {
  flex: 1;
  height: 80rpx;
  border-radius: 40rpx;
  font-size: 28rpx;
  font-weight: 600;
  display: flex;
  align-items: center;
  justify-content: center;
  border: none;
}

.status-btn::after {
  border: none;
}

.status-btn.primary {
  background: linear-gradient(135deg, #A8E6CF 0%, #88D4AB 100%);
  color: white;
  box-shadow: 0 4rpx 12rpx rgba(168, 230, 207, 0.3);
}

.status-btn.primary:active {
  transform: scale(0.98);
  opacity: 0.9;
}

.status-btn.secondary {
  background: white;
  color: #A8E6CF;
  border: 2rpx solid #A8E6CF;
}

.status-btn.secondary:active {
  background: #F8F9FA;
}

.cert-banner {
  background: linear-gradient(135deg, #FFF3CD 0%, #FFEAA7 100%);
  border: 2rpx dashed #F39C12;
  border-radius: 20rpx;
  padding: 40rpx 30rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  position: relative;
  overflow: hidden;
}

.cert-content {
  flex: 1;
}

.cert-title {
  font-size: 36rpx;
  font-weight: 700;
  color: #D68910;
  margin-bottom: 10rpx;
  display: block;
}

.cert-subtitle {
  font-size: 24rpx;
  color: #B7950B;
}

.cert-illustration {
  position: relative;
}

.cert-icon-circle {
  width: 80rpx;
  height: 80rpx;
  background: linear-gradient(135deg, #A8E6CF 0%, #D0F0C0 100%);
  border-radius: 50%;
  position: relative;
  animation: pulse 2s ease-in-out infinite;
}

.cert-icon-circle::before {
  content: '';
  position: absolute;
  top: 50%;
  left: 50%;
  width: 40rpx;
  height: 40rpx;
  border: 4rpx solid white;
  border-radius: 50%;
  transform: translate(-50%, -50%);
}

.cert-icon-circle::after {
  content: '';
  position: absolute;
  top: 50%;
  left: 50%;
  width: 16rpx;
  height: 24rpx;
  border: 4rpx solid white;
  border-top: none;
  border-left: none;
  transform: translate(-60%, -60%) rotate(45deg);
}

@keyframes pulse {
  0%, 100% { transform: scale(1); opacity: 1; }
  50% { transform: scale(1.1); opacity: 0.8; }
}

.cert-action-hint {
  font-size: 24rpx;
  color: #A8E6CF;
  font-weight: 600;
  margin-top: 10rpx;
  display: block;
  text-align: center;
}

/* 画师工作台 */
.artist-workspace {
  background-color: white;
  margin: 20rpx 30rpx;
  border-radius: 20rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0,0,0,0.08);
}


/* 我的页面样式 - 参考淘宝风格 */
.container {
  background-color: #f5f5f5;
  min-height: 100vh;
}

.loading {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 400rpx;
  color: #999;
}

/* 用户信息卡片 - 简洁高端 */
.user-card {
  background: linear-gradient(135deg, #A8E6CF 0%, #D0F0C0 100%);
  padding: 50rpx 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.user-main-info {
  display: flex;
  align-items: center;
  gap: 25rpx;
  flex: 1;
}

.user-avatar {
  width: 110rpx;
  height: 110rpx;
  border-radius: 50%;
  background-color: white;
  border: 3rpx solid white;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.user-details {
  display: flex;
  flex-direction: column;
  gap: 10rpx;
}

.user-name {
  font-size: 34rpx;
  font-weight: 600;
  color: white;
}

.user-id {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.9);
}

.dev-switch {
  background-color: white;
  color: #A8E6CF;
  font-size: 24rpx;
  padding: 12rpx 24rpx;
  border-radius: 25rpx;
  font-weight: 600;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

/* 订单区域 */
.order-section {
  background-color: white;
  margin: 20rpx 30rpx;
  border-radius: 20rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0,0,0,0.08);
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 700;
  color: #333;
}

.view-all {
  font-size: 24rpx;
  color: #A8E6CF;
  font-weight: 600;
}

.order-stats {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 20rpx;
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx 10rpx;
  border-radius: 15rpx;
  background-color: #f8f9fa;
  transition: all 0.3s ease;
}

.stat-item:active {
  background-color: #A8E6CF;
  transform: scale(0.95);
}

.stat-icon {
  width: 48rpx;
  height: 48rpx;
  margin-bottom: 8rpx;
  border-radius: 50%;
  position: relative;
}

.stat-icon::before {
  content: '';
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}

.stat-icon.processing {
  background: linear-gradient(135deg, #FFB74D 0%, #FFA726 100%);
}

.stat-icon.processing::before {
  width: 20rpx;
  height: 20rpx;
  border: 3rpx solid white;
  border-top-color: transparent;
  border-radius: 50%;
  animation: rotate 1s linear infinite;
}

@keyframes rotate {
  from { transform: translate(-50%, -50%) rotate(0deg); }
  to { transform: translate(-50%, -50%) rotate(360deg); }
}

.stat-icon.completed {
  background: linear-gradient(135deg, #66BB6A 0%, #4CAF50 100%);
}

.stat-icon.completed::before {
  width: 12rpx;
  height: 20rpx;
  border: 3rpx solid white;
  border-top: none;
  border-left: none;
  transform: translate(-50%, -60%) rotate(45deg);
}

.stat-icon.refunded {
  background: linear-gradient(135deg, #EF5350 0%, #E53935 100%);
}

.stat-icon.refunded::before {
  width: 24rpx;
  height: 24rpx;
  border: 3rpx solid white;
  border-radius: 50%;
  box-sizing: border-box;
}

.stat-icon.refunded::after {
  content: '';
  position: absolute;
  top: 50%;
  left: 50%;
  width: 16rpx;
  height: 3rpx;
  background-color: white;
  transform: translate(-50%, -50%);
}

.stat-icon.all {
  background: linear-gradient(135deg, #42A5F5 0%, #1E88E5 100%);
}

.stat-icon.all::before {
  width: 20rpx;
  height: 16rpx;
  border: 3rpx solid white;
  border-radius: 2rpx;
}

.stat-icon.all::after {
  content: '';
  position: absolute;
  top: 30%;
  left: 50%;
  width: 12rpx;
  height: 2rpx;
  background-color: white;
  transform: translateX(-50%);
  box-shadow: 0 5rpx 0 white, 0 10rpx 0 white;
}

.stat-label {
  font-size: 22rpx;
  color: #666;
  margin-bottom: 4rpx;
}

.stat-count {
  font-size: 24rpx;
  font-weight: 700;
  color: #333;
}

/* 画师认证 */
.artist-certification {
  margin: 20rpx 30rpx;
}

.cert-banner {
  background: linear-gradient(135deg, #FFF3CD 0%, #FFEAA7 100%);
  border: 2rpx dashed #F39C12;
  border-radius: 20rpx;
  padding: 40rpx 30rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  position: relative;
  overflow: hidden;
}

.cert-content {
  flex: 1;
}

.cert-title {
  font-size: 36rpx;
  font-weight: 700;
  color: #D68910;
  margin-bottom: 10rpx;
  display: block;
}

.cert-subtitle {
  font-size: 24rpx;
  color: #B7950B;
}

.cert-illustration {
  position: relative;
}

.cert-icon-circle {
  width: 80rpx;
  height: 80rpx;
  background: linear-gradient(135deg, #A8E6CF 0%, #D0F0C0 100%);
  border-radius: 50%;
  position: relative;
  animation: pulse 2s ease-in-out infinite;
}

.cert-icon-circle::before {
  content: '';
  position: absolute;
  top: 50%;
  left: 50%;
  width: 40rpx;
  height: 40rpx;
  border: 4rpx solid white;
  border-radius: 50%;
  transform: translate(-50%, -50%);
}

.cert-icon-circle::after {
  content: '';
  position: absolute;
  top: 50%;
  left: 50%;
  width: 16rpx;
  height: 24rpx;
  border: 4rpx solid white;
  border-top: none;
  border-left: none;
  transform: translate(-60%, -60%) rotate(45deg);
}

@keyframes pulse {
  0%, 100% { transform: scale(1); opacity: 1; }
  50% { transform: scale(1.1); opacity: 0.8; }
}

.cert-action-hint {
  font-size: 24rpx;
  color: #A8E6CF;
  font-weight: 600;
  margin-top: 10rpx;
  display: block;
  text-align: center;
}

/* 画师工作台 */
.artist-workspace {
  background-color: white;
  margin: 20rpx 30rpx;
  border-radius: 20rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0,0,0,0.08);
}

.workspace-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
}

.workspace-title {
  font-size: 32rpx;
  font-weight: 700;
  color: #333;
}

.member-status {
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 22rpx;
  font-weight: 600;
}

.member-status.active {
  background-color: #D5F4E6;
  color: #27AE60;
}

.member-status.expired {
  background-color: #FADBD8;
  color: #E74C3C;
}

.workspace-actions {
  display: flex;
  gap: 20rpx;
}

.workspace-btn {
  flex: 1;
  border-radius: 25rpx;
  font-size: 26rpx;
  font-weight: 600;
  padding: 20rpx 0;
}

.workspace-btn.primary {
  background: linear-gradient(45deg, #A8E6CF, #D0F0C0);
  color: white;
}

.workspace-btn.secondary {
  background-color: #F8F9FA;
  color: #666;
  border: 2rpx solid #E9ECEF;
}


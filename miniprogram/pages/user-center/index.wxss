/* 收藏和关注 - 爱心 */
.icon-favorite::before {
  width: 20rpx;
  height: 18rpx;
  background-color: white;
  clip-path: polygon(50% 100%, 0% 40%, 0% 20%, 20% 0%, 40% 0%, 50% 10%, 60% 0%, 80% 0%, 100% 20%, 100% 40%);
}

/* 历史足迹 - 时钟 */
.icon-history::before {
  width: 24rpx;
  height: 24rpx;
  border: 3rpx solid white;
  border-radius: 50%;
}

.icon-history::after {
  content: '';
  position: absolute;
  top: 35%;
  left: 50%;
  width: 2rpx;
  height: 10rpx;
  background-color: white;
  transform-origin: bottom;
  transform: translateX(-50%);
}

/* 平台售后 - 客服 */
.icon-service::before {
  width: 22rpx;
  height: 18rpx;
  border: 3rpx solid white;
  border-radius: 8rpx 8rpx 0 0;
}

.icon-service::after {
  content: '';
  position: absolute;
  top: 60%;
  left: 50%;
  width: 12rpx;
  height: 8rpx;
  border: 3rpx solid white;
  border-top: none;
  border-radius: 0 0 6rpx 6rpx;
  transform: translateX(-50%);
}

/* 买家秀 - 相机 */
.icon-show::before {
  width: 24rpx;
  height: 20rpx;
  border: 3rpx solid white;
  border-radius: 4rpx;
}

.icon-show::after {
  content: '';
  position: absolute;
  top: 50%;
  left: 50%;
  width: 10rpx;
  height: 10rpx;
  border: 2rpx solid white;
  border-radius: 50%;
  transform: translate(-50%, -50%);
}

/* 打赏记录 - 礼物 */
.icon-reward::before {
  width: 20rpx;
  height: 16rpx;
  border: 3rpx solid white;
  border-top: none;
  border-radius: 0 0 4rpx 4rpx;
}

.icon-reward::after {
  content: '';
  position: absolute;
  top: 30%;
  left: 50%;
  width: 12rpx;
  height: 3rpx;
  background-color: white;
  transform: translateX(-50%);
}

/* 管理后台 - 齿轮 */
.icon-admin::before {
  width: 20rpx;
  height: 20rpx;
  border: 3rpx solid white;
  border-radius: 50%;
}

.icon-admin::after {
  content: '';
  position: absolute;
  top: 50%;
  left: 50%;
  width: 26rpx;
  height: 26rpx;
  background: 
    linear-gradient(white, white) no-repeat center/3rpx 10rpx,
    linear-gradient(white, white) no-repeat center/10rpx 3rpx;
  transform: translate(-50%, -50%);
}

.function-label {
  font-size: 22rpx;
  color: #666;
  text-align: center;
}

/* 版权信息 */
.copyright {
  text-align: center;
  padding: 40rpx 30rpx;
}

.copyright-text {
  display: block;
  font-size: 22rpx;
  color: #999;
  margin-bottom: 8rpx;
}
}

/* 卡片徽章 */
.card-badge {
  position: absolute;
  top: 10rpx;
  right: 10rpx;
  font-size: 20rpx;
  padding: 4rpx 10rpx;
  border-radius: 10rpx;
  font-weight: 500;
}

.card-badge.active {
  background-color: rgba(168, 230, 207, 0.3);
  color: #27AE60;
}

.card-badge.expired {
  background-color: rgba(255, 179, 153, 0.3);
  color: #E74C3C;
}

/* 续费会员按钮 */
.renew-member-btn {
  width: 100%;
  margin-top: 20rpx;
  padding: 20rpx 0;
  background: linear-gradient(135deg, #FFF9E6 0%, #FFF3CC 100%);
  color: #D68910;
  border: 2rpx solid #FFE4A3;
  border-radius: 16rpx;
  font-size: 26rpx;
  font-weight: 600;
}

.renew-member-btn::after {
  border: none;
}

/* 其他功能 */
.other-section {
  background-color: white;
  margin: 20rpx 30rpx;
  border-radius: 20rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0,0,0,0.08);
}

.function-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 30rpx;
  margin-top: 20rpx;
}

.function-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx 10rpx;
  border-radius: 15rpx;
  background-color: #f8f9fa;
  transition: all 0.3s ease;
}

.function-item:active {
  background-color: #A8E6CF;
  transform: scale(0.95);
}

.function-icon {
  width: 48rpx;
  height: 48rpx;
  margin-bottom: 10rpx;
  border-radius: 50%;
  position: relative;
}

.icon-favorite {
  background: linear-gradient(135deg, #FFB3BA 0%, #FF8A95 100%);
}

.icon-history {
  background: linear-gradient(135deg, #BAE1FF 0%, #A5D8FF 100%);
}

.icon-service {
  background: linear-gradient(135deg, #B5EAD7 0%, #95E1D3 100%);
}

.icon-show {
  background: linear-gradient(135deg, #FFDAC1 0%, #FFCBA4 100%);
}

.icon-reward {
  background: linear-gradient(135deg, #E2CDF7 0%, #D4B5F0 100%);
}

.function-icon::before {
  content: '';
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}

/* 收藏和关注 - 爱心 */
.icon-favorite::before {
  width: 20rpx;
  height: 18rpx;
  background-color: white;
  clip-path: polygon(50% 100%, 0% 40%, 0% 20%, 20% 0%, 40% 0%, 50% 10%, 60% 0%, 80% 0%, 100% 20%, 100% 40%);
}

/* 历史足迹 - 时钟 */
.icon-history::before {
  width: 24rpx;
  height: 24rpx;
  border: 3rpx solid white;
  border-radius: 50%;
}

.icon-history::after {
  content: '';
  position: absolute;
  top: 35%;
  left: 50%;
  width: 2rpx;
  height: 10rpx;
  background-color: white;
  transform-origin: bottom;
  transform: translateX(-50%);
}

/* 平台售后 - 客服 */
.icon-service::before {
  width: 22rpx;
  height: 18rpx;
  border: 3rpx solid white;
  border-radius: 8rpx 8rpx 0 0;
}

.icon-service::after {
  content: '';
  position: absolute;
  top: 60%;
  left: 50%;
  width: 12rpx;
  height: 8rpx;
  border: 3rpx solid white;
  border-top: none;
  border-radius: 0 0 6rpx 6rpx;
  transform: translateX(-50%);
}

/* 买家秀 - 相机 */
.icon-show::before {
  width: 24rpx;
  height: 20rpx;
  border: 3rpx solid white;
  border-radius: 4rpx;
}

.icon-show::after {
  content: '';
  position: absolute;
  top: 50%;
  left: 50%;
  width: 10rpx;
  height: 10rpx;
  border: 2rpx solid white;
  border-radius: 50%;
  transform: translate(-50%, -50%);
}

/* 打赏记录 - 礼物 */
.icon-reward::before {
  width: 20rpx;
  height: 16rpx;
  border: 3rpx solid white;
  border-top: none;
  border-radius: 0 0 4rpx 4rpx;
}

.icon-reward::after {
  content: '';
  position: absolute;
  top: 30%;
  left: 50%;
  width: 12rpx;
  height: 3rpx;
  background-color: white;
  transform: translateX(-50%);
}

/* 管理后台 - 齿轮 */
.icon-admin::before {
  width: 20rpx;
  height: 20rpx;
  border: 3rpx solid white;
  border-radius: 50%;
}

.icon-admin::after {
  content: '';
  position: absolute;
  top: 50%;
  left: 50%;
  width: 26rpx;
  height: 26rpx;
  background: 
    linear-gradient(white, white) no-repeat center/3rpx 10rpx,
    linear-gradient(white, white) no-repeat center/10rpx 3rpx;
  transform: translate(-50%, -50%);
}

.function-label {
  font-size: 22rpx;
  color: #666;
  text-align: center;
}

/* 退出登录 */
.logout-section {
  padding: 40rpx 30rpx 20rpx;
}

.logout-btn {
  width: 100%;
  height: 88rpx;
  background: linear-gradient(135deg, #FFE5E5 0%, #FFD0D0 100%);
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
  border: none;
  box-shadow: 0 4rpx 12rpx rgba(231, 76, 60, 0.15);
}

.logout-btn::after {
  border: none;
}

.logout-btn:active {
  opacity: 0.8;
  transform: scale(0.98);
}

.logout-icon {
  font-size: 36rpx;
}

.logout-text {
  font-size: 28rpx;
  font-weight: 600;
  color: #E74C3C;
}

/* 版权信息 */
.copyright {
  text-align: center;
  padding: 20rpx 30rpx 40rpx;
}

.copyright-text {
  display: block;
  font-size: 22rpx;
  color: #999;
  margin-bottom: 8rpx;
}
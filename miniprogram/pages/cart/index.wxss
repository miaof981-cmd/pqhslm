/* 购物车页面样式 */
.container {
  min-height: 100vh;
  background-color: #F5F5F5;
  padding-bottom: 120rpx;
}

.loading {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 400rpx;
  color: #999;
}

/* 购物车列表 */
.cart-content {
  padding-bottom: 40rpx;
}

.cart-list {
  padding: 20rpx;
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.cart-item {
  background: white;
  border-radius: 16rpx;
  padding: 25rpx;
  display: flex;
  gap: 20rpx;
  align-items: center;
  position: relative;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.06);
}

.cart-item.selected {
  border: 2rpx solid #A8E6CF;
}

/* 选择框 */
.checkbox {
  width: 36rpx;
  height: 36rpx;
  border: 2rpx solid #CCC;
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-shrink: 0;
}

.checkbox.checked,
.cart-item.selected .checkbox {
  border-color: #A8E6CF;
  background: #A8E6CF;
}

.checkbox-checked {
  width: 20rpx;
  height: 20rpx;
  background: white;
  border-radius: 50%;
}

/* 商品内容 */
.item-content {
  flex: 1;
  display: flex;
  gap: 20rpx;
}

.product-image {
  width: 150rpx;
  height: 150rpx;
  border-radius: 12rpx;
  background: #F5F5F5;
  flex-shrink: 0;
  object-fit: cover;
}

.product-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 10rpx;
  justify-content: space-between;
}

.product-name {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.product-artist {
  font-size: 24rpx;
  color: #999;
}

.product-spec {
  display: flex;
  align-items: center;
  padding: 8rpx 16rpx;
  background: linear-gradient(135deg, #E8F5E9 0%, #C8E6C9 100%);
  border-radius: 8rpx;
  margin-top: 4rpx;
  align-self: flex-start;
}

.spec-label {
  font-size: 22rpx;
  color: #4CAF50;
  font-weight: bold;
  margin-right: 8rpx;
}

.spec-value {
  font-size: 22rpx;
  color: #2E7D32;
  font-weight: 500;
  align-self: flex-start;
}

.product-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.product-price {
  font-size: 32rpx;
  font-weight: 700;
  color: #E53935;
}

/* 数量控制 */
.quantity-control {
  display: flex;
  align-items: center;
  gap: 15rpx;
}

.quantity-btn {
  width: 48rpx;
  height: 48rpx;
  background: #F5F5F5;
  border: 1rpx solid #E0E0E0;
  border-radius: 8rpx;
  font-size: 28rpx;
  line-height: 1;
  padding: 0;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #666;
}

.quantity-btn.minus {
  color: #FF6B6B;
}

.quantity-btn.plus {
  color: #4CAF50;
}

.quantity-text {
  font-size: 26rpx;
  color: #333;
  min-width: 40rpx;
  text-align: center;
}

/* 删除按钮 */
.delete-btn {
  position: absolute;
  top: 15rpx;
  right: 15rpx;
  width: 40rpx;
  height: 40rpx;
  background: rgba(0,0,0,0.1);
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
}

.delete-icon {
  color: #666;
  font-size: 36rpx;
  line-height: 1;
}

/* 推荐商品 */
.recommend-section {
  background: white;
  margin: 20rpx;
  border-radius: 16rpx;
  padding: 30rpx 20rpx;
  flex: 1;
}

.recommend-header {
  margin-bottom: 25rpx;
  padding: 0 10rpx;
}

.recommend-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  position: relative;
  padding-left: 20rpx;
}

.recommend-title::before {
  content: '';
  position: absolute;
  left: 0;
  top: 50%;
  transform: translateY(-50%);
  width: 6rpx;
  height: 28rpx;
  background: linear-gradient(135deg, #A8E6CF 0%, #D0F0C0 100%);
  border-radius: 3rpx;
}

/* 推荐商品列表 - 两列布局 */
.recommend-list {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
  padding: 0 10rpx;
}

.recommend-item {
  width: calc((100% - 20rpx) / 2);
  display: flex;
  flex-direction: column;
  gap: 12rpx;
  background: #FAFAFA;
  border-radius: 16rpx;
  padding: 12rpx;
  box-sizing: border-box;
}

.recommend-image-wrapper {
  width: 100%;
  height: 0;
  padding-bottom: 100%; /* 1:1 正方形比例 */
  position: relative;
  overflow: hidden;
  border-radius: 12rpx;
  background: #F5F5F5;
}

.recommend-image {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  border-radius: 12rpx;
  object-fit: cover;
}

.recommend-name {
  font-size: 26rpx;
  color: #333;
  font-weight: 500;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  line-height: 1.4;
}

.recommend-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  gap: 8rpx;
}

.recommend-price {
  font-size: 30rpx;
  font-weight: 700;
  color: #E53935;
  flex-shrink: 0;
}

.recommend-delivery {
  font-size: 20rpx;
  padding: 4rpx 8rpx;
  border-radius: 6rpx;
  white-space: nowrap;
  font-weight: 400;
  flex-shrink: 0;
}

/* 极速出稿 (1天) - 极淡蓝色 */
.recommend-delivery.delivery-fast {
  background: #F0F8FF;
  color: #7BA3CC;
}

/* 快速出稿 (2-3天) - 极淡绿色 */
.recommend-delivery.delivery-quick {
  background: #F4F9F4;
  color: #81B589;
}

/* 普通出稿 (4-7天) - 极淡黄色 */
.recommend-delivery.delivery-normal {
  background: #FFFCF5;
  color: #C9A872;
}

/* 慢速出稿 (8-30天) - 极淡灰色 */
.recommend-delivery.delivery-slow {
  background: #FAFAFA;
  color: #B0B0B0;
}

/* 空购物车容器 */
.empty-cart-content {
  min-height: 100vh;
  display: flex;
  flex-direction: column;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 80rpx 0 60rpx;
  gap: 30rpx;
  flex-shrink: 0;
}

.empty-icon {
  width: 200rpx;
  height: 200rpx;
  background: #F5F5F5;
  border-radius: 50%;
  position: relative;
}

.empty-icon::before {
  content: '';
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 100rpx;
  height: 100rpx;
  border: 6rpx solid #E0E0E0;
  border-radius: 50%;
}

.empty-icon::after {
  content: '';
  position: absolute;
  bottom: 40rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 60rpx;
  height: 6rpx;
  background: #E0E0E0;
  border-radius: 3rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
}

.go-shopping-btn {
  padding: 15rpx 50rpx;
  background: linear-gradient(135deg, #A8E6CF 0%, #D0F0C0 100%);
  color: white;
  border-radius: 50rpx;
  font-size: 26rpx;
  border: none;
  line-height: 1.5;
}

/* 底部操作栏 */
.bottom-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: white;
  padding: 20rpx 30rpx;
  box-shadow: 0 -2rpx 8rpx rgba(0,0,0,0.06);
  display: flex;
  align-items: center;
  gap: 20rpx;
  z-index: 100;
}

.select-all {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.select-all-text {
  font-size: 26rpx;
  color: #333;
}

.total-info {
  flex: 1;
  text-align: right;
}

.total-label {
  font-size: 24rpx;
  color: #666;
}

.total-price {
  font-size: 36rpx;
  font-weight: 700;
  color: #E53935;
}

.checkout-btn {
  padding: 18rpx 40rpx;
  background: #CCC;
  color: white;
  border-radius: 50rpx;
  font-size: 28rpx;
  border: none;
  line-height: 1.5;
  font-weight: 600;
}

.checkout-btn.active {
  background: linear-gradient(135deg, #A8E6CF 0%, #D0F0C0 100%);
}

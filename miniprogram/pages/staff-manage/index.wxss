.container { min-height: 100vh; background: #F5F5F5; }
.loading { display: flex; justify-content: center; align-items: center; height: 400rpx; color: #999; }
.header-bar { background: #fff; padding: 30rpx; display: flex; justify-content: space-between; align-items: center; margin-bottom: 20rpx; box-shadow: 0 8rpx 20rpx rgba(0,0,0,0.04); }
.page-title { font-size: 32rpx; font-weight: 600; color: #333; }
.add-btn { padding: 15rpx 30rpx; background: linear-gradient(135deg, #A8E6CF 0%, #74C69D 100%); color: #fff; border-radius: 25rpx; font-size: 26rpx; border: none; box-shadow: 0 6rpx 12rpx rgba(116,198,157,0.35); }
.list { padding: 0 20rpx 40rpx; }
.list-item { background: #fff; padding: 28rpx; margin-bottom: 20rpx; border-radius: 18rpx; display: flex; justify-content: space-between; align-items: flex-start; box-shadow: 0 12rpx 26rpx rgba(0,0,0,0.05); }
.item-main { flex: 1; margin-right: 20rpx; }
.item-row { display: flex; align-items: center; gap: 16rpx; margin-bottom: 12rpx; }
.item-name { font-size: 30rpx; font-weight: 600; color: #333; }
.status-tag { font-size: 22rpx; padding: 6rpx 18rpx; border-radius: 30rpx; background: #F1F1F1; color: #666; }
.status-tag.active { background: rgba(116,198,157,0.12); color: #2F8F4E; }
.status-tag.inactive { background: rgba(244,67,54,0.12); color: #C62828; }
.item-role { font-size: 26rpx; color: #555; margin-bottom: 6rpx; display: block; }
.item-meta { font-size: 24rpx; color: #888; margin-bottom: 6rpx; display: block; }

/* ğŸ¯ åˆ†æˆçŠ¶æ€æ˜¾ç¤º */
.item-share { margin: 8rpx 0; }
.share-enabled { font-size: 26rpx; color: #2F8F4E; background: rgba(116,198,157,0.1); padding: 8rpx 16rpx; border-radius: 8rpx; display: inline-block; }
.share-disabled { font-size: 24rpx; color: #999; }

.item-desc { font-size: 24rpx; color: #666; margin-top: 12rpx; line-height: 1.6; display: block; }
.item-actions { display: flex; gap: 16rpx; flex-shrink: 0; }
.action-btn { padding: 12rpx 24rpx; border-radius: 10rpx; font-size: 24rpx; border: none; }
.action-btn.edit { background: #E3F2FD; color: #1565C0; }
.action-btn.delete { background: #FFEBEE; color: #D32F2F; }
.empty { padding: 120rpx 40rpx; text-align: center; color: #999; display: flex; flex-direction: column; gap: 14rpx; }
.empty-title { font-size: 30rpx; font-weight: 600; color: #555; }
.empty-desc { font-size: 24rpx; line-height: 1.6; }


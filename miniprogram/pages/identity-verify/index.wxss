.verify-container {
  min-height: 100vh;
  background: linear-gradient(180deg, #F0F9FF 0%, #FAFAFA 100%);
  padding: 24rpx;
}

/* 头部 */
.verify-header {
  text-align: center;
  padding: 40rpx 0;
}

.header-icon {
  font-size: 80rpx;
  margin-bottom: 20rpx;
}

.header-title {
  display: block;
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 12rpx;
}

.header-desc {
  display: block;
  font-size: 26rpx;
  color: #999;
}

/* 已认证卡片 */
.verified-card {
  background: linear-gradient(135deg, #52C41A 0%, #73D13D 100%);
  border-radius: 20rpx;
  padding: 32rpx;
  box-shadow: 0 8rpx 24rpx rgba(82, 196, 26, 0.25);
}

.verified-badge {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
  margin-bottom: 24rpx;
}

.badge-icon {
  font-size: 40rpx;
  color: #FFFFFF;
}

.badge-text {
  font-size: 32rpx;
  font-weight: 600;
  color: #FFFFFF;
}

.verified-info {
  background: rgba(255, 255, 255, 0.2);
  border-radius: 16rpx;
  padding: 24rpx;
  backdrop-filter: blur(10rpx);
}

.info-row {
  display: flex;
  justify-content: space-between;
  padding: 16rpx 0;
  border-bottom: 1rpx solid rgba(255, 255, 255, 0.2);
}

.info-row:last-child {
  border-bottom: none;
}

.info-label {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.85);
}

.info-value {
  font-size: 28rpx;
  font-weight: 500;
  color: #FFFFFF;
}

.verified-hint {
  text-align: center;
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.85);
  margin-top: 20rpx;
}

/* 表单 */
.verify-form {
  background: #FFFFFF;
  border-radius: 20rpx;
  padding: 32rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.04);
}

.form-item {
  margin-bottom: 32rpx;
}

.form-label {
  display: block;
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 16rpx;
}

.form-label::before {
  content: '*';
  color: #FF4D4F;
  margin-right: 4rpx;
}

.form-input {
  width: 100%;
  height: 88rpx;
  padding: 0 24rpx;
  background: #F5F5F5;
  border-radius: 12rpx;
  font-size: 28rpx;
  color: #333;
}

.form-input::placeholder {
  color: #BFBFBF;
}

/* 选择器 */
.form-picker {
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 88rpx;
  padding: 0 24rpx;
  background: #F5F5F5;
  border-radius: 12rpx;
}

.picker-placeholder {
  font-size: 28rpx;
  color: #BFBFBF;
}

.picker-value {
  font-size: 28rpx;
  color: #333;
}

.picker-arrow {
  font-size: 40rpx;
  color: #999;
  transform: rotate(90deg);
}

/* 短信验证码 */
.sms-row {
  display: flex;
  gap: 16rpx;
}

.sms-input {
  flex: 1;
}

.sms-btn {
  width: 200rpx;
  height: 88rpx;
  line-height: 88rpx;
  padding: 0;
  background: linear-gradient(135deg, #1890FF 0%, #36CFC9 100%);
  color: #FFFFFF;
  font-size: 26rpx;
  border-radius: 12rpx;
  border: none;
}

.sms-btn.disabled {
  background: #D9D9D9;
  color: #FFFFFF;
}

/* 提示信息 */
.form-tips {
  background: #FFF7E6;
  border-radius: 12rpx;
  padding: 20rpx;
  margin-bottom: 32rpx;
}

.tip-item {
  font-size: 24rpx;
  color: #D46B08;
  line-height: 1.8;
  margin-bottom: 8rpx;
}

.tip-item:last-child {
  margin-bottom: 0;
  color: #FF4D4F;
  font-weight: 500;
}

/* 提交按钮 */
.submit-btn {
  width: 100%;
  height: 96rpx;
  background: linear-gradient(135deg, #667EEA 0%, #764BA2 100%);
  color: #FFFFFF;
  font-size: 32rpx;
  font-weight: 600;
  border-radius: 48rpx;
  border: none;
  box-shadow: 0 8rpx 24rpx rgba(102, 126, 234, 0.3);
}

.submit-btn.loading {
  background: #D9D9D9;
  box-shadow: none;
}


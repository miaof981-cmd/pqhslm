.role-manage-container {
  min-height: 100vh;
  background: linear-gradient(180deg, #E6F9FF 0%, #F8F9FA 30%, #FFFFFF 60%);
  padding-bottom: 40rpx;
}

/* 头部 */
.header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 30rpx;
  background: white;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.back-btn {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.back-icon {
  font-size: 36rpx;
  color: #333;
  font-weight: 300;
}

.header-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.header-right {
  width: 60rpx;
}

/* 用户信息卡片 */
.user-info-card {
  margin: 30rpx;
  background: linear-gradient(135deg, #A8E6CF 0%, #88D4AB 100%);
  border-radius: 20rpx;
  padding: 40rpx;
  box-shadow: 0 8rpx 24rpx rgba(168, 230, 207, 0.3);
}

.info-label {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.8);
  margin-bottom: 8rpx;
}

.info-value {
  font-size: 48rpx;
  font-weight: bold;
  color: white;
  margin-bottom: 16rpx;
}

.info-hint {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.9);
}

/* 安全警告卡片 */
.warning-card {
  margin: 30rpx 30rpx 20rpx;
  background: linear-gradient(135deg, #FFF3E0 0%, #FFE0B2 100%);
  border-radius: 20rpx;
  padding: 24rpx;
  display: flex;
  gap: 16rpx;
  box-shadow: 0 4rpx 20rpx rgba(255, 152, 0, 0.15);
  border: 2rpx solid #FFB74D;
}

.warning-icon {
  font-size: 40rpx;
  flex-shrink: 0;
}

.warning-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.warning-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #E65100;
}

.warning-text {
  font-size: 24rpx;
  color: #F57C00;
  line-height: 1.6;
}

/* 提示卡片 */
.tips-card {
  margin: 0 30rpx 30rpx;
  background: white;
  border-radius: 20rpx;
  padding: 24rpx;
  display: flex;
  gap: 16rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
}

.tips-icon {
  font-size: 40rpx;
  flex-shrink: 0;
}

.tips-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.tips-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
}

.tips-text {
  font-size: 24rpx;
  color: #666;
  line-height: 1.6;
}

/* 角色区域 */
.roles-section {
  margin: 0 30rpx 30rpx;
}

.section-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 20rpx;
}

.role-card {
  background: white;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  display: flex;
  align-items: center;
  gap: 24rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
  transition: all 0.3s;
  border: 3rpx solid transparent;
}

.role-card:active {
  transform: scale(0.98);
}

.role-card.active {
  border-color: #4ECDC4;
  box-shadow: 0 4rpx 20rpx rgba(78, 205, 196, 0.2);
}

.role-icon {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 40rpx;
  flex-shrink: 0;
}

.role-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.role-name {
  font-size: 30rpx;
  font-weight: 600;
  color: #333;
}

.role-desc {
  font-size: 24rpx;
  color: #999;
}

.role-status {
  flex-shrink: 0;
}

.status-indicator {
  width: 48rpx;
  height: 48rpx;
  border-radius: 50%;
  border: 3rpx solid #E0E0E0;
  position: relative;
  transition: all 0.3s;
}

.status-indicator.active {
  background: linear-gradient(135deg, #4ECDC4 0%, #44BDB5 100%);
  border-color: #4ECDC4;
}

.status-indicator.active::after {
  content: '✓';
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  color: white;
  font-size: 28rpx;
  font-weight: bold;
}

/* 底部操作 */
.bottom-actions {
  margin: 0 30rpx 20rpx;
}

.reset-btn {
  width: 100%;
  height: 88rpx;
  background: #F5F5F5;
  color: #666;
  font-size: 28rpx;
  border-radius: 44rpx;
  border: none;
  line-height: 88rpx;
}

.reset-btn:active {
  background: #E0E0E0;
}

/* 底部提示 */
.bottom-tips {
  text-align: center;
  padding: 0 30rpx;
  font-size: 22rpx;
  color: #999;
  line-height: 1.6;
}


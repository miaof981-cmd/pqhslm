<view class="buyer-show-page">
  <view class="banner-card">
    <view class="banner-title">晒买家秀 有机会获得奖励哦~</view>
    <view class="banner-desc">完成订单后上传满意的作品，帮助其他宝子种草</view>
  </view>

  <view wx:if="{{posts.length === 0}}" class="empty-section">
    <view class="empty-illustration"></view>
    <view class="empty-text">暂时还没有买家晒稿</view>
    <view class="empty-sub">完成订单后即可发布晒稿</view>
  </view>

  <view wx:else class="waterfall-container">
    <view class="waterfall-column">
      <block wx:for="{{leftPosts}}" wx:key="id">
        <view class="post-card" bindtap="viewPost" data-id="{{item.id}}">
          <view wx:if="{{item.images && item.images.length}}" class="post-cover-wrapper">
            <image class="post-cover" src="{{item.images[0]}}" mode="widthFix" />
            <view wx:if="{{item.images.length > 1}}" class="image-count">
              <text class="count-icon">📷</text>
              <text>{{item.images.length}}</text>
            </view>
          </view>
          <view class="post-info">
            <view class="post-title">{{item.comment || '这次合作超级满意~'}}</view>
            <view class="post-author">
              <image class="author-avatar" src="{{item.authorAvatar || DEFAULT_AVATAR_DATA}}" mode="aspectFill" />
              <text class="author-name">{{item.authorName || '匿名用户'}}</text>
            </view>
          </view>
        </view>
      </block>
    </view>
    
    <view class="waterfall-column">
      <block wx:for="{{rightPosts}}" wx:key="id">
        <view class="post-card" bindtap="viewPost" data-id="{{item.id}}">
          <view wx:if="{{item.images && item.images.length}}" class="post-cover-wrapper">
            <image class="post-cover" src="{{item.images[0]}}" mode="widthFix" />
            <view wx:if="{{item.images.length > 1}}" class="image-count">
              <text class="count-icon">📷</text>
              <text>{{item.images.length}}</text>
            </view>
          </view>
          <view class="post-info">
            <view class="post-title">{{item.comment || '这次合作超级满意~'}}</view>
            <view class="post-author">
              <image class="author-avatar" src="{{item.authorAvatar || DEFAULT_AVATAR_DATA}}" mode="aspectFill" />
              <text class="author-name">{{item.authorName || '匿名用户'}}</text>
            </view>
          </view>
        </view>
      </block>
    </view>
  </view>

  <!-- 🎯 悬浮发布按钮 - 始终显示 -->
  <view class="floating-publish-btn" bindtap="goPublish">
    <text class="plus-icon">+</text>
  </view>
</view>

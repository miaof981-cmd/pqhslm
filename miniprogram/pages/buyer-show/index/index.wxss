/* 小红书风格瀑布流布局 */
.buyer-show-page {
  background: #f8f8f8;
  min-height: 100vh;
  padding-bottom: 60rpx;
}

.banner-card {
  background: linear-gradient(135deg, #ffe4f3 0%, #dfefff 100%);
  margin: 20rpx 16rpx;
  border-radius: 20rpx;
  padding: 32rpx 28rpx;
  box-shadow: 0 8rpx 24rpx rgba(168, 230, 207, 0.2);
}

.banner-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 12rpx;
}

.banner-desc {
  font-size: 24rpx;
  color: #666;
  line-height: 1.5;
}

.empty-section {
  margin-top: 120rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  color: #666;
}

.empty-illustration {
  width: 320rpx;
  height: 320rpx;
  margin-bottom: 40rpx;
  background: url('https://static-1259454859.cos.ap-shanghai.myqcloud.com/buyer-show-empty.png') no-repeat center/contain;
}

.empty-text {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 12rpx;
}

.empty-sub {
  font-size: 26rpx;
  color: #999;
  margin-bottom: 36rpx;
}

.empty-button {
  width: 360rpx;
  height: 80rpx;
  line-height: 80rpx;
  background: #a8e6cf;
  color: #333;
  border-radius: 40rpx;
  border: none;
}

/* 瀑布流容器 */
.waterfall-container {
  display: flex;
  padding: 0 8rpx;
  gap: 8rpx;
}

.waterfall-column {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

/* 卡片样式 - 小红书风格 */
.post-card {
  background: #fff;
  border-radius: 12rpx;
  overflow: hidden;
  margin-bottom: 8rpx;
}

.post-cover-wrapper {
  position: relative;
  width: 100%;
  background: #f5f5f5;
}

.post-cover {
  width: 100%;
  display: block;
  vertical-align: bottom;
}

.image-count {
  position: absolute;
  top: 12rpx;
  right: 12rpx;
  background: rgba(0, 0, 0, 0.5);
  color: #fff;
  padding: 6rpx 12rpx;
  border-radius: 20rpx;
  font-size: 22rpx;
  display: flex;
  align-items: center;
  gap: 4rpx;
}

.count-icon {
  font-size: 20rpx;
}

/* 卡片信息区域 */
.post-info {
  padding: 16rpx;
}

.post-title {
  font-size: 26rpx;
  color: #333;
  line-height: 1.5;
  margin-bottom: 12rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  word-break: break-all;
}

.post-author {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.author-avatar {
  width: 48rpx;
  height: 48rpx;
  border-radius: 50%;
  flex-shrink: 0;
}

.author-name {
  font-size: 24rpx;
  color: #666;
  flex: 1;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

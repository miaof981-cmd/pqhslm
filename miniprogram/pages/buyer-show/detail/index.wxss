/* 博文风格详情页 */
.buyer-show-detail {
  min-height: 100vh;
  background: #fff;
}

.loading {
  text-align: center;
  padding: 120rpx 0;
  color: #999;
}

.detail-content {
  padding-bottom: 60rpx;
}

/* 用户信息 */
.author-section {
  display: flex;
  align-items: center;
  padding: 32rpx 24rpx 24rpx;
}

.author-avatar {
  width: 72rpx;
  height: 72rpx;
  border-radius: 50%;
  margin-right: 16rpx;
  flex-shrink: 0;
}

.author-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 6rpx;
}

.author-name {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
}

.author-time {
  font-size: 22rpx;
  color: #999;
}

/* 文字内容 - 紧跟用户信息 */
.content-text {
  padding: 0 24rpx 20rpx;
  font-size: 30rpx;
  color: #333;
  line-height: 1.7;
  white-space: pre-wrap;
  word-break: break-all;
}

/* 图片展示 - 紧跟文字，无分割 */
.content-images {
  padding: 0 24rpx 24rpx;
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.content-image {
  width: 100%;
  display: block;
  border-radius: 8rpx;
}

/* 商品区域 - 独立卡片 */
.product-section {
  margin: 32rpx 24rpx 0;
  padding: 24rpx;
  background: #f8f8f8;
  border-radius: 16rpx;
}

.section-title {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 16rpx;
  font-weight: 500;
}

.product-card {
  display: flex;
  align-items: center;
  gap: 16rpx;
  background: #fff;
  padding: 16rpx;
  border-radius: 12rpx;
}

.product-thumb {
  width: 120rpx;
  height: 120rpx;
  border-radius: 12rpx;
  flex-shrink: 0;
}

.product-info {
  flex: 1;
  min-width: 0;
}

.product-name {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 8rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.product-tip {
  font-size: 24rpx;
  color: #999;
}

.product-arrow {
  font-size: 40rpx;
  color: #ccc;
  flex-shrink: 0;
}

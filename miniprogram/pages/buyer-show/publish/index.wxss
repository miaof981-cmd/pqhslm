.publish-page {
  padding: 24rpx 24rpx 120rpx;
  background: #f9fbff;
  min-height: 100vh;
  box-sizing: border-box;
}

.intro-card {
  background: linear-gradient(135deg, #ffe4f3 0%, #dfefff 100%);
  border-radius: 24rpx;
  padding: 36rpx 40rpx;
  margin-bottom: 32rpx;
  box-shadow: 0 12rpx 32rpx rgba(168, 230, 207, 0.25);
}

.intro-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 16rpx;
}

.intro-desc {
  font-size: 26rpx;
  color: #666;
}

.product-card {
  display: flex;
  background: #fff;
  border-radius: 20rpx;
  padding: 24rpx;
  margin-bottom: 32rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.08);
}

.product-cover {
  width: 160rpx;
  height: 160rpx;
  border-radius: 18rpx;
  overflow: hidden;
  margin-right: 24rpx;
}

.product-cover image {
  width: 100%;
  height: 100%;
}

.product-info {
  flex: 1;
}

.product-label {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 12rpx;
}

.product-name {
  font-size: 30rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 12rpx;
}

.product-id {
  font-size: 24rpx;
  color: #999;
}

.upload-section,
.comment-section {
  background: #fff;
  border-radius: 20rpx;
  padding: 28rpx 24rpx 32rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.06);
}

.section-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 12rpx;
}

.section-sub {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 24rpx;
}

.image-grid {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}

.image-item {
  width: 204rpx;
  height: 204rpx;
  position: relative;
  border-radius: 18rpx;
  overflow: hidden;
  background: #f4f4f4;
}

.preview {
  width: 100%;
  height: 100%;
}

.remove {
  position: absolute;
  top: 12rpx;
  right: 12rpx;
  width: 44rpx;
  height: 44rpx;
  line-height: 44rpx;
  text-align: center;
  border-radius: 50%;
  background: rgba(0, 0, 0, 0.45);
  color: #fff;
  font-size: 28rpx;
}

.uploader {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  color: #999;
}

.uploader .plus {
  font-size: 50rpx;
  margin-bottom: 8rpx;
}

.uploader .tip {
  font-size: 24rpx;
}

.comment-input {
  width: 100%;
  min-height: 160rpx;
  padding: 24rpx;
  box-sizing: border-box;
  background: #f7f8fa;
  border-radius: 16rpx;
  font-size: 28rpx;
  color: #333;
}

.submit-btn {
  margin-top: 40rpx;
  background: #a8e6cf;
  color: #333;
  border-radius: 999rpx;
  height: 92rpx;
  line-height: 92rpx;
  font-size: 32rpx;
  border: none;
}

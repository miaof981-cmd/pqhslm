.order-success-container {
  min-height: 100vh;
  background: linear-gradient(180deg, #E6F9FF 0%, #F8F9FA 30%, #FFFFFF 60%);
  padding-bottom: 140rpx;
}

/* ===== 顶部成功状态 ===== */
.success-header {
  padding: 50rpx 0 30rpx;
  text-align: center;
}

.success-icon-wrapper {
  display: flex;
  justify-content: center;
  margin-bottom: 20rpx;
}

.success-icon {
  width: 100rpx;
  height: 100rpx;
  background: linear-gradient(135deg, #A8E6CF 0%, #88D4AB 100%);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 60rpx;
  color: white;
  font-weight: bold;
  box-shadow: 0 8rpx 24rpx rgba(168, 230, 207, 0.4);
  animation: success-bounce 0.6s ease-out;
}

@keyframes success-bounce {
  0% { transform: scale(0); }
  50% { transform: scale(1.1); }
  100% { transform: scale(1); }
}

.success-title {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
}

/* ===== 订单信息卡片 ===== */
.order-info-card {
  margin: 0 30rpx 30rpx;
  background: white;
  border-radius: 20rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
}

.card-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 24rpx;
  padding-bottom: 16rpx;
  border-bottom: 2rpx solid #F0F0F0;
}

.info-row {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 20rpx;
  line-height: 1.6;
}

.info-row:last-child {
  margin-bottom: 0;
}

.info-label {
  font-size: 26rpx;
  color: #666;
  flex-shrink: 0;
  width: 140rpx;
}

.info-value {
  flex: 1;
  font-size: 26rpx;
  color: #333;
  font-weight: 500;
  text-align: right;
  word-break: break-all;
}

.info-value-wrapper {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: flex-end;
  gap: 12rpx;
}

.info-value-wrapper .info-value {
  flex: 1;
  text-align: right;
  font-size: 24rpx;
}

.copy-btn {
  padding: 6rpx 16rpx;
  background: #E6F9FF;
  color: #4ECDC4;
  font-size: 22rpx;
  border-radius: 8rpx;
  flex-shrink: 0;
}

.info-row.total {
  margin-top: 16rpx;
  padding-top: 16rpx;
  border-top: 2rpx solid #F0F0F0;
}

.info-value.amount {
  font-size: 36rpx;
  font-weight: bold;
  color: #FF6B6B;
}

/* ===== 客服引导区域 ===== */
.service-guide-section {
  margin: 0 30rpx 20rpx;
  background: linear-gradient(135deg, #FFE6E6 0%, #FFF5E6 100%);
  border-radius: 20rpx;
  padding: 24rpx 30rpx;
  border: 4rpx solid #FF9800;
  animation: pulse-border 2s ease-in-out infinite;
}

@keyframes pulse-border {
  0%, 100% {
    border-color: #FF9800;
    box-shadow: 0 0 0 0 rgba(255, 152, 0, 0.4);
  }
  50% {
    border-color: #FF6B00;
    box-shadow: 0 0 0 10rpx rgba(255, 152, 0, 0.15);
  }
}

.guide-title {
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin-bottom: 12rpx;
}

.title-icon {
  width: 48rpx;
  height: 48rpx;
  background: #FF9800;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 36rpx;
  color: white;
  font-weight: bold;
  animation: shake 1s ease-in-out infinite;
}

@keyframes shake {
  0%, 100% { transform: rotate(0deg); }
  25% { transform: rotate(-10deg); }
  75% { transform: rotate(10deg); }
}

.title-text {
  font-size: 34rpx;
  font-weight: bold;
  color: #FF6B00;
}

.guide-content {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.guide-text {
  font-size: 26rpx;
  color: #FF6B00;
  line-height: 1.6;
}

.guide-text.highlight {
  font-size: 28rpx;
  font-weight: 500;
}

/* ===== 客服二维码 ===== */
.qr-section {
  margin: 0 30rpx 30rpx;
  background: white;
  border-radius: 24rpx;
  padding: 40rpx;
  box-shadow: 0 8rpx 32rpx rgba(78, 205, 196, 0.15);
  border: 3rpx solid #4ECDC4;
}

.qr-wrapper {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.qr-label {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  text-align: center;
  margin-bottom: 30rpx;
  position: relative;
}

.qr-label::after {
  content: '';
  position: absolute;
  bottom: -10rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 80rpx;
  height: 6rpx;
  background: linear-gradient(90deg, #4ECDC4, #88D4AB);
  border-radius: 3rpx;
}

.qr-image {
  width: 450rpx;
  height: 450rpx;
  border: 5rpx solid #4ECDC4;
  border-radius: 24rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 12rpx 40rpx rgba(78, 205, 196, 0.3);
  animation: qr-glow 2s ease-in-out infinite;
}

@keyframes qr-glow {
  0%, 100% {
    box-shadow: 0 12rpx 40rpx rgba(78, 205, 196, 0.3);
  }
  50% {
    box-shadow: 0 12rpx 40rpx rgba(78, 205, 196, 0.5);
  }
}

.qr-hint {
  font-size: 26rpx;
  color: #666;
  text-align: center;
  line-height: 1.6;
  background: #F0FFFE;
  padding: 16rpx 24rpx;
  border-radius: 12rpx;
  border: 2rpx dashed #4ECDC4;
}

/* ===== 温馨提示 ===== */
.warm-tips {
  margin: 0 30rpx 30rpx;
  background: white;
  border-radius: 20rpx;
  padding: 40rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
}

.tips-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 24rpx;
}

.tips-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.tip-item {
  font-size: 26rpx;
  color: #666;
  line-height: 1.6;
}

/* ===== 底部按钮 ===== */
.bottom-actions {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: white;
  padding: 24rpx 30rpx;
  box-shadow: 0 -4rpx 20rpx rgba(0, 0, 0, 0.05);
  display: flex;
  gap: 20rpx;
  z-index: 100;
}

.action-btn {
  flex: 1;
  height: 88rpx;
  border-radius: 44rpx;
  font-size: 28rpx;
  font-weight: 500;
  border: none;
  line-height: 88rpx;
}

.action-btn.secondary {
  background: #F5F5F5;
  color: #666;
}

.action-btn.primary {
  background: linear-gradient(135deg, #A8E6CF 0%, #88D4AB 100%);
  color: white;
  font-weight: bold;
}


.order-success-container {
  min-height: 100vh;
  background: linear-gradient(180deg, #E6F9FF 0%, #F8F9FA 40%, #FFFFFF 100%);
  padding-bottom: 140rpx;
}

/* ===== 顶部成功状态 ===== */
.success-header {
  padding: 80rpx 0 60rpx;
  text-align: center;
}

.success-icon-wrapper {
  display: flex;
  justify-content: center;
  margin-bottom: 30rpx;
}

.success-icon {
  width: 120rpx;
  height: 120rpx;
  background: linear-gradient(135deg, #A8E6CF 0%, #88D4AB 100%);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 72rpx;
  color: white;
  font-weight: bold;
  box-shadow: 0 8rpx 24rpx rgba(168, 230, 207, 0.4);
  animation: success-bounce 0.6s ease-out;
}

@keyframes success-bounce {
  0% { transform: scale(0); }
  50% { transform: scale(1.1); }
  100% { transform: scale(1); }
}

.success-title {
  font-size: 44rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 16rpx;
}

.success-desc {
  font-size: 28rpx;
  color: #999;
}

/* ===== 订单信息卡片 ===== */
.order-info-card {
  margin: 0 30rpx 30rpx;
  background: white;
  border-radius: 20rpx;
  padding: 40rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
}

.card-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 30rpx;
  padding-bottom: 20rpx;
  border-bottom: 2rpx solid #F0F0F0;
}

.info-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.info-row:last-child {
  margin-bottom: 0;
}

.info-label {
  font-size: 28rpx;
  color: #666;
}

.info-value {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.copy-btn {
  padding: 4rpx 16rpx;
  background: #E6F9FF;
  color: #4ECDC4;
  font-size: 24rpx;
  border-radius: 8rpx;
}

.info-row.total {
  margin-top: 20rpx;
  padding-top: 20rpx;
  border-top: 2rpx solid #F0F0F0;
}

.info-value.amount {
  font-size: 40rpx;
  font-weight: bold;
  color: #FF6B6B;
}

/* ===== 客服引导区域 ===== */
.service-guide-section {
  margin: 0 30rpx 30rpx;
  background: linear-gradient(135deg, #FFE6E6 0%, #FFF5E6 100%);
  border-radius: 20rpx;
  padding: 30rpx;
  border: 3rpx solid #FF9800;
  animation: pulse-border 2s ease-in-out infinite;
}

@keyframes pulse-border {
  0%, 100% {
    border-color: #FF9800;
    box-shadow: 0 0 0 0 rgba(255, 152, 0, 0.4);
  }
  50% {
    border-color: #FF6B00;
    box-shadow: 0 0 0 8rpx rgba(255, 152, 0, 0.1);
  }
}

.guide-title {
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin-bottom: 20rpx;
}

.title-icon {
  width: 44rpx;
  height: 44rpx;
  background: #FF9800;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  color: white;
  font-weight: bold;
}

.title-text {
  font-size: 32rpx;
  font-weight: bold;
  color: #FF6B00;
}

.guide-content {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.guide-text {
  font-size: 28rpx;
  color: #FF6B00;
  line-height: 1.6;
}

.guide-text.highlight {
  font-size: 32rpx;
  font-weight: bold;
}

/* ===== 客服二维码 ===== */
.qr-section {
  margin: 0 30rpx 30rpx;
  background: white;
  border-radius: 20rpx;
  padding: 40rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
}

.qr-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  text-align: center;
  margin-bottom: 30rpx;
}

.qr-wrapper {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 40rpx;
}

.qr-image {
  width: 400rpx;
  height: 400rpx;
  border: 4rpx solid #4ECDC4;
  border-radius: 20rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 8rpx 24rpx rgba(78, 205, 196, 0.2);
}

.qr-hint {
  font-size: 24rpx;
  color: #999;
  text-align: center;
  line-height: 1.6;
}

/* 步骤指引 */
.steps-container {
  display: flex;
  align-items: center;
  justify-content: space-between;
  background: #F8F9FA;
  border-radius: 16rpx;
  padding: 30rpx 20rpx;
}

.step-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 12rpx;
}

.step-number {
  width: 56rpx;
  height: 56rpx;
  background: linear-gradient(135deg, #4ECDC4 0%, #44BDB5 100%);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  color: white;
  font-weight: bold;
}

.step-text {
  font-size: 22rpx;
  color: #666;
  text-align: center;
  line-height: 1.4;
}

.step-divider {
  font-size: 32rpx;
  color: #4ECDC4;
  font-weight: bold;
  margin: 0 10rpx;
}

/* ===== 温馨提示 ===== */
.warm-tips {
  margin: 0 30rpx 30rpx;
  background: white;
  border-radius: 20rpx;
  padding: 40rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
}

.tips-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 24rpx;
}

.tips-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.tip-item {
  font-size: 26rpx;
  color: #666;
  line-height: 1.6;
}

/* ===== 底部按钮 ===== */
.bottom-actions {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: white;
  padding: 24rpx 30rpx;
  box-shadow: 0 -4rpx 20rpx rgba(0, 0, 0, 0.05);
  display: flex;
  gap: 20rpx;
  z-index: 100;
}

.action-btn {
  flex: 1;
  height: 88rpx;
  border-radius: 44rpx;
  font-size: 28rpx;
  font-weight: 500;
  border: none;
  line-height: 88rpx;
}

.action-btn.secondary {
  background: #F5F5F5;
  color: #666;
}

.action-btn.primary {
  background: linear-gradient(135deg, #A8E6CF 0%, #88D4AB 100%);
  color: white;
  font-weight: bold;
}


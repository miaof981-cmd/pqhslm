/* 引入订单进度条通用样式 */
@import "../../styles/order-progress.wxss";

.service-container {
  min-height: 100vh;
  background: linear-gradient(180deg, #E3F2FD 0%, #F5F9FF 50%, #FAFAFA 100%);
  padding-bottom: 20rpx;
}

/* 精简顶栏 */
.compact-header {
  background: linear-gradient(135deg, #4FC3F7 0%, #29B6F6 100%);
  padding: 30rpx;
  display: flex;
  align-items: center;
  gap: 24rpx;
}

.header-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  border: 4rpx solid rgba(255, 255, 255, 0.5);
  flex-shrink: 0;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.header-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 6rpx;
}

.header-title {
  font-size: 32rpx;
  font-weight: 700;
  color: white;
  line-height: 1.2;
}

.header-subtitle {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.9);
  line-height: 1.2;
}

.header-actions {
  display: flex;
  gap: 10rpx;
}

.mini-action {
  padding: 8rpx 16rpx;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 20rpx;
  font-size: 22rpx;
  color: white;
  backdrop-filter: blur(10rpx);
}

.mini-action:active {
  background: rgba(255, 255, 255, 0.3);
}

/* 精简待办统计 */
.compact-stats {
  margin: 24rpx 30rpx 20rpx;
  display: flex;
  gap: 15rpx;
}

.compact-stat {
  flex: 1;
  background: rgba(255, 255, 255, 0.95);
  border-radius: 12rpx;
  padding: 24rpx 15rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
  box-shadow: 0 4rpx 12rpx rgba(79, 195, 247, 0.1);
  backdrop-filter: blur(10rpx);
}

.compact-stat:active {
  opacity: 0.7;
}

.stat-num {
  font-size: 36rpx;
  font-weight: 700;
  color: #4FC3F7;
  line-height: 1;
}

.stat-num.urgent {
  color: #FF5252;
}

.stat-text {
  font-size: 22rpx;
  color: #999;
  line-height: 1;
}

/* 搜索栏 */
.search-bar {
  margin: 0 30rpx 20rpx;
}

.search-input-wrapper {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 12rpx;
  padding: 0 24rpx;
  display: flex;
  align-items: center;
  gap: 12rpx;
  box-shadow: 0 4rpx 12rpx rgba(79, 195, 247, 0.1);
  backdrop-filter: blur(10rpx);
}

.search-icon {
  width: 32rpx;
  height: 32rpx;
  flex-shrink: 0;
  position: relative;
}

.search-icon::before {
  content: '';
  position: absolute;
  top: 4rpx;
  left: 4rpx;
  width: 16rpx;
  height: 16rpx;
  border: 3rpx solid #4FC3F7;
  border-radius: 50%;
}

.search-icon::after {
  content: '';
  position: absolute;
  bottom: 6rpx;
  right: 6rpx;
  width: 10rpx;
  height: 3rpx;
  background: #4FC3F7;
  transform: rotate(-45deg);
  border-radius: 2rpx;
}

.search-input {
  flex: 1;
  height: 70rpx;
  font-size: 26rpx;
  color: #333;
}

.clear-icon {
  width: 36rpx;
  height: 36rpx;
  background: #E0E0E0;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  color: white;
  line-height: 1;
  flex-shrink: 0;
}

.clear-icon:active {
  background: #BDBDBD;
}

/* 筛选栏 */
.filter-bar {
  margin: 0 30rpx 20rpx;
  padding: 8rpx;
  background: rgba(255, 255, 255, 0.95);
  border-radius: 12rpx;
  display: flex;
  gap: 10rpx;
  box-shadow: 0 4rpx 12rpx rgba(79, 195, 247, 0.1);
  backdrop-filter: blur(10rpx);
}

.filter-item {
  flex: 1;
  padding: 10rpx 0;
  text-align: center;
  font-size: 24rpx;
  color: #666;
  border-radius: 8rpx;
  transition: all 0.3s;
}

.filter-item.active {
  background: linear-gradient(135deg, #4FC3F7 0%, #29B6F6 100%);
  color: white;
  font-weight: 600;
}

/* 订单列表 */
.order-list {
  padding: 0 30rpx;
}

.empty-tip {
  text-align: center;
  padding: 80rpx 0;
  color: #999;
  font-size: 26rpx;
}

.order-card {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 12rpx;
  padding: 20rpx;
  margin-bottom: 15rpx;
  display: flex;
  gap: 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(79, 195, 247, 0.08);
  backdrop-filter: blur(10rpx);
}

.order-card:active {
  opacity: 0.7;
}

.order-left {
  flex-shrink: 0;
}

.order-image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 8rpx;
  background: #F5F5F5;
}

.order-main {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  min-width: 0;
}

.order-name {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  line-height: 1.3;
}

.order-meta {
  display: flex;
  flex-direction: column;
  gap: 6rpx;
}

.order-buyer,
.order-time {
  font-size: 22rpx;
  color: #999;
  line-height: 1;
}

.order-bottom {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.order-price {
  font-size: 32rpx;
  font-weight: 700;
  color: #4FC3F7;
  line-height: 1;
}

.order-status {
  padding: 6rpx 16rpx;
  border-radius: 20rpx;
  font-size: 22rpx;
  font-weight: 500;
  line-height: 1;
}

.order-status.created {
  background: #FFF3E0;
  color: #FB8C00;
}

.order-status.processing {
  background: #E8F5E9;
  color: #4CAF50;
}

.order-status.completed {
  background: #E3F2FD;
  color: #2196F3;
}

/* ================ 新版订单卡片样式 ================ */
.order-card-new {
  background: white;
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.08);
  margin-bottom: 20rpx;
}

.order-card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 24rpx;
  background: linear-gradient(135deg, #F8F9FA 0%, #F0F4F8 100%);
  border-bottom: 2rpx solid #E8EEF3;
}

.order-no-info {
  display: flex;
  flex-direction: column;
  gap: 4rpx;
}

.order-no-label {
  font-size: 22rpx;
  color: #999;
}

.order-no-value {
  font-size: 26rpx;
  font-weight: 600;
  color: #333;
  font-family: 'Courier New', monospace;
}

.order-status-badge {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  gap: 6rpx;
}

.order-status-badge .status-text {
  font-size: 24rpx;
  font-weight: 600;
  padding: 6rpx 16rpx;
  border-radius: 20rpx;
}

.order-status-badge.status-processing .status-text {
  background: linear-gradient(135deg, #D1ECF1 0%, #BEE5EB 100%);
  color: #0C5460;
}

.order-status-badge.status-waitingConfirm .status-text {
  background: linear-gradient(135deg, #FFF3CD 0%, #FFE69C 100%);
  color: #856404;
}

.order-status-badge.status-completed .status-text {
  background: linear-gradient(135deg, #D4EDDA 0%, #C3E6CB 100%);
  color: #155724;
}

.order-status-badge.status-refunded .status-text {
  background: linear-gradient(135deg, #F8D7DA 0%, #F5C6CB 100%);
  color: #721C24;
}

.business-status {
  font-size: 20rpx;
  color: #666;
  padding: 4rpx 10rpx;
  background: rgba(255,255,255,0.8);
  border-radius: 10rpx;
}

.order-card-content {
  display: flex;
  gap: 20rpx;
  padding: 24rpx;
}

.product-image-new {
  width: 140rpx;
  height: 140rpx;
  border-radius: 16rpx;
  background: #F5F5F5;
  flex-shrink: 0;
  object-fit: cover;
}

.order-info-new {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.product-name-new {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
  line-height: 1.4;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.order-meta-new {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.meta-text {
  font-size: 24rpx;
  color: #666;
}

.meta-text.deadline {
  color: #FF9800;
  font-weight: 500;
}

.meta-text.deadline.overdue {
  color: #FF6B6B;
  font-weight: 700;
}

.order-card-actions {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 24rpx;
  background: #FAFBFC;
  border-top: 2rpx solid #E8EEF3;
}

.price-text {
  font-size: 32rpx;
  font-weight: 700;
  color: #E53935;
}

.action-buttons {
  display: flex;
  gap: 10rpx;
}

.action-btn {
  padding: 10rpx 20rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  font-weight: 500;
  border: none;
  line-height: 1.5;
}

.refund-btn {
  background: linear-gradient(135deg, #FFB6B6 0%, #FFC9C9 100%);
  color: #721C24;
}

.detail-btn {
  background: white;
  color: #666;
  border: 2rpx solid #E0E0E0;
}

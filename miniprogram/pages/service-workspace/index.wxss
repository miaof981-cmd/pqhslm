.service-container {
  min-height: 100vh;
  background: linear-gradient(180deg, #E3F2FD 0%, #F5F9FF 50%, #FAFAFA 100%);
  padding-bottom: 20rpx;
}

/* 精简顶栏 */
.compact-header {
  background: linear-gradient(135deg, #4FC3F7 0%, #29B6F6 100%);
  padding: 30rpx;
  display: flex;
  align-items: center;
  gap: 24rpx;
}

.header-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  border: 4rpx solid rgba(255, 255, 255, 0.5);
  flex-shrink: 0;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.header-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 6rpx;
}

.header-title {
  font-size: 32rpx;
  font-weight: 700;
  color: white;
  line-height: 1.2;
}

.header-subtitle {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.9);
  line-height: 1.2;
}

.header-actions {
  display: flex;
  gap: 10rpx;
}

.mini-action {
  padding: 8rpx 16rpx;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 20rpx;
  font-size: 22rpx;
  color: white;
  backdrop-filter: blur(10rpx);
}

.mini-action:active {
  background: rgba(255, 255, 255, 0.3);
}

/* 精简待办统计 */
.compact-stats {
  margin: 24rpx 30rpx 20rpx;
  display: flex;
  gap: 15rpx;
}

.compact-stat {
  flex: 1;
  background: rgba(255, 255, 255, 0.95);
  border-radius: 12rpx;
  padding: 24rpx 15rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
  box-shadow: 0 4rpx 12rpx rgba(79, 195, 247, 0.1);
  backdrop-filter: blur(10rpx);
}

.compact-stat:active {
  opacity: 0.7;
}

.stat-num {
  font-size: 36rpx;
  font-weight: 700;
  color: #4FC3F7;
  line-height: 1;
}

.stat-num.urgent {
  color: #FF5252;
}

.stat-text {
  font-size: 22rpx;
  color: #999;
  line-height: 1;
}

/* 筛选栏 */
.filter-bar {
  margin: 0 30rpx 20rpx;
  padding: 8rpx;
  background: rgba(255, 255, 255, 0.95);
  border-radius: 12rpx;
  display: flex;
  gap: 10rpx;
  box-shadow: 0 4rpx 12rpx rgba(79, 195, 247, 0.1);
  backdrop-filter: blur(10rpx);
}

.filter-item {
  flex: 1;
  padding: 10rpx 0;
  text-align: center;
  font-size: 24rpx;
  color: #666;
  border-radius: 8rpx;
  transition: all 0.3s;
}

.filter-item.active {
  background: linear-gradient(135deg, #4FC3F7 0%, #29B6F6 100%);
  color: white;
  font-weight: 600;
}

/* 订单列表 */
.order-list {
  padding: 0 30rpx;
}

.empty-tip {
  text-align: center;
  padding: 80rpx 0;
  color: #999;
  font-size: 26rpx;
}

.order-card {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 12rpx;
  padding: 20rpx;
  margin-bottom: 15rpx;
  display: flex;
  gap: 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(79, 195, 247, 0.08);
  backdrop-filter: blur(10rpx);
}

.order-card:active {
  opacity: 0.7;
}

.order-left {
  flex-shrink: 0;
}

.order-image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 8rpx;
  background: #F5F5F5;
}

.order-main {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  min-width: 0;
}

.order-name {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  line-height: 1.3;
}

.order-meta {
  display: flex;
  flex-direction: column;
  gap: 6rpx;
}

.order-buyer,
.order-time {
  font-size: 22rpx;
  color: #999;
  line-height: 1;
}

.order-bottom {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.order-price {
  font-size: 32rpx;
  font-weight: 700;
  color: #4FC3F7;
  line-height: 1;
}

.order-status {
  padding: 6rpx 16rpx;
  border-radius: 20rpx;
  font-size: 22rpx;
  font-weight: 500;
  line-height: 1;
}

.order-status.created {
  background: #FFF3E0;
  color: #FB8C00;
}

.order-status.processing {
  background: #E8F5E9;
  color: #4CAF50;
}

.order-status.completed {
  background: #E3F2FD;
  color: #2196F3;
}

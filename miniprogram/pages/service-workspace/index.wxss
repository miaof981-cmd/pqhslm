.service-container {
  min-height: 100vh;
  background: linear-gradient(180deg, #F0F9FF 0%, #F8FAFB 100%);
  padding-bottom: 40rpx;
}

/* 欢迎卡片 */
.welcome-card {
  margin: 30rpx;
  padding: 40rpx 30rpx;
  background: linear-gradient(135deg, #4FC3F7 0%, #29B6F6 100%);
  border-radius: 24rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  box-shadow: 0 8rpx 24rpx rgba(79, 195, 247, 0.25);
}

.welcome-content {
  flex: 1;
}

.welcome-title {
  display: block;
  font-size: 36rpx;
  font-weight: 700;
  color: white;
  margin-bottom: 10rpx;
}

.welcome-subtitle {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.9);
}

.service-avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  border: 4rpx solid rgba(255, 255, 255, 0.3);
}

/* 统计卡片区域 */
.stats-section {
  margin: 0 30rpx 30rpx;
}

.section-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 20rpx;
  display: block;
}

.stats-grid {
  display: flex;
  gap: 20rpx;
}

.stat-card {
  flex: 1;
  background: white;
  border-radius: 20rpx;
  padding: 30rpx 20rpx;
  text-align: center;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.06);
  transition: all 0.3s;
}

.stat-card:active {
  transform: scale(0.95);
}

.stat-value {
  font-size: 48rpx;
  font-weight: 700;
  margin-bottom: 10rpx;
  display: block;
}

.stat-value.pending {
  color: #FFA726;
}

.stat-value.processing {
  color: #66BB6A;
}

.stat-value.urgent {
  color: #EF5350;
}

.stat-label {
  font-size: 24rpx;
  color: #666;
}

/* 订单列表区域 */
.orders-section {
  margin: 0 30rpx;
}

.section-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 20rpx;
}

.filter-tabs {
  display: flex;
  gap: 10rpx;
}

.filter-tab {
  padding: 8rpx 20rpx;
  font-size: 24rpx;
  color: #666;
  background: white;
  border-radius: 30rpx;
  transition: all 0.3s;
}

.filter-tab.active {
  background: linear-gradient(135deg, #4FC3F7 0%, #29B6F6 100%);
  color: white;
  font-weight: 600;
}

.order-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.empty-tip {
  text-align: center;
  padding: 80rpx 0;
  color: #999;
  font-size: 28rpx;
}

/* 订单卡片 */
.order-card {
  background: white;
  border-radius: 20rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.06);
}

.order-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 20rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #F0F0F0;
}

.order-id {
  font-size: 24rpx;
  color: #999;
}

.order-status {
  font-size: 24rpx;
  padding: 6rpx 16rpx;
  border-radius: 20rpx;
  font-weight: 600;
}

.order-status.created {
  background: #FFF3E0;
  color: #FB8C00;
}

.order-status.processing {
  background: #E8F5E9;
  color: #4CAF50;
}

.order-status.completed {
  background: #E3F2FD;
  color: #2196F3;
}

.order-body {
  display: flex;
  gap: 20rpx;
  margin-bottom: 20rpx;
}

.product-image {
  width: 140rpx;
  height: 140rpx;
  border-radius: 12rpx;
  background: #F5F5F5;
}

.order-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.product-name {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.order-time,
.buyer-info {
  font-size: 24rpx;
  color: #999;
}

.order-footer {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.order-price {
  font-size: 32rpx;
  font-weight: 700;
  color: #4FC3F7;
}

.order-actions {
  display: flex;
  gap: 10rpx;
}

.action-btn {
  padding: 12rpx 28rpx;
  font-size: 24rpx;
  border-radius: 30rpx;
  background: #F5F5F5;
  color: #666;
  border: none;
  line-height: 1;
}

.action-btn::after {
  border: none;
}

.action-btn.primary {
  background: linear-gradient(135deg, #4FC3F7 0%, #29B6F6 100%);
  color: white;
}

.action-btn:active {
  opacity: 0.8;
}

/* 快捷功能（装饰+缓解视觉疲劳） */
.quick-actions {
  margin: 20rpx 30rpx;
  display: flex;
  gap: 15rpx;
}

.action-item {
  flex: 1;
  background: rgba(255, 255, 255, 0.7);
  border-radius: 16rpx;
  padding: 20rpx 15rpx;
  text-align: center;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
}

.action-item:active {
  opacity: 0.7;
}

.action-icon {
  width: 48rpx;
  height: 48rpx;
  margin: 0 auto 10rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
}

.action-icon.stats {
  background: linear-gradient(135deg, #B3E5FC 0%, #81D4FA 100%);
}

.action-icon.stats::before {
  content: '';
  width: 5rpx;
  height: 16rpx;
  background: white;
  position: absolute;
  left: 14rpx;
  bottom: 12rpx;
}

.action-icon.stats::after {
  content: '';
  width: 5rpx;
  height: 24rpx;
  background: white;
  position: absolute;
  right: 14rpx;
  bottom: 12rpx;
}

.action-icon.withdraw {
  background: linear-gradient(135deg, #FFECB3 0%, #FFE082 100%);
}

.action-icon.withdraw::before {
  content: '¥';
  font-size: 24rpx;
  font-weight: 700;
  color: white;
}

.action-label {
  font-size: 22rpx;
  color: #888;
}


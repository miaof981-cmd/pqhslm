.diagnosis-page {
  min-height: 100vh;
  background: #F5F5F5;
  padding: 20rpx 30rpx 200rpx;
}

.page-header {
  background: linear-gradient(135deg, #667EEA 0%, #764BA2 100%);
  padding: 40rpx 30rpx;
  margin: -20rpx -30rpx 30rpx;
  text-align: center;
  color: white;
}

.page-title {
  display: block;
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.page-desc {
  display: block;
  font-size: 24rpx;
  opacity: 0.9;
}

.loading-box {
  text-align: center;
  padding: 100rpx 0;
  color: #999;
}

.result-card {
  background: white;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
}

.card-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 24rpx;
  padding-bottom: 16rpx;
  border-bottom: 2rpx solid #F0F0F0;
}

/* 统计对比 */
.stat-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 16rpx 0;
  border-bottom: 1rpx solid #F5F5F5;
}

.stat-row:last-child {
  border-bottom: none;
}

.stat-label {
  font-size: 28rpx;
  color: #666;
}

.stat-value {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.stat-value.highlight {
  color: #667EEA;
  font-size: 36rpx;
}

.stat-value.warning {
  color: #FF6B6B;
}

/* 状态列表 */
.status-list {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.status-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 12rpx 20rpx;
  background: #F8F9FA;
  border-radius: 8rpx;
}

.status-label {
  font-size: 26rpx;
  color: #666;
}

.status-count {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
}

/* 数据源列表 */
.source-list {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
  margin-bottom: 20rpx;
}

.source-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 12rpx 20rpx;
  background: #F8F9FA;
  border-radius: 8rpx;
}

.source-name {
  font-size: 26rpx;
  color: #666;
  font-family: monospace;
}

.source-count {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
}

.source-count.highlight {
  color: #667EEA;
  font-size: 32rpx;
}

.warning-box {
  display: flex;
  align-items: center;
  gap: 12rpx;
  padding: 20rpx;
  background: #FFF3CD;
  border: 2rpx solid #FFD700;
  border-radius: 12rpx;
}

.warning-icon {
  font-size: 32rpx;
}

.warning-text {
  font-size: 26rpx;
  color: #856404;
  font-weight: 500;
}

/* 订单列表 */
.order-item {
  padding: 20rpx;
  background: #F8F9FA;
  border-radius: 12rpx;
  margin-bottom: 16rpx;
  border-left: 6rpx solid #FF6B6B;
}

.order-item:last-child {
  margin-bottom: 0;
}

.order-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 12rpx;
}

.order-id {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
}

.order-status {
  padding: 6rpx 16rpx;
  background: #667EEA;
  color: white;
  font-size: 22rpx;
  border-radius: 20rpx;
}

.order-status.status-unpaid {
  background: #FF9800;
}

.order-status.status-inProgress {
  background: #2196F3;
}

.order-info {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.info-text {
  font-size: 24rpx;
  color: #666;
}

/* 原因列表 */
.reason-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.reason-item {
  display: flex;
  align-items: flex-start;
  gap: 12rpx;
  padding: 16rpx;
  background: #FFF3CD;
  border-radius: 12rpx;
}

.reason-item.success {
  background: #D4EDDA;
}

.reason-icon {
  font-size: 28rpx;
  flex-shrink: 0;
}

.reason-text {
  font-size: 26rpx;
  color: #333;
  line-height: 1.6;
}

/* 操作列表 */
.action-list {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.action-text {
  font-size: 26rpx;
  color: #666;
  line-height: 1.8;
  padding-left: 20rpx;
}

/* 底部按钮 */
.button-group {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  display: flex;
  gap: 20rpx;
  padding: 20rpx 30rpx;
  background: white;
  box-shadow: 0 -2rpx 12rpx rgba(0, 0, 0, 0.1);
}

.btn-primary,
.btn-secondary {
  flex: 1;
  height: 88rpx;
  border-radius: 12rpx;
  font-size: 32rpx;
  font-weight: 500;
}

.btn-primary {
  background: linear-gradient(135deg, #667EEA 0%, #764BA2 100%);
  color: white;
}

.btn-secondary {
  background: white;
  color: #667EEA;
  border: 2rpx solid #667EEA;
}

.btn-primary::after,
.btn-secondary::after {
  border: none;
}


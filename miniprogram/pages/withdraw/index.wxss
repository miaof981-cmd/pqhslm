page {
  background: linear-gradient(180deg, #A8E6CF 0%, #E6FFEB 100%);
  min-height: 100vh;
}

.withdraw-container {
  padding: 20rpx 30rpx 120rpx;
}

/* 余额卡片 */
.balance-card {
  background: linear-gradient(135deg, #66BB6A 0%, #4CAF50 100%);
  border-radius: 24rpx;
  padding: 48rpx 40rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 8rpx 24rpx rgba(102, 187, 106, 0.4);
}

.balance-info {
  text-align: center;
}

.balance-label {
  display: block;
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.9);
  margin-bottom: 16rpx;
}

.balance-amount {
  display: flex;
  align-items: baseline;
  justify-content: center;
  margin-bottom: 12rpx;
}

.balance-symbol {
  font-size: 48rpx;
  color: #fff;
  font-weight: 700;
  margin-right: 8rpx;
}

.balance-value {
  font-size: 80rpx;
  color: #fff;
  font-weight: 800;
  line-height: 1;
}

.balance-hint {
  font-size: 22rpx;
  color: rgba(255, 255, 255, 0.8);
}

/* 通用卡片 */
.section-card {
  background: #fff;
  border-radius: 24rpx;
  padding: 32rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 16rpx rgba(102, 187, 106, 0.08);
}

.section-title {
  font-size: 30rpx;
  font-weight: 700;
  color: #2D5C3F;
  margin-bottom: 24rpx;
}

/* 金额输入 */
.input-row {
  display: flex;
  align-items: center;
  padding: 24rpx 0;
  border-bottom: 2rpx solid #E0E0E0;
  margin-bottom: 24rpx;
}

.input-symbol {
  font-size: 48rpx;
  color: #66BB6A;
  font-weight: 700;
  margin-right: 16rpx;
}

.amount-input {
  flex: 1;
  font-size: 48rpx;
  color: #333;
  font-weight: 700;
}

.amount-input::placeholder {
  color: #BDBDBD;
  font-size: 32rpx;
  font-weight: 400;
}

.quick-amounts {
  display: flex;
  gap: 16rpx;
  flex-wrap: wrap;
}

.quick-amount-btn {
  flex: 1;
  min-width: 140rpx;
  padding: 16rpx 24rpx;
  text-align: center;
  background: #F5F5F5;
  border-radius: 12rpx;
  font-size: 26rpx;
  color: #666;
  font-weight: 500;
  transition: all 0.2s;
}

.quick-amount-btn:active {
  background: #E0E0E0;
}

.quick-amount-btn.all {
  background: linear-gradient(135deg, #E8F5E9 0%, #C8E6C9 100%);
  color: #66BB6A;
  font-weight: 600;
}

/* 提现方式 */
.withdraw-methods {
  display: flex;
  gap: 20rpx;
}

.method-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 32rpx 20rpx;
  background: #F5F5F5;
  border-radius: 16rpx;
  border: 3rpx solid transparent;
  position: relative;
  transition: all 0.2s;
}

.method-item.selected {
  background: #E8F5E9;
  border-color: #66BB6A;
}

.method-icon {
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  margin-bottom: 16rpx;
  position: relative;
}

.wechat-icon {
  background: linear-gradient(135deg, #B3E5FC 0%, #81D4FA 100%);
}

.wechat-icon::before {
  content: 'W';
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  color: #fff;
  font-size: 36rpx;
  font-weight: 700;
}

.alipay-icon {
  background: linear-gradient(135deg, #B3E5FC 0%, #4FC3F7 100%);
}

.alipay-icon::before {
  content: 'A';
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  color: #fff;
  font-size: 36rpx;
  font-weight: 700;
}

.method-name {
  font-size: 26rpx;
  color: #666;
}

.method-item.selected .method-name {
  color: #66BB6A;
  font-weight: 600;
}

.check-icon {
  position: absolute;
  top: 16rpx;
  right: 16rpx;
  width: 32rpx;
  height: 32rpx;
  border-radius: 50%;
  border: 2rpx solid #E0E0E0;
  transition: all 0.2s;
}

.method-item.selected .check-icon {
  background: #66BB6A;
  border-color: #66BB6A;
}

.method-item.selected .check-icon::after {
  content: '';
  position: absolute;
  width: 10rpx;
  height: 18rpx;
  top: 4rpx;
  left: 9rpx;
  border: 3rpx solid #fff;
  border-top: none;
  border-left: none;
  transform: rotate(45deg);
}

/* 提现说明 */
.tips-card {
  background: #FFF9C4;
  border-radius: 20rpx;
  padding: 28rpx 32rpx;
  margin-bottom: 30rpx;
}

.tips-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #F57C00;
  margin-bottom: 16rpx;
}

.tip-item {
  display: block;
  font-size: 24rpx;
  color: #666;
  line-height: 2;
}

/* 提现记录 */
.section-title-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.view-all {
  font-size: 24rpx;
  color: #66BB6A;
}

.empty-records {
  text-align: center;
  padding: 60rpx 0;
  font-size: 26rpx;
  color: #999;
}

.records-preview {
  background: #fff;
  border-radius: 20rpx;
  padding: 16rpx 32rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 16rpx rgba(102, 187, 106, 0.08);
}

.record-item-simple {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx 0;
  border-bottom: 1rpx solid #F0F0F0;
}

.record-item-simple:last-child {
  border-bottom: none;
}

.record-left {
  flex: 1;
}

.record-amount {
  display: block;
  font-size: 32rpx;
  color: #333;
  font-weight: 700;
  margin-bottom: 8rpx;
}

.record-time {
  display: block;
  font-size: 22rpx;
  color: #999;
}

.record-status {
  font-size: 24rpx;
  padding: 8rpx 20rpx;
  border-radius: 20rpx;
}

.record-status.status-pending {
  background: #FFF3E0;
  color: #F57C00;
}

.record-status.status-success {
  background: #E8F5E9;
  color: #66BB6A;
}

.record-status.status-failed {
  background: #FFEBEE;
  color: #E57373;
}

/* 提现按钮 */
.withdraw-btn {
  position: fixed;
  bottom: 40rpx;
  left: 30rpx;
  right: 30rpx;
  height: 96rpx;
  background: linear-gradient(135deg, #66BB6A 0%, #4CAF50 100%);
  border-radius: 48rpx;
  color: #fff;
  font-size: 32rpx;
  font-weight: 700;
  border: none;
  box-shadow: 0 8rpx 24rpx rgba(102, 187, 106, 0.4);
}

.withdraw-btn:active {
  opacity: 0.9;
}


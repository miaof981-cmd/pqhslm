/* üéØ ÊèêÁé∞ËÆ∞ÂΩïÂºπÁ™ó */
.records-modal-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.6);
  display: flex;
  align-items: flex-end;
  z-index: 9999;
}

.records-modal-content {
  width: 100%;
  max-height: 80vh;
  background: #FFFFFF;
  border-radius: 32rpx 32rpx 0 0;
  display: flex;
  flex-direction: column;
}

.records-modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 32rpx;
  border-bottom: 1rpx solid #F0F0F0;
  flex-shrink: 0;
}

.records-modal-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.records-modal-close {
  font-size: 48rpx;
  color: #999;
  line-height: 1;
  padding: 0 8rpx;
}

.records-modal-body {
  flex: 1;
  overflow-y: auto;
  padding: 24rpx;
}

.records-empty {
  padding: 120rpx 0;
  text-align: center;
}

.records-empty-icon {
  display: block;
  font-size: 80rpx;
  margin-bottom: 24rpx;
}

.records-empty-text {
  font-size: 28rpx;
  color: #999;
}

.records-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.records-item {
  background: #FAFAFA;
  border-radius: 16rpx;
  padding: 24rpx;
  border-left: 4rpx solid #E0E0E0;
}

.records-item.status-success {
  background: linear-gradient(90deg, #E8F5E9 0%, #D7F1D9 100%);
  border-left-color: #4CAF50;
}

.records-item.status-pending {
  background: linear-gradient(90deg, #FFF3E0 0%, #FFE0B2 100%);
  border-left-color: #FF9800;
}

.records-item.status-failed {
  background: linear-gradient(90deg, #FFEBEE 0%, #FFCDD2 100%);
  border-left-color: #F44336;
}

.records-item-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.records-item-amount {
  font-size: 36rpx;
  font-weight: bold;
  color: #FF5722;
}

.records-item-status {
  padding: 6rpx 16rpx;
  border-radius: 12rpx;
  font-size: 24rpx;
  background: rgba(0, 0, 0, 0.05);
  color: #666;
}

.status-success .records-item-status {
  background: #4CAF50;
  color: #FFFFFF;
}

.status-pending .records-item-status {
  background: #FF9800;
  color: #FFFFFF;
}

.status-failed .records-item-status {
  background: #F44336;
  color: #FFFFFF;
}

.records-item-info {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.records-info-line {
  font-size: 24rpx;
  color: #666;
}

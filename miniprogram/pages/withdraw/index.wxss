}

.summary-value {
  font-size: 28rpx;
  font-weight: 600;
  color: #2E7D32;
}

.summary-divider {
  width: 1rpx;
  background: rgba(110,150,120,0.25);
  margin: 12rpx 0;
}

.balance-hint {
  display: block;
  font-size: 24rpx;
  color: #999;
}


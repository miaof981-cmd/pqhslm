page {
  background: linear-gradient(180deg, #E8F5E9 0%, #F1F8E9 100%);
  min-height: 100vh;
}

.withdraw-container {
  padding: 30rpx;
}

/* 余额卡片 - 简约版 */
.balance-card {
  background: #fff;
  border-radius: 16rpx;
  padding: 50rpx 40rpx;
  margin-bottom: 30rpx;
  text-align: center;
}

.balance-label {
  display: block;
  font-size: 26rpx;
  color: #666;
  margin-bottom: 20rpx;
}

.balance-amount {
  display: flex;
  align-items: baseline;
  justify-content: center;
  margin-bottom: 16rpx;
}

.balance-amount .symbol {
  font-size: 40rpx;
  color: #333;
  margin-right: 8rpx;
}

.balance-amount .value {
  font-size: 72rpx;
  font-weight: 700;
  color: #333;
  line-height: 1;
}

.balance-hint {
  display: block;
  font-size: 24rpx;
  color: #999;
}

/* 提现金额 */
.input-section, .verify-section, .bank-section {
  background: #fff;
  border-radius: 16rpx;
  padding: 40rpx;
  margin-bottom: 30rpx;
}

.section-label {
  font-size: 30rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 24rpx;
}

.amount-input-row {
  display: flex;
  align-items: center;
  padding: 24rpx 0;
  border-bottom: 2rpx solid #E0E0E0;
  margin-bottom: 24rpx;
}

.input-symbol {
  font-size: 40rpx;
  color: #333;
  margin-right: 12rpx;
}

.amount-input {
  flex: 1;
  font-size: 48rpx;
  font-weight: 600;
  color: #333;
}

.quick-select {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.quick-btn {
  padding: 16rpx 32rpx;
  background: #F5F5F5;
  border-radius: 8rpx;
  font-size: 26rpx;
  color: #666;
}

/* 输入项 */
.input-item {
  display: flex;
  align-items: center;
  padding: 24rpx 0;
  border-bottom: 1rpx solid #F0F0F0;
}

.input-item:last-child {
  border-bottom: none;
}

.item-label {
  width: 160rpx;
  font-size: 28rpx;
  color: #666;
  flex-shrink: 0;
}

.item-input {
  flex: 1;
  font-size: 28rpx;
  color: #333;
  text-align: right;
}

/* 提示信息 */
.tips-section {
  background: #F9F9F9;
  border-radius: 12rpx;
  padding: 32rpx;
  margin-bottom: 30rpx;
}

.tip-line {
  display: block;
  font-size: 24rpx;
  color: #999;
  line-height: 2;
}

/* 提现记录 */
.records-section {
  background: #fff;
  border-radius: 16rpx;
  padding: 40rpx;
  margin-bottom: 30rpx;
}

.record-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx 0;
  border-bottom: 1rpx solid #F0F0F0;
}

.record-item:last-child {
  border-bottom: none;
}

.record-left {
  display: flex;
  flex-direction: column;
}

.record-amount {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 8rpx;
}

.record-time {
  font-size: 24rpx;
  color: #999;
}

.record-status {
  font-size: 26rpx;
  padding: 8rpx 20rpx;
  border-radius: 6rpx;
}

.status-pending {
  background: #FFF3E0;
  color: #F57C00;
}

.status-success {
  background: #E8F5E9;
  color: #66BB6A;
}

.status-failed {
  background: #FFEBEE;
  color: #E57373;
}

/* 提现按钮 */
.submit-btn {
  width: 100%;
  height: 96rpx;
  background: linear-gradient(135deg, #66BB6A 0%, #81C784 100%);
  border-radius: 12rpx;
  font-size: 32rpx;
  font-weight: 600;
  color: #fff;
  border: none;
  margin-top: 40rpx;
}

.submit-btn::after {
  border: none;
}

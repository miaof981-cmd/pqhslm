/* 容器 */
.container {
  min-height: 100vh;
  background: #F5F5F5;
  padding: 20rpx;
}

/* 加载状态 */
.loading {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 200rpx 0;
  color: #999;
  font-size: 28rpx;
}

/* 页面头部 */
.page-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
  padding: 0 10rpx;
}

.header-left {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.page-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.page-desc {
  font-size: 24rpx;
  color: #999;
}

.add-btn {
  background: linear-gradient(135deg, #66BB6A, #81C784);
  color: white;
  font-size: 28rpx;
  border: none;
  border-radius: 40rpx;
  padding: 16rpx 32rpx;
  box-shadow: 0 4rpx 12rpx rgba(102, 187, 106, 0.3);
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 160rpx 40rpx;
  background: white;
  border-radius: 20rpx;
}

.empty-icon {
  font-size: 100rpx;
  margin-bottom: 24rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 12rpx;
}

.empty-hint {
  font-size: 24rpx;
  color: #999;
}

/* 公告列表 */
.notice-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.notice-item {
  background: white;
  border-radius: 20rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.06);
}

.notice-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.notice-type {
  font-size: 24rpx;
  padding: 8rpx 20rpx;
  border-radius: 24rpx;
  font-weight: 500;
}

.notice-type.type-info {
  background: #E3F2FD;
  color: #2196F3;
}

.notice-type.type-warning {
  background: #FFF3E0;
  color: #FF9800;
}

.notice-type.type-important {
  background: #FFEBEE;
  color: #F44336;
}

.notice-status {
  font-size: 24rpx;
  padding: 8rpx 20rpx;
  border-radius: 24rpx;
  cursor: pointer;
}

.status-active {
  color: #4CAF50;
  background: #E8F5E9;
}

.status-inactive {
  color: #999;
  background: #F5F5F5;
}

/* 公告内容 */
.notice-content {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
  margin-bottom: 20rpx;
  padding: 20rpx 0;
  border-top: 1rpx solid #F0F0F0;
  border-bottom: 1rpx solid #F0F0F0;
}

.notice-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.notice-text {
  font-size: 26rpx;
  color: #666;
  line-height: 1.6;
}

/* 公告元信息 */
.notice-meta {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.meta-time {
  font-size: 22rpx;
  color: #999;
}

.notice-actions {
  display: flex;
  gap: 12rpx;
}

.action-btn {
  padding: 8rpx 24rpx;
  font-size: 24rpx;
  border-radius: 24rpx;
  border: none;
  line-height: 1.4;
}

.action-btn.edit {
  background: #E3F2FD;
  color: #2196F3;
}

.action-btn.delete {
  background: #FFEBEE;
  color: #F44336;
}

/* 模态弹窗 */
.modal-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.6);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 9999;
}

.modal-content {
  width: 90%;
  max-width: 600rpx;
  max-height: 80vh;
  background: white;
  border-radius: 20rpx;
  display: flex;
  flex-direction: column;
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #F0F0F0;
}

.modal-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.modal-close {
  font-size: 48rpx;
  color: #999;
  width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  cursor: pointer;
}

.modal-body {
  flex: 1;
  overflow-y: auto;
  padding: 30rpx;
}

.form-field {
  margin-bottom: 30rpx;
}

.form-field:last-child {
  margin-bottom: 0;
}

.field-label {
  display: block;
  font-size: 28rpx;
  color: #666;
  margin-bottom: 12rpx;
}

.field-input, .field-textarea {
  width: 100%;
  padding: 20rpx;
  border: 1rpx solid #E0E0E0;
  border-radius: 12rpx;
  font-size: 28rpx;
  box-sizing: border-box;
}

.field-textarea {
  min-height: 200rpx;
}

.radio-group {
  display: flex;
  gap: 30rpx;
}

.radio-label {
  display: flex;
  align-items: center;
  gap: 8rpx;
  font-size: 28rpx;
  color: #666;
}

.modal-footer {
  display: flex;
  gap: 20rpx;
  padding: 30rpx;
  border-top: 1rpx solid #F0F0F0;
}

.btn {
  flex: 1;
  height: 80rpx;
  line-height: 80rpx;
  border-radius: 40rpx;
  font-size: 28rpx;
  border: none;
}

.btn-cancel {
  background: #F5F5F5;
  color: #666;
}

.btn-primary {
  background: linear-gradient(135deg, #66BB6A, #81C784);
  color: white;
}

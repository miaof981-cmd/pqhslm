<view class="container">
  <view wx:if="{{loading}}" class="loading">
    <text>加载中...</text>
  </view>
  
  <view wx:else>
    <view class="header-bar">
      <text class="page-title">公告管理</text>
      <button class="add-btn" bindtap="showAddModal">+ 添加公告</button>
    </view>
    
    <view class="list">
      <view wx:for="{{items}}" wx:key="_id" class="list-item">
        <text class="item-title">{{item.name || item.title}}</text>
        <view class="item-actions">
          <button class="action-btn edit" bindtap="editItem" data-id="{{item._id}}">编辑</button>
          <button class="action-btn delete" bindtap="deleteItem" data-id="{{item._id}}">删除</button>
        </view>
      </view>
    </view>
  </view>
</view>
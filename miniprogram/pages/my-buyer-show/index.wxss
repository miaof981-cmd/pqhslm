/* 小红书风格瀑布流布局 */
.my-buyer-show-page {
  background: #f8f8f8;
  min-height: 100vh;
  padding-bottom: 60rpx;
}

/* 顶部提示卡片 */
.banner-card {
  background: linear-gradient(135deg, #ffe4f3 0%, #dfefff 100%);
  margin: 20rpx 16rpx;
  border-radius: 20rpx;
  padding: 32rpx 28rpx;
  box-shadow: 0 8rpx 24rpx rgba(168, 230, 207, 0.2);
}

.banner-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 12rpx;
}

.banner-desc {
  font-size: 24rpx;
  color: #666;
  line-height: 1.5;
}

/* 空状态 */
.empty-section {
  margin-top: 120rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  color: #666;
  padding: 0 60rpx;
}

.empty-illustration {
  font-size: 160rpx;
  margin-bottom: 40rpx;
  opacity: 0.6;
}

.empty-text {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 24rpx;
}

.empty-tip {
  display: block;
  font-size: 26rpx;
  color: #999;
  margin-bottom: 8rpx;
  text-align: center;
  line-height: 1.6;
}

.empty-button {
  margin-top: 28rpx;
  width: 360rpx;
  height: 80rpx;
  line-height: 80rpx;
  background: linear-gradient(135deg, #a8e6cf 0%, #8dd4b6 100%);
  color: #333;
  border-radius: 40rpx;
  border: none;
  font-weight: 500;
  box-shadow: 0 4rpx 12rpx rgba(168, 230, 207, 0.4);
}

/* 瀑布流容器 */
.waterfall-container {
  display: flex;
  padding: 0 8rpx;
  gap: 8rpx;
}

.waterfall-column {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

/* 卡片样式 - 小红书风格 */
.post-card {
  background: #fff;
  border-radius: 12rpx;
  overflow: hidden;
  margin-bottom: 8rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
  transition: all 0.3s;
}

.post-cover-wrapper {
  position: relative;
  width: 100%;
  background: #f5f5f5;
}

.post-cover {
  width: 100%;
  display: block;
  vertical-align: bottom;
}

.image-count {
  position: absolute;
  top: 12rpx;
  right: 12rpx;
  background: rgba(0, 0, 0, 0.5);
  color: #fff;
  padding: 6rpx 12rpx;
  border-radius: 20rpx;
  font-size: 22rpx;
  display: flex;
  align-items: center;
  gap: 4rpx;
}

.count-icon {
  font-size: 20rpx;
}

/* 卡片信息区域 */
.post-info {
  padding: 16rpx;
}

.post-title {
  font-size: 26rpx;
  color: #333;
  line-height: 1.5;
  margin-bottom: 12rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  word-break: break-all;
}

.post-meta {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 22rpx;
  color: #999;
}

.meta-text {
  flex: 1;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  margin-right: 16rpx;
}

.meta-time {
  flex-shrink: 0;
  font-size: 20rpx;
}

/* 操作按钮 */
.post-actions {
  padding: 12rpx 16rpx;
  border-top: 1rpx solid #f0f0f0;
}

.delete-btn {
  width: 100%;
  height: 64rpx;
  line-height: 64rpx;
  background: linear-gradient(135deg, #ffe4e4 0%, #ffd4d4 100%);
  color: #FF6B6B;
  border-radius: 8rpx;
  border: none;
  font-size: 24rpx;
  font-weight: 500;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8rpx;
  transition: all 0.3s;
}

.delete-btn::after {
  border: none;
}

.delete-icon {
  font-size: 28rpx;
}

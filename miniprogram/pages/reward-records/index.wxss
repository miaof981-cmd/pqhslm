.page {
  min-height: 100vh;
  background: #f5f6f8;
  padding: 32rpx 32rpx 64rpx;
  box-sizing: border-box;
}

.page-header {
  margin-bottom: 32rpx;
}

.page-title {
  display: block;
  font-size: 40rpx;
  font-weight: 600;
  color: #222;
}

.page-subtitle {
  display: block;
  margin-top: 12rpx;
  font-size: 26rpx;
  color: #888;
}

.loading,
.empty {
  margin-top: 160rpx;
  text-align: center;
  color: #999;
  font-size: 28rpx;
}

.section-title {
  margin-bottom: 24rpx;
  font-size: 30rpx;
  font-weight: 500;
  color: #444;
}

.order-card {
  display: flex;
  align-items: center;
  padding: 24rpx;
  margin-bottom: 24rpx;
  border-radius: 24rpx;
  background: #ffffff;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.04);
}

.order-card.history {
  opacity: 0.85;
}

.artist-avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  margin-right: 24rpx;
  background: #f0f0f0;
}

.card-body {
  flex: 1;
  min-width: 0;
}

.artist-name {
  font-size: 32rpx;
  font-weight: 600;
  color: #222;
  margin-bottom: 8rpx;
}

.product-name {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 8rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.meta-text {
  font-size: 24rpx;
  color: #999;
}

.reward-btn {
  width: 180rpx;
  height: 64rpx;
  line-height: 64rpx;
  font-size: 28rpx;
  border-radius: 32rpx;
  background: linear-gradient(135deg, #a8e6cf, #83d9ba);
  color: #fff;
  border: none;
  padding: 0;
}

.reward-btn[disabled] {
  background: #e0e0e0;
  color: #666;
}

.rewarded-separator {
  display: flex;
  align-items: center;
  margin: 48rpx 0 32rpx;
  color: #f57c00;
  font-size: 28rpx;
}

.rewarded-separator .line {
  flex: 1;
  height: 2rpx;
  background: linear-gradient(90deg, transparent, #ffb74d, transparent);
}

.rewarded-text {
  margin: 0 24rpx;
  font-weight: 600;
  padding: 8rpx 24rpx;
  background: linear-gradient(135deg, #fff9c4, #ffe4b5);
  border-radius: 24rpx;
  border: 1rpx solid #ffb74d;
  box-shadow: 0 2rpx 8rpx rgba(255, 183, 77, 0.2);
}

.order-card.rewarded {
  background: linear-gradient(135deg, #fff8e1 0%, #ffe4b5 50%, #ffd4a3 100%);
  border: 2rpx solid #ffb74d;
  box-shadow: 0 8rpx 24rpx rgba(255, 183, 77, 0.25);
  position: relative;
  overflow: visible;
}

.artist-avatar-rewarded {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  margin-right: 24rpx;
  background: #f0f0f0;
  border: 3rpx solid #ffb74d;
  box-shadow: 0 4rpx 12rpx rgba(255, 183, 77, 0.3);
}

.rewarded-badge-new {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
  padding: 16rpx;
  background: linear-gradient(135deg, #fff 0%, #fff9c4 100%);
  border-radius: 16rpx;
  border: 2rpx solid #ffb74d;
  min-width: 140rpx;
}

.badge-medal {
  font-size: 48rpx;
  line-height: 1;
}

.badge-label {
  font-size: 22rpx;
  color: #f57c00;
  font-weight: 600;
  white-space: nowrap;
}

.badge-amount {
  font-size: 32rpx;
  color: #e65100;
  font-weight: 700;
  background: linear-gradient(135deg, #ff6f00, #ff9100);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
}

/* 美观打赏弹窗 */
.reward-modal-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.6);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 9999;
  animation: fadeIn 0.3s ease;
}

@keyframes fadeIn {
  from { opacity: 0; }
  to { opacity: 1; }
}

.reward-modal {
  width: 620rpx;
  background: #fff;
  border-radius: 32rpx;
  overflow: hidden;
  animation: slideUp 0.3s ease;
}

@keyframes slideUp {
  from { 
    opacity: 0;
    transform: translateY(100rpx);
  }
  to { 
    opacity: 1;
    transform: translateY(0);
  }
}

.modal-header {
  padding: 48rpx 32rpx 32rpx;
  text-align: center;
  background: linear-gradient(135deg, #a8e6cf 0%, #d0f0c0 100%);
}

.modal-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  border: 4rpx solid #fff;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
  margin-bottom: 20rpx;
}

.modal-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 8rpx;
}

.modal-subtitle {
  font-size: 26rpx;
  color: #666;
}

.amount-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 20rpx;
  padding: 32rpx;
}

.amount-item {
  height: 100rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border: 3rpx solid #e0e0e0;
  border-radius: 16rpx;
  background: linear-gradient(135deg, #fff 0%, #f5f5f5 100%);
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  position: relative;
  overflow: hidden;
}

.amount-item::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(135deg, #ffeb3b15, #ffc10715);
  opacity: 0;
  transition: opacity 0.3s ease;
}

.amount-item.selected {
  border-color: #ffa726;
  background: linear-gradient(135deg, #fff9c4 0%, #ffe4b5 100%);
  box-shadow: 0 8rpx 20rpx rgba(255, 167, 38, 0.4), 0 0 0 4rpx rgba(255, 167, 38, 0.1);
  transform: scale(1.08);
}

.amount-item.selected::before {
  opacity: 1;
}

.amount-value {
  font-size: 34rpx;
  font-weight: 700;
  color: #666;
  position: relative;
  z-index: 1;
}

.amount-item.selected .amount-value {
  color: #f57c00;
  text-shadow: 0 2rpx 4rpx rgba(245, 124, 0, 0.2);
}

.amount-item.custom {
  background: linear-gradient(135deg, #e1f5fe 0%, #b3e5fc 100%);
  border-color: #4fc3f7;
}

.amount-item.custom::before {
  background: linear-gradient(135deg, #81d4fa30, #4fc3f730);
}

.amount-item.custom.selected {
  border-color: #29b6f6;
  background: linear-gradient(135deg, #e1f5fe 0%, #b3e5fc 100%);
  box-shadow: 0 8rpx 20rpx rgba(41, 182, 246, 0.4), 0 0 0 4rpx rgba(41, 182, 246, 0.1);
}

.amount-item.custom.selected .amount-value {
  color: #0277bd;
  text-shadow: 0 2rpx 4rpx rgba(2, 119, 189, 0.2);
}

.modal-actions {
  display: flex;
  padding: 0 32rpx 32rpx;
  gap: 20rpx;
}

.modal-btn {
  flex: 1;
  height: 88rpx;
  line-height: 88rpx;
  border-radius: 44rpx;
  font-size: 30rpx;
  border: none;
  padding: 0;
}

.modal-btn.cancel {
  background: #f0f0f0;
  color: #666;
}

.modal-btn.confirm {
  background: linear-gradient(135deg, #a8e6cf, #83d9ba);
  color: #fff;
  font-weight: 600;
}

.page {
  min-height: 100vh;
  background: #f5f6f8;
  padding: 32rpx 32rpx 64rpx;
  box-sizing: border-box;
}

.page-header {
  margin-bottom: 32rpx;
}

.page-title {
  display: block;
  font-size: 40rpx;
  font-weight: 600;
  color: #222;
}

.page-subtitle {
  display: block;
  margin-top: 12rpx;
  font-size: 26rpx;
  color: #888;
}

.loading,
.empty {
  margin-top: 160rpx;
  text-align: center;
  color: #999;
  font-size: 28rpx;
}

.section-title {
  margin-bottom: 24rpx;
  font-size: 30rpx;
  font-weight: 500;
  color: #444;
}

.order-card {
  display: flex;
  align-items: center;
  padding: 24rpx;
  margin-bottom: 24rpx;
  border-radius: 24rpx;
  background: #ffffff;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.04);
}

.order-card.history {
  opacity: 0.85;
}

.artist-avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  margin-right: 24rpx;
  background: #f0f0f0;
}

.card-body {
  flex: 1;
  min-width: 0;
}

.artist-name {
  font-size: 32rpx;
  font-weight: 600;
  color: #222;
  margin-bottom: 8rpx;
}

.product-name {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 8rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.meta-text {
  font-size: 24rpx;
  color: #999;
}

.reward-btn {
  width: 180rpx;
  height: 64rpx;
  line-height: 64rpx;
  font-size: 28rpx;
  border-radius: 32rpx;
  background: linear-gradient(135deg, #a8e6cf, #83d9ba);
  color: #fff;
  border: none;
  padding: 0;
}

.reward-btn[disabled] {
  background: #e0e0e0;
  color: #666;
}

.history-separator {
  display: flex;
  align-items: center;
  margin: 40rpx 0 24rpx;
  color: #bbb;
  font-size: 26rpx;
}

.history-separator .line {
  flex: 1;
  height: 2rpx;
  background: #e0e0e0;
}

.history-text {
  margin: 0 20rpx;
}

.expired-flag {
  font-size: 24rpx;
  color: #bbb;
  white-space: nowrap;
  margin-left: 24rpx;
}

.container {
  min-height: 100vh;
  background: #F5F7FA;
  padding-bottom: 120rpx;
}

/* 头部 */
.header {
  background: linear-gradient(135deg, #A8E6CF 0%, #88D4AB 100%);
  padding: 40rpx 30rpx 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.header-title {
  font-size: 36rpx;
  font-weight: bold;
  color: white;
}

.today-stats {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
}

.stats-label {
  font-size: 22rpx;
  color: rgba(255, 255, 255, 0.8);
}

.stats-value {
  font-size: 32rpx;
  font-weight: bold;
  color: white;
}

/* 标签切换 */
.tabs {
  display: flex;
  background: white;
  padding: 0 30rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.tab-item {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 28rpx 0;
  position: relative;
}

.tab-item.active {
  color: #A8E6CF;
}

.tab-item.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 60rpx;
  height: 6rpx;
  background: #A8E6CF;
  border-radius: 3rpx;
}

.tab-text {
  font-size: 28rpx;
  font-weight: 500;
}

.tab-badge {
  margin-left: 8rpx;
  padding: 2rpx 12rpx;
  background: #FF6B6B;
  color: white;
  font-size: 20rpx;
  border-radius: 20rpx;
  min-width: 32rpx;
  text-align: center;
}

/* 内容区 */
.content {
  padding: 20rpx 30rpx;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 0;
}

.empty-icon {
  font-size: 100rpx;
  margin-bottom: 20rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
}

/* 申请卡片 */
.application-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.application-card {
  background: white;
  border-radius: 20rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(168, 230, 207, 0.15);
}

.card-header {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 40rpx;
  background: #F5F5F5;
  margin-right: 20rpx;
}

.user-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 6rpx;
}

.nickname {
  font-size: 30rpx;
  font-weight: bold;
  color: #2C3E50;
}

.realname {
  font-size: 24rpx;
  color: #7F8C8D;
}

.time-badge {
  font-size: 22rpx;
  color: #999;
  padding: 6rpx 12rpx;
  background: #F5F7FA;
  border-radius: 8rpx;
}

/* 价格信息 */
.price-info {
  display: flex;
  gap: 20rpx;
  margin-bottom: 20rpx;
  padding: 20rpx;
  background: linear-gradient(135deg, #FFF9E6 0%, #FFF3CC 100%);
  border-radius: 12rpx;
}

.price-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
}

.price-label {
  font-size: 22rpx;
  color: #7F8C8D;
}

.price-value {
  font-size: 32rpx;
  font-weight: bold;
  color: #E67E22;
}

/* 作品预览 */
.works-preview {
  margin-bottom: 20rpx;
}

.preview-label {
  font-size: 24rpx;
  color: #7F8C8D;
  margin-bottom: 12rpx;
  display: block;
}

.preview-images {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 12rpx;
}

.preview-img {
  width: 100%;
  height: 140rpx;
  border-radius: 12rpx;
  background: #F5F5F5;
}

/* 操作按钮 */
.card-actions {
  display: flex;
  gap: 16rpx;
}

.action-btn {
  flex: 1;
  height: 72rpx;
  border-radius: 12rpx;
  font-size: 28rpx;
  font-weight: bold;
  display: flex;
  align-items: center;
  justify-content: center;
  border: none;
}

.reject-btn {
  background: linear-gradient(135deg, #FFE5E5 0%, #FFD0D0 100%);
  color: #E74C3C;
}

.reject-btn:active {
  background: linear-gradient(135deg, #FFD0D0 0%, #FFBABA 100%);
}

.approve-btn {
  background: linear-gradient(135deg, #A8E6CF 0%, #88D4AB 100%);
  color: white;
}

.approve-btn:active {
  background: linear-gradient(135deg, #88D4AB 0%, #6BC490 100%);
}

/* 历史记录 */
.history-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.history-card {
  background: white;
  border-radius: 16rpx;
  padding: 24rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
}

.history-header {
  display: flex;
  align-items: center;
}

.history-avatar {
  width: 60rpx;
  height: 60rpx;
  border-radius: 30rpx;
  background: #F5F5F5;
  margin-right: 16rpx;
}

.history-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 6rpx;
}

.history-name {
  font-size: 28rpx;
  font-weight: 500;
  color: #2C3E50;
}

.history-time {
  font-size: 22rpx;
  color: #999;
}

.status-tag {
  padding: 6rpx 16rpx;
  border-radius: 20rpx;
  font-size: 22rpx;
  font-weight: 500;
}

.status-tag.approved {
  background: #D4EDDA;
  color: #27AE60;
}

.status-tag.rejected {
  background: #F8D7DA;
  color: #E74C3C;
}

.reject-reason {
  margin-top: 16rpx;
  padding: 16rpx;
  background: #FFF9E6;
  border-radius: 12rpx;
  border-left: 4rpx solid #F39C12;
}

.reason-label {
  font-size: 22rpx;
  color: #7F8C8D;
  margin-right: 8rpx;
}

.reason-text {
  font-size: 24rpx;
  color: #2C3E50;
}

/* 悬浮按钮 */
.float-btn {
  position: fixed;
  right: 30rpx;
  bottom: 40rpx;
  width: 120rpx;
  height: 120rpx;
  background: linear-gradient(135deg, #A8E6CF 0%, #88D4AB 100%);
  border-radius: 60rpx;
  box-shadow: 0 8rpx 24rpx rgba(168, 230, 207, 0.4);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  gap: 6rpx;
}

.float-btn:active {
  transform: scale(0.95);
}

.float-icon {
  font-size: 40rpx;
}

.float-text {
  font-size: 22rpx;
  color: white;
  font-weight: 500;
}

/* 弹窗 */
.modal-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.6);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

.modal-content {
  width: 660rpx;
  max-height: 80vh;
  background: white;
  border-radius: 24rpx;
  overflow: hidden;
  display: flex;
  flex-direction: column;
}

.modal-header {
  padding: 30rpx;
  border-bottom: 1rpx solid #E0E0E0;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.modal-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #2C3E50;
}

.modal-close {
  font-size: 48rpx;
  color: #999;
  line-height: 1;
  padding: 0 10rpx;
}

.modal-body {
  padding: 30rpx;
  flex: 1;
  overflow-y: auto;
}

.modal-label {
  font-size: 26rpx;
  color: #7F8C8D;
  margin-bottom: 16rpx;
  display: block;
}

.quick-replies {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
  margin-bottom: 20rpx;
}

.reply-item {
  padding: 20rpx;
  background: #F5F7FA;
  border-radius: 12rpx;
  font-size: 26rpx;
  color: #2C3E50;
  border: 2rpx solid transparent;
  transition: all 0.3s;
}

.reply-item:active {
  background: #E8F5E9;
  border-color: #A8E6CF;
}

.reject-input {
  width: 100%;
  min-height: 200rpx;
  padding: 20rpx;
  background: #F5F7FA;
  border-radius: 12rpx;
  font-size: 26rpx;
  color: #2C3E50;
  border: 2rpx solid #E0E0E0;
}

.char-count {
  display: block;
  text-align: right;
  font-size: 22rpx;
  color: #999;
  margin-top: 8rpx;
}

.modal-footer {
  padding: 20rpx 30rpx;
  border-top: 1rpx solid #E0E0E0;
  display: flex;
  gap: 16rpx;
}

.modal-btn {
  flex: 1;
  height: 80rpx;
  border-radius: 12rpx;
  font-size: 28rpx;
  font-weight: bold;
  border: none;
}

.cancel-btn {
  background: #F5F7FA;
  color: #7F8C8D;
}

.confirm-btn {
  background: linear-gradient(135deg, #A8E6CF 0%, #88D4AB 100%);
  color: white;
}

/* 话术管理 */
.template-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
  margin-bottom: 20rpx;
}

.template-item {
  padding: 20rpx;
  background: #F5F7FA;
  border-radius: 12rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.template-text {
  flex: 1;
  font-size: 26rpx;
  color: #2C3E50;
  margin-right: 16rpx;
}

.template-actions {
  display: flex;
  gap: 16rpx;
}

.template-btn {
  font-size: 24rpx;
  padding: 8rpx 16rpx;
  border-radius: 8rpx;
}

.template-btn.edit {
  color: #3498DB;
  background: #E3F2FD;
}

.template-btn.delete {
  color: #E74C3C;
  background: #FFEBEE;
}

.add-template-btn {
  width: 100%;
  height: 80rpx;
  background: linear-gradient(135deg, #E8F5E9 0%, #C8E6C9 100%);
  color: #27AE60;
  border-radius: 12rpx;
  font-size: 28rpx;
  font-weight: bold;
  border: 2rpx dashed #A8E6CF;
}


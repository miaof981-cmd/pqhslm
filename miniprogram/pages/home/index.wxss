/* 首页样式 - 紧凑3列布局 */
.container {
  background-color: #FAFAFA;
  min-height: 100vh;
  padding-bottom: 120rpx;
}

/* 轮播图 */
.banner-swiper {
  height: 280rpx;
  margin: 0 10rpx;
  border-radius: 15rpx;
  overflow: hidden;
}

.banner-image {
  width: 100%;
  height: 100%;
}

/* 公告滚动条 */
.notice-ticker {
  background: #FFF9E6;
  margin: 10rpx;
  padding: 12rpx 15rpx;
  border-radius: 12rpx;
  display: flex;
  align-items: center;
  border-left: 4rpx solid #FFA726;
}

.notice-icon {
  width: 32rpx;
  height: 32rpx;
  margin-right: 15rpx;
  position: relative;
  flex-shrink: 0;
}

.notice-icon::before {
  content: '';
  position: absolute;
  top: 6rpx;
  left: 8rpx;
  width: 16rpx;
  height: 20rpx;
  background-color: #FF6B6B;
  clip-path: polygon(50% 0%, 100% 25%, 100% 75%, 50% 100%, 0% 75%, 0% 25%);
}

.notice-icon::after {
  content: '';
  position: absolute;
  top: 12rpx;
  left: 14rpx;
  width: 4rpx;
  height: 8rpx;
  background-color: white;
  border-radius: 1rpx;
}

.notice-scroll {
  flex: 1;
  white-space: nowrap;
}

.notice-item {
  display: inline-block;
  margin-right: 40rpx;
  font-size: 24rpx;
  color: #1a1a1a;
  font-weight: 500;
}

/* 搜索筛选栏 */
.search-filter-bar {
  display: flex;
  gap: 12rpx;
  padding: 10rpx;
  align-items: center;
  background: transparent;
}

.search-input {
  flex: 1;
  background-color: white;
  border-radius: 50rpx;
  padding: 20rpx 30rpx;
  display: flex;
  align-items: center;
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.06);
  border: 1rpx solid #E0E0E0;
}

.search-icon {
  width: 32rpx;
  height: 32rpx;
  margin-right: 15rpx;
  position: relative;
  flex-shrink: 0;
}

.search-icon::before {
  content: '';
  position: absolute;
  top: 4rpx;
  left: 4rpx;
  width: 16rpx;
  height: 16rpx;
  border: 3rpx solid #666;
  border-radius: 50%;
}

.search-icon::after {
  content: '';
  position: absolute;
  bottom: 4rpx;
  right: 4rpx;
  width: 10rpx;
  height: 3rpx;
  background-color: #666;
  transform: rotate(45deg);
  transform-origin: right bottom;
}

.search-placeholder {
  font-size: 28rpx;
  color: #666;
  flex: 1;
}

/* 筛选按钮 */
.filter-btn {
  background: #4CAF50;
  border-radius: 50rpx;
  padding: 20rpx 30rpx;
  display: flex;
  align-items: center;
  gap: 8rpx;
  box-shadow: 0 2rpx 6rpx rgba(76, 175, 80, 0.3);
  flex-shrink: 0;
}

.filter-icon {
  width: 28rpx;
  height: 28rpx;
  position: relative;
}

.filter-icon::before,
.filter-icon::after {
  content: '';
  position: absolute;
  left: 0;
  right: 0;
  height: 3rpx;
  background-color: white;
}

.filter-icon::before {
  top: 8rpx;
}

.filter-icon::after {
  bottom: 8rpx;
}

.filter-text {
  font-size: 26rpx;
  color: white;
  font-weight: 600;
}

/* 筛选面板 */
.filter-panel {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 1000;
  display: none;
}

.filter-panel.show {
  display: block;
}

.filter-mask {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
}

.filter-content {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: white;
  border-radius: 30rpx 30rpx 0 0;
  max-height: 70vh;
  display: flex;
  flex-direction: column;
}

.filter-header {
  padding: 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1rpx solid #f0f0f0;
}

.filter-title {
  font-size: 32rpx;
  font-weight: 700;
  color: #333;
}

.filter-close {
  font-size: 48rpx;
  color: #999;
  line-height: 1;
}

.filter-body {
  flex: 1;
  overflow-y: auto;
  padding: 30rpx;
}

.filter-group {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 20rpx;
}

.filter-item {
  padding: 25rpx 15rpx;
  border-radius: 15rpx;
  background-color: #f8f9fa;
  border: 2rpx solid transparent;
  text-align: center;
  transition: all 0.3s ease;
}

.filter-item.active {
  background-color: #4CAF50;
  border-color: #4CAF50;
}

.filter-item-name {
  font-size: 26rpx;
  color: #333;
  font-weight: 500;
}

.filter-item.active .filter-item-name {
  color: white;
  font-weight: 600;
}

.filter-footer {
  padding: 20rpx 30rpx;
  display: flex;
  gap: 20rpx;
  border-top: 1rpx solid #f0f0f0;
}

.filter-reset,
.filter-confirm {
  flex: 1;
  border-radius: 25rpx;
  font-size: 28rpx;
  font-weight: 600;
  padding: 25rpx 0;
}

.filter-reset {
  background-color: #f8f9fa;
  color: #666;
}

.filter-confirm {
  background: #4CAF50;
  color: white;
}

/* 推荐区域 */
.recommend-section {
  margin: 0;
  padding: 10rpx 5rpx 10rpx;
  background: transparent;
}

/* 商品区域 */
.product-section {
  margin: 0;
  padding: 10rpx 5rpx 10rpx;
  background: transparent;
}

/* 扁平紧凑标题 */
.section-title {
  display: flex;
  justify-content: center;
  align-items: center;
  margin: 0 auto 10rpx;
  width: fit-content;
  max-width: 80%;
}

.section-title text {
  background: #F5F5F5;
  color: #4CAF50;
  font-size: 26rpx;
  font-weight: 600;
  padding: 12rpx 32rpx;
  border-radius: 32rpx;
  box-shadow: none;
  position: relative;
}

.clear-filter {
  font-size: 26rpx;
  color: #4CAF50;
  font-weight: 600;
}

.loading-state, .empty-state {
  text-align: center;
  padding: 100rpx 0;
  color: #999;
  font-size: 28rpx;
}

/* 商品网格 - 3列紧凑布局 */
.product-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 4rpx;
}

.product-card {
  background-color: white;
  border-radius: 8rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.06);
  border: 1rpx solid #F0F0F0;
  transition: all 0.3s ease;
}

.product-card:active {
  transform: scale(0.98);
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.1);
}

.product-image {
  width: 100%;
  aspect-ratio: 1;
  display: block;
}

/* 紧凑的商品信息 */
.product-info {
  padding: 6rpx 6rpx 8rpx;
}

.product-name {
  font-size: 24rpx;
  color: #333;
  line-height: 1.3;
  margin-bottom: 4rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  min-height: 62rpx;
  max-height: 62rpx;
  font-weight: 500;
}

.product-price {
  font-size: 30rpx;
  color: #E53935;
  font-weight: 700;
  line-height: 1;
}
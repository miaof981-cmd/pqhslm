/* 首页样式 - 紧凑3列布局 */
.container {
  background-color: #f5f5f5;
  min-height: 100vh;
  padding-bottom: 120rpx;
}

/* 轮播图 */
.banner-swiper {
  height: 280rpx;
  margin: 0 20rpx;
  border-radius: 20rpx;
  overflow: hidden;
}

.banner-image {
  width: 100%;
  height: 100%;
}

/* 公告滚动条 */
.notice-ticker {
  background: linear-gradient(90deg, rgba(168, 230, 207, 0.1) 0%, rgba(208, 240, 192, 0.1) 100%);
  margin: 10rpx 20rpx;
  padding: 15rpx 20rpx;
  border-radius: 15rpx;
  display: flex;
  align-items: center;
  border-left: 4rpx solid #A8E6CF;
}

.notice-icon {
  width: 32rpx;
  height: 32rpx;
  margin-right: 15rpx;
  position: relative;
  flex-shrink: 0;
}

.notice-icon::before {
  content: '';
  position: absolute;
  top: 6rpx;
  left: 8rpx;
  width: 16rpx;
  height: 20rpx;
  background-color: #FF6B6B;
  clip-path: polygon(50% 0%, 100% 25%, 100% 75%, 50% 100%, 0% 75%, 0% 25%);
}

.notice-icon::after {
  content: '';
  position: absolute;
  top: 12rpx;
  left: 14rpx;
  width: 4rpx;
  height: 8rpx;
  background-color: white;
  border-radius: 1rpx;
}

.notice-scroll {
  flex: 1;
  white-space: nowrap;
}

.notice-item {
  display: inline-block;
  margin-right: 40rpx;
  font-size: 24rpx;
  color: #1a1a1a;
  font-weight: 500;
}

/* 搜索筛选栏 */
.search-filter-bar {
  display: flex;
  gap: 15rpx;
  padding: 10rpx 20rpx;
  align-items: center;
  background: linear-gradient(180deg, rgba(168, 230, 207, 0.05) 0%, transparent 100%);
}

.search-input {
  flex: 1;
  background-color: white;
  border-radius: 50rpx;
  padding: 20rpx 30rpx;
  display: flex;
  align-items: center;
  box-shadow: 0 2rpx 8rpx rgba(168, 230, 207, 0.3);
  border: 1rpx solid rgba(168, 230, 207, 0.2);
}

.search-icon {
  width: 32rpx;
  height: 32rpx;
  margin-right: 15rpx;
  position: relative;
  flex-shrink: 0;
}

.search-icon::before {
  content: '';
  position: absolute;
  top: 4rpx;
  left: 4rpx;
  width: 16rpx;
  height: 16rpx;
  border: 3rpx solid #666;
  border-radius: 50%;
}

.search-icon::after {
  content: '';
  position: absolute;
  bottom: 4rpx;
  right: 4rpx;
  width: 10rpx;
  height: 3rpx;
  background-color: #666;
  transform: rotate(45deg);
  transform-origin: right bottom;
}

.search-placeholder {
  font-size: 28rpx;
  color: #666;
  flex: 1;
}

/* 筛选按钮 */
.filter-btn {
  background: linear-gradient(135deg, #A8E6CF 0%, #D0F0C0 100%);
  border-radius: 50rpx;
  padding: 20rpx 30rpx;
  display: flex;
  align-items: center;
  gap: 8rpx;
  box-shadow: 0 4rpx 12rpx rgba(168, 230, 207, 0.4);
  flex-shrink: 0;
}

.filter-icon {
  width: 28rpx;
  height: 28rpx;
  position: relative;
}

.filter-icon::before,
.filter-icon::after {
  content: '';
  position: absolute;
  left: 0;
  right: 0;
  height: 3rpx;
  background-color: white;
}

.filter-icon::before {
  top: 8rpx;
}

.filter-icon::after {
  bottom: 8rpx;
}

.filter-text {
  font-size: 26rpx;
  color: white;
  font-weight: 600;
}

/* 筛选面板 */
.filter-panel {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 1000;
  display: none;
}

.filter-panel.show {
  display: block;
}

.filter-mask {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
}

.filter-content {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: white;
  border-radius: 30rpx 30rpx 0 0;
  max-height: 70vh;
  display: flex;
  flex-direction: column;
}

.filter-header {
  padding: 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1rpx solid #f0f0f0;
}

.filter-title {
  font-size: 32rpx;
  font-weight: 700;
  color: #333;
}

.filter-close {
  font-size: 48rpx;
  color: #999;
  line-height: 1;
}

.filter-body {
  flex: 1;
  overflow-y: auto;
  padding: 30rpx;
}

.filter-group {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 20rpx;
}

.filter-item {
  padding: 25rpx 15rpx;
  border-radius: 15rpx;
  background-color: #f8f9fa;
  border: 2rpx solid transparent;
  text-align: center;
  transition: all 0.3s ease;
}

.filter-item.active {
  background-color: #A8E6CF;
  border-color: #A8E6CF;
}

.filter-item-name {
  font-size: 26rpx;
  color: #333;
  font-weight: 500;
}

.filter-item.active .filter-item-name {
  color: white;
  font-weight: 600;
}

.filter-footer {
  padding: 20rpx 30rpx;
  display: flex;
  gap: 20rpx;
  border-top: 1rpx solid #f0f0f0;
}

.filter-reset,
.filter-confirm {
  flex: 1;
  border-radius: 25rpx;
  font-size: 28rpx;
  font-weight: 600;
  padding: 25rpx 0;
}

.filter-reset {
  background-color: #f8f9fa;
  color: #666;
}

.filter-confirm {
  background: linear-gradient(45deg, #A8E6CF, #D0F0C0);
  color: white;
}

/* 推荐区域 */
.recommend-section {
  margin: 0 20rpx 10rpx;
  padding: 15rpx;
  background: linear-gradient(135deg, rgba(168, 230, 207, 0.08) 0%, rgba(208, 240, 192, 0.08) 100%);
  border-radius: 20rpx;
  border: 2rpx solid rgba(168, 230, 207, 0.2);
}

/* 商品区域 */
.product-section {
  margin: 0 20rpx;
  padding: 15rpx;
  background: linear-gradient(135deg, rgba(168, 230, 207, 0.05) 0%, rgba(208, 240, 192, 0.05) 100%);
  border-radius: 20rpx;
}

.section-title {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 0 12rpx 0;
  font-size: 30rpx;
  font-weight: 700;
  color: #1a1a1a;
  border-bottom: 3rpx solid #A8E6CF;
  margin-bottom: 12rpx;
}

.clear-filter {
  font-size: 26rpx;
  color: #A8E6CF;
  font-weight: 600;
}

.loading-state, .empty-state {
  text-align: center;
  padding: 100rpx 0;
  color: #999;
  font-size: 28rpx;
}

/* 商品网格 - 3列紧凑布局 */
.product-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 8rpx;
}

.product-card {
  background-color: white;
  border-radius: 12rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 8rpx rgba(168, 230, 207, 0.3);
  border: 1rpx solid rgba(168, 230, 207, 0.15);
  transition: all 0.3s ease;
}

.product-card:active {
  transform: scale(0.98);
  box-shadow: 0 4rpx 12rpx rgba(168, 230, 207, 0.4);
}

.product-image {
  width: 100%;
  aspect-ratio: 1;
  display: block;
}

/* 紧凑的商品信息 */
.product-info {
  padding: 6rpx 8rpx;
}

.product-name {
  font-size: 24rpx;
  color: #1a1a1a;
  line-height: 1.3;
  margin-bottom: 4rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  height: 62rpx;
  font-weight: 500;
}

.product-price {
  font-size: 28rpx;
  color: #FF6B6B;
  font-weight: 700;
}
/* 首页样式 - 紧凑3列布局 */
.container {
  background-color: #FAFAFA;
  min-height: 100vh;
  padding-bottom: 120rpx;
}

/* 轮播图 */
.banner-swiper {
  height: 280rpx;
  margin: 0 10rpx;
  border-radius: 15rpx;
  overflow: hidden;
}

.banner-image {
  width: 100%;
  height: 100%;
}

/* 公告滚动条 */
.notice-ticker {
  background: #FFF9E6;
  margin: 10rpx;
  padding: 12rpx 15rpx;
  border-radius: 12rpx;
  display: flex;
  align-items: center;
  border-left: 4rpx solid #FFA726;
}

.notice-icon {
  width: 32rpx;
  height: 32rpx;
  margin-right: 15rpx;
  position: relative;
  flex-shrink: 0;
}

.notice-icon::before {
  content: '';
  position: absolute;
  top: 6rpx;
  left: 8rpx;
  width: 16rpx;
  height: 20rpx;
  background-color: #FF6B6B;
  clip-path: polygon(50% 0%, 100% 25%, 100% 75%, 50% 100%, 0% 75%, 0% 25%);
}

.notice-icon::after {
  content: '';
  position: absolute;
  top: 12rpx;
  left: 14rpx;
  width: 4rpx;
  height: 8rpx;
  background-color: white;
  border-radius: 1rpx;
}

.notice-scroll {
  flex: 1;
  white-space: nowrap;
}

.notice-item {
  display: inline-block;
  margin-right: 40rpx;
  font-size: 24rpx;
  color: #1a1a1a;
  font-weight: 500;
}

/* 搜索筛选栏 */
.search-filter-bar {
  display: flex;
  gap: 12rpx;
  padding: 10rpx;
  align-items: center;
  background: transparent;
}

.search-input {
  flex: 1;
  background-color: white;
  border-radius: 50rpx;
  padding: 20rpx 30rpx;
  display: flex;
  align-items: center;
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.06);
  border: 1rpx solid #E0E0E0;
}

.search-icon {
  width: 32rpx;
  height: 32rpx;
  margin-right: 15rpx;
  position: relative;
  flex-shrink: 0;
}

.search-icon::before {
  content: '';
  position: absolute;
  top: 4rpx;
  left: 4rpx;
  width: 16rpx;
  height: 16rpx;
  border: 3rpx solid #666;
  border-radius: 50%;
}

.search-icon::after {
  content: '';
  position: absolute;
  bottom: 4rpx;
  right: 4rpx;
  width: 10rpx;
  height: 3rpx;
  background-color: #666;
  transform: rotate(45deg);
  transform-origin: right bottom;
}

.search-placeholder {
  font-size: 28rpx;
  color: #666;
  flex: 1;
}

/* 筛选按钮 */
.filter-btn {
  background: linear-gradient(135deg, #A8E6CF 0%, #D0F0C0 100%);
  border-radius: 50rpx;
  padding: 20rpx 30rpx;
  display: flex;
  align-items: center;
  gap: 8rpx;
  box-shadow: 0 2rpx 8rpx rgba(168, 230, 207, 0.3);
  flex-shrink: 0;
}

.filter-icon {
  width: 28rpx;
  height: 28rpx;
  position: relative;
}

.filter-icon::before,
.filter-icon::after {
  content: '';
  position: absolute;
  left: 0;
  right: 0;
  height: 3rpx;
  background-color: white;
}

.filter-icon::before {
  top: 8rpx;
}

.filter-icon::after {
  bottom: 8rpx;
}

.filter-text {
  font-size: 26rpx;
  color: white;
  font-weight: 600;
}

/* 筛选面板 */
.filter-panel {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 1000;
  display: none;
}

.filter-panel.show {
  display: block;
}

.filter-mask {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
}

.filter-content {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: white;
  border-radius: 30rpx 30rpx 0 0;
  max-height: 70vh;
  display: flex;
  flex-direction: column;
}

.filter-header {
  padding: 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1rpx solid #f0f0f0;
}

.filter-title {
  font-size: 32rpx;
  font-weight: 700;
  color: #333;
}

.filter-close {
  font-size: 48rpx;
  color: #999;
  line-height: 1;
}

.filter-body {
  flex: 1;
  overflow-y: auto;
  padding: 30rpx;
}

/* 筛选区块 */
.filter-section {
  margin-bottom: 40rpx;
}

.filter-section:last-child {
  margin-bottom: 0;
}

.section-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 20rpx;
  padding-left: 20rpx;
  position: relative;
}

.section-title::before {
  content: '';
  position: absolute;
  left: 0;
  top: 50%;
  transform: translateY(-50%);
  width: 6rpx;
  height: 24rpx;
  background: linear-gradient(135deg, #A8E6CF 0%, #81C784 100%);
  border-radius: 3rpx;
}

.filter-group {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 20rpx;
}

.filter-item {
  padding: 25rpx 15rpx;
  border-radius: 15rpx;
  background-color: #f8f9fa;
  border: 2rpx solid transparent;
  text-align: center;
  transition: all 0.3s ease;
}

.filter-item.active {
  background-color: #A8E6CF;
  border-color: #A8E6CF;
}

.filter-item-name {
  font-size: 26rpx;
  color: #333;
  font-weight: 500;
}

.filter-item.active .filter-item-name {
  color: white;
  font-weight: 600;
}

.filter-footer {
  padding: 20rpx 30rpx;
  display: flex;
  gap: 20rpx;
  border-top: 1rpx solid #f0f0f0;
}

.filter-reset,
.filter-confirm {
  flex: 1;
  border-radius: 25rpx;
  font-size: 28rpx;
  font-weight: 600;
  padding: 25rpx 0;
}

.filter-reset {
  background-color: #f8f9fa;
  color: #666;
}

.filter-confirm {
  background: linear-gradient(45deg, #A8E6CF, #D0F0C0);
  color: white;
}

/* 推荐区域 */
.recommend-section {
  margin: 0;
  padding: 10rpx 5rpx 10rpx;
  background: transparent;
}

/* 商品区域 */
.product-section {
  margin: 0;
  padding: 10rpx 5rpx 10rpx;
  background: transparent;
}

/* HOT标题样式 */
.hot-title {
  display: flex;
  align-items: center;
  gap: 15rpx;
  margin-bottom: 15rpx;
  padding: 0 5rpx;
}

.hot-icon {
  background: linear-gradient(135deg, #FF6B6B 0%, #FF8E53 100%);
  color: white;
  font-size: 20rpx;
  font-weight: 700;
  padding: 6rpx 12rpx;
  border-radius: 8rpx;
  letter-spacing: 1rpx;
  box-shadow: 0 2rpx 8rpx rgba(255, 107, 107, 0.3);
  animation: pulse 2s ease-in-out infinite;
}

@keyframes pulse {
  0%, 100% { transform: scale(1); }
  50% { transform: scale(1.05); }
}

.hot-text {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
}

/* 分割线标题样式 */
.divider-title {
  display: flex;
  align-items: center;
  margin-bottom: 15rpx;
  padding: 0 5rpx;
  gap: 15rpx;
}

.divider-line {
  flex: 1;
  height: 1rpx;
  background: linear-gradient(90deg, transparent 0%, #E0E0E0 50%, transparent 100%);
}

.divider-text {
  font-size: 26rpx;
  font-weight: 500;
  color: #666;
  white-space: nowrap;
}

.clear-filter {
  font-size: 26rpx;
  color: #A8E6CF;
  font-weight: 600;
}

.loading-state, .empty-state {
  text-align: center;
  padding: 100rpx 0;
  color: #999;
  font-size: 28rpx;
}

/* 商品网格 - 3列紧凑布局 */
.product-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 12rpx;
  padding: 0 12rpx;
}

/* 商品卡片 - 柔和设计 */
.product-card {
  background-color: white;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
  transition: all 0.3s ease;
}

.product-card:active {
  transform: translateY(-4rpx);
  box-shadow: 0 8rpx 16rpx rgba(0, 0, 0, 0.08);
}

/* 图片容器 - 正方形 */
.product-image-wrapper {
  width: 100%;
  padding-top: 100%; /* 1:1 正方形 */
  position: relative;
  overflow: hidden;
  background: #F5F5F5;
}

.product-image {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  display: block;
}

/* 出稿时间标签（在商品信息区） */
.product-delivery {
  font-size: 22rpx;
  padding: 6rpx 12rpx;
  border-radius: 8rpx;
  white-space: nowrap;
  font-weight: 400;
}

/* 极速出稿 (1天) - 极淡蓝色 */
.product-delivery.delivery-fast {
  background: #F0F8FF;
  color: #7BA3CC;
}

/* 快速出稿 (2-3天) - 极淡绿色 */
.product-delivery.delivery-quick {
  background: #F4F9F4;
  color: #81B589;
}

/* 普通出稿 (4-7天) - 极淡黄色 */
.product-delivery.delivery-normal {
  background: #FFFCF5;
  color: #C9A872;
}

/* 慢速出稿 (8-30天) - 极淡灰色 */
.product-delivery.delivery-slow {
  background: #FAFAFA;
  color: #B0B0B0;
}

/* 商品信息 */
.product-info {
  padding: 12rpx;
}

.product-name {
  font-size: 26rpx;
  color: #333;
  line-height: 1.4;
  margin-bottom: 8rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: normal;
  font-weight: 500;
  /* 移除 min-height，让高度自适应 */
}

/* 价格和画师信息容器 */
.product-meta {
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: 8rpx;
}

.product-price {
  font-size: 32rpx;
  color: #E53935;
  font-weight: 700;
  line-height: 1;
  flex-shrink: 0;
}

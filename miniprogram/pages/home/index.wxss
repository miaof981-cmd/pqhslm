/* 首页样式 - 瀑布流布局 */
.container {
  background-color: #f5f5f5;
  min-height: 100vh;
}

/* 搜索栏 */
.search-bar {
  background-color: #A8E6CF;
  padding: 20rpx 30rpx;
  display: flex;
  gap: 15rpx;
}

.search-input {
  flex: 1;
  background-color: white;
  border-radius: 50rpx;
  padding: 20rpx 30rpx;
  display: flex;
  align-items: center;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.1);
}

.search-icon {
  width: 32rpx;
  height: 32rpx;
  margin-right: 15rpx;
  position: relative;
}

.search-icon::before {
  content: '';
  position: absolute;
  top: 4rpx;
  left: 4rpx;
  width: 16rpx;
  height: 16rpx;
  border: 3rpx solid #999;
  border-radius: 50%;
}

.search-icon::after {
  content: '';
  position: absolute;
  bottom: 4rpx;
  right: 4rpx;
  width: 10rpx;
  height: 3rpx;
  background-color: #999;
  transform: rotate(45deg);
  transform-origin: right bottom;
}

.search-placeholder {
  font-size: 28rpx;
  color: #999;
}

/* 筛选按钮 */
.filter-btn {
  background-color: white;
  border-radius: 50rpx;
  padding: 20rpx 25rpx;
  display: flex;
  align-items: center;
  gap: 8rpx;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.1);
  font-size: 26rpx;
  color: #333;
}

.filter-icon {
  width: 28rpx;
  height: 28rpx;
  position: relative;
}

.filter-icon::before,
.filter-icon::after {
  content: '';
  position: absolute;
  left: 0;
  right: 0;
  height: 3rpx;
  background-color: #A8E6CF;
}

.filter-icon::before {
  top: 6rpx;
}

.filter-icon::after {
  bottom: 6rpx;
}

/* 轮播图 */
.banner-swiper {
  height: 280rpx;
  margin: 20rpx 20rpx 0;
  border-radius: 20rpx;
  overflow: hidden;
}

.banner-image {
  width: 100%;
  height: 100%;
}

/* 公告滚动条 */
.notice-ticker {
  background-color: white;
  margin: 15rpx 20rpx;
  padding: 15rpx 20rpx;
  border-radius: 15rpx;
  display: flex;
  align-items: center;
}

.notice-icon {
  width: 32rpx;
  height: 32rpx;
  margin-right: 15rpx;
  position: relative;
  flex-shrink: 0;
}

.notice-icon::before {
  content: '';
  position: absolute;
  top: 6rpx;
  left: 8rpx;
  width: 16rpx;
  height: 20rpx;
  background-color: #FF6B6B;
  clip-path: polygon(50% 0%, 100% 25%, 100% 75%, 50% 100%, 0% 75%, 0% 25%);
}

.notice-icon::after {
  content: '';
  position: absolute;
  top: 12rpx;
  left: 14rpx;
  width: 4rpx;
  height: 8rpx;
  background-color: white;
  border-radius: 1rpx;
}

.notice-scroll {
  flex: 1;
  white-space: nowrap;
}

.notice-item {
  display: inline-block;
  margin-right: 40rpx;
  font-size: 24rpx;
  color: #333;
}

/* 筛选面板 */
.filter-panel {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  z-index: 1000;
  display: none;
}

.filter-panel.show {
  display: block;
}

.filter-header {
  background-color: white;
  padding: 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1rpx solid #f0f0f0;
}

.filter-title {
  font-size: 32rpx;
  font-weight: 700;
  color: #333;
}

.filter-close {
  font-size: 48rpx;
  color: #999;
  line-height: 1;
}

.filter-content {
  background-color: white;
  max-height: 60vh;
  overflow-y: auto;
  padding: 30rpx;
}

.filter-group {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 20rpx;
}

.filter-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 25rpx 15rpx;
  border-radius: 15rpx;
  background-color: #f8f9fa;
  border: 2rpx solid transparent;
  transition: all 0.3s ease;
}

.filter-item.active {
  background-color: #A8E6CF;
  border-color: #A8E6CF;
}

.filter-item-icon {
  width: 48rpx;
  height: 48rpx;
  margin-bottom: 10rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, #A8E6CF 0%, #D0F0C0 100%);
  position: relative;
}

.filter-item.active .filter-item-icon {
  background: white;
}

.filter-item-name {
  font-size: 24rpx;
  color: #333;
  font-weight: 500;
}

.filter-item.active .filter-item-name {
  color: white;
  font-weight: 600;
}

/* 分类图标样式（复用之前的） */
.icon-all::before {
  content: '';
  position: absolute;
  top: 50%;
  left: 50%;
  width: 24rpx;
  height: 24rpx;
  border: 3rpx solid white;
  border-radius: 50%;
  transform: translate(-50%, -50%);
}

.filter-item.active .icon-all::before {
  border-color: #A8E6CF;
}

/* 其他分类图标省略，使用之前定义的样式 */

.filter-footer {
  background-color: white;
  padding: 20rpx 30rpx;
  display: flex;
  gap: 20rpx;
  border-top: 1rpx solid #f0f0f0;
}

.filter-reset,
.filter-confirm {
  flex: 1;
  border-radius: 25rpx;
  font-size: 28rpx;
  font-weight: 600;
  padding: 25rpx 0;
}

.filter-reset {
  background-color: #f8f9fa;
  color: #666;
}

.filter-confirm {
  background: linear-gradient(45deg, #A8E6CF, #D0F0C0);
  color: white;
}

/* 推荐商品区域 */
.recommend-section {
  padding: 0 20rpx 20rpx;
}

.section-header {
  display: flex;
  align-items: center;
  padding: 20rpx 0;
}

.section-title-icon {
  width: 6rpx;
  height: 28rpx;
  background: linear-gradient(135deg, #A8E6CF, #D0F0C0);
  border-radius: 3rpx;
  margin-right: 15rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 700;
  color: #333;
}

/* 商品区域 */
.product-section {
  padding: 0 20rpx 120rpx;
}

.loading-state, .empty-state {
  text-align: center;
  padding: 100rpx 0;
  color: #999;
  font-size: 28rpx;
}

/* 瀑布流布局 - 3列 */
.product-waterfall {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 10rpx;
}

.product-card-mini {
  background-color: white;
  border-radius: 15rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.08);
}

.product-image-mini {
  width: 100%;
  aspect-ratio: 1;
}

.product-info-mini {
  padding: 15rpx;
}

.product-name-mini {
  font-size: 24rpx;
  color: #333;
  line-height: 1.4;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  margin-bottom: 10rpx;
  min-height: 68rpx;
}

.product-bottom-mini {
  margin-bottom: 10rpx;
}

.price-wrapper-mini {
  display: flex;
  align-items: baseline;
  gap: 8rpx;
  margin-bottom: 6rpx;
}

.product-price-mini {
  font-size: 28rpx;
  color: #FF6B6B;
  font-weight: 700;
}

.product-original-price-mini {
  font-size: 20rpx;
  color: #999;
  text-decoration: line-through;
}

.product-sales-mini {
  font-size: 20rpx;
  color: #999;
}

.artist-mini {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.artist-avatar-mini {
  width: 30rpx;
  height: 30rpx;
  border-radius: 50%;
}

.artist-name-mini {
  font-size: 20rpx;
  color: #666;
  flex: 1;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
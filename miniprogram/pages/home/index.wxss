/* 首页样式 - 参考淘宝风格 */
.container {
  background-color: #f5f5f5;
  min-height: 100vh;
}

/* 搜索栏 */
.search-bar {
  background-color: #A8E6CF;
  padding: 20rpx 30rpx;
}

.search-input {
  background-color: white;
  border-radius: 50rpx;
  padding: 20rpx 30rpx;
  display: flex;
  align-items: center;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.1);
}

.search-icon {
  width: 32rpx;
  height: 32rpx;
  margin-right: 15rpx;
  position: relative;
}

.search-icon::before {
  content: '';
  position: absolute;
  top: 4rpx;
  left: 4rpx;
  width: 16rpx;
  height: 16rpx;
  border: 3rpx solid #999;
  border-radius: 50%;
}

.search-icon::after {
  content: '';
  position: absolute;
  bottom: 4rpx;
  right: 4rpx;
  width: 10rpx;
  height: 3rpx;
  background-color: #999;
  transform: rotate(45deg);
  transform-origin: right bottom;
}

.search-placeholder {
  font-size: 28rpx;
  color: #999;
}

/* 轮播图 */
.banner-swiper {
  height: 320rpx;
  margin: 20rpx 30rpx;
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 20rpx rgba(0,0,0,0.1);
}

.banner-image {
  width: 100%;
  height: 100%;
}

/* 公告滚动条 */
.notice-ticker {
  background-color: white;
  margin: 0 30rpx 20rpx;
  padding: 20rpx;
  border-radius: 15rpx;
  display: flex;
  align-items: center;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.05);
}

.notice-icon {
  width: 32rpx;
  height: 32rpx;
  margin-right: 15rpx;
  position: relative;
  flex-shrink: 0;
}

.notice-icon::before {
  content: '';
  position: absolute;
  top: 6rpx;
  left: 8rpx;
  width: 16rpx;
  height: 20rpx;
  background-color: #FF6B6B;
  clip-path: polygon(50% 0%, 100% 25%, 100% 75%, 50% 100%, 0% 75%, 0% 25%);
}

.notice-icon::after {
  content: '';
  position: absolute;
  top: 12rpx;
  left: 14rpx;
  width: 4rpx;
  height: 8rpx;
  background-color: white;
  border-radius: 1rpx;
}

.notice-scroll {
  flex: 1;
  white-space: nowrap;
}

.notice-item {
  display: inline-block;
  margin-right: 40rpx;
  font-size: 24rpx;
  color: #333;
}

/* 商品分类 */
.category-section {
  background-color: white;
  margin: 0 30rpx 20rpx;
  border-radius: 20rpx;
  padding: 30rpx 0;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.05);
}

.category-scroll {
  white-space: nowrap;
}

.category-list {
  display: flex;
  padding: 0 20rpx;
}

.category-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin: 0 20rpx;
  padding: 20rpx 15rpx;
  border-radius: 15rpx;
  transition: all 0.3s ease;
  min-width: 120rpx;
}

.category-item.active {
  background-color: #A8E6CF;
  transform: scale(1.05);
}

.category-icon {
  width: 48rpx;
  height: 48rpx;
  margin-bottom: 8rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, #A8E6CF 0%, #D0F0C0 100%);
  position: relative;
}

.category-item.active .category-icon {
  background: linear-gradient(135deg, #fff 0%, #fff 100%);
}

/* 推荐 - 星星 */
.icon-recommend::before {
  content: '';
  position: absolute;
  top: 50%;
  left: 50%;
  width: 24rpx;
  height: 24rpx;
  background-color: white;
  clip-path: polygon(50% 0%, 61% 35%, 98% 35%, 68% 57%, 79% 91%, 50% 70%, 21% 91%, 32% 57%, 2% 35%, 39% 35%);
  transform: translate(-50%, -50%);
}

.category-item.active .icon-recommend::before {
  background-color: #A8E6CF;
}

/* 头像 - 人物 */
.icon-portrait::before {
  content: '';
  position: absolute;
  top: 35%;
  left: 50%;
  width: 14rpx;
  height: 14rpx;
  background-color: white;
  border-radius: 50%;
  transform: translateX(-50%);
}

.icon-portrait::after {
  content: '';
  position: absolute;
  bottom: 28%;
  left: 50%;
  width: 20rpx;
  height: 12rpx;
  background-color: white;
  border-radius: 10rpx 10rpx 0 0;
  transform: translateX(-50%);
}

.category-item.active .icon-portrait::before,
.category-item.active .icon-portrait::after {
  background-color: #A8E6CF;
}

/* 插画 - 画笔 */
.icon-illustration::before {
  content: '';
  position: absolute;
  top: 50%;
  left: 50%;
  width: 20rpx;
  height: 3rpx;
  background-color: white;
  transform: translate(-50%, -50%) rotate(-45deg);
}

.icon-illustration::after {
  content: '';
  position: absolute;
  top: 30%;
  right: 30%;
  width: 8rpx;
  height: 8rpx;
  border: 3rpx solid white;
  border-bottom: none;
  border-left: none;
  transform: rotate(-45deg);
}

.category-item.active .icon-illustration::before,
.category-item.active .icon-illustration::after {
  background-color: #A8E6CF;
  border-color: #A8E6CF;
}

/* LOGO - 标签 */
.icon-logo::before {
  content: '';
  position: absolute;
  top: 50%;
  left: 50%;
  width: 20rpx;
  height: 16rpx;
  background-color: white;
  clip-path: polygon(0% 0%, 100% 0%, 100% 70%, 50% 100%, 0% 70%);
  transform: translate(-50%, -50%);
}

.category-item.active .icon-logo::before {
  background-color: #A8E6CF;
}

/* 海报 - 文档 */
.icon-poster::before {
  content: '';
  position: absolute;
  top: 50%;
  left: 50%;
  width: 18rpx;
  height: 22rpx;
  border: 3rpx solid white;
  border-radius: 2rpx;
  transform: translate(-50%, -50%);
}

.icon-poster::after {
  content: '';
  position: absolute;
  top: 40%;
  left: 50%;
  width: 10rpx;
  height: 2rpx;
  background-color: white;
  transform: translateX(-50%);
  box-shadow: 0 4rpx 0 white, 0 8rpx 0 white;
}

.category-item.active .icon-poster::before {
  border-color: #A8E6CF;
}

.category-item.active .icon-poster::after {
  background-color: #A8E6CF;
  box-shadow: 0 4rpx 0 #A8E6CF, 0 8rpx 0 #A8E6CF;
}

/* 表情包 - 笑脸 */
.icon-emoticon::before {
  content: '';
  position: absolute;
  top: 50%;
  left: 50%;
  width: 24rpx;
  height: 24rpx;
  border: 3rpx solid white;
  border-radius: 50%;
  transform: translate(-50%, -50%);
}

.icon-emoticon::after {
  content: '';
  position: absolute;
  top: 55%;
  left: 50%;
  width: 12rpx;
  height: 6rpx;
  border: 2rpx solid white;
  border-top: none;
  border-radius: 0 0 6rpx 6rpx;
  transform: translateX(-50%);
}

.category-item.active .icon-emoticon::before,
.category-item.active .icon-emoticon::after {
  border-color: #A8E6CF;
}

/* UI设计 - 手机 */
.icon-ui::before {
  content: '';
  position: absolute;
  top: 50%;
  left: 50%;
  width: 16rpx;
  height: 24rpx;
  border: 3rpx solid white;
  border-radius: 3rpx;
  transform: translate(-50%, -50%);
}

.icon-ui::after {
  content: '';
  position: absolute;
  bottom: 30%;
  left: 50%;
  width: 6rpx;
  height: 2rpx;
  background-color: white;
  transform: translateX(-50%);
}

.category-item.active .icon-ui::before {
  border-color: #A8E6CF;
}

.category-item.active .icon-ui::after {
  background-color: #A8E6CF;
}

/* 动画 - 播放 */
.icon-animation::before {
  content: '';
  position: absolute;
  top: 50%;
  left: 50%;
  width: 24rpx;
  height: 24rpx;
  border: 3rpx solid white;
  border-radius: 50%;
  transform: translate(-50%, -50%);
}

.icon-animation::after {
  content: '';
  position: absolute;
  top: 50%;
  left: 52%;
  width: 0;
  height: 0;
  border-left: 10rpx solid white;
  border-top: 6rpx solid transparent;
  border-bottom: 6rpx solid transparent;
  transform: translate(-50%, -50%);
}

.category-item.active .icon-animation::before {
  border-color: #A8E6CF;
}

.category-item.active .icon-animation::after {
  border-left-color: #A8E6CF;
}

.category-name {
  font-size: 24rpx;
  color: #333;
  font-weight: 500;
}

.category-item.active .category-name {
  color: white;
  font-weight: 600;
}

/* 商品区域 */
.product-section {
  padding: 0 30rpx 120rpx;
}

.section-header {
  margin-bottom: 30rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 700;
  color: #333;
  margin-bottom: 8rpx;
}

.section-subtitle {
  font-size: 24rpx;
  color: #999;
}

.loading-state, .empty-state {
  text-align: center;
  padding: 100rpx 0;
  color: #999;
  font-size: 28rpx;
}

/* 商品网格 */
.product-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 20rpx;
}

.product-card {
  background-color: white;
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 20rpx rgba(0,0,0,0.08);
  transition: transform 0.3s ease, box-shadow 0.3s ease;
}

.product-card:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.15);
}

/* 商品图片 */
.product-image-container {
  position: relative;
  aspect-ratio: 1;
  overflow: hidden;
}

.product-image {
  width: 100%;
  height: 100%;
}

.product-tags {
  position: absolute;
  top: 10rpx;
  left: 10rpx;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.product-tag {
  background-color: rgba(255, 107, 107, 0.9);
  color: white;
  font-size: 20rpx;
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
  font-weight: 500;
}

/* 商品信息 */
.product-info {
  padding: 20rpx;
}

.product-title {
  font-size: 26rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 15rpx;
  line-height: 1.4;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

/* 画师信息 */
.artist-info {
  display: flex;
  align-items: center;
  margin-bottom: 15rpx;
}

.artist-avatar {
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  margin-right: 10rpx;
}

.artist-name {
  font-size: 22rpx;
  color: #666;
  margin-right: auto;
}

.rating {
  display: flex;
  align-items: center;
}

.rating-star {
  width: 20rpx;
  height: 20rpx;
  margin-right: 4rpx;
  position: relative;
}

.rating-star::before {
  content: '';
  position: absolute;
  top: 50%;
  left: 50%;
  width: 18rpx;
  height: 18rpx;
  background-color: #FFD700;
  clip-path: polygon(50% 0%, 61% 35%, 98% 35%, 68% 57%, 79% 91%, 50% 70%, 21% 91%, 32% 57%, 2% 35%, 39% 35%);
  transform: translate(-50%, -50%);
}

.rating-score {
  font-size: 22rpx;
  color: #FF6B6B;
  font-weight: 600;
}

/* 价格信息 */
.price-info {
  display: flex;
  align-items: center;
  margin-bottom: 10rpx;
}

.current-price {
  font-size: 28rpx;
  color: #FF6B6B;
  font-weight: 700;
  margin-right: 10rpx;
}

.original-price {
  font-size: 22rpx;
  color: #999;
  text-decoration: line-through;
  margin-right: 10rpx;
}

.delivery-time {
  font-size: 20rpx;
  color: #A8E6CF;
  background-color: rgba(168, 230, 207, 0.2);
  padding: 4rpx 8rpx;
  border-radius: 8rpx;
}

/* 销量信息 */
.sales-info {
  display: flex;
  justify-content: flex-end;
}

.sales-count {
  font-size: 20rpx;
  color: #999;
}
/* 订单列表页样式 */
.container {
  background-color: #f5f5f5;
  min-height: 100vh;
}

/* 标签栏 */
.tabs {
  background-color: white;
  display: flex;
  padding: 20rpx 30rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
  position: sticky;
  top: 0;
  z-index: 100;
}

.tab-item {
  flex: 1;
  text-align: center;
  padding: 20rpx 0;
  font-size: 28rpx;
  color: #666;
  position: relative;
  transition: all 0.3s ease;
}

.tab-item.active {
  color: #A8E6CF;
  font-weight: 700;
}

.tab-item.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 60rpx;
  height: 4rpx;
  background-color: #A8E6CF;
  border-radius: 2rpx;
}

/* 订单列表 */
.order-list {
  padding: 30rpx;
}

.loading, .empty {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 400rpx;
  color: #999;
  font-size: 28rpx;
}

/* 订单卡片 */
.order-card {
  background-color: white;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
}

.order-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.order-id {
  font-size: 24rpx;
  color: #999;
}

.order-status {
  font-size: 24rpx;
  padding: 6rpx 16rpx;
  border-radius: 15rpx;
  font-weight: 600;
}

.order-status.created {
  background-color: rgba(255, 183, 77, 0.2);
  color: #FFB74D;
}

.order-status.completed {
  background-color: rgba(102, 187, 106, 0.2);
  color: #66BB6A;
}

/* 订单内容 */
.order-content {
  display: flex;
  gap: 20rpx;
  margin-bottom: 20rpx;
}

.product-image {
  width: 150rpx;
  height: 150rpx;
  border-radius: 15rpx;
}

.product-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.product-name {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 10rpx;
}

.product-price {
  font-size: 32rpx;
  color: #FF6B6B;
  font-weight: 700;
  margin-bottom: 10rpx;
}

.product-time, .product-deadline {
  font-size: 22rpx;
  color: #999;
  margin-bottom: 5rpx;
}

/* 订单底部 */
.order-footer {
  display: flex;
  justify-content: flex-end;
  padding-top: 20rpx;
  border-top: 1rpx solid #f0f0f0;
}

.view-detail {
  font-size: 26rpx;
  color: #A8E6CF;
  font-weight: 600;
}

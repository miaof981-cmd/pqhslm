/* 订单列表页样式 */
.container {
  min-height: 100vh;
  background-color: #F5F5F5;
  padding-top: 90rpx;
}

/* Tab栏 */
.tab-bar {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  background: white;
  display: flex;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.06);
  z-index: 100;
}

.tab-item {
  flex: 1;
  padding: 25rpx 0;
  display: flex;
  justify-content: center;
  align-items: center;
  gap: 8rpx;
  position: relative;
}

.tab-text {
  font-size: 28rpx;
  color: #666;
}

.tab-item.active .tab-text {
  color: #A8E6CF;
  font-weight: 600;
}

.tab-item.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 60rpx;
  height: 4rpx;
  background: #A8E6CF;
  border-radius: 2rpx;
}

.tab-badge {
  min-width: 32rpx;
  height: 32rpx;
  padding: 0 8rpx;
  background: #FF6B6B;
  color: white;
  font-size: 20rpx;
  border-radius: 16rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  line-height: 1;
}

.tab-item.active .tab-badge {
  background: #A8E6CF;
}

/* 加载状态 */
.loading {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 400rpx;
  color: #999;
}

/* 订单列表 */
.order-list {
  padding: 20rpx;
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.order-item {
  background: white;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.06);
}

/* 订单头部 */
.order-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 25rpx;
  border-bottom: 1rpx solid #F5F5F5;
}

.order-info {
  display: flex;
  flex-direction: column;
  gap: 6rpx;
}

.order-no {
  font-size: 24rpx;
  color: #666;
}

.order-time {
  font-size: 22rpx;
  color: #999;
}

.order-status {
  font-size: 24rpx;
  padding: 6rpx 16rpx;
  border-radius: 20rpx;
  font-weight: 600;
}

.order-status.status-unpaid {
  background: #FFF3CD;
  color: #856404;
}

.order-status.status-paid {
  background: #D1ECF1;
  color: #0C5460;
}

.order-status.status-processing {
  background: #D4EDDA;
  color: #155724;
}

.order-status.status-completed {
  background: #CCE5FF;
  color: #004085;
}

.order-status.status-refunding {
  background: #FFE5B4;
  color: #856404;
}

.order-status.status-refunded,
.order-status.status-cancelled {
  background: #F8D7DA;
  color: #721C24;
}

/* 商品信息 */
.order-content {
  display: flex;
  gap: 20rpx;
  padding: 25rpx;
}

.product-image {
  width: 150rpx;
  height: 150rpx;
  border-radius: 12rpx;
  background: #F5F5F5;
  flex-shrink: 0;
}

.product-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 10rpx;
  justify-content: space-between;
}

.product-name {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.product-artist {
  font-size: 24rpx;
  color: #999;
}

.product-meta {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.product-delivery {
  font-size: 22rpx;
  color: #666;
  padding: 4rpx 12rpx;
  background: #F5F5F5;
  border-radius: 8rpx;
}

.product-price {
  font-size: 32rpx;
  font-weight: 700;
  color: #E53935;
}

/* 订单时间线 */
.order-timeline {
  padding: 35rpx 30rpx;
  background: linear-gradient(135deg, #E8F5E9 0%, #F1F8F4 100%);
  border-top: 1rpx solid #E8F5E9;
  border-radius: 0 0 20rpx 20rpx;
}

.timeline-row {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.timeline-point {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 12rpx;
  flex: 0 0 auto;
  z-index: 2;
}

.timeline-point.active .point-dot {
  background: linear-gradient(135deg, #66BB6A 0%, #4CAF50 100%);
  box-shadow: 0 6rpx 16rpx rgba(102, 187, 106, 0.4);
  width: 32rpx;
  height: 32rpx;
  border-width: 5rpx;
}

.point-dot {
  width: 28rpx;
  height: 28rpx;
  border-radius: 50%;
  background: #E0E0E0;
  border: 4rpx solid #fff;
  box-shadow: 0 3rpx 10rpx rgba(0, 0, 0, 0.15);
  transition: all 0.3s;
}

.point-label {
  font-size: 24rpx;
  color: #333;
  font-weight: 600;
}

.timeline-point.active .point-label {
  color: #4CAF50;
}

.point-time {
  font-size: 22rpx;
  color: #666;
  text-align: center;
  max-width: 160rpx;
  font-weight: 500;
  line-height: 1.4;
}

.timeline-line {
  flex: 1;
  height: 6rpx;
  background: linear-gradient(90deg, #66BB6A 0%, #A8D5A8 40%, #E0E0E0 60%, #E0E0E0 100%);
  margin: 0 24rpx;
  position: relative;
  top: -42rpx;
  border-radius: 3rpx;
  box-shadow: 0 2rpx 6rpx rgba(102, 187, 106, 0.2);
}

/* 订单操作 */
.order-actions {
  display: flex;
  justify-content: flex-end;
  gap: 15rpx;
  padding: 20rpx 25rpx;
  border-top: 1rpx solid #F5F5F5;
}

.action-btn {
  font-size: 24rpx;
  padding: 12rpx 28rpx;
  border-radius: 25rpx;
  border: none;
  line-height: 1.5;
  font-weight: 600;
}

.action-btn.default {
  background: #F5F5F5;
  color: #666;
}

.action-btn.primary {
  background: linear-gradient(135deg, #A8E6CF 0%, #D0F0C0 100%);
  color: white;
}

.action-btn.warning {
  background: #FFE5B4;
  color: #856404;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 150rpx 0;
  gap: 30rpx;
}

.empty-icon {
  width: 200rpx;
  height: 200rpx;
  background: #F5F5F5;
  border-radius: 50%;
  position: relative;
}

.empty-icon::before {
  content: '';
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 100rpx;
  height: 100rpx;
  border: 6rpx solid #E0E0E0;
  border-radius: 12rpx;
}

.empty-icon::after {
  content: '';
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%) rotate(45deg);
  width: 60rpx;
  height: 6rpx;
  background: #E0E0E0;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
}

.go-shopping-btn {
  padding: 15rpx 50rpx;
  background: linear-gradient(135deg, #A8E6CF 0%, #D0F0C0 100%);
  color: white;
  border-radius: 50rpx;
  font-size: 26rpx;
  border: none;
  line-height: 1.5;
}

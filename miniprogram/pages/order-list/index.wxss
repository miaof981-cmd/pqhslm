/* 引入通用订单进度条样式 */
@import "../../styles/order-progress.wxss";
/* 引入鎏金流动光效样式 */
@import "../../styles/golden-glow.wxss";

/* 订单列表页样式 */
.container {
  min-height: 100vh;
  background: linear-gradient(180deg, #E8F5E9 0%, #F1F8F4 50%, #FAFFFE 100%);
  padding-top: 90rpx;
}

/* Tab栏 */
.tab-bar {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  background: white;
  display: flex;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.06);
  z-index: 100;
}

.tab-item {
  flex: 1;
  padding: 25rpx 0;
  display: flex;
  justify-content: center;
  align-items: center;
  gap: 8rpx;
  position: relative;
}

.tab-text {
  font-size: 28rpx;
  color: #666;
}

.tab-item.active .tab-text {
  color: #A8E6CF;
  font-weight: 600;
}

.tab-item.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 60rpx;
  height: 4rpx;
  background: #A8E6CF;
  border-radius: 2rpx;
}

.tab-badge {
  min-width: 32rpx;
  height: 32rpx;
  padding: 0 8rpx;
  background: #FF6B6B;
  color: white;
  font-size: 20rpx;
  border-radius: 16rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  line-height: 1;
}

.tab-item.active .tab-badge {
  background: #A8E6CF;
}

/* 加载状态 */
.loading {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 400rpx;
  color: #999;
}

/* 订单列表 */
.order-list {
  padding: 20rpx;
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.order-item {
  background: white;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.06);
}

/* 订单头部 */
.order-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 25rpx;
  border-bottom: 1rpx solid #F5F5F5;
}

.order-info {
  display: flex;
  flex-direction: column;
  gap: 6rpx;
}

.order-no {
  font-size: 24rpx;
  color: #666;
}

.order-time {
  font-size: 22rpx;
  color: #999;
}

.order-status {
  font-size: 24rpx;
  padding: 6rpx 16rpx;
  border-radius: 20rpx;
  font-weight: 600;
}

.order-status.status-unpaid {
  background: #FFF3CD;
  color: #856404;
}

.order-status.status-paid {
  background: #D1ECF1;
  color: #0C5460;
}

.order-status.status-processing,
.order-status.status-inProgress {
  background: #D4EDDA;
  color: #155724;
}

.order-status.status-nearDeadline {
  background: #FFE5CC;
  color: #CC6600;
}

.order-status.status-overdue {
  background: #FFD6D6;
  color: #CC0000;
}

.order-status.status-waitingConfirm {
  background: linear-gradient(135deg, #FFF8E1 0%, #FFE082 100%);
  color: #F57C00;
  font-weight: 700;
}

.order-status.status-completed {
  background: #CCE5FF;
  color: #004085;
}

.order-status.status-refunding {
  background: #FFE5B4;
  color: #856404;
}

.order-status.status-refunded,
.order-status.status-cancelled {
  background: #F8D7DA;
  color: #721C24;
}

/* 订单进度条 - 为本页面添加左右边距 */
.order-item .order-progress-section {
  margin-left: 20rpx;
  margin-right: 20rpx;
}

/* 商品信息 */
.order-content {
  display: flex;
  gap: 20rpx;
  padding: 25rpx;
}

.product-image-wrapper {
  width: 150rpx;
  height: 150rpx;
  flex-shrink: 0;
}

.product-image {
  width: 100%;
  height: 100%;
  border-radius: 12rpx;
  background: #F5F5F5;
}

.product-image-placeholder {
  width: 100%;
  height: 100%;
  border-radius: 12rpx;
  background: linear-gradient(135deg, #E8F5E9 0%, #C8E6C9 100%);
  display: flex;
  justify-content: center;
  align-items: center;
}

.placeholder-text {
  font-size: 22rpx;
  color: #81C784;
}

.product-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 10rpx;
  justify-content: space-between;
}

.product-name {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.product-artist {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 4rpx;
}

.product-meta {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.product-delivery {
  font-size: 22rpx;
  color: #666;
  padding: 4rpx 12rpx;
  background: #F5F5F5;
  border-radius: 8rpx;
}

.product-price {
  font-size: 32rpx;
  font-weight: 700;
  color: #E53935;
}

/* 订单时间线 */
.order-timeline {
  padding: 35rpx 30rpx;
  background: linear-gradient(135deg, #E8F5E9 0%, #F1F8F4 100%);
  border-top: 1rpx solid #E8F5E9;
  border-radius: 0 0 20rpx 20rpx;
}

.timeline-row {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.timeline-point {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 12rpx;
  flex: 0 0 auto;
  z-index: 2;
}

.timeline-point.active .point-dot {
  background: linear-gradient(135deg, #66BB6A 0%, #4CAF50 100%);
  box-shadow: 0 6rpx 16rpx rgba(102, 187, 106, 0.4);
  width: 32rpx;
  height: 32rpx;
  border-width: 5rpx;
}

.point-dot {
  width: 28rpx;
  height: 28rpx;
  border-radius: 50%;
  background: #E0E0E0;
  border: 4rpx solid #fff;
  box-shadow: 0 3rpx 10rpx rgba(0, 0, 0, 0.15);
  transition: all 0.3s;
}

.point-label {
  font-size: 24rpx;
  color: #333;
  font-weight: 600;
}

.timeline-point.active .point-label {
  color: #4CAF50;
}

.point-time {
  font-size: 22rpx;
  color: #666;
  text-align: center;
  max-width: 160rpx;
  font-weight: 500;
  line-height: 1.4;
}

.timeline-line {
  flex: 1;
  height: 6rpx;
  background: linear-gradient(90deg, #66BB6A 0%, #A8D5A8 40%, #E0E0E0 60%, #E0E0E0 100%);
  margin: 0 24rpx;
  position: relative;
  top: -42rpx;
  border-radius: 3rpx;
  box-shadow: 0 2rpx 6rpx rgba(102, 187, 106, 0.2);
}

/* 人员信息区域（画师、客服） */
.order-people-row {
  display: flex;
  align-items: center;
  justify-content: space-around;
  padding: 20rpx 30rpx;
  background: rgba(255, 255, 255, 0.5);
  border-top: 1rpx solid rgba(168, 230, 207, 0.15);
}

.people-item {
  display: flex;
  align-items: center;
  gap: 10rpx;
  flex: 1;
  justify-content: center;
}

.people-label {
  font-size: 22rpx;
  color: #999;
  margin-right: 4rpx;
}

.people-avatar-small {
  width: 48rpx;
  height: 48rpx;
  border-radius: 50%;
  border: 2rpx solid rgba(168, 230, 207, 0.3);
}

.people-name-compact {
  font-size: 24rpx;
  color: #666;
  max-width: 120rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.people-divider-compact {
  width: 1rpx;
  height: 30rpx;
  background: rgba(168, 230, 207, 0.25);
}

/* 订单操作 */
.order-actions {
  display: flex;
  justify-content: flex-end;
  gap: 15rpx;
  padding: 20rpx 25rpx;
  border-top: 1rpx solid #F5F5F5;
}

.action-btn {
  font-size: 24rpx;
  padding: 12rpx 28rpx;
  border-radius: 25rpx;
  border: none;
  line-height: 1.5;
  font-weight: 600;
}

.action-btn.default {
  background: #F5F5F5;
  color: #666;
}

.action-btn.primary {
  background: linear-gradient(135deg, #A8E6CF 0%, #D0F0C0 100%);
  color: white;
}

.action-btn.warning {
  background: #FFE5B4;
  color: #856404;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 150rpx 0;
  gap: 30rpx;
}

.empty-icon {
  width: 200rpx;
  height: 200rpx;
  background: #F5F5F5;
  border-radius: 50%;
  position: relative;
}

.empty-icon::before {
  content: '';
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 100rpx;
  height: 100rpx;
  border: 6rpx solid #E0E0E0;
  border-radius: 12rpx;
}

.empty-icon::after {
  content: '';
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%) rotate(45deg);
  width: 60rpx;
  height: 6rpx;
  background: #E0E0E0;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
}

.go-shopping-btn {
  padding: 15rpx 50rpx;
  background: linear-gradient(135deg, #A8E6CF 0%, #D0F0C0 100%);
  color: white;
  border-radius: 50rpx;
  font-size: 26rpx;
  border: none;
  line-height: 1.5;
}

/* 二维码弹窗 */
.qr-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.6);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 9999;
}

.qr-modal-content {
  width: 600rpx;
  background: #fff;
  border-radius: 24rpx;
  overflow: hidden;
  animation: modalSlideIn 0.3s ease;
}

@keyframes modalSlideIn {
  from {
    transform: translateY(100rpx);
    opacity: 0;
  }
  to {
    transform: translateY(0);
    opacity: 1;
  }
}

.qr-modal-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 32rpx;
  border-bottom: 1rpx solid #F0F0F0;
}

.qr-modal-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.qr-modal-close {
  width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 36rpx;
  color: #999;
  background: #F5F5F5;
  border-radius: 50%;
  transition: all 0.2s;
}

.qr-modal-close:active {
  background: #E0E0E0;
  transform: scale(0.9);
}

.qr-modal-body {
  padding: 48rpx 32rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.qr-modal-image {
  width: 400rpx;
  height: 400rpx;
  border-radius: 16rpx;
  background: #F5F5F5;
  margin-bottom: 32rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
}

.qr-modal-hint {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 12rpx;
  text-align: center;
}

.qr-modal-desc {
  font-size: 24rpx;
  color: #999;
  text-align: center;
  line-height: 1.6;
}

/* ========================
   待确认提示卡片（代替进度条）
   ======================== */
.order-waiting-hint {
  margin: 20rpx;
  padding: 24rpx;
  background: linear-gradient(135deg, #E8F5E9 0%, #F1F8F4 100%);
  border-radius: 16rpx;
  border: 2rpx solid #A8E6CF;
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.waiting-hint-icon {
  width: 64rpx;
  height: 64rpx;
  background: linear-gradient(135deg, #A8E6CF 0%, #7ED6B0 100%);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 40rpx;
  color: white;
  font-weight: bold;
  flex-shrink: 0;
}

.waiting-hint-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.waiting-hint-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #2D5940;
  line-height: 1.3;
}

.waiting-hint-desc {
  font-size: 24rpx;
  color: #5A8B6F;
  line-height: 1.5;
}

/* ========================
   确认按钮流光特效（外圈光晕）
   ======================== */
.btn-with-glow {
  position: relative;
  z-index: 1;
}

/* 流光外圈（使用伪元素，不影响布局） */
.btn-with-glow::before {
  content: '';
  position: absolute;
  top: -4rpx;
  left: -4rpx;
  right: -4rpx;
  bottom: -4rpx;
  border-radius: 12rpx;
  background: linear-gradient(90deg, 
    #A8E6CF 0%, 
    #7ED6B0 25%, 
    #A8E6CF 50%, 
    #7ED6B0 75%, 
    #A8E6CF 100%);
  background-size: 300% 100%;
  animation: flowing-glow 3s linear infinite;
  opacity: 0.8;
  z-index: -1;
  box-shadow: 0 0 20rpx rgba(126, 214, 176, 0.5),
              0 0 40rpx rgba(126, 214, 176, 0.3);
}

@keyframes flowing-glow {
  0% {
    background-position: 0% 0%;
  }
  100% {
    background-position: 300% 0%;
  }
}

/* 按钮本身保持原样式，无需额外修改 */

.container {
  background-color: #f5f5f5;
  min-height: 100vh;
  padding: 30rpx;
}

.category-list {
  background-color: white;
  border-radius: 20rpx;
  overflow: hidden;
}

.category-item {
  padding: 40rpx 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.category-item:last-child {
  border-bottom: none;
}

.category-name {
  font-size: 28rpx;
  color: #333;
  font-weight: 600;
}

.category-count {
  font-size: 24rpx;
  color: #999;
}

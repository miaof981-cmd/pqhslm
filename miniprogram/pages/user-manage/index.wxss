/* ÂÆπÂô® */
.container {
  min-height: 100vh;
  background: linear-gradient(180deg, #E6FFEB 0%, #F0F9FF 100%);
}

/* Â§¥ÈÉ® */
.header {
  background: linear-gradient(135deg, #4CAF50, #66BB6A);
  padding: 60rpx 40rpx 80rpx;
  text-align: center;
  position: relative;
}

.header::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  height: 40rpx;
  background: linear-gradient(180deg, #E6FFEB 0%, #F0F9FF 100%);
  border-radius: 40rpx 40rpx 0 0;
}

.header-title {
  font-size: 48rpx;
  font-weight: bold;
  color: white;
  margin-bottom: 16rpx;
  text-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.header-subtitle {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.9);
}

/* ÂÜÖÂÆπÂå∫ */
.content {
  padding: 0 30rpx 40rpx;
  margin-top: -20rpx;
}

/* ÊêúÁ¥¢Âå∫Âüü */
.search-section {
  margin-bottom: 30rpx;
}

.search-box {
  display: flex;
  gap: 20rpx;
  background: white;
  padding: 20rpx;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.06);
}

.search-input {
  flex: 1;
  height: 80rpx;
  background: #F8F8F8;
  border-radius: 12rpx;
  padding: 0 24rpx;
  font-size: 28rpx;
}

.search-btn {
  width: 160rpx;
  height: 80rpx;
  background: linear-gradient(135deg, #4CAF50, #66BB6A);
  color: white;
  font-size: 28rpx;
  font-weight: bold;
  border-radius: 12rpx;
  border: none;
  line-height: 80rpx;
  padding: 0;
}

/* Áî®Êà∑Âç°Áâá */
.user-card {
  background: white;
  border-radius: 24rpx;
  padding: 40rpx;
  box-shadow: 0 6rpx 24rpx rgba(0, 0, 0, 0.08);
  margin-bottom: 30rpx;
}

.user-header {
  display: flex;
  align-items: center;
  gap: 24rpx;
  margin-bottom: 30rpx;
  padding-bottom: 30rpx;
  border-bottom: 2rpx solid #F0F0F0;
}

.user-avatar {
  width: 100rpx;
  height: 100rpx;
  background: linear-gradient(135deg, #4CAF50, #66BB6A);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 48rpx;
  color: white;
  font-weight: bold;
}

.user-info {
  flex: 1;
}

.user-name {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
}

.user-id {
  font-size: 24rpx;
  color: #999;
}

/* Áî®Êà∑ËØ¶ÊÉÖ */
.user-detail {
  margin-bottom: 30rpx;
}

.detail-item {
  display: flex;
  padding: 16rpx 0;
  font-size: 26rpx;
}

.detail-label {
  color: #666;
  width: 160rpx;
}

.detail-value {
  flex: 1;
  color: #333;
  font-weight: 500;
}

/* ÊùÉÈôêÂå∫Âüü */
.permission-section {
  margin-bottom: 30rpx;
}

.section-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  padding-left: 16rpx;
  border-left: 6rpx solid #4CAF50;
}

.role-list {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
}

.role-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 12rpx;
  padding: 30rpx 20rpx;
  background: #F8F8F8;
  border-radius: 16rpx;
  border: 3rpx solid transparent;
  transition: all 0.3s;
  position: relative;
}

.role-item.active {
  background: linear-gradient(135deg, #E8F5E9, #C8E6C9);
  border-color: #4CAF50;
  box-shadow: 0 4rpx 12rpx rgba(76, 175, 80, 0.2);
}

.role-icon {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  background: #D0D0D0;
  position: relative;
}

.role-item.active .role-icon {
  background: #4CAF50;
}

.role-icon.customer::before {
  content: 'üë§';
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  font-size: 32rpx;
}

.role-icon.artist::before {
  content: 'üé®';
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  font-size: 32rpx;
}

.role-icon.service::before {
  content: 'üí¨';
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  font-size: 32rpx;
}

.role-icon.admin::before {
  content: '‚öôÔ∏è';
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  font-size: 32rpx;
}

.role-name {
  font-size: 26rpx;
  color: #666;
  font-weight: 500;
}

.role-item.active .role-name {
  color: #4CAF50;
  font-weight: bold;
}

.role-check {
  position: absolute;
  top: 10rpx;
  right: 10rpx;
  width: 32rpx;
  height: 32rpx;
  background: #4CAF50;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.role-check::after {
  content: '';
  width: 16rpx;
  height: 10rpx;
  border-left: 3rpx solid white;
  border-bottom: 3rpx solid white;
  transform: rotate(-45deg) translateY(-2rpx);
}

/* Êìç‰ΩúÊåâÈíÆ */
.action-buttons {
  display: flex;
  gap: 20rpx;
}

.action-btn {
  flex: 1;
  height: 88rpx;
  border-radius: 16rpx;
  font-size: 30rpx;
  font-weight: bold;
  border: none;
  line-height: 88rpx;
  padding: 0;
}

.action-btn.save {
  background: linear-gradient(135deg, #4CAF50, #66BB6A);
  color: white;
  box-shadow: 0 6rpx 20rpx rgba(76, 175, 80, 0.3);
}

.action-btn.reset {
  background: #F5F5F5;
  color: #666;
}

/* Á©∫Áä∂ÊÄÅ */
.empty-state {
  background: white;
  border-radius: 24rpx;
  padding: 100rpx 40rpx;
  text-align: center;
  box-shadow: 0 6rpx 24rpx rgba(0, 0, 0, 0.08);
  margin-bottom: 30rpx;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 30rpx;
  opacity: 0.5;
}

.empty-text {
  font-size: 30rpx;
  color: #666;
  margin-bottom: 16rpx;
}

.empty-hint {
  font-size: 24rpx;
  color: #999;
  line-height: 1.6;
}

/* ÊúÄËøëÊìç‰ΩúËÆ∞ÂΩï */
.recent-section {
  background: white;
  border-radius: 24rpx;
  padding: 40rpx;
  box-shadow: 0 6rpx 24rpx rgba(0, 0, 0, 0.08);
}

.log-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.log-item {
  padding: 20rpx;
  background: #F8F8F8;
  border-radius: 12rpx;
  border-left: 6rpx solid #4CAF50;
}

.log-time {
  font-size: 22rpx;
  color: #999;
  margin-bottom: 8rpx;
}

.log-content {
  font-size: 26rpx;
  color: #333;
  line-height: 1.6;
}

.empty-logs {
  text-align: center;
  padding: 60rpx 0;
  font-size: 26rpx;
  color: #999;
}

/* üé® ÂÆπÂô® */
.container {
  min-height: 100vh;
  background: linear-gradient(180deg, #E8F5E9 0%, #F0FFF4 50%, #FAFFFE 100%);
  padding-bottom: 40rpx;
}

/* üé® È°∂ÈÉ®Ê†áÈ¢ò */
.header {
  background: linear-gradient(135deg, #A8E6CF 0%, #7EC8A3 100%);
  padding: 60rpx 40rpx 80rpx;
  text-align: center;
  position: relative;
  box-shadow: 0 4rpx 20rpx rgba(168, 230, 207, 0.3);
}

.header::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  height: 40rpx;
  background: linear-gradient(180deg, #E8F5E9 0%, #F0FFF4 100%);
  border-radius: 40rpx 40rpx 0 0;
}

.header-title {
  font-size: 52rpx;
  font-weight: bold;
  color: white;
  margin-bottom: 12rpx;
  text-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.header-subtitle {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.95);
  font-weight: 500;
}

/* üé® Âä†ËΩΩÁä∂ÊÄÅ */
.loading {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 400rpx;
  color: #999;
  font-size: 28rpx;
}

/* üé® ÂÜÖÂÆπÂå∫ */
.content {
  padding: 0 30rpx;
  margin-top: -20rpx;
}

/* üìä ÁªüËÆ°Âç°Áâá */
.stats-section {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
  margin-bottom: 30rpx;
}

.stat-card {
  background: linear-gradient(135deg, #FFFFFF 0%, #F8FFF9 100%);
  border-radius: 20rpx;
  padding: 32rpx 24rpx;
  text-align: center;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.06);
  border: 2rpx solid rgba(168, 230, 207, 0.3);
  transition: transform 0.2s ease;
}

.stat-card:active {
  transform: scale(0.98);
}

.stat-value {
  font-size: 42rpx;
  font-weight: bold;
  color: #2E7D32;
  margin-bottom: 8rpx;
  line-height: 1;
}

.stat-label {
  font-size: 24rpx;
  color: #666;
  font-weight: 500;
}

/* üîç Â∑•ÂÖ∑Ê†è */
.toolbar {
  background: white;
  border-radius: 20rpx;
  padding: 24rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.06);
}

.search-box {
  display: flex;
  align-items: center;
  background: #F8F8F8;
  border-radius: 12rpx;
  padding: 0 20rpx;
  height: 80rpx;
  margin-bottom: 20rpx;
}

.search-icon {
  font-size: 32rpx;
  margin-right: 12rpx;
}

.search-input {
  flex: 1;
  font-size: 28rpx;
  color: #333;
}

.sort-buttons {
  display: flex;
  gap: 12rpx;
}

.sort-btn {
  flex: 1;
  height: 64rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #F5F5F5;
  border-radius: 10rpx;
  font-size: 26rpx;
  color: #666;
  font-weight: 500;
  transition: all 0.2s ease;
  gap: 4rpx;
}

.sort-btn.active {
  background: linear-gradient(135deg, #A8E6CF 0%, #7EC8A3 100%);
  color: white;
  font-weight: 600;
  box-shadow: 0 4rpx 12rpx rgba(168, 230, 207, 0.4);
}

.sort-arrow {
  font-size: 24rpx;
  font-weight: bold;
}

/* üë• Áî®Êà∑ÂàóË°® */
.user-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.user-card {
  background: white;
  border-radius: 20rpx;
  padding: 28rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.06);
  transition: all 0.2s ease;
  border: 2rpx solid transparent;
}

.user-card:active {
  transform: scale(0.98);
  border-color: #A8E6CF;
  box-shadow: 0 8rpx 24rpx rgba(168, 230, 207, 0.3);
}

/* Áî®Êà∑Â§¥ÈÉ® */
.user-header {
  display: flex;
  align-items: center;
  gap: 20rpx;
  margin-bottom: 24rpx;
  padding-bottom: 20rpx;
  border-bottom: 2rpx solid #F0F0F0;
}

.user-avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  flex-shrink: 0;
  background: linear-gradient(135deg, #A8E6CF 0%, #7EC8A3 100%);
  box-shadow: 0 4rpx 12rpx rgba(168, 230, 207, 0.3);
}

.user-avatar.default {
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 48rpx;
  font-weight: bold;
  color: white;
}

.user-info {
  flex: 1;
  min-width: 0;
}

.user-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.user-id {
  display: flex;
  align-items: center;
  gap: 12rpx;
  font-size: 24rpx;
  color: #999;
}

.copy-btn {
  padding: 4rpx 12rpx;
  background: linear-gradient(135deg, #E8F5E9 0%, #C8E6C9 100%);
  color: #2E7D32;
  border-radius: 6rpx;
  font-size: 22rpx;
  font-weight: 600;
  transition: all 0.2s ease;
}

.copy-btn:active {
  transform: scale(0.95);
  background: linear-gradient(135deg, #C8E6C9 0%, #A8E6CF 100%);
}

.user-rank {
  font-size: 40rpx;
}

/* Áî®Êà∑ÁªüËÆ° */
.user-stats {
  display: flex;
  align-items: center;
  justify-content: space-around;
  padding: 20rpx 0;
  background: linear-gradient(135deg, #F8FFF9 0%, #E8F5E9 100%);
  border-radius: 12rpx;
  margin-bottom: 16rpx;
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 6rpx;
}

.stat-label-small {
  font-size: 22rpx;
  color: #666;
}

.stat-value-small {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
}

.stat-value-small.highlight {
  color: #2E7D32;
  font-size: 32rpx;
}

.stat-divider {
  width: 2rpx;
  height: 40rpx;
  background: #D0D0D0;
}

/* Áî®Êà∑Â∫ïÈÉ® */
.user-footer {
  padding-top: 16rpx;
  border-top: 2rpx dashed #F0F0F0;
}

.time-info {
  display: flex;
  align-items: center;
  font-size: 24rpx;
  color: #666;
}

.time-label {
  margin-right: 8rpx;
}

.time-value {
  color: #999;
}

/* üì≠ Á©∫Áä∂ÊÄÅ */
.empty-state {
  background: white;
  border-radius: 24rpx;
  padding: 100rpx 40rpx;
  text-align: center;
  box-shadow: 0 6rpx 24rpx rgba(0, 0, 0, 0.08);
  margin-top: 40rpx;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 30rpx;
  opacity: 0.5;
}

.empty-text {
  font-size: 30rpx;
  color: #666;
  margin-bottom: 16rpx;
  font-weight: 500;
}

.empty-hint {
  font-size: 24rpx;
  color: #999;
  line-height: 1.6;
}

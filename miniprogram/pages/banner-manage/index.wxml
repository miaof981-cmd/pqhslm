<view class="container">
  <view wx:if="{{loading}}" class="loading">
    <text>加载中...</text>
  </view>
  
  <view wx:else>
    <view class="header-bar">
      <text class="page-title">轮播图管理</text>
      <button class="add-btn" bindtap="showAddModal">+ 添加轮播图</button>
    </view>
    
    <view class="list">
      <view wx:for="{{items}}" wx:key="id" class="list-item">
        <image class="item-thumb" src="{{item.image}}" mode="aspectFill"></image>
        <text class="item-title">{{item.title || item.name}}</text>
        <view class="item-actions">
          <button class="action-btn delete" bindtap="deleteItem" data-id="{{item.id}}">删除</button>
        </view>
      </view>
    </view>
  </view>
</view>
.container {
  min-height: 100vh;
  background: #F5F5F5;
  padding-bottom: 120rpx;
}

.loading {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 100vh;
  font-size: 28rpx;
  color: #999;
}

.detail-page {
  background: white;
}

/* ===== 图片轮播 ===== */
.image-swiper {
  width: 100%;
  height: 750rpx;
  background: white;
}

.swiper-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

/* ===== 价格区域 ===== */
.price-section {
  background: white;
  padding: 24rpx 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1rpx solid #F0F0F0;
}

.price-row {
  display: flex;
  align-items: baseline;
  gap: 4rpx;
}

.price-symbol {
  font-size: 32rpx;
  color: #FF6B6B;
  font-weight: bold;
}

.price-value {
  font-size: 56rpx;
  color: #FF6B6B;
  font-weight: bold;
  line-height: 1;
}

.price-suffix {
  font-size: 24rpx;
  color: #FF6B6B;
  margin-left: 8rpx;
}

.sales-info {
  font-size: 24rpx;
  color: #999;
}

/* ===== 标题区域 ===== */
.title-section {
  background: white;
  padding: 24rpx 30rpx;
  border-bottom: 1rpx solid #F0F0F0;
}

.product-name {
  font-size: 32rpx;
  color: #333;
  line-height: 1.6;
  font-weight: 500;
  margin-bottom: 16rpx;
}

.tags {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
}

.tag {
  padding: 6rpx 16rpx;
  background: linear-gradient(135deg, #FFF5E6 0%, #FFE6E6 100%);
  color: #FF6B6B;
  font-size: 22rpx;
  border-radius: 4rpx;
  border: 1rpx solid #FFD7D7;
}

/* ===== 基础信息 ===== */
.info-section {
  background: white;
  margin-top: 16rpx;
}

.info-row {
  display: flex;
  align-items: center;
  padding: 28rpx 30rpx;
  border-bottom: 1rpx solid #F0F0F0;
}

.info-row:last-child {
  border-bottom: none;
}

.info-label {
  font-size: 28rpx;
  color: #666;
  width: 160rpx;
  flex-shrink: 0;
}

.info-value {
  flex: 1;
  font-size: 28rpx;
  color: #333;
}

.arrow {
  font-size: 32rpx;
  color: #CCC;
  font-weight: 300;
}

/* ===== 商品详情 ===== */
.detail-section {
  background: white;
  margin-top: 16rpx;
  padding: 30rpx;
}

.section-title {
  font-size: 32rpx;
  color: #333;
  font-weight: bold;
  margin-bottom: 24rpx;
  padding-bottom: 16rpx;
  border-bottom: 2rpx solid #F0F0F0;
}

.detail-content {
  line-height: 1.8;
}

.detail-text {
  font-size: 28rpx;
  color: #666;
  line-height: 1.8;
  display: block;
  margin-bottom: 24rpx;
}

.detail-images {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.detail-image {
  width: 100%;
  border-radius: 12rpx;
  display: block;
}

/* ===== 底部操作栏 ===== */
.bottom-placeholder {
  height: 120rpx;
}

.bottom-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 120rpx;
  background: white;
  display: flex;
  align-items: center;
  padding: 16rpx 30rpx;
  box-shadow: 0 -4rpx 20rpx rgba(0, 0, 0, 0.05);
  z-index: 100;
}

.service-btn {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 0 24rpx;
  margin-right: 20rpx;
  position: relative;
}

/* 客服图标容器 */
.service-icon-wrapper {
  width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 6rpx;
}

/* 聊天气泡 */
.chat-bubble {
  width: 44rpx;
  height: 36rpx;
  background: linear-gradient(135deg, #4ECDC4 0%, #44BDB5 100%);
  border-radius: 20rpx 20rpx 20rpx 4rpx;
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 4rpx;
  box-shadow: 0 4rpx 12rpx rgba(78, 205, 196, 0.3);
  animation: bubble-float 2s ease-in-out infinite;
}

/* 气泡内的三个点 */
.bubble-dot {
  width: 6rpx;
  height: 6rpx;
  background: white;
  border-radius: 50%;
  animation: dot-bounce 1.4s ease-in-out infinite;
}

.bubble-dot:nth-child(1) {
  animation-delay: 0s;
}

.bubble-dot:nth-child(2) {
  animation-delay: 0.2s;
}

.bubble-dot:nth-child(3) {
  animation-delay: 0.4s;
}

/* 气泡浮动动画 */
@keyframes bubble-float {
  0%, 100% {
    transform: translateY(0);
  }
  50% {
    transform: translateY(-4rpx);
  }
}

/* 点跳动动画 */
@keyframes dot-bounce {
  0%, 60%, 100% {
    transform: scale(1);
    opacity: 1;
  }
  30% {
    transform: scale(1.3);
    opacity: 0.8;
  }
}

.service-text {
  font-size: 22rpx;
  color: #4ECDC4;
  font-weight: 500;
}

.cart-btn {
  flex: 1;
  height: 88rpx;
  background: linear-gradient(135deg, #FFB74D 0%, #FFA726 100%);
  color: white;
  font-size: 28rpx;
  font-weight: bold;
  border-radius: 44rpx;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
  line-height: 1;
}

.buy-btn {
  flex: 1;
  height: 88rpx;
  background: linear-gradient(135deg, #A8E6CF 0%, #88D4AB 100%);
  color: white;
  font-size: 32rpx;
  font-weight: bold;
  border-radius: 44rpx;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
  line-height: 1;
}

/* ===== 客服弹窗 ===== */
.modal-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.6);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

.modal-content {
  width: 600rpx;
  background: white;
  border-radius: 24rpx;
  padding: 50rpx 40rpx 40rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.modal-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 30rpx;
}

.qr-image {
  width: 400rpx;
  height: 400rpx;
  border: 1rpx solid #F0F0F0;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
}

.qr-hint {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 30rpx;
}

.qr-placeholder {
  width: 100%;
  min-height: 260rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
}

.qr-placeholder-text {
  font-size: 30rpx;
  color: #444;
  font-weight: 600;
}

.qr-placeholder-hint {
  font-size: 26rpx;
  color: #999;
}

.modal-close {
  width: 100%;
  height: 80rpx;
  background: #F5F5F5;
  color: #666;
  font-size: 28rpx;
  border-radius: 12rpx;
  border: none;
  line-height: 80rpx;
}

/* ===== 购买弹窗 ===== */
.buy-modal-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.6);
  z-index: 1001;
  display: flex;
  align-items: flex-end;
}

.buy-modal-content {
  width: 100%;
  max-height: 80vh;
  background: white;
  border-radius: 32rpx 32rpx 0 0;
  display: flex;
  flex-direction: column;
  animation: slide-up 0.3s ease-out;
}

@keyframes slide-up {
  from {
    transform: translateY(100%);
  }
  to {
    transform: translateY(0);
  }
}

/* 弹窗头部 */
.buy-modal-header {
  display: flex;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #F0F0F0;
  position: relative;
}

.buy-modal-image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 12rpx;
  margin-right: 20rpx;
}

.buy-modal-info {
  flex: 1;
}

.buy-modal-price {
  font-size: 40rpx;
  font-weight: bold;
  color: #FF6B6B;
  margin-bottom: 8rpx;
}

.buy-modal-stock {
  font-size: 24rpx;
  color: #999;
}

.selected-specs {
  margin-top: 8rpx;
  padding: 8rpx 16rpx;
  background: linear-gradient(135deg, #E8F5E9 0%, #C8E6C9 100%);
  border-radius: 8rpx;
  font-size: 22rpx;
  display: flex;
  align-items: center;
}

.specs-label {
  color: #4CAF50;
  font-weight: bold;
  margin-right: 8rpx;
}

.specs-text {
  color: #2E7D32;
  font-weight: 500;
  flex: 1;
}

.buy-modal-close {
  width: 48rpx;
  height: 48rpx;
  background: #F5F5F5;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 48rpx;
  color: #999;
  line-height: 1;
  font-weight: 300;
}

/* 弹窗主体 */
.buy-modal-body {
  flex: 1;
  overflow-y: auto;
  padding: 30rpx;
}

/* 规格选择 */
.spec-section {
  margin-bottom: 40rpx;
}

.spec-title {
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 20rpx;
}

.spec-options {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.spec-option {
  min-width: 120rpx;
  padding: 16rpx 24rpx;
  background: #F8F8F8;
  border: 2rpx solid #F8F8F8;
  border-radius: 12rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
  transition: all 0.3s;
}

.spec-option.selected {
  background: #E6F9FF;
  border-color: #4ECDC4;
}

.spec-image {
  width: 60rpx;
  height: 60rpx;
  border-radius: 8rpx;
}

.spec-name {
  font-size: 26rpx;
  color: #333;
}

.spec-price {
  font-size: 24rpx;
  color: #FF6B6B;
  font-weight: 500;
}

/* 数量选择 */
.quantity-section {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 0;
}

.quantity-title {
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
}

.quantity-controls {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.quantity-btn {
  width: 56rpx;
  height: 56rpx;
  background: #F5F5F5;
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  color: #333;
  font-weight: 500;
}

.quantity-btn.disabled {
  opacity: 0.3;
}

.quantity-input {
  width: 80rpx;
  height: 56rpx;
  text-align: center;
  background: #F8F8F8;
  border-radius: 8rpx;
  font-size: 28rpx;
}

/* 弹窗底部 */
.buy-modal-footer {
  padding: 24rpx 30rpx;
  background: white;
  border-top: 1rpx solid #F0F0F0;
  display: flex;
  align-items: center;
  gap: 20rpx;
  box-shadow: 0 -4rpx 20rpx rgba(0, 0, 0, 0.05);
}

.total-price {
  flex: 1;
}

.total-label {
  font-size: 26rpx;
  color: #666;
}

.total-value {
  font-size: 40rpx;
  font-weight: bold;
  color: #FF6B6B;
  margin-left: 8rpx;
}

.confirm-buy-btn {
  flex: 1;
  height: 88rpx;
  background: linear-gradient(135deg, #A8E6CF 0%, #88D4AB 100%);
  color: white;
  font-size: 32rpx;
  font-weight: bold;
  border-radius: 44rpx;
  border: none;
  line-height: 88rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.confirm-buy-btn.disabled {
  background: #E0E0E0;
  color: #999;
}

.btn-text {
  display: flex;
  align-items: center;
  justify-content: center;
  flex-wrap: wrap;
  gap: 8rpx;
  line-height: 1.5;
}

.btn-spec {
  padding: 4rpx 12rpx;
  background: rgba(255, 255, 255, 0.3);
  border-radius: 20rpx;
  font-size: 24rpx;
  font-weight: normal;
  border: 1rpx solid rgba(255, 255, 255, 0.5);
}

/* ===== 侧边悬浮购物车 ===== */
.floating-cart-btn {
  position: fixed;
  right: 30rpx;
  bottom: 180rpx;
  width: 100rpx;
  height: 100rpx;
  background: linear-gradient(135deg, #FFB74D 0%, #FFA726 100%);
  border-radius: 50%;
  box-shadow: 0 8rpx 24rpx rgba(255, 183, 77, 0.4);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 99;
  transition: transform 0.3s;
}

.floating-cart-btn:active {
  transform: scale(0.9);
}

/* 购物车图标 */
.cart-icon {
  width: 48rpx;
  height: 48rpx;
  position: relative;
}

/* 购物车车身 */
.cart-body {
  position: absolute;
  width: 40rpx;
  height: 28rpx;
  border: 4rpx solid white;
  border-top-left-radius: 4rpx;
  border-top-right-radius: 4rpx;
  border-bottom: none;
  top: 8rpx;
  left: 4rpx;
}

/* 购物车把手 */
.cart-handle {
  position: absolute;
  width: 14rpx;
  height: 14rpx;
  border: 4rpx solid white;
  border-right: none;
  border-bottom: none;
  border-top-left-radius: 8rpx;
  top: 0;
  left: 0;
}

/* 购物车轮子 */
.cart-wheel {
  position: absolute;
  width: 8rpx;
  height: 8rpx;
  background: white;
  border-radius: 50%;
  bottom: 0;
}

.cart-wheel-left {
  left: 10rpx;
}

.cart-wheel-right {
  right: 10rpx;
}

/* 购物车角标 */
.cart-badge {
  position: absolute;
  top: -8rpx;
  right: -8rpx;
  min-width: 36rpx;
  height: 36rpx;
  background: #FF4444;
  color: white;
  font-size: 20rpx;
  font-weight: bold;
  border-radius: 18rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0 8rpx;
  border: 3rpx solid white;
  box-shadow: 0 2rpx 8rpx rgba(255, 68, 68, 0.3);
  animation: badge-bounce 0.5s ease-out;
}

@keyframes badge-bounce {
  0% {
    transform: scale(0);
  }
  50% {
    transform: scale(1.2);
  }
  100% {
    transform: scale(1);
  }
}

/* 飞入购物车的商品图标 */
.cart-fly-item {
  position: fixed;
  width: 80rpx;
  height: 80rpx;
  border-radius: 12rpx;
  z-index: 1000;
  pointer-events: none;
  animation: fly-to-cart 0.5s cubic-bezier(0.25, 0.46, 0.45, 0.94);
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}

@keyframes fly-to-cart {
  0% {
    transform: translate(-50%, -50%) scale(1);
    opacity: 1;
  }
  100% {
    transform: translate(calc(100vw - 110rpx - 50%), calc(100vh - 230rpx - 50%)) scale(0.3);
    opacity: 0.5;
  }
}

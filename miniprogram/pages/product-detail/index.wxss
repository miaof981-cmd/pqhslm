.container {
  min-height: 100vh;
  background: #F5F5F5;
  padding-bottom: 120rpx;
}

.loading {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 100vh;
  font-size: 28rpx;
  color: #999;
}

.detail-page {
  background: white;
}

/* ===== 图片轮播 ===== */
.image-swiper {
  width: 100%;
  height: 750rpx;
  background: white;
}

.swiper-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

/* ===== 价格区域 ===== */
.price-section {
  background: white;
  padding: 24rpx 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1rpx solid #F0F0F0;
}

.price-row {
  display: flex;
  align-items: baseline;
  gap: 4rpx;
}

.price-symbol {
  font-size: 32rpx;
  color: #FF6B6B;
  font-weight: bold;
}

.price-value {
  font-size: 56rpx;
  color: #FF6B6B;
  font-weight: bold;
  line-height: 1;
}

.price-suffix {
  font-size: 24rpx;
  color: #FF6B6B;
  margin-left: 8rpx;
}

.sales-info {
  font-size: 24rpx;
  color: #999;
}

/* ===== 标题区域 ===== */
.title-section {
  background: white;
  padding: 24rpx 30rpx;
  border-bottom: 1rpx solid #F0F0F0;
}

.product-name {
  font-size: 32rpx;
  color: #333;
  line-height: 1.6;
  font-weight: 500;
  margin-bottom: 16rpx;
}

.tags {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
}

.tag {
  padding: 6rpx 16rpx;
  background: linear-gradient(135deg, #FFF5E6 0%, #FFE6E6 100%);
  color: #FF6B6B;
  font-size: 22rpx;
  border-radius: 4rpx;
  border: 1rpx solid #FFD7D7;
}

/* ===== 基础信息 ===== */
.info-section {
  background: white;
  margin-top: 16rpx;
}

.info-row {
  display: flex;
  align-items: center;
  padding: 28rpx 30rpx;
  border-bottom: 1rpx solid #F0F0F0;
}

.info-row:last-child {
  border-bottom: none;
}

.info-label {
  font-size: 28rpx;
  color: #666;
  width: 160rpx;
  flex-shrink: 0;
}

.info-value {
  flex: 1;
  font-size: 28rpx;
  color: #333;
}

.arrow {
  font-size: 32rpx;
  color: #CCC;
  font-weight: 300;
}

/* ===== 商品详情 ===== */
.detail-section {
  background: white;
  margin-top: 16rpx;
  padding: 30rpx;
}

.section-title {
  font-size: 32rpx;
  color: #333;
  font-weight: bold;
  margin-bottom: 24rpx;
  padding-bottom: 16rpx;
  border-bottom: 2rpx solid #F0F0F0;
}

.detail-content {
  line-height: 1.8;
}

.detail-text {
  font-size: 28rpx;
  color: #666;
  line-height: 1.8;
  display: block;
  margin-bottom: 24rpx;
}

.detail-images {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.detail-image {
  width: 100%;
  border-radius: 12rpx;
  display: block;
}

/* ===== 底部操作栏 ===== */
.bottom-placeholder {
  height: 120rpx;
}

.bottom-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 120rpx;
  background: white;
  display: flex;
  align-items: center;
  padding: 16rpx 30rpx;
  box-shadow: 0 -4rpx 20rpx rgba(0, 0, 0, 0.05);
  z-index: 100;
}

.service-btn {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 0 24rpx;
  margin-right: 20rpx;
}

.service-icon {
  font-size: 36rpx;
  margin-bottom: 4rpx;
}

.service-text {
  font-size: 20rpx;
  color: #666;
}

.buy-btn {
  flex: 1;
  height: 88rpx;
  background: linear-gradient(135deg, #A8E6CF 0%, #88D4AB 100%);
  color: white;
  font-size: 32rpx;
  font-weight: bold;
  border-radius: 44rpx;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
  line-height: 1;
}

/* ===== 客服弹窗 ===== */
.modal-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.6);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

.modal-content {
  width: 600rpx;
  background: white;
  border-radius: 24rpx;
  padding: 50rpx 40rpx 40rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.modal-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 30rpx;
}

.qr-image {
  width: 400rpx;
  height: 400rpx;
  border: 1rpx solid #F0F0F0;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
}

.qr-hint {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 30rpx;
}

.modal-close {
  width: 100%;
  height: 80rpx;
  background: #F5F5F5;
  color: #666;
  font-size: 28rpx;
  border-radius: 12rpx;
  border: none;
  line-height: 80rpx;
}

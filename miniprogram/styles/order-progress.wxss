/* ========================================
   订单进度条 - 通用样式
   可在工作台和用户订单列表中复用
   ======================================== */

/* 时间进度条区 - 统一样式 */
.order-progress-section {
  padding: 24rpx;
  margin: 16rpx 0;
  background: linear-gradient(135deg, #F8FFF9 0%, #F0F9F1 100%);
  border-radius: 16rpx;
  position: relative;
  overflow: hidden;
  transition: background 0.3s ease;
}

/* 临近截稿状态 - 橙色背景 */
.order-progress-section.near-deadline {
  background: linear-gradient(135deg, #FFF8E1 0%, #FFECB3 100%);
}

/* 脱稿状态 - 红色背景 */
.order-progress-section.overdue {
  background: linear-gradient(135deg, #FFEBEE 0%, #FFCDD2 100%);
}

/* 左侧装饰条 */
.order-progress-section::before {
  content: '';
  position: absolute;
  left: 0;
  top: 0;
  width: 6rpx;
  height: 100%;
  background: linear-gradient(180deg, #66BB6A 0%, #4CAF50 100%);
  transition: background 0.3s ease;
}

/* 临近截稿状态 - 橙色装饰条 */
.order-progress-section.near-deadline::before {
  background: linear-gradient(180deg, #FFA726 0%, #FF9800 100%);
}

/* 脱稿状态 - 红色装饰条 */
.order-progress-section.overdue::before {
  background: linear-gradient(180deg, #EF5350 0%, #E53935 100%);
}

.progress-header {
  display: flex;
  justify-content: space-between;
  align-items: baseline;
  margin-bottom: 16rpx;
}

.progress-label {
  font-size: 24rpx;
  color: #666;
  font-weight: 500;
  display: flex;
  flex-direction: column;
  gap: 4rpx;
  flex: 1;
}

.progress-label .time-title {
  font-size: 20rpx;
  color: #999;
  font-weight: 400;
}

.progress-label .time-value {
  font-size: 24rpx;
  color: #333;
  font-weight: 600;
  line-height: 1.3;
}

.deadline-label {
  text-align: right;
}

.deadline-label.overdue .time-value {
  color: #FF6B6B;
}

.progress-bar-container {
  position: relative;
}

.progress-bar-bg {
  width: 100%;
  height: 16rpx;
  background: rgba(255, 255, 255, 0.9);
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: inset 0 2rpx 6rpx rgba(0, 0, 0, 0.06);
  position: relative;
  transition: background 0.3s ease, box-shadow 0.3s ease;
}

/* 临近截稿状态 - 橙色进度条背景 */
.progress-bar-bg.near-deadline {
  background: rgba(255, 224, 178, 0.5) !important;
  box-shadow: inset 0 2rpx 6rpx rgba(255, 152, 0, 0.1) !important;
}

/* 脱稿状态 - 红色进度条背景 */
.progress-bar-bg.overdue {
  background: rgba(255, 205, 210, 0.6) !important;
  box-shadow: inset 0 2rpx 6rpx rgba(244, 67, 54, 0.1) !important;
}

/* 兼容旧的父容器选择器（备用） */
.order-progress-section.near-deadline .progress-bar-bg {
  background: rgba(255, 224, 178, 0.5);
  box-shadow: inset 0 2rpx 6rpx rgba(255, 152, 0, 0.1);
}

.order-progress-section.overdue .progress-bar-bg {
  background: rgba(255, 205, 210, 0.6);
  box-shadow: inset 0 2rpx 6rpx rgba(244, 67, 54, 0.1);
}

.progress-bar-fill {
  height: 100%;
  background: linear-gradient(90deg, 
    #4CAF50 0%, 
    #66BB6A 20%, 
    #81C784 40%, 
    #A5D6A7 60%, 
    #81C784 80%, 
    #66BB6A 100%
  );
  background-size: 300% 100%;
  border-radius: 16rpx;
  transition: width 0.5s cubic-bezier(0.4, 0, 0.2, 1);
  position: relative;
  animation: shimmer 3s ease-in-out infinite;
}

@keyframes shimmer {
  0% {
    background-position: 200% center;
  }
  50% {
    background-position: 0% center;
  }
  100% {
    background-position: -200% center;
  }
}

/* 进度条高光效果 */
.progress-bar-fill::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 50%;
  background: linear-gradient(180deg, rgba(255, 255, 255, 0.3) 0%, transparent 100%);
  border-radius: 16rpx 16rpx 0 0;
}

/* 临近截稿状态 - 橙色进度条 */
.progress-bar-fill.near-deadline {
  background: linear-gradient(90deg, 
    #FF9800 0%, 
    #FFA726 20%, 
    #FFB74D 40%, 
    #FFCC80 60%, 
    #FFB74D 80%, 
    #FFA726 100%
  );
  background-size: 300% 100%;
  animation: shimmer-orange 3s ease-in-out infinite;
}

@keyframes shimmer-orange {
  0% {
    background-position: 200% center;
  }
  50% {
    background-position: 0% center;
  }
  100% {
    background-position: -200% center;
  }
}

/* 脱稿状态 - 红色进度条 */
.progress-bar-fill.overdue {
  background: linear-gradient(90deg, 
    #E53935 0%, 
    #FF6B6B 20%, 
    #FF8A80 40%, 
    #FFAB91 60%, 
    #FF8A80 80%, 
    #FF6B6B 100%
  );
  background-size: 300% 100%;
  animation: shimmer-red 3s ease-in-out infinite;
}

@keyframes shimmer-red {
  0% {
    background-position: 200% center;
  }
  50% {
    background-position: 0% center;
  }
  100% {
    background-position: -200% center;
  }
}

/* 已完成状态 - 紫色进度条 */
.progress-bar-fill.completed {
  background: linear-gradient(90deg, #9C27B0 0%, #BA68C8 50%, #9C27B0 100%);
  background-size: 200% 100%;
  animation: shimmer 2s infinite;
}

